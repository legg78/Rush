<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition	template="/WEB-INF/templates/navigatable.jspx">
    <ui:define name="navigatableContent">
    
		<!-- navigation bar -->
		<bpct:navBar appendix="#{lblCommon.persons}"/>
		<bpct:greyMenu selectMode="#{MbPersonsSearch.selectMode}"/>
		
        <h:form id="personsSearchForm">			
			
			<!-- search panel -->
			<h:panelGroup styleClass="search_block" layout="block">
				<h:panelGroup layout="block" styleClass="search_block_inner1">
					<h:panelGroup layout="block" styleClass="search_block_inner2">
		                <h:panelGroup styleClass="search_block_left" layout="block">
		                	<h:panelGrid styleClass="fw" columns="2" columnClasses="top ,link-cont">
			                	<h:panelGrid styleClass="filter-table field-cont twoColumnTable" columns="4" columnClasses="firstCol,secondCol,firstCol,secondCol">
			            			
			            			<h:outputText value="#{lblCommon.name}: " title="#{lblCommon.name}" />
			            			<h:inputText id="firstNameFilter" value="#{MbPersonsSearch.filterPerson.firstName}"/>
	
			            			<h:outputText value="#{lblCommon.second_name}: " title="#{lblCommon.second_name}" />
			            			<h:inputText id="secondNameFilter" value="#{MbPersonsSearch.filterPerson.secondName}"/>
			            			<h:outputText value="#{lblCommon.surname}: " title="#{lblCommon.surname}" />
			            			<h:inputText id="surnameFilter" value="#{MbPersonsSearch.filterPerson.surname}"/>
	
			            			<h:outputText value="#{lblCommon.birthday}: " title="#{lblCommon.birthday}" />
			            			<rich:calendar buttonIcon="/images/calendar.gif" id="birthdayFilter" value="#{MbPersonsSearch.filterPerson.birthday}" />
			            				
	                			</h:panelGrid>
			                	<h:panelGrid columns="1" >
			                		<bre:taggedCommandButton
				                			action="#{MbPersonsSearch.search}"
		        							reRender="personsForm, personDetails, personIds"
		                					image="/_img/icon_search.png" type="submit"
		                					value="#{lblForm.search}" style="width:85px;"
		                					/>
		                			<h:panelGroup styleClass="link-clear" >
		                				<h:graphicImage url="/_img/icon_clear.png"/>
			                			<a4j:commandLink value="#{lblForm.clear_all}"
							        			action="#{MbPersonsSearch.clearFilter}"
							        			reRender="personsSearchForm, personsForm, tabPanel">
							        	</a4j:commandLink>
		            	    		</h:panelGroup>
		                		</h:panelGrid>
	                		</h:panelGrid>
	                		<a4j:outputPanel ajaxRendered="true">
			               		<h:graphicImage url="/_img/hd_searchblock.gif"  styleClass="hd-searchblock"/>
		    	           		<h:panelGroup styleClass="collapse-vert" layout="block"/>
	    	           		</a4j:outputPanel>
	    	           	</h:panelGroup>
	    	        </h:panelGroup>
               	</h:panelGroup>
			</h:panelGroup>
		</h:form>
		
		<h:form id="personsForm">
	        <h:panelGroup styleClass="search_result_block" layout="block">
	    		<h:panelGroup styleClass="search_result_block_left fix-ff" layout="block">
				    <rich:extendedDataTable
							id="personsTable"
							tableState="#{MbPersonsSearch.tableState}"
							styleClass="res-table"
							headerClass="res-table-header"
							rowClasses=",odd"
							selectedClass="res-table-selected"
							var="item"
							value="#{MbPersonsSearch.persons}"
							selection="#{MbPersonsSearch.itemSelection}"
							rows="#{MbPersonsSearch.rowsNum}"
							height="255px"
							selectionMode="single"
							width="100%"
							enableContextMenu="true"
							noDataLabel="#{MbPersonsSearch.searching?lblCommon['no_records_found'] : lblCommon['enter_search_criteria_above']}">

						<a4j:support event="onselectionchange"
								reRender="btnPanel, personDetails, personIds" />

						<rich:column id="id" label="#{lblCommon.id}" title="Id" sortExpression="asc" sortBy="#{'personId'}" rendered="false">
		                    <f:facet name="header">
		                    	<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}" />
		                    </f:facet>
		                	<h:outputText value="#{item.personId}" />
						</rich:column>

				        <rich:column title="Surname" id="surname" label="#{lblCommon.surname}" sortBy="#{'surname'}" width="20%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblCommon.surname}" title="#{lblCommon.surname}" />
			                </f:facet>
			                <h:outputText value="#{item.surname}" />
				        </rich:column>

				        <rich:column title="First name" id="firstName" label="#{lblCommon.name}" sortBy="#{'firstName'}" width="20%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblCommon.name}" title="#{lblCommon.name}" />
			                </f:facet>
			                <h:outputText value="#{item.firstName}" />
				        </rich:column>

				        <rich:column title="Second name" id="secondName" label="#{lblCommon.second_name}" sortBy="#{'secondName'}"  width="20%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblCommon.second_name}" title="#{lblCommon.second_name}" />
			                </f:facet>
			                <h:outputText value="#{item.secondName}" />
				        </rich:column>

				        <rich:column title="Birthday" id="birthday" label="#{lblCommon.birthday}" width="20%" sortBy="#{'birthday'}">
				           <f:facet name="header">
			                    <h:outputText value="#{lblCommon.birthday}" title="#{lblCommon.birthday}" />
			                </f:facet>
			                <h:outputText value="#{item.birthday}">
			                	<f:convertDateTime pattern="#{usession.datePattern}" timeZone="#{CommonUtils.timeZone}"/>
			                </h:outputText>
				        </rich:column>

				    </rich:extendedDataTable>
				    <a4j:outputPanel ajaxRendered="true">
					    <h:graphicImage url="/_img/hd_searchblock.gif" styleClass="hd-searchblock"/>
					    <h:panelGroup styleClass="collapse-vert" layout="block"/>
				    </a4j:outputPanel>
			    </h:panelGroup>
			</h:panelGroup>

		    <h:panelGroup layout="block" styleClass="bottom_search_result_block">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left">
		        	<h:panelGroup layout="block" styleClass="table_tools">
			        	<h:panelGrid styleClass="fw field-cont" columns="5"
			        			id="dataScroller"
			        			columnClasses="per-page-lbl,per-page-sel,nav-cont,pagecount, table_tools_state">
				        	<h:outputLabel for="rows_num" value="#{lblCommon.rows_per_page}" title="#{lblCommon.rows_per_page}"/>
		                    <h:selectOneMenu id="rows_num" value="#{MbPersonsSearch.rowsNum}" style="width:40px" >
		                    	<a4j:support event="onchange" reRender="personsTable, ds, pagesNum"/>
                        		<f:selectItems value="#{CommonUtils.rowNumsList}"/>
		                    </h:selectOneMenu>

		                    <rich:datascroller maxPages="10" fastControls="hide"
		                    		pagesVar="pages" styleClass="res-datascroller"
				                    id="ds" for="personsTable">
				            	<f:facet name="first">
				                	<h:outputText value="&lt;&lt;" styleClass="prev-next" />
								</f:facet>
				                <f:facet name="first_disabled">
				                    <h:outputText value="&lt;&lt;" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="last">
				                    <h:outputText  value="&gt;&gt;" styleClass="prev-next" />
				                </f:facet>
				                <f:facet name="last_disabled">
				                    <h:outputText value="&gt;&gt;" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="previous">
									<h:outputText value="#{lblCommon.prev}" styleClass="prev-next" />
				                </f:facet>
				                <f:facet name="previous_disabled">
				                	<h:outputText value="#{lblCommon.prev}" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="next">
				                	<h:outputText value="#{lblCommon.next}" styleClass="prev-next" />
				                </f:facet>
				                <f:facet name="next_disabled">
				                	<h:outputText value="#{lblCommon.next}" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="pages">
				                </f:facet>
							</rich:datascroller>

		                    <h:panelGroup id="pagesNum">
		                       	<h:outputText styleClass="strongClass" value="#{pages} "/>
		                       	<h:outputText value=" #{lblCommon.pages}"/>
		                    </h:panelGroup>
		                    
		                    <h:panelGroup>
								<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
									onclick="saveTableState();"/>
								<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
									onclick="deleteTableState();"/>
								<a4j:queue name="tablestatequeue"/>
								<a4j:jsFunction name="saveTableState" action="#{MbPersonsSearch.saveTableStateDB}" eventsQueue="tablestatequeue"/>
								<a4j:jsFunction name="deleteTableState" action="#{MbPersonsSearch.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
							</h:panelGroup>
						</h:panelGrid>
					</h:panelGroup>

		            <h:panelGrid id="btnPanel" columns="6" styleClass="buttons_block">
		            	<bre:taggedCommandButton id="selectPersonBtn"
	                      		value="#{lblForm.select}"
	                      		disabled="#{MbPersonsSearch.activePerson == null}"
	                      		action="#{MbPersonsSearch.select}"
								oncomplete="document.getElementById('personsForm:back').click()"
	                      		rendered="#{MbPersonsSearch.selectMode}"
	                      		/>
		            	<bre:taggedCommandButton id="cancelBtn"
	                      		value="#{lblForm.cancel}"
	                      		action="#{MbPersonsSearch.cancel}"
								oncomplete="document.getElementById('personsForm:back').click()"
	                      		rendered="#{MbPersonsSearch.selectMode}"
	                      		/>
						
						<rich:spacer style="width:20px" rendered="#{MbPersonsSearch.selectMode}"/>

		            	<bre:taggedCommandButton id="addPersonBtn"
	                      		reRender="personEditPanel"
	                      		value="#{lblForm.add}"
	                      		oncomplete="#{rich:component('personEditPanel')}.show()"
	                      		action="#{MbPersonsSearch.addPerson}"
	                      		rendered="#{usession.inRole['ADD_PERSON']}"
	                      		image="/images/create_doc.gif"
	                      		/>
		            	<bre:taggedCommandButton id="editPersonBtn"
	                      		value="#{lblForm.edit}" reRender="personEditPanel"
	                      		action="#{MbPersonsSearch.editPerson}"
	                      		oncomplete="#{rich:component('personEditPanel')}.show()"
	                      		disabled="#{MbPersonsSearch.activePerson == null}"
	                      		rendered="#{usession.inRole['MODIFY_PERSON']}"
	                      		image="/images/edit.gif"
	                      		/>
						<bre:taggedCommandButton id="deletePersonBtn"
	                      		reRender="personsForm,personDetails,personIds"
	                      		value="#{lblForm.delete}"
	                      		action="#{MbPersonsSearch.deletePerson}"
	                      		disabled="#{MbPersonsSearch.activePerson == null}"
	                      		onclick="if (!confirm('#{lblMsg.confirm_delete}')) return false"
	                      		rendered="#{usession.inRole['REMOVE_PERSON']}"
	                      		image="/images/delete.gif"
	                      		/>
						<h:commandLink id="back" action="#{MbPersonsSearch.back}"
									   value="back" styleClass="hidden">
						</h:commandLink>
		            	<ui:insert name="wizardContent"></ui:insert>
					</h:panelGrid>
				</h:panelGroup>
		    </h:panelGroup>
	    </h:form>
		
		<h:panelGroup styleClass="workplace">
	    	<rich:tabPanel switchType="client" id="tabPanel"  tabClass="tab-cell"
	    			activeTabClass="active-tab-cell" headerClass="tabs" headerSpacing="0px"
	    			contentClass="tab-content">

				<rich:tab id="details" label="Details">
       				<f:facet name="label">
       					<h:panelGroup styleClass="first tab-label" layout="block">
       						<h:outputText value="#{lblCommon.details}" title="#{lblCommon.details}"/>
       					</h:panelGroup>
       				</f:facet>
       				<h:panelGroup id="personDetails" layout="block" styleClass="carddata-wrapper" style="height: 250px; overflow-y: auto;">
						<h:panelGroup layout="block" style="height: 221px;overflow-y: auto">
						<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
							<h:form id="personDetailsForm">
								<h:panelGrid columns="4" styleClass="cardholderdata twoColumnTable" id="detailsData" columnClasses="firstCol,secondCol,firstCol,secondCol">

									<h:outputLabel value="#{lblCommon.lang_selector}: " title="#{lblCommon.lang_selector}"/>
									<h:selectOneMenu
												id="lang" styleClass="width250"
												value="#{MbPersonsSearch.curLang}"
										>		
		  								<a4j:support event="onchange" reRender="personDetailsForm" limitToList="true" 
													action="#{MbPersonsSearch.changeLanguage}"/>
									    <f:selectItems value="#{MbPersonsSearch.languages}"/>
									</h:selectOneMenu>
									<h:outputText/><h:outputText/>
									<h:outputText/>
									<rich:separator height="2" lineType="dotted" styleClass="separator"/>
									<h:outputText/><h:outputText/>
									
									<h:outputLabel value="#{lblCommon.surname}:" title="#{lblCommon.surname}"/>
									<h:inputText value="#{MbPersonsSearch.detailPerson.surname}" readonly="true" styleClass="width250"/>
									
									<h:outputLabel value="#{lblCommon.title}:"/>
									<h:inputText value="#{DictUtils.articles[MbPersonsSearch.detailPerson.title]}" readonly="true" styleClass="width250"/>
									
									<h:outputLabel value="#{lblCommon.name}:" title="#{lblCommon.name}"/>
									<h:inputText value="#{MbPersonsSearch.detailPerson.firstName}" readonly="true" styleClass="width250"/>
									
									<h:outputLabel value="#{lblCommon.gender}:" title="#{lblCommon.gender}"/>
									<h:inputText value="#{DictUtils.articles[MbPersonsSearch.detailPerson.gender]}" readonly="true" styleClass="width250"/>
									
									<h:outputLabel value="#{lblCommon.second_name}:" title="#{lblCommon.second_name}"/>
									<h:inputText value="#{MbPersonsSearch.detailPerson.secondName}" readonly="true" styleClass="width250"/>
									
									<h:outputLabel value="#{lblCommon.birthday}:" title="#{lblCommon.birthday}"/>
									<h:inputText value="#{MbPersonsSearch.detailPerson.birthday}" readonly="true" styleClass="width250">
										<f:convertDateTime pattern="#{usession.datePattern}" timeZone="#{CommonUtils.timeZone}"/>
									</h:inputText>
									
									<h:outputLabel value="#{lblCommon.suffix}:" title="#{lblCommon.suffix}"/>
									<h:inputText value="#{DictUtils.articles[MbPersonsSearch.detailPerson.suffix]}" readonly="true" styleClass="width250"/>
									
									<h:outputLabel value="#{lblCommon.place_of_birth}:" title="#{lblCommon.place_of_birth}"/>
									<h:inputText value="#{MbPersonsSearch.detailPerson.placeOfBirth}" readonly="true" styleClass="width250"/>
																	
								</h:panelGrid>
							</h:form>
						</h:panelGroup>
						</h:panelGroup>
						<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
							<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
								<h:form id="editPersonFormButtons">
									<h:panelGrid columns="2" cellpadding="0" cellspacing="0" width="auto">
					                </h:panelGrid>
				                </h:form>
			                </h:panelGroup>
		                </h:panelGroup>
	                </h:panelGroup>
			    </rich:tab>

				<rich:tab id="idsTab" label="IDs" rendered="#{usession.inRole['VIEW_PERSON_ID']}">
       				<f:facet name="label">
       					<h:panelGroup styleClass="tab-label" layout="block">
       						<h:outputText value="#{lblCommon.ids}" title="#{lblCommon.ids}"/>
       					</h:panelGroup>
       				</f:facet>
       				<h:panelGroup id="personIds" layout="block" styleClass="carddata-wrapper" style="height: 250px; overflow-y: auto; overflow-x: hidden">
       					<ui:include src="/pages/common/persons/list_documents.jspx">
       						<ui:param name="showButtons" value="true"></ui:param>
       					</ui:include>
	       			</h:panelGroup>
			    </rich:tab>
		    </rich:tabPanel>
        </h:panelGroup>

		<ui:include src="/pages/common/persons/editPersonWithIds.jspx">
			<ui:param name="rerenderList" value="personsForm:personsTable, personsForm:btnPanel, 
					personDetails, personIds"></ui:param>
		</ui:include>

    </ui:define>

</ui:composition>
</html>