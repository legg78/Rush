<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>

	<rich:modalPanel id="fileDirectoriesEditModalPanel" autosized="true"
		minWidth="300" minHeight="100">
		<f:facet name="header">
			<h:panelGroup id="fileDirectoriesHeader">
				<h:outputText value="#{lblPrc.edit_directory}"
					rendered="#{MbProcessFileDirectories.editMode}" />
				<h:outputText value="#{lblPrc.new_directory}"
					rendered="#{MbProcessFileDirectories.newMode}" />
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
		</f:facet>
		<h:form id="fileDirectoriesEditModalPanelForm">
			<script type="text/javascript">
//<!--
				
				function checkAppSchemeFields() {
					var checked = true;
					
					if (document.getElementById('fileDirectoriesEditModalPanelForm:encryptionType').value == "") {
						document.getElementById('fileDirectoriesEditModalPanelForm:encryptionTypeError').style.display = "inline";
						checked = false;
					}
					
					if (document.getElementById('fileDirectoriesEditModalPanelForm:directoryType').value == "") {
						document.getElementById('fileDirectoriesEditModalPanelForm:directoryTypeError').style.display = "inline";
						checked = false;
					}
					
					return checked;
				}
				//-->
			</script>

			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata"
					columnClasses="firstColModal, width250">
					
					<h:outputLabel for="name" value="#{lblCommon.name }" title="#{lblCommon.name }" />
					<h:panelGrid columns="1">
						<h:inputText id="name" value="#{MbProcessFileDirectories.editItem.name}" />
					</h:panelGrid>
					
					<h:outputLabel for="encryptionType" value="*#{lblPrc.encryption_type}:" title="#{lblPrc.encryption_type}" />
					<h:panelGrid columns="1">
					<ui:remove>
						<h:inputText id="encryptionType" value="#{MbProcessFileDirectories.editItem.encryptionType}" />
					</ui:remove>	
						<h:selectOneMenu id="encryptionType" 
							value="#{MbProcessFileDirectories.editItem.encryptionType}"
							label="#{lblPrc.location}">
								<f:selectItem itemValue=""/>
								<f:selectItems value="#{MbProcessFileDirectories.encriptionTypes}"/>
						</h:selectOneMenu> 
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="encryptionTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblPrc.encryption_type}"/>
						</h:outputFormat>
					</h:panelGrid>
					
					<h:outputLabel for="directoryType" value="*#{lblPrc.folder_path}:" title="#{lblPrc.folder_path}" />
					<h:panelGrid columns="1">
						<h:inputText id="directoryType" value="#{MbProcessFileDirectories.editItem.directoryPath}" />
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="directoryTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblPrc.folder_path}"/>
						</h:outputFormat>
					</h:panelGrid>

					

				</h:panelGrid>
			</h:panelGroup>

			<h:panelGroup layout="block"
				styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block"
					styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.save}" type="submit"
							action="#{MbProcessFileDirectories.tryToSave}"
							onclick="if (!checkAppSchemeFields()) return false; disableModalPanelBtns(this)"
							oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse and empty MbProcessFileDirectories.warningMsg}) 
			                   			#{rich:component('fileDirectoriesEditModalPanel')}.hide()"
							reRender="#{empty MbProcessFileDirectories.warningMsg ? 'fileDirectoriesTable, fileDirectoriesScroller, pagesNum, btnPanel, detailsTab' : 'confirmPanelCover'}" />							
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbProcessFileDirectories.cancel}"
							immediate="true" limitToList="true"
							oncomplete="#{rich:component('fileDirectoriesEditModalPanel')}.hide()"
							reRender="fileDirectoriesEditModalPanelForm">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
	<a4j:outputPanel id="confirmPanelCover">
       	<rich:modalPanel id="confirmPanel" autosized="true" minWidth="300" minHeight="100"
       			rendered="#{not empty MbProcessFileDirectories.warningMsg}" showWhenRendered="true">
	        <f:facet name="header">
                <h:outputText value="#{lblMsg.warning_exc}"/>
	        </f:facet>
	        <f:facet name="controls">
	            <h:panelGroup>
	                <h:outputText value="" styleClass="hidelink" id="hidelink"/>
	            </h:panelGroup>
	        </f:facet>
	        <h:form>
		        <h:panelGrid columns="2">
			        <h:graphicImage url="/images/icon_warning.png"/>
			        <h:outputText value="#{MbProcessFileDirectories.warningMsg}"/>
			        <h:outputText/>
			        <h:outputText value="#{lblMsg.save_anyway}"/>
		        </h:panelGrid>

	      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
					<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
		       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
		       	    		<h:outputText/>
			        		<bre:taggedCommandButton value="#{lblForm.save}" type="submit"
			        				id="savebutton" action="#{MbProcessFileDirectories.save}"
			        				oncomplete="#{rich:component('confirmPanel')}.hide(); 
			        						if (#{usession.noErrorResponse and empty MbProcessFileDirectories.warningMsg}) {
												#{rich:component('fileDirectoriesEditModalPanel')}.hide();
											}"
			        				reRender="fileDirectoriesTable, fileDirectoriesScroller, pagesNum, btnPanel, detailsTab"
			        				/>
			        		<bre:taggedCommandButton value="#{lblForm.cancel}"
			        				id="hidebutton" action="#{MbProcessFileDirectories.clearWarningMsg}"
			        				oncomplete="#{rich:component('confirmPanel')}.hide();"
			        				/>
				        </h:panelGrid>
				    </h:panelGroup>
				</h:panelGroup>
			</h:form>
	    </rich:modalPanel>
	</a4j:outputPanel>

</ui:composition>
</html>