<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:bpct="http://www.bpc.ru/jsf/tiles" xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	xmlns:rich="http://richfaces.org/rich" xmlns:a4j="http://richfaces.org/a4j"
	xmlns:o="http://openfaces.org/">
	<ui:composition>
		<fieldset onblur="alert(1);">
			<legend id="legend">#{MbAppWizAccount.node.label}</legend>
			<h:form>
			<h:panelGrid styleClass="filter-table field-cont twoColumnTable"
				columns="2" columnClasses="firstCol200px,column200px" id="accInfo">
				<a4j:support event="onblur" onsubmit="alert(1);" />

				<h:outputLabel
					value="#{MbAppWizAccount.fieldMap['ACCOUNT_NUMBER'].required ? '*' : ''} #{MbAppWizAccount.fieldMap['ACCOUNT_NUMBER'].shortDesc}: "
					title="#{MbAppWizAccount.fieldMap['ACCOUNT_NUMBER'].shortDesc}"
					class="#{MbAppWizAccount.fieldMap['ACCOUNT_NUMBER'].valid ? 'valid' : 'invalid'}" />
				<h:inputText id="accountNumber"
					value="#{MbAppWizAccount.fieldMap['ACCOUNT_NUMBER'].valueV}" label="#{MbAppWizAccount.fieldMap['ACCOUNT_NUMBER'].shortDesc}">
					<a4j:support event="onchange" ajaxSingle="true"
						action="#{MbAppWizAccount.updateAccountLabel}" limitToList="true"
						reRender="accountDetailsTable, detailsInclude"/>
				</h:inputText>	
				
				<h:outputLabel
					value="#{MbAppWizAccount.fieldMap['ACCOUNT_TYPE'].required ? '*' : ''} #{MbAppWizAccount.fieldMap['ACCOUNT_TYPE'].shortDesc}: "
					title="#{MbAppWiRzCustomer.fieldMap['ACCOUNT_TYPE'].shortDesc}"
					class="#{MbAppWizAccount.fieldMap['ACCOUNT_TYPE'].valid ? 'valid' : 'invalid'}" />
				<h:selectOneMenu
					value="#{MbAppWizAccount.fieldMap['ACCOUNT_TYPE'].valueV}" label="#{MbAppWizAccount.fieldMap['ACCOUNT_TYPE'].shortDesc}">
					<f:selectItem itemValue="" />
					<f:selectItems value="#{MbAppWizAccount.lovMap['ACCOUNT_TYPE']}" />
					<a4j:support event="onchange" action="#{MbAppWizAccount.prepareInitialService}"
						ajaxSingle="true" reRender="initialAttributes, accountDetailsTable, accInfo"/>
				</h:selectOneMenu>

				<h:outputLabel
					value="#{MbAppWizAccount.fieldMap['CURRENCY'].required ? '*' : ''} #{MbAppWizAccount.fieldMap['CURRENCY'].shortDesc}: "
					title="#{MbAppWizAccount.fieldMap['CURRENCY'].shortDesc}"
					class="#{MbAppWizAccount.fieldMap['CURRENCY'].valid ? 'valid' : 'invalid'}" />
				<h:selectOneMenu
					value="#{MbAppWizAccount.fieldMap['CURRENCY'].valueV}" label="#{MbAppWizAccount.fieldMap['CURRENCY'].shortDesc}">
					<f:selectItem itemValue="" />
					<f:selectItems value="#{MbAppWizAccount.lovMap['CURRENCY']}" />
					<a4j:support event="onchange" ajaxSingle="true"
						action="#{MbAppWizAccount.prepareInitialService}"
						reRender="initialAttributes, accountDetailsTable, accInfo"/>
				</h:selectOneMenu>
				
				<h:outputLabel />
				<bre:taggedCommandButton value="#{lblForm.delete}"
					ajaxOnly="true" reRender="accountDetailsTable, details"
					action="#{MbAppWizAccount.deleteAccount}" style="margin-left:5px; margin-top:5px;"
					onclick="if (!confirm('#{lblMsg.confirm_delete}')) return false;" />
			</h:panelGrid>
			</h:form>
			<h:panelGroup id="initialAttributes" layout="block" styleClass="carddata-wrapper"
				style="height: 480px;overflow:auto; bottom:10px; position: absolute;">
  					<ui:include src="/pages/common/application/person/objectAttr.jspx">
  						<ui:param name="show_buttom_change_visibility" value="true"/>
  					</ui:include>
       		</h:panelGroup>
		</fieldset>
	</ui:composition>
</html>