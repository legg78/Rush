<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition	template="/WEB-INF/templates/navigatable.jspx">
	<ui:param name="pageHelp" value="hsm_lmk_list_browse.htm"/>
	<ui:param name="pageHelpModalAdd" value="hsm_add_edit_delete.htm" />
	<ui:param name="pageHelpModalEdit" value="hsm_add_edit_delete.htm" />
	<ui:param name="showHelpModal" value="true" />
	
	<ui:define name="navigatableContent">
		<f:loadBundle var="lblHsm" basename="ru.bpc.sv2.ui.bundles.Hsm"/>
		<a4j:loadScript src="/js/stretch.js" />
		
		<!-- navigation bar -->
        <bpct:navBar pageName="#{lblHsm.lmks}"/>
		<a4j:queue name="queue" requestDelay="500" ignoreDupResponses="true" size="1" sizeExceededBehavior="dropNew"/>
    	<h:form id="statesSearchForm">

			<!-- search panel -->
			<h:panelGroup styleClass="search_block" layout="block">
				<h:panelGroup layout="block" styleClass="search_block_inner1">
					<h:panelGroup layout="block" styleClass="search_block_inner2">
		                <h:panelGroup styleClass="search_block_left" layout="block">
		                	<h:panelGrid styleClass="fw" columns="2" columnClasses="top ,link-cont">
			                	<h:panelGrid styleClass="filter-table field-cont twoColumnTable" columns="4" columnClasses="firstCol,secondCol,firstCol,secondCol">

			            			<h:outputLabel for="checkValueFilter" value="#{lblHsm.check_value}: " title="#{lblHsm.check_value}" />
			            			<h:inputText id="checkValueFilter" value="#{MbHsmLMKsSearch.filter.checkValue}"/>

			            			<h:outputLabel for="descriptionFilter" value="#{lblCommon.description}: " title="#{lblCommon.description}" />
			            			<h:inputText id="descriptionFilter" value="#{MbHsmLMKsSearch.filter.description}"/>

	                			</h:panelGrid>
		                		<h:panelGrid columns="1">
			                		<bre:taggedCommandButton
				                			action="#{MbHsmLMKsSearch.search}"
		        							reRender="statesForm:lmksTable, statesForm:lmksDs,
		        									statesForm:pagesNum, statesBtnForm:btnPanel,
		        									details"
		                					image="/_img/icon_search.png" type="submit"
		                					value="#{lblForm.search}" style="width:85px;"
		                					onclick="disableModalPanelBtns(this);"
		                					oncomplete="enableModalPanelBtns(this);"
		                					eventsQueue="queue"/>
		                			<h:panelGroup styleClass="link-clear" layout="block">
			                			<h:graphicImage url="/_img/icon_clear.png"/>
			                			<a4j:commandLink value="#{lblForm.clear_all}"
							        			action="#{MbHsmLMKsSearch.clearFilter}"
							        			reRender="statesSearchForm, statesForm, details, statesBtnForm">
							        	</a4j:commandLink>
		            	    		</h:panelGroup>
		                		</h:panelGrid>
		               		</h:panelGrid>
		               		<a4j:outputPanel ajaxRendered="true">
		               			<h:graphicImage url="/_img/hd_searchblock.gif"  styleClass="hd-searchblock"/>
		               			<h:panelGroup styleClass="collapse-vert" layout="block"/>
	               			</a4j:outputPanel>
		               	</h:panelGroup>
	               	</h:panelGroup>
               	</h:panelGroup>
			</h:panelGroup>
		</h:form>

		<h:form id="statesForm">
			<h:panelGroup styleClass="search_result_block" layout="block">
		    	<h:panelGroup styleClass="search_result_block_left fix-ff" layout="block">
		    		<h:panelGroup id="mainTableWrapper" layout="block"
						styleClass="search_result_block_inner">
				    <rich:extendedDataTable
							id="lmksTable"
							var="item"
							tableState="#{MbHsmLMKsSearch.tableState}"
							value="#{MbHsmLMKsSearch.hsmLMKs}"
							selection="#{MbHsmLMKsSearch.itemSelection}"
							rows="#{MbHsmLMKsSearch.rowsNum}"
							height="255px"
							selectionMode="single"
							rowClasses=",odd"
							headerClass="res-table-header"
							selectedClass="res-table-selected"
							styleClass="res-table"
							enableContextMenu="true"
							noDataLabel="#{MbHsmLMKsSearch.searching?lblCommon['no_records_found'] : lblCommon['enter_search_criteria_above']}"
							reRender="detailsTab, btnPanel">

						<a4j:support event="onselectionchange" eventsQueue="queue"
								reRender="detailsTab, btnPanel" />

						<rich:column id="id" label="#{lblCommon.id}" sortBy="#{'id'}" width="10%">
			                <f:facet name="header">
			                   	<a4j:outputPanel layout="none">
									<script>updateHeight();</script>
									<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}"/>
								</a4j:outputPanel>
			                </f:facet>
			               	<h:outputText value="#{item.id}" title="#{item.id}" />
						</rich:column>

						<rich:column id="description" label="#{lblCommon.description}" sortBy="#{'description'}" width="20%">
			                   <f:facet name="header">
			                   	<h:outputText value="#{lblCommon.description}" title="#{lblCommon.description}" />
			                   </f:facet>
			               	<h:outputText value="#{item.description}" title="#{item.description}"/>
						</rich:column>

				        <rich:column id="check_value" label="#{lblHsm.check_value}" sortBy="#{'check_value'}" width="20%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblHsm.check_value}" title="#{lblHsm.check_value}"/>
			                </f:facet>
			                <h:outputText value="#{item.checkValue}" title="#{item.checkValue}" />
				        </rich:column>

				    </rich:extendedDataTable>
				    </h:panelGroup>
				    <a4j:outputPanel ajaxRendered="true">
				    	<h:panelGroup id="show_more_panel" styleClass="show-more-vert show-more-result-tab" layout="block"/>
					    <h:graphicImage url="/_img/hd_searchblock.gif" styleClass="hd-searchblock"/>
					    <h:panelGroup styleClass="collapse-vert table-collapse-vert" layout="block"/>
					</a4j:outputPanel>
				</h:panelGroup>
			</h:panelGroup>
			</h:form>
			<h:form id="statesBtnForm">

			<h:panelGroup layout="block" styleClass="bottom_search_result_block">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left">
					<h:panelGroup layout="block" styleClass="table_tools">
						<h:panelGrid styleClass="fw field-cont" columns="5"
							columnClasses="per-page-lbl,per-page-sel,nav-cont,pagecount, table_tools_state">
							<h:outputLabel for="rows_num" value="#{lblCommon.rows_per_page}" title="#{lblCommon.rows_per_page}" />
							<h:selectOneMenu id="rows_num" value="#{MbHsmLMKsSearch.rowsNum}"
								styleClass="row_per_page">
								<a4j:support event="onchange"
									reRender="lmksTable, lmksDs, pagesNum, detailsTab, btnPanel" />
								<f:selectItems value="#{CommonUtils.rowNumsList}"/>
							</h:selectOneMenu>

							<rich:datascroller maxPages="10" fastControls="hide"
								pagesVar="pages" styleClass="res-datascroller" id="lmksDs"
								for="lmksTable" reRender="detailsTab, btnPanel">
								<f:facet name="first">
									<h:outputText value="&lt;&lt;" styleClass="prev-next" />
								</f:facet>
								<f:facet name="first_disabled">
									<h:outputText value="&lt;&lt;" styleClass="prev-next-dis" />
								</f:facet>
								<f:facet name="last">
									<h:outputText value="&gt;&gt;" styleClass="prev-next" />
								</f:facet>
								<f:facet name="last_disabled">
									<h:outputText value="&gt;&gt;" styleClass="prev-next-dis" />
								</f:facet>
								<f:facet name="previous">
									<h:outputText value="#{lblCommon.prev}" styleClass="prev-next" />
								</f:facet>
								<f:facet name="previous_disabled">
									<h:outputText value="#{lblCommon.prev}"
										styleClass="prev-next-dis" />
								</f:facet>
								<f:facet name="next">
									<h:outputText value="#{lblCommon.next}" styleClass="prev-next" />
								</f:facet>
								<f:facet name="next_disabled">
									<h:outputText value="#{lblCommon.next}"
										styleClass="prev-next-dis" />
								</f:facet>
								<f:facet name="pages">
								</f:facet>
							</rich:datascroller>

							<h:panelGroup id="pagesNum">
								<h:outputText styleClass="strongClass" value="#{pages} " />
								<h:outputText value=" #{lblCommon.pages}" />
                                <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
                                <h:outputText styleClass="strongClass" value="#{MbHsmLMKsSearch.hsmLMKs.rowCount}"/>
                                <h:outputText value=" #{lblCommon.records}"/>
                                <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
							</h:panelGroup>
							
							<h:panelGroup>
								<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
									onclick="saveTableState();"/>
								<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
									onclick="deleteTableState();"/>
								<a4j:queue name="tablestatequeue"/>
								<a4j:jsFunction name="saveTableState" action="#{MbHsmLMKsSearch.saveTableStateDB}" eventsQueue="tablestatequeue"/>
								<a4j:jsFunction name="deleteTableState" action="#{MbHsmLMKsSearch.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
							</h:panelGroup>
						</h:panelGrid>
					</h:panelGroup>

					<h:panelGrid id="btnPanel" columns="4" styleClass="itempanel">
						<bre:taggedCommandButton id="addlmkBtn"
							reRender="hsmLMKEditForm, hsm_lmk_modal_panel"
							value="#{lblForm.add}"
							oncomplete="#{rich:component('hsm_lmk_modal_panel')}.show()"
							action="#{MbHsmLMKsSearch.add}"
							rendered="#{usession.inRole['ADD_HSM_LMK']}"
							image="/images/create_doc.gif" />
						<bre:taggedCommandButton id="editlmkBtn"
							reRender="hsmLMKEditForm, hsm_lmk_modal_panel"
							value="#{lblForm.edit}" action="#{MbHsmLMKsSearch.edit}"
							oncomplete="#{rich:component('hsm_lmk_modal_panel')}.show()"
							disabled="#{MbHsmLMKsSearch.activeLmk == null}"
							rendered="#{usession.inRole['MODIFY_HSM_LMK']}"
							image="/images/edit.gif" />
						<bre:taggedCommandButton id="deletelmkBtn"
							value="#{lblForm.delete}"
							oncomplete="#{rich:component('deleteViewId:confirmPanel')}.show()"
							disabled="#{MbHsmLMKsSearch.activeLmk == null}"
							rendered="#{usession.inRole['REMOVE_HSM_LMK']}"
							image="/images/delete.gif" />
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>

        <h:form>
            <a4j:jsFunction name="storeTab" ajaxSingle="true" limitToList="true" reRender="#{MbHsmLMKsSearch.tabName}">
                <a4j:actionparam name="tabName" assignTo="#{MbHsmLMKsSearch.tabName}" />
            </a4j:jsFunction>
        </h:form>

		<h:panelGroup styleClass="workplace" layout="block" id="workplacePanel">
			<rich:tabPanel switchType="client" id="details" tabClass="tab-cell"
				activeTabClass="active-tab-cell" headerClass="tabs"
				headerSpacing="0px" contentClass="tab-content"
				selectedTab="#{MbHsmLMKsSearch.tabName}">

				<rich:tab ontabenter="storeTab('detailsTab')" label="#{lblCommon.details}" name="detailsTab">
					<f:facet name="label">
						<h:panelGroup styleClass="first tab-label" layout="block">
							<h:outputText value="#{lblCommon.details}" title="#{lblCommon.details}" />
						</h:panelGroup>
					</f:facet>

					<h:panelGroup layout="block" id="detailsTab">
						<ui:include src="/pages/hsm/lmk_details.jspx" />
						<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons"/>
					</h:panelGroup>
				</rich:tab>
			</rich:tabPanel>
		</h:panelGroup>

		<rich:modalPanel id="hsm_lmk_modal_panel" autosized="true" minWidth="300" minHeight="100"
			onshow="actualHelp.setModeHelp('#{MbHsmLMKsSearch.newMode}')"
			onhide="actualHelp.setHelp('#{pageHelp}')">
	      	<f:facet name="header">
				<h:panelGroup id="hsm_lmk_modal_header">
	           	    <h:outputText value="#{lblHsm.edit_lmk}" rendered="#{MbHsmLMKsSearch.editMode}"/>
	           	    <h:outputText value="#{lblHsm.new_lmk}" rendered="#{MbHsmLMKsSearch.newMode}"/>
				</h:panelGroup>
			</f:facet>
			<f:facet name="controls">
				<h:panelGroup id="hsm_lmk_modal_control" rendered="#{showHelpModal}">
					<h:graphicImage value="/_img/icon_modal_help.png" style="cursor:pointer" 
							onclick="showHelp(actualHelp.getURL())" width="15px"/>
				</h:panelGroup>
		    </f:facet>
	   	    	<h:form id="hsmLMKEditForm">
	   	    		<script type="text/javascript">
//<!--
						oldValue["hsmLMKEditForm"] = "#{MbHsmLMKsSearch.newLmk.lang}";
						
						function checkLMKFields() {
							var checked = true;
							
							if (document.getElementById('hsmLMKEditForm:newLmkDesc').value == "") {
								document.getElementById('hsmLMKEditForm:newLmkDescError').style.display = "inline";
								checked = false;
							}
							
							if (document.getElementById('hsmLMKEditForm:newCheckValue').value == "") {
								document.getElementById('hsmLMKEditForm:newCheckValueError').style.display = "inline";
								checked = false;
							}								
							
							return checked;
						}
					//-->
					</script>
					<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
						<h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="firstColModal, width250">

	            			<h:outputLabel for="lang" value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
							<h:selectOneMenu id="lang" value="#{MbHsmLMKsSearch.newLmk.lang}"
									rendered="#{MbHsmLMKsSearch.newMode}">
								<f:selectItems value="#{MbHsmLMKsSearch.languages}"/>
							</h:selectOneMenu>
							<h:selectOneMenu id="editLang" value="#{MbHsmLMKsSearch.newLmk.lang}"
									rendered="#{MbHsmLMKsSearch.editMode}"
									onchange="document.getElementById('hsmLMK:confirmPanelForm:newValue').value = this.value;
											#{rich:component('hsmLMK:confirmPanel')}.show()">
								<f:selectItems value="#{MbHsmLMKsSearch.languages}"/>
							</h:selectOneMenu>

							<h:outputLabel for="newLmkDesc" value="* #{lblCommon.description}: " title="#{lblCommon.description}"/>
							<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
		            			<h:inputText id="newLmkDesc"
		            					value="#{MbHsmLMKsSearch.newLmk.description}"
		            					maxlength="200"
		            					label="#{lblCommon.description}"
		            					onblur="hideErrorField(this)">
		            				<a4j:support event="onchange" reRender="newLmkDescErr" limitToList="true" ajaxSingle="true"/>
		            				<f:validateLength minimum="3" maximum="2000"/>
		            			</h:inputText>
								<rich:message for="newLmkDesc" id="newLmkDescErr" styleClass="errorMarker"/>
								<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
									id="newLmkDescError" style="display:none;">
									<f:param name="fieldName" value="#{lblCommon.description}"/>
								</h:outputFormat>
	            			</h:panelGrid>

	            			<h:outputLabel for="newCheckValue" value="* #{lblHsm.check_value}: " title="#{lblHsm.check_value}"/>
							<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
							<h:inputText id="newCheckValue"
								value="#{MbHsmLMKsSearch.newLmk.checkValue}" 
								label="#{lblHsm.check_value}"
								maxlength="200"
								onblur="hideErrorField(this)">
								<a4j:support event="onchange" reRender="newCheckValueErr"
									limitToList="true" ajaxSingle="true" />
								<f:validateLength maximum="200"/>
								<f:validator validatorId="bpc.RegExValidator"/>
								<f:attribute name="pattern" value="[A-F0-9]{0,200}" />
								<f:attribute name="textPattern" value="#{lblCommon.human_pattern_A_F_0_9}"/>
							</h:inputText>
							<rich:message for="newCheckValue" id="newCheckValueErr" styleClass="errorMarker"/>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newCheckValueError" style="display:none;">
								<f:param name="fieldName" value="#{lblHsm.check_value}"/>
							</h:outputFormat>
	            			</h:panelGrid>

						</h:panelGrid>
					</h:panelGroup>

		      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
						<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
			       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
			       	    		<h:outputText/>
	                        	<bre:taggedCommandButton
	                        			value="#{lblForm.save}" type="submit" action="#{MbHsmLMKsSearch.save}"
	                        			onclick="if (!checkLMKFields()) return false; disableModalPanelBtns(this)"
					                   	oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('hsm_lmk_modal_panel')}.hide()"
	                        			reRender="statesForm:lmksTable, statesBtnForm:btnPanel, statesForm:lmksDs, statesForm:pagesNum, detailsTab"
		                        		/>
	                        	<bre:taggedCommandButton
		                        		value="#{lblForm.cancel}"
		                        		action="#{MbHsmLMKsSearch.cancel}"
		                        		immediate="true" limitToList="true"
		                        		oncomplete="#{rich:component('hsm_lmk_modal_panel')}.hide()"
		                        		reRender="hsmLMKEditForm">
		                        	<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
		                        </bre:taggedCommandButton>
				    		</h:panelGrid>
				    	</h:panelGroup>
				    </h:panelGroup>
				</h:form>
		</rich:modalPanel>

		<ui:include src="/pages/utils/langConfirmPanel.jspx">
	    	<ui:param name="backingBean" value="#{MbHsmLMKsSearch}"/>
	    	<ui:param name="rerenderList" value="hsmLMKEditForm:newLmkDesc"/>
	    	<ui:param name="editElem" value="hsmLMKEditForm:editLang"/>
	    	<ui:param name="newValue" value="#{MbHsmLMKsSearch.newLmk.lang}"/>
	    	<ui:param name="subviewId" value="hsmLMK"/>
	    	<ui:param name="formName" value="hsmLMKEditForm" />
	    </ui:include>
	    
	    <ui:include src="/pages/utils/confirmPanel.jspx">
			<ui:param name="backingBean" value="#{MbHsmLMKsSearch}"/>
			<ui:param name="yesAction" value="delete"/>
			<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
			<ui:param name="rerenderList" value="lmksTable, detailsTab, btnPanel, lmksDs, pagesNum"/>
			<ui:param name="confirmQuestion" value=" "/> 
			<ui:param name="subviewId" value="deleteViewId"/>
			<ui:param name="yes" value="#{lblForm.ok}"/>
			<ui:param name="no" value="#{lblForm.cancel}"/>
		</ui:include>
		
		<script>
		//<![CDATA[
		function updateHeight(){
        updateGridHeight();
	    }
	
	    layout =
	            {
	                SEARCH_FORM_ID:                 'statesSearchForm',
	                SEARCH_RESULT_FORM_ID:          'statesForm',
	                SEARCH_RESULT_FORM_WRAPPER_ID:  'mainTableWrapper',
	                SEARCH_RESULT_FOOTER_FORM_ID:   'statesBtnForm',
	                TAB_PANEL_ID:                   'workplacePanel',
	
	                TAB_DATA:      [{
	                                TAB_FORM_ID:            'lmkDetailsForm',
	                                TAB_FORM_WRAPPER_ID:    'lmkDetailsWrapper',
	                                CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS + Stretch.LANG_SELECTOR
	                                }]
	
	            };
	    jQuery(window).resize(updateHeight);
		
		updateHeight();
		//]]>
		</script>		
	</ui:define>
</ui:composition>
</html>
