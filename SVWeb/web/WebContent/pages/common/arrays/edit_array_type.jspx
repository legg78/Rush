<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<script type="text/javascript">		function checkFields() {
			var checked = true;
			if (document.getElementById('arrayTypeModalDiv:instId').value == "") {
				document.getElementById('arrayTypeModalDiv:instIdError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('arrayTypeModalDiv:dataType').value == "") {
				document.getElementById('arrayTypeModalDiv:dataTypeError').style.display = "inline";
				checked = false;
			}
			if (document.getElementById('arrayTypeModalDiv:entityType').value == "") {
				document.getElementById('arrayTypeModalDiv:entityTypeError').style.display = "inline";
				checked = false;
			}
			if (document.getElementById('arrayTypeModalDiv:newName').value == "") {
				document.getElementById('arrayTypeModalDiv:newNameError').style.display = "inline";
				checked = false;
			}
			if (document.getElementById('arrayTypeModalDiv:newSystemName').value == "") {
				document.getElementById('arrayTypeModalDiv:newSystemNameError').style.display = "inline";
				checked = false;
			}

			return checked;
		}
	</script>

	<rich:modalPanel id="arrayTypeModalPanel" autosized="true" minWidth="300"
		minHeight="100"
		rendered="#{usession.inRole['ADD_ARRAY_TYPE'] or usession.inRole['MODIFY_ARRAY_TYPE']}">
		<f:facet name="header">
			<h:panelGroup id="arrayTypeModalHeader">
				<h:outputText value="#{lblCommon.edit_array_type}" rendered="#{MbArrayTypes.editMode}" />
				<h:outputText value="#{lblCommon.add_array_type}" rendered="#{MbArrayTypes.newMode}" />
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
		</f:facet>

		<h:form id="arrayTypeModalDiv">
			<script type="text/javascript">
//<!--
				oldValue["arrayTypeModalDiv"] = "#{MbArrayTypes.newArrayType.lang}";
			//-->
			</script>

			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata"
					columnClasses="firstColModal, width250">

					<h:outputLabel value="#{lblCommon.id}: " title="#{lblCommon.id}"
						rendered="#{MbArrayTypes.editMode}" />
					<h:inputText readonly="true" rendered="#{MbArrayTypes.editMode}"
						value="#{MbArrayTypes.newArrayType.id}" />
					
					<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}" />
					<h:selectOneMenu id="editLang" value="#{MbArrayTypes.newArrayType.lang }"
						onchange="if (#{MbArrayTypes.newMode}) {return true;} document.getElementById('confirmPanelView:confirmPanelForm:newValue').value = this.value;
									#{rich:component('confirmPanel')}.show()">
						<f:selectItems value="#{MbArrayTypes.languages}" />
					</h:selectOneMenu>
           			
           			<h:outputLabel for="newName" value="* #{lblCommon.name}: " title="#{lblCommon.name}" />
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:inputText id="newName" value="#{MbArrayTypes.newArrayType.name}"
							label="#{lblCommon.name}" maxlength="200"
							onblur="hideErrorField(this)">
							<f:validateLength minimum="3" />
							<a4j:support event="onchange" reRender="newNameErr" limitToList="true"/>
						</h:inputText>
						<rich:message id="newNameErr" for="newName" styleClass="errorMarker" />
						<h:outputFormat value="#{lblMsg.value_request}"
							styleClass="errorMarker" id="newNameError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.name}" />
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel for="newSystemName" value="* #{lblCommon.system_name}: " title="#{lblCommon.system_name}" />
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:inputText id="newSystemName" value="#{MbArrayTypes.newArrayType.systemName}"
							label="#{lblCommon.system_name}" maxlength="200"
							onblur="hideErrorField(this)">
						</h:inputText>
						<h:outputFormat value="#{lblMsg.value_request}"
							styleClass="errorMarker" id="newSystemNameError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.system_name}" />
						</h:outputFormat>
					</h:panelGrid>
					
					<h:outputLabel value="* #{lblCommon.institution}: " title="#{lblCommon.institution}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
            			<h:selectOneMenu id="instId" 
            					value="#{MbArrayTypes.newArrayType.instId}"
            					label="#{lblCommon.institution}"
            					onblur="hideErrorField(this)">
            				<f:selectItem itemValue=""/>
							<f:selectItems value="#{MbArrayTypes.institutions}"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="instIdError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.institution}"/>
						</h:outputFormat>
           			</h:panelGrid>
           			
           			<h:outputLabel value="* #{lblCommon.entity_type}: " title="#{lblCommon.entity_type}" />
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:selectOneMenu id="entityType"
							value="#{MbArrayTypes.newArrayType.entityType}"
							label="#{lblCommon.entity_type}"
							onblur="hideErrorField(this)">
							<f:selectItems value="#{MbArrayTypes.entityTypes}" />
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}"
							styleClass="errorMarker" id="entityTypeError"
							style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.entity_type}" />
						</h:outputFormat>
					</h:panelGrid>
					
					<h:outputLabel value="* #{lblCommon.data_type}: " title="#{lblCommon.data_type}" />
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:selectOneMenu id="dataType"
							value="#{MbArrayTypes.newArrayType.dataType}"
							label="#{lblCommon.data_type}" onblur="hideErrorField(this)">
							<f:selectItems value="#{MbArrayTypes.dataTypes}" />
							<a4j:support event="onchange" reRender="lovId" limitToList="true" ajaxSingle="true"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}"
							styleClass="errorMarker" id="dataTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.data_type}" />
						</h:outputFormat>
					</h:panelGrid>
					
					<h:outputLabel value="#{lblCommon.lovs}: " title="#{lblCommon.lovs}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
            			<h:selectOneMenu id="lovId"
            					value="#{MbArrayTypes.newArrayType.lovId}"
            					label="#{lblCommon.lovs}"
            					onblur="hideErrorField(this)">
            				<f:selectItem itemValue=""/>
							<f:selectItems value="#{MbArrayTypes.lovs}"/>
						</h:selectOneMenu>
						<rich:message for="lovId" styleClass="errorMarker"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="lovIdError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.lovs}"/>
						</h:outputFormat>
           			</h:panelGrid>
           			
					<h:outputLabel value="#{lblCommon.is_unique}: " title="#{lblCommon.is_unique}"/>
					<h:selectBooleanCheckbox id="isDefault" value="#{MbArrayTypes.newArrayType.unique}"
							disabled="#{MbArrayTypes.editMode and MbArrayTypes.activeArrayType.unique}"/>
					
           			<h:outputLabel for="newDesc" value="#{lblCommon.description}: " title="#{lblCommon.description}" />
					<h:inputTextarea id="newDesc" value="#{MbArrayTypes.newArrayType.description}"
						rows="5" cols="150" 
						onkeypress="if (!limitText(event,this,2000)) return false;" 
            					label="#{lblCommon.description}">
		            	<f:validateLength maximum="2000" />
			        </h:inputTextarea>





                    <h:outputLabel for="className" value="#{lblCommon.class_name}: " title="#{lblCommon.class_name}" />
                    <h:panelGrid columns="1" cellspacing="0" cellpadding="0">
                        <h:inputText id="className" value="#{MbArrayTypes.newArrayType.className}"
                                     label="#{lblCommon.class_name}" maxlength="200"
                                     onblur="hideErrorField(this)">
                        </h:inputText>
                        <h:outputFormat value="#{lblMsg.value_request}"
                                        styleClass="errorMarker" id="classNameError" style="display:none;">
                            <f:param name="fieldName" value="#{lblCommon.class_name}" />
                        </h:outputFormat>
                    </h:panelGrid>

                    <h:outputLabel value="#{lblRul.scale_type}: " title="#{lblRul.scale_type}"/>
                    <h:panelGrid columns="1" cellspacing="0" cellpadding="0">
                        <h:selectOneMenu id="scaleType"
                                         value="#{MbArrayTypes.newArrayType.scaleType}"
                                         label="#{lblCommon.scale_type}" onblur="hideErrorField(this)">
                            <f:selectItem itemValue=""/>
                            <f:selectItems value="#{MbArrayTypes.scaleTypes}" />
                        </h:selectOneMenu>
                        <h:outputFormat value="#{lblMsg.value_request}"
                                        styleClass="errorMarker" id="scaleTypeError" style="display:none;">
                            <f:param name="fieldName" value="#{lblRul.scale_type}" />
                        </h:outputFormat>
                    </h:panelGrid>

           			
				</h:panelGrid>
			</h:panelGroup>

			<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.save}" type="submit"
							action="#{MbArrayTypes.save}"
							onclick="if (!checkFields()) return false; disableModalPanelBtns(this)"
							oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) 
			                   			#{rich:component('arrayTypeModalPanel')}.hide()"
							reRender="${rerenderList}" />
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbArrayTypes.cancel}" immediate="true" limitToList="true"
							oncomplete="#{rich:component('arrayTypeModalPanel')}.hide()"
							reRender="arrayTypeModalDiv">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/langConfirmPanel.jspx">
    	<ui:param name="backingBean" value="#{MbArrayTypes}"/>
    	<ui:param name="rerenderList" value="arrayTypeModalDiv:newName, arrayTypeModalDiv:newSystemName, arrayTypeModalDiv:newDesc"/>
    	<ui:param name="editElem" value="arrayTypeModalDiv:editLang"/>
    	<ui:param name="newValue" value="#{MbArrayTypes.newArrayType.lang}"/>
    	<ui:param name="formName" value="arrayTypeModalDiv"/>
    </ui:include>

</ui:composition>
</html>
