<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	xmlns:fmt="http://www.bpc.ru/el/formatter">
<ui:composition>
	<f:loadBundle var="lblAtm" basename="ru.bpc.sv2.ui.bundles.Atm" />

	<h:form id="atmDispenserForm" style="overflow:hidden;">

		<h:panelGroup id="atmDispenserTableWrapper" layout="block"
			style="padding:0px;margin:0px;">
			<rich:extendedDataTable id="atmDispenserTable" styleClass="res-table"
				headerClass="res-table-header table-header-ext" rowClasses=",odd"
				selectedClass="res-table-selected" var="item"
				value="#{MbAtmDispensersSearch.dispensers}" selectionMode="single"
				width="100%" enableContextMenu="true" border="0"
				tableState="#{MbAtmDispensersSearch.tableState}"
				noDataLabel="#{lblCommon.no_records_found}">

				<rich:column id="denomination_id" label="#{lblAtm.denomination_id}" title="Denomination Id" sortBy="#{'denominationId'}"
					width="11%">
					<f:facet name="header">
						<h:panelGroup>
							<script>
								updateHeight();
							</script>
							<h:outputText value="#{lblAtm.denomination_id}"
								title="#{lblAtm.denomination_id}" />
						</h:panelGroup>
					</f:facet>
					<h:outputText value="#{item.denominationId}"
						title="#{item.denominationId}" />
				</rich:column>

				<rich:column id="dispenser_type" label="#{lblAtm.dispenser_type}" title="Dispenser Type"
					sortBy="#{'dispenserTypeName'}" width="14%">
					<f:facet name="header">
						<h:outputText value="#{lblAtm.dispenser_type}"
							title="#{lblAtm.dispenser_type}" />
					</f:facet>
				</rich:column>

				<rich:column id="remained" label="#{lblAtm.remained}" title="Note Remained" sortBy="#{'noteRemained'}"
					width="14%">
					<f:facet name="header">
						<h:outputText value="#{lblAtm.remained}"
							title="#{lblAtm.remained}" />
					</f:facet>
					<h:outputText value="#{item.noteRemained}"
						title="#{item.noteRemained}" />
				</rich:column>

				<rich:column id="dispensed" label="#{lblAtm.dispensed}" title="Note Dispensed" sortBy="#{'noteDispensed'}"
					width="15%">
					<f:facet name="header">
						<h:outputText value="#{lblAtm.dispensed}"
							title="#{lblAtm.dispensed}" />
					</f:facet>
					<h:outputText value="#{item.noteDispensed}"
						title="#{item.noteDispensed}" />
				</rich:column>

				<rich:column id="loaded" label="#{lblAtm.loaded}" title="Note Loaded" sortBy="#{'noteLoaded'}"
					width="14%">
					<f:facet name="header">
						<h:outputText value="#{lblAtm.loaded}"
							title="#{lblAtm.loaded}" />
					</f:facet>
					<h:outputText value="#{item.noteLoaded}" title="#{item.noteLoaded}" />
				</rich:column>

				<rich:column id="rejected" label="#{lblAtm.rejected}" title="Note Rejected" sortBy="#{'noteRejected'}"
					width="14%">
					<f:facet name="header">
						<h:outputText value="#{lblAtm.rejected}"
							title="#{lblAtm.rejected}" />
					</f:facet>
					<h:outputText value="#{item.noteRejected}"
						title="#{item.noteRejected}" />
				</rich:column>

				<rich:column id="cassette_status" label="#{lblAtm.cassette_status}" title="Cassette Status"
					sortBy="#{'cassetteStatusName'}" width="16%">
					<f:facet name="header">
						<h:outputText value="#{lblAtm.cassette_status}"
							title="#{lblAtm.cassette_status}" />
					</f:facet>
					<h:outputText value="#{item.cassetteStatusName}"
						title="#{item.cassetteStatusName}" />
				</rich:column>
			</rich:extendedDataTable>

		</h:panelGroup>

		<h:panelGroup layout="block"
			styleClass="bottom_search_result_block_buttons">
			<h:panelGrid id="btnPanel" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
				<h:panelGroup>
					<h:panelGrid id="synchr" columns="3" styleClass=", firstCol">
						<bre:taggedCommandButton id="sendSupplyCounters" reRender="atmDispenserTable, last_sinchr"
							value="#{lblAtm.synchronize_counters}"
							action="#{MbAtmMonitoring.synchronizeCounters}"
							disabled="#{MbAtmMonitoring.activeItem == null}"
							image="/images/edit.gif" />
						<h:outputLabel value="#{lblAtm.last_synchronization}: "
						title="#{lblAtm.last_synchronization}" />
						<h:inputText value="#{MbAtmDispensersSearch.lastSynchronization}" id="last_sinchr"
							title="#{MbAtmDispensersSearch.lastSynchronization}" style="width:80px;" disabled="true">
							<f:convertDateTime pattern="#{usession.datePattern}"
									timeZone="#{CommonUtils.timeZone}" />
						</h:inputText>
					</h:panelGrid>				
				</h:panelGroup>
				
				<h:panelGroup>
						<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
							onclick="saveCounterTableState();"/>
						<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
							onclick="deleteCounterTableState();"/>
						<a4j:queue name="tablestatequeue"/>
						<a4j:jsFunction name="saveCounterTableState" action="#{MbAtmDispensersSearch.saveTableStateDB}" eventsQueue="tablestatequeue"/>
						<a4j:jsFunction name="deleteCounterTableState" action="#{MbAtmDispensersSearch.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
					</h:panelGroup>
			</h:panelGrid>
		</h:panelGroup>
	</h:form>
</ui:composition>
</html>
