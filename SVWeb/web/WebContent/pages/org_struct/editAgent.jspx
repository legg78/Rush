<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<script type="text/javascript">//<![CDATA[			
		function checkAgentFields() {
			var checked = true;
			
			if (document.getElementById('agentEditForm:name').value == "") {
				document.getElementById('agentEditForm:nameError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('agentEditForm:agentType').value == "") {
				document.getElementById('agentEditForm:agentTypeError').style.display = "inline";
				checked = false;
			}	
			
			if (document.getElementById('agentEditForm:externalNumber').value == "") {
				document.getElementById('agentEditForm:externalNumberError').style.display = "inline";
				checked = false;
			}	
			
			return checked;
		}
		//]]>
	</script>

	<rich:modalPanel id="agentModalPanel" autosized="true" minWidth="200" minHeight="100">
      	<f:facet name="header">
      		<h:panelGroup id="agentModalHeader">
	        	<h:outputText value="#{lblOst.new_agent}" rendered="#{MbAgent.managingNew}"/>
	        	<h:outputText value="#{lblOst.edit_agent}" rendered="#{!MbAgent.managingNew}"/>
        	</h:panelGroup>
        </f:facet>
  	    <f:facet name="controls">
      	</f:facet>
		<h:form id="agentEditForm">
			<script type="text/javascript">//<!--
				oldValue["agentEditForm"] = "#{MbAgent.newNode.lang}";
			//-->
			</script>
			
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
		        <h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">
		
					<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
					<h:selectOneMenu id="lang" value="#{MbAgent.newNode.lang}"
						onchange="if (#{MbAgent.managingNew}) {return true;} document.getElementById('agentEditView:confirmPanelForm:newValue').value = this.value;
									#{rich:component('agentEditView:confirmPanel')}.show()">
					    <f:selectItems value="#{MbAgent.languages}"/>
					</h:selectOneMenu>
					
					<h:outputLabel value="* #{lblCommon.name}: " title="#{lblCommon.name}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:inputText id="name" value="#{MbAgent.newNode.name}"
								maxlength="200" label="#{lblCommon.name}"
								onblur="hideErrorField(this)">					
							<f:validateLength minimum="3"/>
							<a4j:support event="onchange" reRender="nameErr" limitToList="true"/>					
						</h:inputText>
						<rich:message for="name" id="nameErr" styleClass="errorMarker"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="nameError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.name}"/>
						</h:outputFormat>
					</h:panelGrid>
					
					<h:outputLabel value="#{lblCommon.description}: " title="#{lblCommon.description}"/>
					<h:inputTextarea id="fullDesc" rows="3"
			            	value="#{MbAgent.newNode.description}"
			            	onkeypress="if (!limitText(event,this,2000)) return false;" label="#{lblCommon.description}">
			            	<f:validateLength maximum="2000" />
			        </h:inputTextarea>		
									
					<h:outputLabel value="#{lblOst.institution}: " title="#{lblOst.institution}"/>
					<h:selectOneMenu id="instId" value="#{MbAgent.newNode.instId}"
							disabled="#{MbAgent.disabledInst}">
						<f:selectItem itemValue=""/>
						<f:selectItems value="#{MbAgent.institutions}"/>
					</h:selectOneMenu>
					
					<h:outputLabel value="#{lblCommon.parent}: " title="#{lblCommon.parent}"/>
					<a4j:region>
						<h:selectOneMenu id="parentId" value="#{MbAgent.newNode.parentId}" 
								disabled="#{!MbAgent.newMode}">
							<a4j:support event="onchange" reRender="agentEditForm:agentType" 
									limitToList="true" ajaxSingle="true"/>
							<f:selectItem itemValue=""/>
							<f:selectItems value="#{MbAgent.parentAgents}"/>
						</h:selectOneMenu>
					</a4j:region>
		
					<h:outputLabel value="* #{lblCommon.type}: " title="#{lblCommon.type}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:selectOneMenu id="agentType" label="#{lblCommon.type}"
								value="#{MbAgent.newNode.type}" disabled="#{!MbAgent.newMode}"
								onblur="hideErrorField(this)">
							<f:selectItem itemValue=""/>
						    <f:selectItems value="#{MbAgent.possibleAgentTypes}"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="agentTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.type}"/>
						</h:outputFormat>						
					</h:panelGrid>
					
					<h:outputLabel value="* #{lblOst.external_number}:" title="#{lblOst.external_number}" />
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
		            	<h:inputText value="#{MbAgent.newNode.externalNumber}" id="externalNumber" onblur="hideErrorField(this)"/>
		            	<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="externalNumberError" style="display:none;">
							<f:param name="fieldName" value="#{lblOst.external_number}"/>
						</h:outputFormat>
		            </h:panelGrid>
					
					<h:outputLabel value="#{lblCommon.is_default}: " title="#{lblCommon.is_default}"/>
					<h:selectBooleanCheckbox id="isDefault" value="#{MbAgent.newNode.default}"
							disabled="#{MbAgent.editMode and MbAgent.node.default}"/>
		
				</h:panelGrid>
			
			</h:panelGroup>
      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
	       	    		<h:outputText/>
						<bre:taggedCommandButton value="#{lblForm.save}" type="submit" 
								action="#{MbAgent.save}"
								onclick="if (!checkAgentFields()) return false; disableModalPanelBtns(this)"
								oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('agentModalPanel')}.hide()"
								reRender="#{rerenderList}"/>
	                	<bre:taggedCommandButton reRender="agentEditForm"
		                       	value="#{lblForm.cancel}" action="#{MbAgent.cancel}" immediate="true"
		                       	oncomplete="#{rich:component('agentModalPanel')}.hide()">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/langConfirmPanel.jspx">
    	<ui:param name="backingBean" value="#{MbAgent}"/>
    	<ui:param name="rerenderList" value="agentEditForm:name, agentEditForm:fullDesc"/>
    	<ui:param name="editElem" value="agentEditForm:lang"/>
    	<ui:param name="newValue" value="#{MbAgent.newNode.lang}"/>
    	<ui:param name="subviewId" value="agentEditView" />
    	<ui:param name="formName" value="agentEditForm"/>
    </ui:include>

</ui:composition>
</html>
