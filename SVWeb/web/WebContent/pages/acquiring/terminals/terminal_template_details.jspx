<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
<f:loadBundle var="lblPrd" basename="ru.bpc.sv2.ui.bundles.Prd" />
<h:form id="templateDetailsForm">
	<h:panelGroup layout="block" styleClass="langSelector">
		<h:panelGrid columns="2" styleClass="cardholderdata oneColumnTable"
				id="detailsData" columnClasses=",secondCol">
			<h:outputLabel for="lang" value="#{lblCommon.lang_selector}: "
					title="#{lblCommon.lang_selector}" />
			<h:selectOneMenu id="lang"
					disabled="#{MbTerminalTemplates.activeTemplate.id == null}"
					value="#{MbTerminalTemplates.activeTemplate.lang}"
					valueChangeListener="#{MbTerminalTemplates.changeLanguage}">
				<a4j:support event="onchange" reRender="templateDetailsForm"
						limitToList="true" oncomplete="updateHeight();"/>
				<f:selectItems value="#{MbTerminalTemplates.languages}" />
			</h:selectOneMenu>
		</h:panelGrid>
	</h:panelGroup>
	<h:panelGroup id="templateDetailsWrapper" layout="block" styleClass="carddata-wrapper" 
			style="height: 100%; overflow-y: auto;overflow-x: hidden;position:relative;">
		<rich:dataTable id="rateTypeDetailsTable"
				value="#{MbTerminalTemplates.emptyTable}" 
				var="field"
				styleClass="res-table noHeader" width="100%">
			<rich:columnGroup rowClasses=",odd" 
					columnClasses="firstCol alignLeft width20, width80 width250 noPadding">
				<rich:column styleClass="detailsCategory expandedBranch">
					<h:graphicImage url="/images/minus.gif" onclick="showHideDetails(this)"/>
					<h:outputLabel value="#{lblPrd.general_data}:" />
				</rich:column>
				<rich:column>
					<script>updateHeight();</script>
				</rich:column>					
				
				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblCommon.name}: " title="#{lblCommon.name}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{MbTerminalTemplates.activeTemplate.name}"
							title="#{MbTerminalTemplates.activeTemplate.name}" />
				</rich:column>
				
				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblCommon.description}: " title="#{lblCommon.description}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{MbTerminalTemplates.activeTemplate.description}"
							title="#{MbTerminalTemplates.activeTemplate.description}" style="white-space: normal"/>
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblCommon.id}: " title="#{lblCommon.id}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{MbTerminalTemplates.activeTemplate.id}"
							title="#{MbTerminalTemplates.activeTemplate.id}"/>
				</rich:column>
				
				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblAcq.institution}: " title="#{lblAcq.institution}"/>
				</rich:column>
				<rich:column>
					<bm:entityDisplay  entityId="#{MbTerminalTemplates.activeTemplate.instId}"
									value="#{MbTerminalTemplates.activeTemplate.institutionName}"/>
				</rich:column>				

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblAcq.terminal_type}: " title="#{lblAcq.terminal_type}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{DictUtils.articlesByLang[MbTerminalTemplates.activeTemplate.lang][MbTerminalTemplates.activeTemplate.terminalType]}"
							title="#{DictUtils.articlesByLang[MbTerminalTemplates.activeTemplate.lang][MbTerminalTemplates.activeTemplate.terminalType]}"
							rendered="#{MbTerminalTemplates.activeTemplate.terminalType != null}"/>
					<h:outputLabel value=""
							rendered="#{MbTerminalTemplates.activeTemplate.terminalType == null}"/>					
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblCmn.standard}: " title="#{lblCmn.standard}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{MbTerminalTemplates.standardName}"
							title="#{MbTerminalTemplates.standardName}"/>
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblCommon.gmt_offset}: " title="#{lblCommon.gmt_offset}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="+#{MbTerminalTemplates.activeTemplate.gmtOffset}"
								rendered="#{MbTerminalTemplates.activeTemplate.positiveOffset}"
								title="+#{MbTerminalTemplates.activeTemplate.gmtOffset}"/>
					<h:outputLabel value="#{MbTerminalTemplates.activeTemplate.gmtOffset}"
								rendered="#{!MbTerminalTemplates.activeTemplate.positiveOffset}"
								title="#{MbTerminalTemplates.activeTemplate.gmtOffset}"/>
				</rich:column>
				
				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblCommon.status}: " title="#{lblCommon.status}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{DictUtils.articlesByLang[MbTerminalTemplates.activeTemplate.lang][MbTerminalTemplates.activeTemplate.status]}"
							title="#{DictUtils.articlesByLang[MbTerminalTemplates.activeTemplate.lang][MbTerminalTemplates.activeTemplate.status]}"
							render="#{MbTerminalTemplates.activeTemplate.status != null}"/>
					<h:outputLabel value="" rendered="#{MbTerminalTemplates.activeTemplate.status == null}" />
				</rich:column>
				
				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblAcq.is_mac}: " title="#{lblAcq.is_mac}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel 
								value="#{lblCommon.yes}" title="#{lblCommon.yes}"
								rendered="#{MbTerminalTemplates.activeTemplate.isMac}"/>
					<h:outputLabel 
							value="#{lblCommon.no}" title="#{lblCommon.no}"
							rendered="#{MbTerminalTemplates.activeTemplate != null and not MbTerminalTemplates.activeTemplate.isMac}"/>
					<h:outputLabel  value=""
							rendered="#{MbTerminalTemplates.activeTemplate == null}"/>
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblAcq.mcc_redefinition_group}: "
						title="#{lblAcq.mcc_redefinition_group}" />
				</rich:column>
				<rich:column>
					<h:outputLabel
						value="#{MbTerminalTemplates.mccSelectionTemplatesMap[MbTerminalTemplates.activeTemplate.mccTemplateId]}"
						title="#{MbTerminalTemplates.mccSelectionTemplatesMap[MbTerminalTemplates.activeTemplate.mccTemplateId]}" />
					<h:outputLabel value=""
						rendered="#{MbTerminalTemplates.activeTemplate.mccTemplateId == null}" />
				</rich:column>
				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblAcq.terminal_profile}: "
						title="#{lblAcq.terminal_profile}" />
				</rich:column>
				<rich:column>
					<h:outputLabel
						value="#{MbTerminalTemplates.activeTemplate.terminalProfile}"
						title="#{MbTerminalTemplates.activeTemplate.terminalProfile}" 
						rendered="#{MbTerminalTemplates.activeTemplate.terminalProfile != null}"/>
					<h:outputLabel value=""
						rendered="#{MbTerminalTemplates.activeTemplate.terminalProfile == null}" />
				</rich:column>
				
				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblAcq.pin_block_format}: "
						title="#{lblAcq.pin_block_format}" />
				</rich:column>
				<rich:column>
					<h:outputLabel
						value="#{MbTerminalTemplates.activeTemplate.pinBlockFormat}"
						title="#{MbTerminalTemplates.activeTemplate.pinBlockFormat}" 
						rendered="#{MbTerminalTemplates.activeTemplate.pinBlockFormat != null}"/>
					<h:outputLabel value=""
						rendered="#{MbTerminalTemplates.activeTemplate.pinBlockFormat == null}" />
				</rich:column>			
			</rich:columnGroup>
		</rich:dataTable>
		<script>setDetailsState("templateDetailsForm:templateDetailsTable");</script>
	</h:panelGroup>
</h:form>
</ui:composition>
</html>
