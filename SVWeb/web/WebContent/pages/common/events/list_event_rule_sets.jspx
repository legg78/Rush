<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition>
	<f:loadBundle var="lblCommon" basename="ru.bpc.sv2.ui.bundles.Common"/>
	<f:loadBundle var="lblRul" basename="ru.bpc.sv2.ui.bundles.Rul"/>
	
   	<h:form id="eventRulesSetsForm">
		<h:panelGroup layout="block" id="ersTableWrapper"
			style="padding:0px;margin:0px;">
			<rich:extendedDataTable id="ersTable" styleClass="res-table"
				headerClass="res-table-header table-header-ext" rowClasses=",odd"
				selectedClass="res-table-selected" var="item"
				value="#{MbEventRuleSets.eventRuleSets}"
				selection="#{MbEventRuleSets.itemSelection}"
				selectionMode="single" enableContextMenu="true"
				tableState="#{MbEventRuleSets.tableState}"
				noDataLabel="#{lblCommon['no_records_found']}">

				<a4j:support event="onselectionchange" requestDelay="500"
					limitToList="true" reRender="eventRulesSetsForm:ersBtns" />

				<rich:column id="id" label="#{lblCommon.id}" title="Id" sortBy="#{'id'}" width="10%">
					<f:facet name="header">
						<a4j:outputPanel layout="none">
							<script>updateHeight();</script>
							<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}" />
						</a4j:outputPanel>
					</f:facet>
					<h:outputText value="#{item.ruleSetId}" />
				</rich:column>

				<rich:column id="rule_set" label="#{lblRul.rule_set}" title="Rule set name" sortBy="#{'rsName'}" width="40%">
					<f:facet name="header">
						<h:outputText value="#{lblRul.rule_set}"
							title="#{lblRul.rule_set}" />
					</f:facet>
					<h:outputText value="#{item.ruleSetName}"
						title="#{item.ruleSetName}" />
				</rich:column>

				<rich:column id="modifier" label="#{lblRul.modifier}" title="Modifier name" sortBy="#{'modName'}" width="40%">
					<f:facet name="header">
						<h:outputText value="#{lblRul.modifier}"
							title="#{lblRul.modifier}" />
					</f:facet>
					<h:outputText value="#{item.modName}" title="#{item.modName}" />
				</rich:column>

			</rich:extendedDataTable>
		</h:panelGroup>
		<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
			     <h:panelGrid id="ersBtns" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
			     	<h:panelGroup>
	            	<bre:taggedCommandButton id="addBtn"
                      		reRender="eventRuleSetModalDiv,eventRuleSetModalHeader"
                      		value="#{lblForm.add}"
                      		disabled="#{MbEventRuleSets.eventId == null}"
                   			oncomplete="#{rich:component('eventRuleSetModalPanel')}.show()"
                      		action="#{MbEventRuleSets.add}"
                      		image="/images/create_doc.gif"
                      		/>
					<bre:taggedCommandButton id="editBtn"
                      		reRender="eventRuleSetModalDiv,eventRuleSetModalHeader"
                      		value="#{lblForm.edit}"
                      		action="#{MbEventRuleSets.edit}"
                   			oncomplete="#{rich:component('eventRuleSetModalPanel')}.show()"
                      		disabled="#{MbEventRuleSets.eventId == null or MbEventRuleSets.activeEventRuleSet == null}"
                      		image="/images/edit.gif"
                      		/>
					<bre:taggedCommandButton id="deleteBtn"
                      		value="#{lblForm.delete}"
                      		oncomplete="#{rich:component('deleteRuleSetViewId:confirmPanel')}.show()"
                      		disabled="#{MbEventRuleSets.eventId == null or MbEventRuleSets.activeEventRuleSet == null}"
                      		image="/images/delete.gif"
                      		/>
                    </h:panelGroup>
                    
                    <h:panelGroup>
						<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
							onclick="saveRuleTableState();"/>
						<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
							onclick="deleteRuleTableState();"/>
						<a4j:queue name="tablestatequeue"/>
						<a4j:jsFunction name="saveRuleTableState" action="#{MbEventRuleSets.saveTableStateDB}" eventsQueue="tablestatequeue"/>
						<a4j:jsFunction name="deleteRuleTableState" action="#{MbEventRuleSets.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
					</h:panelGroup>
				</h:panelGrid>
			</h:panelGroup>
	    </h:panelGroup>
    </h:form>

	<rich:modalPanel id="eventRuleSetModalPanel" autosized="true" minWidth="300" minHeight="50"
			onshow="focusFirstElemet('eventRuleSetModalDiv')">
		<f:facet name="header">
   	    	<h:panelGroup id="eventRuleSetModalHeader">
	       	    <h:outputText value="#{lblCommon.new_event_rule_set}" rendered="#{MbEventRuleSets.newMode}"/>
	       	    <h:outputText value="#{lblCommon.edit_event_rule_set}" rendered="#{MbEventRuleSets.editMode}"/>
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
		</f:facet>
		<h:form id="eventRuleSetModalDiv">
			<ui:include src="/pages/common/events/edit_event_rule_set.jspx"></ui:include>
      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
	       	    		<h:outputText/>
                       	<bre:taggedCommandButton
                       			value="#{lblForm.save}" type="submit" action="#{MbEventRuleSets.save}"
                       			onclick="if (!checkEventRuleSetFields()) return false; disableModalPanelBtns(this)"
                       			oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('eventRuleSetModalPanel')}.hide()"
                       			reRender="eventRulesSetsForm"
                        		/>
                       	<bre:taggedCommandButton
                        		value="#{lblForm.cancel}" action="#{MbEventRuleSets.close}" immediate="true"
                        		oncomplete="#{rich:component('eventRuleSetModalPanel')}.hide()"
                        		reRender="eventRuleSetModalDiv">
                        	<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
                        </bre:taggedCommandButton>			                        		
		    		</h:panelGrid>
		    	</h:panelGroup>
		    </h:panelGroup>
		</h:form>			
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/confirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbEventRuleSets}"/>
		<ui:param name="yesAction" value="delete"/>
		<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
		<ui:param name="rerenderList" value="eventRulesSetsForm"/>
		<ui:param name="confirmQuestion" value=" "/> 
		<ui:param name="subviewId" value="deleteRuleSetViewId"/>
		<ui:param name="yes" value="#{lblForm.ok}"/>
		<ui:param name="no" value="#{lblForm.cancel}"/>
	</ui:include>
    
</ui:composition>
</html>
