<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<script type="text/javascript">
//<!--
		function checkFlowTransitionFields() {
			var checked = true;
			
			if (document.getElementById('flowTransitionEditForm:stageId').value == "") {
				document.getElementById('flowTransitionEditForm:stageIdError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('flowTransitionEditForm:transitionStageId').value == "") {
				document.getElementById('flowTransitionEditForm:transitionStageIdError').style.display = "inline";
				checked = false;
			}
			if (document.getElementById('flowTransitionEditForm:stageResult').value == "") {
				document.getElementById('flowTransitionEditForm:stageResultError').style.display = "inline";
				checked = false;
			}
			
			return checked;
		}
		//-->
	</script>

	<f:loadBundle var="lblApp" basename="ru.bpc.sv2.ui.bundles.App" />
	<f:loadBundle var="lblAcq" basename="ru.bpc.sv2.ui.bundles.Acq" />
	<f:loadBundle var="lblCommon" basename="ru.bpc.sv2.ui.bundles.Common" />

	<h:form id="flowTransitionsForm">
		<h:panelGroup id="flowTransitionsTableWrapper" layout="block"
			style="padding:0px;margin:0px;">
			<rich:extendedDataTable id="flowTransitionsTable"
				styleClass="res-table" headerClass="res-table-header table-header-ext"
				rowClasses=",odd" selectedClass="res-table-selected" var="item"
				value="#{MbAppFlowTransitions.transitions}"
				selection="#{MbAppFlowTransitions.itemSelection}"
				selectionMode="single" enableContextMenu="true"
				tableState="#{MbAppFlowTransitions.tableState}"
				noDataLabel="#{lblCommon['no_records_found']}">

				<a4j:support event="onselectionchange" reRender="btnPanel" />

				<rich:column id="id" label="#{lblCommon.id}" title="Id" sortBy="#{'id'}" width="8%">
					<f:facet name="header">
						<a4j:outputPanel layout="none">
							<script>updateHeight();</script>
							<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}" />						
						</a4j:outputPanel>
					</f:facet>
					<h:outputText value="#{item.id}" />
				</rich:column>

				<rich:column id="previous_status" label="#{lblApp.previous_status}" title="preStatus" sortBy="#{'preStatus'}" width="18%">
					<f:facet name="filter">
						<h:selectOneMenu value="#{MbAppFlowTransitions.filter.stageId}"
							style="width: 100%;">
							<f:selectItem itemValue="" />
							<f:selectItems value="#{MbAppFlowTransitions.stages}" />
							<a4j:support event="onchange"
								reRender="flowTransitionsForm:flowTransitionsTable"
								action="#{MbAppFlowTransitions.search}" />
						</h:selectOneMenu>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblApp.previous_status}"
							title="#{lblApp.previous_status}" />
					</f:facet>
                    <h:outputText value="#{item.preStatusRejectLabel}"
                                  title="#{item.preStatusRejectLabel}"/>
				</rich:column>

				<rich:column id="application_status" label="#{lblApp.application_status}" title="appStatus" sortBy="#{'appStatus'}" width="18%">
					<f:facet name="filter">
						<h:selectOneMenu
							value="#{MbAppFlowTransitions.filter.transitionStageId}"
							style="width: 100%;">
							<f:selectItem itemValue="" />
							<f:selectItems value="#{MbAppFlowTransitions.stages}" />
							<a4j:support event="onchange"
								reRender="flowTransitionsForm:flowTransitionsTable"
								action="#{MbAppFlowTransitions.search}" />
						</h:selectOneMenu>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblApp.application_status}"
							title="#{lblApp.application_status}" />
					</f:facet>
					<h:outputText value="#{item.appStatusRejectLabel}"
						title="#{item.appStatusRejectLabel}"/>
				</rich:column>

				<rich:column id="event_type" label="#{lblCommon.event_type}" title="eventType" sortBy="#{'eventType'}" width="20%">
					<f:facet name="filter">
						<h:selectOneMenu value="#{MbAppFlowTransitions.filter.eventType}"
										 style="width: 100%;">
							<f:selectItem itemValue="" />
							<f:selectItems value="#{MbAppFlowTransitions.eventTypes}" />
							<a4j:support event="onchange"
										 reRender="flowTransitionsForm:flowTransitionsTable"
										 action="#{MbAppFlowTransitions.search}" />
						</h:selectOneMenu>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblCommon.event_type}" title="#{lblCommon.event_type}" />
					</f:facet>
					<h:outputText value="#{item.eventType} - #{item.eventTypeName}"
								  title="#{item.eventType} - #{item.eventTypeName}"
								  rendered="#{item.eventType != null}" />
					<h:outputText value="#{item.eventTypeName}" title="#{item.eventTypeName}"
								  rendered="#{item.eventType == null}" />
				</rich:column>

				<rich:column id="stage_result" label="#{lblApp.stage_result}" title="stageResult" sortBy="#{'stageResult'}" width="18%">
					<f:facet name="filter">
						<h:selectOneMenu
							value="#{MbAppFlowTransitions.filter.stageResult}"
							style="width: 100%;">
							<f:selectItem itemValue="" />
							<f:selectItems value="#{MbAppFlowTransitions.stageResults}" />
							<a4j:support event="onchange"
								reRender="flowTransitionsForm:flowTransitionsTable"
								action="#{MbAppFlowTransitions.search}" />
						</h:selectOneMenu>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblApp.stage_result}"
							title="#{lblApp.stage_result}" />
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.stageResult]}"
						title="#{DictUtils.articles[item.stageResult]}"
						rendered="#{item.stageResult != null}" />
					<h:outputText value="" title=""
						rendered="#{item.stageResult == null}" />
				</rich:column>

				<rich:column id="reason_code" label="#{lblAcq.reason_code}" title="#{lblAcq.reason_code}" sortBy="#{'reasonCode'}" width="18%">
					<f:facet name="filter">
						<h:selectOneMenu value="#{MbAppFlowTransitions.filter.reasonCode}"
										 style="width: 100%;">
							<f:selectItem itemValue=""/>
							<f:selectItems value="#{MbAppFlowTransitions.reasonCodes}" />
							<a4j:support event="onchange"
										 reRender="flowTransitionsForm:flowTransitionsTable"
										 action="#{MbAppFlowTransitions.search}" />
						</h:selectOneMenu>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblAcq.reason_code}" title="#{lblAcq.reason_code}" />
					</f:facet>
					<h:outputText rendered="#{item.reasonCode != null}"
								  value="#{DictUtils.articles[item.reasonCode]}"
								  title="#{DictUtils.articles[item.reasonCode]}"/>
					<h:outputText rendered="#{item.reasonCode == null}" value="" title=""/>
				</rich:column>
			</rich:extendedDataTable>
		</h:panelGroup>
		<h:panelGroup layout="block"
			styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block"
				styleClass="bottom_search_result_left_buttons">
				<h:panelGrid id="btnPanel" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
					<h:panelGroup>
					<bre:taggedCommandButton action="#{MbAppFlowTransitions.view}"
						value="#{lblForm.view}"
						oncomplete="#{rich:component('flow_transition_view_modal_panel')}.show()"
						disabled="#{MbAppFlowTransitions.activeTransition == null}"
						reRender="flow_transition_view_modal_div" />
					<bre:taggedCommandButton id="addBtn"
						reRender="flow_transition_modal_header, flow_transition_modal_div"
						value="#{lblForm.add}"
						oncomplete="#{rich:component('flow_transition_modal_panel')}.show()"
						action="#{MbAppFlowTransitions.add}"
						disabled="#{MbAppFlowTransitions.applicationFlow == null}"
						rendered="#{usession.inRole['ADD_APPL_FLOW_TRANSITION']}"
						image="/images/create_doc.gif" />
					<bre:taggedCommandButton id="editBtn"
						reRender="flow_transition_modal_header, flow_transition_modal_div"
						value="#{lblForm.edit}" action="#{MbAppFlowTransitions.edit}"
						oncomplete="#{rich:component('flow_transition_modal_panel')}.show()"
						disabled="#{MbAppFlowTransitions.activeTransition == null}"
						rendered="#{usession.inRole['MODIFY_APPL_FLOW_TRANSITION']}"
						image="/images/edit.gif" />
					<bre:taggedCommandButton id="deleteBtn"
						value="#{lblForm.delete}"
						oncomplete="#{rich:component('deleteTransitionViewId:confirmPanel')}.show()"
						disabled="#{MbAppFlowTransitions.activeTransition == null}"
						rendered="#{usession.inRole['REMOVE_APPL_FLOW_TRANSITION']}"
						image="/images/delete.gif" />
					</h:panelGroup>
					
					<h:panelGroup>
						<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
							onclick="saveTransTableState();"/>
						<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
							onclick="deleteTransTableState();"/>
						<a4j:queue name="tablestatequeue"/>
						<a4j:jsFunction name="saveTransTableState" action="#{MbAppFlowTransitions.saveTableStateDB}" eventsQueue="tablestatequeue"/>
						<a4j:jsFunction name="deleteTransTableState" action="#{MbAppFlowTransitions.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
					</h:panelGroup>
				</h:panelGrid>
			</h:panelGroup>
		</h:panelGroup>
	</h:form>

	<rich:modalPanel id="flow_transition_modal_panel" autosized="true"
		minWidth="200" minHeight="80">
		<f:facet name="header">
			<h:panelGroup id="flow_transition_modal_header">
				<h:outputText value="#{lblApp.new_flow_transition}"
					rendered="#{MbAppFlowTransitions.newMode}" />
				<h:outputText value="#{lblApp.edit_flow_transition}"
					rendered="#{MbAppFlowTransitions.editMode}" />
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls"/>
		<h:form id="flowTransitionEditForm">
			<h:panelGroup id="flow_transition_modal_div">
				<ui:include src="/pages/app/flow_transition_edit.jspx" />
			</h:panelGroup>

			<h:panelGroup layout="block"
				styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block"
					styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.save}" type="submit"
							action="#{MbAppFlowTransitions.save}"
							onclick="if (!checkFlowTransitionFields()) return false; disableModalPanelBtns(this)"
							oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('flow_transition_modal_panel')}.hide()"
							reRender="flowTransitionsForm:flowTransitionsTable, flowTransitionsForm:btnPanel" />
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbAppFlowTransitions.close}" immediate="true"
							oncomplete="#{rich:component('flow_transition_modal_panel')}.hide()" />
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>

	<rich:modalPanel id="flow_transition_view_modal_panel" autosized="true"
		minWidth="300" minHeight="80">
		<f:facet name="header">
			<h:outputText value="#{lblApp.flow_transition}" />
		</f:facet>
		<f:facet name="controls">
		</f:facet>
		<h:form>
			<h:panelGroup id="flow_transition_view_modal_div">
				<ui:include src="/pages/app/flow_transition_details.jspx" />
			</h:panelGroup>

			<h:panelGroup layout="block"
				styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block"
					styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="2" columnClasses="width99P,paddingR12">
						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbAppFlowTransitions.close}" immediate="true"
							oncomplete="#{rich:component('flow_transition_view_modal_panel')}.hide()" />
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/confirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbAppFlowTransitions}"/>
		<ui:param name="yesAction" value="delete"/>
		<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
		<ui:param name="rerenderList" value="flowTransitionsTable, btnPanel"/>
		<ui:param name="confirmQuestion" value=" "/> 
		<ui:param name="subviewId" value="deleteTransitionViewId"/>
		<ui:param name="yes" value="#{lblForm.ok}"/>
		<ui:param name="no" value="#{lblForm.cancel}"/>
	</ui:include>

</ui:composition>
</html>
