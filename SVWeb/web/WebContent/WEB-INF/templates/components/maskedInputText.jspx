<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:bpc="http://www.bpc.ru/jsf/misc">

<ui:composition>
	<h:panelGroup  rendered="#{rendered}">
		<h:inputText id="#{id}" value="#{value}" required="#{required}" onblur="#{onblur}">
			<bpc:fixedMaskConverter mask="#{mask}" emptyChar="_" />
		</h:inputText>
		<bpc:jsMask mask="#{mask}" for="#{id}" />
	</h:panelGroup>
</ui:composition>

</html>