<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<f:loadBundle var="lblPrd" basename="ru.bpc.sv2.ui.bundles.Prd" />
	<h:form id="widgetDetailsForm">	
		<h:panelGroup layout="block" styleClass="langSelector">
			<h:panelGrid columns="2" styleClass="cardholderdata oneColumnTable"
					id="detailsData" columnClasses=",secondCol">
				<h:outputLabel for="lang" value="#{lblCommon.lang_selector}: "
						title="#{lblCommon.lang_selector}" />
				<h:selectOneMenu id="lang"
						disabled="#{MbWidgets.detailWidget == null}"
						value="#{MbWidgets.detailWidget.lang}"
						valueChangeListener="#{MbWidgets.changeLanguage}">
					<a4j:support event="onchange" reRender="widgetDetailsForm"
							limitToList="true" oncomplete="updateHeight();"/>
					<f:selectItems value="#{MbWidgets.languages}" />
				</h:selectOneMenu>
			</h:panelGrid>
		</h:panelGroup>
	
		<h:panelGroup id="widgetDetailsWrapper" layout="block" styleClass="carddata-wrapper" 
				style="height: 100%; overflow-y: auto;overflow-x: hidden;position:relative;">
			<rich:dataTable id="widgetDetailsTable"
					value="#{MbWidgets.emptyTable}" 
					var="field"
					styleClass="res-table noHeader" width="100%">
				<rich:columnGroup rowClasses=",odd" 
						columnClasses="firstCol alignLeft width20, width80 width250 noPadding">
					<rich:column styleClass="detailsCategory expandedBranch">
						<h:graphicImage url="/images/minus.gif" onclick="showHideDetails(this)"/>
						<h:outputLabel value="#{lblPrd.general_data}:" />
					</rich:column>
					<rich:column>
						<script>updateHeight();</script>
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.id}:" title="#{lblCommon.id}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbWidgets.detailWidget.id}"
								title="#{MbWidgets.detailWidget.id}"/>
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.name}:" title="#{lblCommon.name}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbWidgets.detailWidget.name}"
								title="#{MbWidgets.detailWidget.name}" />
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblAcm.path}:" title="#{lblAcm.path}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbWidgets.detailWidget.path}"
								title="#{MbWidgets.detailWidget.path}"/>
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblAcm.css_name}:" title="#{lblAcm.css_name}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbWidgets.detailWidget.cssName}"
								title="#{MbWidgets.detailWidget.cssName}" />
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblAcm.external}:" title="#{lblAcm.external}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbWidgets.detailWidget.external}"
								title="#{MbWidgets.detailWidget.external}" />
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblAcm.width}:" title="#{lblAcm.width}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbWidgets.detailWidget.width}"
								title="#{MbWidgets.detailWidget.width}" />
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblAcm.height}:" title="#{lblAcm.height}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbWidgets.detailWidget.height}"
								title="#{MbWidgets.detailWidget.height}" />
					</rich:column>
					
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblAcm.params_path}:" title="#{lblAcm.params_path}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbWidgets.detailWidget.paramsPath}"
								title="#{MbWidgets.detailWidget.paramsPath}" />
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblAcm.privilege}:" title="#{lblAcm.privilege}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbWidgets.detailWidget.privName}"
								title="#{MbWidgets.detailWidget.privName}" />
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.description}:" title="#{lblCommon.description}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbWidgets.detailWidget.description}"
								title="#{MbWidgets.detailWidget.description}"
								style="white-space: normal" />
					</rich:column>
				</rich:columnGroup>
			</rich:dataTable>
			<script>setDetailsState("widgetDetailsForm:widgetDetailsTable");</script>
		</h:panelGroup>
	</h:form>
</ui:composition>
</html>
