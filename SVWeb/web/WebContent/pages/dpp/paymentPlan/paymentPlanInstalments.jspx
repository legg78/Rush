<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich">
<ui:composition>
	<h:form id="paymentPlanInstalmentsForm">
		<h:panelGroup id="paymentPlanInstalmentsTableWrapper" layout="block"
			style="padding:0px;margin:0px;height:220px;">
			<rich:extendedDataTable id="instalmentTable" headerClass="table-header-ext"
				enableContextMenu="true" rowClasses=",odd"
				tableState="#{MbDppPaymentInstalments.tableState}"
				rows="0" var="item" value="#{MbDppPaymentInstalments.dataModel}"
				noDataLabel="#{lblCommon['no_records_found']}">

				<rich:column id="instalment_number" label="#{lblDpp.installment_number}"  title="Instalment Number"
					sortBy="#{'instalmentNumber'}" width="10%">
					<f:facet name="header">
						<a4j:outputPanel layout="none">
							<script>updateHeight();</script>
							<h:outputText value="#{lblDpp.installment_number}"
								title="#{lblDpp.installment_number}" />							
						</a4j:outputPanel>
					</f:facet>
					<h:outputText value="#{item.instalmentNumber}"
						title="#{item.instalmentNumber}" />
				</rich:column>

				<rich:column id="instalment_date" label="#{lblDpp.installment_date}" title="Instalment Date" sortBy="#{'instalmentDate'}"
					width="15%">
					<f:facet name="header">
						<h:outputText value="#{lblDpp.installment_date}"
							title="#{lblDpp.installment_date}" />
					</f:facet>
					<h:outputText value="#{item.instalmentDate}"
						title="#{item.instalmentDate}">
						<f:convertDateTime pattern="#{usession.datePattern}"
							timeZone="#{CommonUtils.timeZone}" />
					</h:outputText>
				</rich:column>

				<rich:column id="instalment_amount" label="#{lblDpp.installment_amount}" title="Instalment Amount"
					sortBy="#{'instalmentAmount'}" width="15%"
					style="text-align: right">
					<f:facet name="header">
						<h:outputText value="#{lblDpp.installment_amount}"
							title="#{lblDpp.installment_amount}" />
					</f:facet>
					<h:outputText value="#{item.instalmentAmount}"
						converter="bpc.CurrencyConverter">
						<f:attribute name="exponent"
							value="#{CurrencyUtils.currencyObjectsMap[item.currency].exponent}" />
					</h:outputText>
					<h:outputText
						value="#{CurrencyUtils.currencyShortNamesMap[item.currency]}"
						title="#{CurrencyUtils.currencyMap[item.currency]}"
						style="padding-left:5px;" />
				</rich:column>

				<rich:column id="payment_amount" label="#{lblDpp.payment_amount}" title="Payment Amount" sortBy="#{'paymentAmount'}"
					width="15%" style="text-align: right">
					<f:facet name="header">
						<h:outputText value="#{lblDpp.payment_amount}"
							title="#{lblDpp.payment_amount}" />
					</f:facet>
					<h:outputText value="#{item.paymentAmount}"
						converter="bpc.CurrencyConverter">
						<f:attribute name="exponent"
							value="#{CurrencyUtils.currencyObjectsMap[item.currency].exponent}" />
					</h:outputText>
					<h:outputText
						value="#{CurrencyUtils.currencyShortNamesMap[item.currency]}"
						title="#{CurrencyUtils.currencyMap[item.currency]}"
						style="padding-left:5px;" />
				</rich:column>

				<rich:column id="interest_amount" label="#{lblDpp.interest_amount}" title="Interest Amount" sortBy="#{'interestAmount'}"
					width="15%" style="text-align: right">
					<f:facet name="header">
						<h:outputText value="#{lblDpp.interest_amount}"
							title="#{lblDpp.interest_amount}" />
					</f:facet>
					<h:outputText value="#{item.interestAmount}"
						converter="bpc.CurrencyConverter">
						<f:attribute name="exponent"
							value="#{CurrencyUtils.currencyObjectsMap[item.currency].exponent}" />
					</h:outputText>
					<h:outputText
						value="#{CurrencyUtils.currencyShortNamesMap[item.currency]}"
						title="#{CurrencyUtils.currencyMap[item.currency]}"
						style="padding-left:5px;" />
				</rich:column>

				<rich:column id="billed" label="#{lblDpp.billed}" title="Is Bill" sortBy="#{'isBill'}" width="10%">
					<f:facet name="header">
						<h:outputText value="#{lblDpp.billed}" title="#{lblDpp.billed}" />
					</f:facet>
					<h:selectBooleanCheckbox value="#{item.bill}"
						onclick="return false;" />
				</rich:column>

				<rich:column id="acceleration_type" label="#{lblDpp.acceleration_type}" title="Acceleration Type"
					sortBy="#{'accelerationType'}" width="15%">
					<f:facet name="header">
						<h:outputText value="#{lblDpp.acceleration_type}"
							title="#{lblDpp.acceleration_type}" />
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.accelerationType]}"
						title="#{DictUtils.articles[item.accelerationType]}"
						rendered="#{item.accelerationType != null }" />
					<h:outputText value="" title=""
						rendered="#{item.accelerationType == null }" />
				</rich:column>
			</rich:extendedDataTable>
			<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons" >
						<h:panelGrid styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
							<h:panelGroup></h:panelGroup>
							<h:panelGroup>
								<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
									onclick="saveInstalmentTableState();"/>
								<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
									onclick="deleteInstalmentTableState();"/>
								<a4j:queue name="tablestatequeue"/>
								<a4j:jsFunction name="saveInstalmentTableState" action="#{MbDppPaymentInstalments.saveTableStateDB}" eventsQueue="tablestatequeue"/>
								<a4j:jsFunction name="deleteInstalmentTableState" action="#{MbDppPaymentInstalments.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
							</h:panelGroup>
						</h:panelGrid>
					</h:panelGroup>
				</h:panelGroup>
		</h:panelGroup>
	</h:form>

</ui:composition>
</html>