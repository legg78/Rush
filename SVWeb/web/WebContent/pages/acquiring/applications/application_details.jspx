<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<f:view>
<ui:composition>
    <h:form id="appsDetailsForm">
	<h:panelGroup id="applicationDetailsWrapper" layout="block" styleClass="carddata-wrapper" 
			style="height: 100%; overflow-y: auto;overflow-x: hidden;position:relative;">
		<rich:dataTable id="applicationDetailsTable"
				value="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).emptyTable}" 
				var="field"
				styleClass="res-table noHeader" width="100%">
			<rich:columnGroup rowClasses=",odd" 
					columnClasses="firstCol alignLeft width20, width80 width250 noPadding">
				<rich:column styleClass="detailsCategory expandedBranch">
					<h:graphicImage url="/images/minus.gif" onclick="showHideDetails(this)"/>
					<h:outputLabel value="#{lblPrd.general_data}:" />
				</rich:column>
				<rich:column>
                    <script>updateHeight();</script>
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblCommon.id}:" title="#{lblCommon.id}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.id}"
							title="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.id}"/>
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblCommon.type}:" title="#{lblCommon.type}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{DictUtils.articles[(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.appType]}"
							title="#{DictUtils.articles[(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.appType]}" />
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblCommon.institution}:" title="#{lblCommon.institution}"/>
				</rich:column>
				<rich:column>
					<bm:entityDisplay  entityId="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.instId}"
									value="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.instName}"/>
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblCommon.status}:" title="#{lblCommon.status}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{DictUtils.articles[(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.status]}"
							title="#{DictUtils.articles[(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.status]}" />
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblApp.session_file_id}:" title="#{lblApp.session_file_id}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.sessionFileId}"
							title="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.sessionFileId}" />
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblApp.flow}:" title="#{lblApp.flow}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel rendered="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.flowName != null}"
							value="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.flowId} - #{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.flowName}"
							title="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.flowId} - #{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.flowName}" />
					<h:outputLabel value="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.flowId}"
							rendered="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.flowName == null}" />
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblApp.file_record_num}:" title="#{lblApp.file_record_num}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.fileRecNum}"
							title="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.fileRecNum}" />
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblApp.appl_number}:" title="#{lblApp.appl_number}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.applNumber}"
							title="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.applNumber}" />
				</rich:column>

				<rich:column breakBefore="true">
					<h:outputLabel value="#{lblApp.priority_app}:" title="#{lblApp.priority_app}"/>
				</rich:column>
				<rich:column>
					<h:outputLabel value="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.prioritized}"
								   title="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.prioritized}"
								   rendered="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.prioritized != null}"/>
					<h:outputLabel value="" title=""
								   rendered="#{(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.prioritized == null}"/>
				</rich:column>


                <rich:column breakBefore="true">
                    <h:outputLabel value="#{lblApp.reject_code}:" title="#{lblApp.reject_code}"/>
                </rich:column>
                <rich:column>
                    <h:outputLabel rendered="#{not empty (detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.rejectCode}"
                                   value="#{DictUtils.articles[(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.rejectCode]}"
                                   title="#{DictUtils.articles[(detailsBean==null ? MbApplicationsSearch : detailsBean).activeApp.rejectCode]}" />
                </rich:column>
			</rich:columnGroup>
		</rich:dataTable>
		<script>setDetailsState("applicationDetailsTable");</script>
	</h:panelGroup>
    </h:form>
	
</ui:composition>
</f:view>
</html>
