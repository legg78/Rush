<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<f:view>
<ui:composition>
	<script type="text/javascript">//<![CDATA[			
		function checkBaseParamFields() {
			var checked = true;
			
			if (document.getElementById('rul_name_param_modal_div:name').value == "") {
				document.getElementById('rul_name_param_modal_div:nameError').style.display = "inline";
				checked = false;
			}			
			
			if (document.getElementById('rul_name_param_modal_div:descr').value == "") {
				document.getElementById('rul_name_param_modal_div:descrError').style.display = "inline";
				checked = false;
			}
			if (document.getElementById('rul_name_param_modal_div:newEntityType').value == "") {
				document.getElementById('rul_name_param_modal_div:newEntityTypeError').style.display = "inline";
				checked = false;
			}
			
			return checked;
		}
		//]]>
	</script>

	<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
		<h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">        
			
			<h:outputLabel value="* #{lblCommon.system_name}: " title="#{lblCommon.system_name}"/>
			<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
				<h:inputText id="name" value="#{MbNameParamsSearch.newBaseParam.name}" 
						label="#{lblCommon.system_name}"
						maxlength="200"
						onblur="hideErrorField(this)">
				</h:inputText>
				<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
					id="nameError" style="display:none;">
					<f:param name="fieldName" value="#{lblCommon.system_name}"/>
				</h:outputFormat>
			</h:panelGrid>
			
			<h:outputLabel for="lang" value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
			<h:selectOneMenu id="lang" value="#{MbNameParamsSearch.newBaseParam.lang}" disabled="#{MbNameParamsSearch.editMode}">
				<f:selectItems value="#{MbNameParamsSearch.languages}"/>
			</h:selectOneMenu>
			
			<h:outputLabel value="* #{lblCommon.description}: " title="#{lblCommon.description}"/>
			<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
				<h:inputText id="descr" value="#{MbNameParamsSearch.newBaseParam.description}" 
						label="#{lblCommon.description}"
						maxlength="2000"
						onblur="hideErrorField(this)">
					<f:validateLength minimum="3"/>
					<a4j:support event="onchange" reRender="descrErr" limitToList="true" />	
				</h:inputText>
				<rich:message for="descr" id="descrErr" styleClass="errorMarker"/>
				<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
					id="descrError" style="display:none;">
					<f:param name="fieldName" value="#{lblCommon.description}"/>
				</h:outputFormat>
			</h:panelGrid>
			
			<h:outputLabel value="* #{lblCommon.entity_type}: " title="#{lblCommon.entity_type}"/>
			<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
				<h:selectOneMenu id="newEntityType" 
						value="#{MbNameParamsSearch.newBaseParam.entityType}"
						label="#{lblCommon.entity_type}"
						disabled="#{MbNameParamsSearch.editMode}"
						onblur="hideErrorField(this)">
					<f:selectItems value="#{MbNameParamsSearch.entityTypes}"/>
				</h:selectOneMenu>
				<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
					id="newEntityTypeError" style="display:none;">
					<f:param name="fieldName" value="#{lblCommon.entity_type}"/>
				</h:outputFormat>
			</h:panelGrid>
			
		</h:panelGrid>		
	</h:panelGroup>   
</ui:composition>
</f:view>
</html>