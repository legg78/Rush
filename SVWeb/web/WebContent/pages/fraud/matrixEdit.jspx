<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<rich:modalPanel id="matrixModalPanel" autosized="true" minWidth="300" minHeight="100"
			rendered="#{usession.inRole['ADD_MATRIX'] or usession.inRole['MODIFY_MATRIX']}">
      	<f:facet name="header">
			<h:panelGroup id="matrixModalHeader">
           	    <h:outputText value="#{lblFrp.edit_matrix}" rendered="#{MbMatrices.editMode}"/>
           	    <h:outputText value="#{lblFrp.new_matrix}" rendered="#{MbMatrices.newMode}"/>
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
	    </f:facet>
   	    <h:panelGroup id="matrixModalDiv">
			<h:form id="matrixEditForm">
				<script type="text/javascript">
//<!--
					oldValue["matrixEditForm"] = "#{MbMatrices.newMatrix.lang}";
					
					function checkMatrixFields() {
						var checked = true;
						
						if (document.getElementById('matrixEditForm:newInst').value == "") {
							document.getElementById('matrixEditForm:newInstError').style.display = "inline";
							checked = false;
						}
						
						if (document.getElementById('matrixEditForm:newMatrixType').value == "") {
							document.getElementById('matrixEditForm:newMatrixTypeError').style.display = "inline";
							checked = false;
						}								
						if (document.getElementById('matrixEditForm:xScale').value == "" ||
								document.getElementById('matrixEditForm:histDepthX').value == "") {
							document.getElementById('matrixEditForm:xScaleError').style.display = "inline";
							checked = false;
						}
						if (document.getElementById('matrixEditForm:yScale').value == "" ||
								document.getElementById('matrixEditForm:histDepthY').value == "") {
							document.getElementById('matrixEditForm:yScaleError').style.display = "inline";
							checked = false;
						}
						if (document.getElementById('matrixEditForm:newLabel').value == "") {
							document.getElementById('matrixEditForm:newLabelError').style.display = "inline";
							checked = false;
						}
						return checked;
					}
				//-->
				</script>
				<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
			        <h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">
			
						<h:outputLabel value="* #{lblCommon.institution}: " title="#{lblCommon.institution}"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:selectOneMenu id="newInst"
									value="#{MbMatrices.newMatrix.instId}"
									label="#{lblCommon.institution}"
									onblur="hideErrorField(this)">
								<f:selectItem itemValue=""/>
							    <f:selectItems value="#{MbMatrices.institutions}"/>
							</h:selectOneMenu>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newInstError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.institution}"/>
							</h:outputFormat>
						</h:panelGrid>
		
						<h:outputLabel value="* #{lblFrp.matrix_type}: " title="#{lblFrp.matrix_type}"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:selectOneMenu id="newMatrixType"
									value="#{MbMatrices.newMatrix.matrixType}"
									label="#{lblFrp.matrix_type}"
									onblur="hideErrorField(this)">
							    <f:selectItems value="#{MbMatrices.matrixTypes}"/>
							</h:selectOneMenu>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newMatrixTypeError" style="display:none;">
								<f:param name="fieldName" value="#{lblFrp.matrix_type}"/>
							</h:outputFormat>
						</h:panelGrid>
		
						<h:outputLabel value="* #{lblFrp.x_scale}: " title="#{lblFrp.x_scale}"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:panelGrid columns="2">
								<h:selectOneMenu id="xScale"
									value="#{MbMatrices.newMatrix.xScale}"
									onblur="hideErrorField(this)">
									<f:selectItem itemValue=""/>
									<f:selectItems value="#{MbMatrices.paramsList}"/>
								</h:selectOneMenu>
								<h:selectOneMenu id="histDepthX"
									style="width:30px;"
									value="#{MbMatrices.depthX}"
									onblur="hideErrorField(this)">
									<f:selectItems value="#{MbMatrices.depthCount}"/>
								</h:selectOneMenu>
								
							</h:panelGrid>	
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="xScaleError" style="display:none;">
								<f:param name="fieldName" value="#{lblFrp.x_scale}"/>
							</h:outputFormat>
						</h:panelGrid>

						<h:outputLabel value="* #{lblFrp.y_scale}: " title="#{lblFrp.y_scale}"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:panelGrid columns="2">
								<h:selectOneMenu id="yScale"
									value="#{MbMatrices.newMatrix.yScale}"
									onblur="hideErrorField(this)">
									<f:selectItem itemValue=""/>
									<f:selectItems value="#{MbMatrices.paramsList}"/>
								</h:selectOneMenu>
								<h:selectOneMenu id="histDepthY"
									style="width:30px;"
									value="#{MbMatrices.depthY}"
									onblur="hideErrorField(this)">
									<f:selectItems value="#{MbMatrices.depthCount}"/>
								</h:selectOneMenu>
								
							</h:panelGrid>	
							
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="yScaleError" style="display:none;">
								<f:param name="fieldName" value="#{lblFrp.y_scale}"/>
							</h:outputFormat>
						</h:panelGrid>

						<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
						<h:selectOneMenu id="lang" 
								value="#{MbMatrices.newMatrix.lang}"
								rendered="#{MbMatrices.newMode}">
						    <f:selectItems value="#{MbMatrices.languages}"/>
						</h:selectOneMenu>
						<h:selectOneMenu id="editLang" value="#{MbMatrices.newMatrix.lang}"
								rendered="#{MbMatrices.editMode}"
								onchange="document.getElementById('matrix:confirmPanelForm:newValue').value = this.value;
										#{rich:component('matrix:confirmPanel')}.show()">
							<f:selectItems value="#{MbMatrices.languages}"/>
						</h:selectOneMenu>

						<h:outputLabel value="* #{lblCommon.name}: " title="#{lblCommon.name}"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:inputText id="newLabel" 
									value="#{MbMatrices.newMatrix.label}"
									label="#{lblCommon.name}"
									maxlength="200"
									onblur="hideErrorField(this)"/>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newLabelError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.name}"/>
							</h:outputFormat>
						</h:panelGrid>

						<h:outputLabel value="#{lblCommon.description}: " title="#{lblCommon.description}"/>
						<h:inputTextarea id="newDescription" 
								value="#{MbMatrices.newMatrix.description}" rows="3"
									onkeypress="if (!limitText(event,this,2000)) return false;" 
									label="#{lblCommon.description}">
							<f:validateLength maximum="2000" />
						</h:inputTextarea>
					</h:panelGrid>
				</h:panelGroup>
	      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
					<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
		       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
		       	    		<h:outputText/>
                        	<bre:taggedCommandButton
                        			value="#{lblForm.save}" type="submit" action="#{MbMatrices.save}"
                        			onclick="if (!checkMatrixFields()) return false; disableModalPanelBtns(this)"
				                   	oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('matrixModalPanel')}.hide()"
                        			reRender="${rerenderList}"
	                        		/>
                        	<bre:taggedCommandButton
	                        		value="#{lblForm.cancel}" 
	                        		action="#{MbMatrices.cancel}" 
	                        		immediate="true"
	                        		oncomplete="#{rich:component('matrixModalPanel')}.hide()">
	                        	<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
	                		</bre:taggedCommandButton>
			    		</h:panelGrid>
			    	</h:panelGroup>
			    </h:panelGroup>
			</h:form>
		</h:panelGroup>
	</rich:modalPanel>
	<ui:include src="/pages/utils/langConfirmPanel.jspx">
    	<ui:param name="backingBean" value="#{MbMatrices}"/>
    	<ui:param name="rerenderList" value="matrixEditForm:newLabel, matrixEditForm:newDescription"/>
    	<ui:param name="editElem" value="matrixEditForm:editLang"/>
    	<ui:param name="newValue" value="#{MbMatrices.newMatrix.lang}"/>
    	<ui:param name="subviewId" value="matrix"/>
    	<ui:param name="formName" value="matrixEditForm" />
    </ui:include>
</ui:composition>
</html>
