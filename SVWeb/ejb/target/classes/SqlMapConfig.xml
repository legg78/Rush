<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

	<!-- Always ensure to use the correct XML header as above! -->
<sqlMapConfig>
	<!--
		These settings control SqlMapClient configuration details, primarily
		to do with transaction management. They are all optional (more detail
		later in this document).
	-->
	<settings errorTracingEnabled="true" 
	    cacheModelsEnabled="true" 
		maxRequests="128"
		useStatementNamespaces="true"
		defaultStatementTimeout="86400"
		statementCachingEnabled="true"
		classInfoCacheEnabled="true" />
	<!--
		Type aliases allow you to use a shorter name for long fully qualified
		class names.
	-->
	<typeAlias alias="qparams" type="ru.bpc.sv2.logic.utility.db.QueryParams"/>
	
	<typeHandler javaType="ru.bpc.sv2.process.file.LineSeparator" callback="ru.bpc.sv2.process.file.LineSeparator$LineSeparatorTypeHandler"/>	
	
	<transactionManager type="JTA">
		<property name="UserTransaction" value="java:/comp/UserTransaction" />
		<dataSource type="ru.bpc.sv2.logic.utility.db.NoneDataSourceFactory">
            <!-- property name="DataSource" value="java:/comp/env/jdbc/FEUnmanaged"/-->
            <property name="Driver.SetBigStringTryClob" value="true"/>
            <property name="commitRequired" value="true"/>
		</dataSource>
	</transactionManager>
	
	
