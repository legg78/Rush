<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://sv.bpc.in/SVAP/acm">
	<application_type>APTPUMGT</application_type>			<!-- Application type - User management -->
	<application_flow_id>1302</application_flow_id>			<!-- Application flow (business process) - Change user -->
	<application_status>APST0006</application_status>		<!-- Application status - Ready to process -->
	<institution_id>1001</institution_id>					<!-- Institution identifier -->
	<operator_id>OPERATOR1</operator_id>					<!-- User name who made this application -->
	<user>
		<command>CMMDEXUP</command>							<!-- Command for user - Except or update -->
		<user_id>10000001</user_id>							<!-- User identifier -->
		<user_name>OPERATOR2</user_name>					<!-- User name -->
		<user_status>USSTACTV</user_status>					<!-- User status - Active -->
		<person>
			<command>CMMDCRUP</command>						<!-- Command for person - Create or update -->
            <person_name language="LANGENG">				<!-- Person name. Attribute LANGUAGE contain code of language of provided person name - English -->
				<surname>Petrov</surname>					<!-- Person surname -->
				<first_name>Alexey</first_name>				<!-- Person first name --> 				
			</person_name>	
			<identity_card>									<!-- Identity card data -->	
				<command>CMMDCRUP</command>					<!-- Command for identity card - Create or update -->
				<id_type>IDTP0005</id_type>					<!-- Identity card type - Army officer certificate -->
				<id_series>123456</id_series>				<!-- Identity card series -->
				<id_number>654321</id_number>				<!-- Identity card number -->
			</identity_card>
		</person>	
	</user>
</application>