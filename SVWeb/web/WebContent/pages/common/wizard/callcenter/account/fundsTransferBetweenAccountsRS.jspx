<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:fmt="http://www.bpc.ru/el/formatter"
      xmlns:bpc="http://www.bpc.ru/jsf/misc">
<ui:composition template="../accDetailsTemplate.jspx">
    <ui:define name="stepContent">
        <f:loadBundle var="lblCommon" basename="ru.bpc.sv2.ui.bundles.Common"/>
        <f:loadBundle var="lblAcc" basename="ru.bpc.sv2.ui.bundles.Acc"/>
        <f:loadBundle var="lblOpr" basename="ru.bpc.sv2.ui.bundles.Opr"/>

        <h:form id="accountFundsTransferDSForm" style="padding:10px;">
            <ui:include src="/pages/common/wizard/commonWizardActions.jspx">
                <ui:param name="bean" value="#{bean}" />
                <ui:param name="action" value="#{action}" />
            </ui:include>
            <h:panelGroup layout="block" styleClass="cardholderdata-wrapper" rendered="#{MbFundsTranferBetweenAccountsRS.maker}">
                <h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="width-150, width250">
                    <h:outputLabel for="operationResult" title="#{lblCommon.result_code}"
                                   value="#{lblCommon.result_code}:" />
                    <h:inputText id="operationResult"
                                 value="#{MbFundsTranferBetweenAccountsRS.operStatus} - #{DictUtils.allArticlesDesc[MbFundsTranferBetweenAccountsRS.operStatus]}"
                                 label="#{lblCommon.result_code}" readonly="true">
                    </h:inputText>
                </h:panelGrid>
            </h:panelGroup>
            <h:panelGroup rendered="#{!MbFundsTranferBetweenAccountsRS.maker}">
                <h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
                    <h:outputLabel title="#{lblAcc.source_account}" value="#{lblAcc.source_account}"
                                   style="padding-bottom: 5px;"/>
                    <h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="width-150, width250">
                        <h:outputLabel title="#{lblAcc.account_number}" value="#{lblAcc.account_number}: " />
                        <h:outputText title="#{MbFundsTranferBetweenAccountsRS.sourceAccount.accountNumber}"
                                      value="#{MbFundsTranferBetweenAccountsRS.sourceAccount.accountNumber}"/>

                        <h:outputLabel title="#{lblAcc.account_type}" value="#{lblAcc.account_type}: "/>
                        <h:outputText title="#{MbFundsTranferBetweenAccountsRS.sourceAccount.accountType} - #{DictUtils.allArticlesDesc[MbFundsTranferBetweenAccountsRS.sourceAccount.accountType]}"
                                      value="#{MbFundsTranferBetweenAccountsRS.sourceAccount.accountType} - #{DictUtils.allArticlesDesc[MbFundsTranferBetweenAccountsRS.sourceAccount.accountType]}" />

                        <h:outputLabel title="#{lblAcc.available_balance}" value="#{lblAcc.available_balance}: "/>
                        <h:panelGroup layout="block">
                            <bpc:entityDisplay contextType="ENTTACCT" bean="MbFundsTranferBetweenAccountsRS"
                                               value="#{fmt:formatMoney(MbFundsTranferBetweenAccountsRS.sourceAccount.balance,
                                               CurrencyUtils.currencyObjectsMap[MbFundsTranferBetweenAccountsRS.sourceAccount.currency].exponent)}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblAcc.currency}" value="#{lblAcc.currency}: "/>
                        <h:panelGroup layout="block">
                            <h:outputText title="#{MbFundsTranferBetweenAccountsRS.sourceAccount.currency} -
                                                 #{CurrencyUtils.currencyObjectsMap[MbFundsTranferBetweenAccountsRS.sourceAccount.currency].currencyName}"
                                          value="#{MbFundsTranferBetweenAccountsRS.sourceAccount.currency} -
                                                 #{CurrencyUtils.currencyObjectsMap[MbFundsTranferBetweenAccountsRS.sourceAccount.currency].currencyName}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblApp.customer_type}" value="#{lblApp.customer_type}: "/>
                        <h:outputText title="#{MbFundsTranferBetweenAccountsRS.sourceAccount.customerType} - #{DictUtils.allArticlesDesc[MbFundsTranferBetweenAccountsRS.sourceAccount.customerType]}"
                                      value="#{MbFundsTranferBetweenAccountsRS.sourceAccount.customerType} - #{DictUtils.allArticlesDesc[MbFundsTranferBetweenAccountsRS.sourceAccount.customerType]}"/>

                        <h:outputLabel title="#{lblPrd.customer}" value="#{lblPrd.customer}: "/>
                        <h:outputText title="#{MbFundsTranferBetweenAccountsRS.sourceAccount.customerNumber} - #{MbFundsTranferBetweenAccountsRS.sourceAccount.custInfo}"
                                      value="#{MbFundsTranferBetweenAccountsRS.sourceAccount.customerNumber} - #{MbFundsTranferBetweenAccountsRS.sourceAccount.custInfo}"/>
                    </h:panelGrid>
                </h:panelGroup>

                <h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
                    <h:outputLabel title="#{lblAcc.destination_account}" value="#{lblAcc.destination_account}:"
                                   style="padding-bottom: 5px; padding-top: 15px;"/>
                    <h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="width-150, width250">
                        <h:outputLabel title="#{lblAcc.account_number}" value="#{lblAcc.account_number}: " />
                        <h:outputText title="#{MbFundsTranferBetweenAccountsRS.destAccount.accountNumber}"
                                      value="#{MbFundsTranferBetweenAccountsRS.destAccount.accountNumber}"/>

                        <h:outputLabel title="#{lblAcc.account_type}" value="#{lblAcc.account_type}: "/>
                        <h:outputText title="#{MbFundsTranferBetweenAccountsRS.destAccount.accountType} - #{DictUtils.allArticlesDesc[MbFundsTranferBetweenAccountsRS.destAccount.accountType]}"
                                      value="#{MbFundsTranferBetweenAccountsRS.destAccount.accountType} - #{DictUtils.allArticlesDesc[MbFundsTranferBetweenAccountsRS.destAccount.accountType]}" />

                        <h:outputLabel title="#{lblAcc.available_balance}" value="#{lblAcc.available_balance}: "/>
                        <h:panelGroup layout="block">
                            <bpc:entityDisplay contextType="ENTTACCT" bean="MbFundsTranferBetweenAccountsRS"
                                               value="#{fmt:formatMoney(MbFundsTranferBetweenAccountsRS.destAccount.balance,
                                               CurrencyUtils.currencyObjectsMap[MbFundsTranferBetweenAccountsRS.destAccount.currency].exponent)}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblAcc.currency}" value="#{lblAcc.currency}: "/>
                        <h:panelGroup layout="block">
                            <h:outputText title="#{MbFundsTranferBetweenAccountsRS.destAccount.currency} -
                                                 #{CurrencyUtils.currencyObjectsMap[MbFundsTranferBetweenAccountsRS.destAccount.currency].currencyName}"
                                          value="#{MbFundsTranferBetweenAccountsRS.destAccount.currency} -
                                                 #{CurrencyUtils.currencyObjectsMap[MbFundsTranferBetweenAccountsRS.destAccount.currency].currencyName}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblApp.customer_type}" value="#{lblApp.customer_type}: "/>
                        <h:outputText title="#{MbFundsTranferBetweenAccountsRS.destAccount.customerType} - #{DictUtils.allArticlesDesc[MbFundsTranferBetweenAccountsRS.destAccount.customerType]}"
                                      value="#{MbFundsTranferBetweenAccountsRS.destAccount.customerType} - #{DictUtils.allArticlesDesc[MbFundsTranferBetweenAccountsRS.destAccount.customerType]}"/>

                        <h:outputLabel title="#{lblPrd.customer}" value="#{lblPrd.customer}: "/>
                        <h:outputText title="#{MbFundsTranferBetweenAccountsRS.destAccount.customerNumber} - #{MbFundsTranferBetweenAccountsRS.destAccount.custInfo}"
                                      value="#{MbFundsTranferBetweenAccountsRS.destAccount.customerNumber} - #{MbFundsTranferBetweenAccountsRS.destAccount.custInfo}"/>
                    </h:panelGrid>
                </h:panelGroup>

                <h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
                    <h:outputLabel title="#{lblAcc.transfer_amount}" value="#{lblAcc.transfer_amount}:"
                                   style="padding-bottom: 5px; padding-top: 15px;"/>
                    <h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="width-150, width250">
                        <h:outputLabel title="#{lblOpr.operation_id}" value="#{lblOpr.operation_id}:" />
                        <h:panelGroup layout="block">
                            <h:outputText title="#{MbFundsTranferBetweenAccountsRS.operation.id}"
                                          value="#{MbFundsTranferBetweenAccountsRS.operation.id}" />
                        </h:panelGroup>

                        <h:outputLabel title="#{lblAcc.amount}" value="#{lblAcc.amount}:" />
                        <h:panelGroup layout="block">
                            <bpc:entityDisplay contextType="ENTTACCT" bean="MbFundsTranferBetweenAccountsRS"
                                               value="#{fmt:formatMoney(MbFundsTranferBetweenAccountsRS.operation.operationAmount,
                                                    CurrencyUtils.currencyObjectsMap[MbFundsTranferBetweenAccountsRS.sourceAccount.currency].exponent)}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblAcc.currency}" value="#{lblAcc.currency}: "/>
                        <h:panelGroup layout="block">
                            <h:outputText title="#{MbFundsTranferBetweenAccountsRS.sourceAccount.currency} -
                                             #{CurrencyUtils.currencyObjectsMap[MbFundsTranferBetweenAccountsRS.sourceAccount.currency].currencyName}"
                                          value="#{MbFundsTranferBetweenAccountsRS.sourceAccount.currency} -
                                             #{CurrencyUtils.currencyObjectsMap[MbFundsTranferBetweenAccountsRS.sourceAccount.currency].currencyName}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblOpr.oper_reason}" value="#{lblOpr.oper_reason}:" />
                        <h:panelGroup layout="block">
                            <h:outputText title="#{DictUtils.articlesByLang[MbFundsTranferBetweenAccountsRS.curLang][MbFundsTranferBetweenAccountsRS.operation.operReason]}"
                                          value="#{DictUtils.articlesByLang[MbFundsTranferBetweenAccountsRS.curLang][MbFundsTranferBetweenAccountsRS.operation.operReason]}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblOpr.oper_status}" value="#{lblOpr.oper_status}: "/>
                        <h:panelGroup layout="block">
                            <h:outputText title="#{DictUtils.articlesByLang[MbFundsTranferBetweenAccountsRS.curLang][MbFundsTranferBetweenAccountsRS.operation.status]}"
                                          value="#{DictUtils.articlesByLang[MbFundsTranferBetweenAccountsRS.curLang][MbFundsTranferBetweenAccountsRS.operation.status]}"/>
                        </h:panelGroup>
                    </h:panelGrid>
                </h:panelGroup>
            </h:panelGroup>
        </h:form>
    </ui:define>
</ui:composition>
</html>
