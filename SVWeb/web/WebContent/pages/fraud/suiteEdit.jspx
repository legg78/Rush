<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<rich:modalPanel id="suiteModalPanel" autosized="true" minWidth="300" minHeight="100"
			rendered="#{usession.inRole['ADD_SUITE'] or usession.inRole['MODIFY_SUITE']}">
      	<f:facet name="header">
			<h:panelGroup id="suiteModalHeader">
           	    <h:outputText value="#{lblFrp.edit_suite}" rendered="#{MbSuites.editMode}"/>
           	    <h:outputText value="#{lblFrp.new_suite}" rendered="#{MbSuites.newMode}"/>
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
	    </f:facet>
   	    <h:panelGroup id="suiteModalDiv">
			<h:form id="suiteEditForm">
				<script type="text/javascript">
//<!--
					oldValue["suiteEditForm"] = "#{MbSuites.newSuite.lang}";
					
					function checkSuiteFields() {
						var checked = true;
						
						if (document.getElementById('suiteEditForm:newInst').value == "") {
							document.getElementById('suiteEditForm:newInstError').style.display = "inline";
							checked = false;
						}
						
						if (document.getElementById('suiteEditForm:newEntityType').value == "") {
							document.getElementById('suiteEditForm:newEntityTypeError').style.display = "inline";
							checked = false;
						}	
						if (document.getElementById('suiteEditForm:newLabel').value == "") {
							document.getElementById('suiteEditForm:newLabelError').style.display = "inline";
							checked = false;
						}	
						
						return checked;
					}
				//-->
				</script>
				<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
			        <h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">
			
						<h:outputLabel value="* #{lblCommon.institution}: " title="#{lblCommon.institution}"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:selectOneMenu id="newInst"
									value="#{MbSuites.newSuite.instId}"
									label="#{lblCommon.institution}"
									onblur="hideErrorField(this)">
								<f:selectItem itemValue=""/>
							    <f:selectItems value="#{MbSuites.institutions}"/>
							</h:selectOneMenu>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newInstError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.institution}"/>
							</h:outputFormat>
						</h:panelGrid>
		
						<h:outputLabel value="* #{lblCommon.entity_type}: " title="#{lblCommon.entity_type}"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:selectOneMenu id="newEntityType"
									value="#{MbSuites.newSuite.entityType}"
									label="#{lblCommon.entity_type}"
									onblur="hideErrorField(this)">
								<f:selectItem itemValue=""/>
							    <f:selectItems value="#{MbSuites.entityTypes}"/>
							</h:selectOneMenu>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newEntityTypeError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.entity_type}"/>
							</h:outputFormat>
						</h:panelGrid>
		
						<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
						<h:selectOneMenu id="lang" 
								value="#{MbSuites.newSuite.lang}"
								rendered="#{MbSuites.newMode}">
						    <f:selectItems value="#{MbSuites.languages}"/>
						</h:selectOneMenu>
						<h:selectOneMenu id="editLang" value="#{MbSuites.newSuite.lang}"
								rendered="#{MbSuites.editMode}"
								onchange="document.getElementById('suite:confirmPanelForm:newValue').value = this.value;
										#{rich:component('suite:confirmPanel')}.show()">
							<f:selectItems value="#{MbSuites.languages}"/>
						</h:selectOneMenu>

						<h:outputLabel value="* #{lblCommon.name}: " title="#{lblCommon.name}"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:inputText id="newLabel" 
									value="#{MbSuites.newSuite.label}"
									label="#{lblCommon.name}"
									maxlength="200"
									onblur="hideErrorField(this)"/>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newLabelError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.name}"/>
							</h:outputFormat>
						</h:panelGrid>

						<h:outputLabel value="#{lblCommon.description}: " title="#{lblCommon.description}"/>
						<h:inputTextarea id="newDescription" 
								value="#{MbSuites.newSuite.description}" rows="3"
									onkeypress="if (!limitText(event,this,2000)) return false;" 
									label="#{lblCommon.description}">
							<f:validateLength maximum="2000" />
						</h:inputTextarea>
					</h:panelGrid>
				</h:panelGroup>
	      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
					<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
		       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
		       	    		<h:outputText/>
                        	<bre:taggedCommandButton
                        			value="#{lblForm.save}" type="submit" action="#{MbSuites.save}"
                        			onclick="if (!checkSuiteFields()) return false; disableModalPanelBtns(this)"
				                   	oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('suiteModalPanel')}.hide()"
                        			reRender="${rerenderList}"
	                        		/>
                        	<bre:taggedCommandButton
	                        		value="#{lblForm.cancel}" 
	                        		action="#{MbSuites.cancel}" 
	                        		immediate="true"
	                        		oncomplete="#{rich:component('suiteModalPanel')}.hide()">
	                        	<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
	                		</bre:taggedCommandButton>
			    		</h:panelGrid>
			    	</h:panelGroup>
			    </h:panelGroup>
			</h:form>
		</h:panelGroup>
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/langConfirmPanel.jspx">
    	<ui:param name="backingBean" value="#{MbSuites}"/>
    	<ui:param name="rerenderList" value="suiteEditForm:newLabel, suiteEditForm:newDescription"/>
    	<ui:param name="editElem" value="suiteEditForm:editLang"/>
    	<ui:param name="newValue" value="#{MbSuites.newSuite.lang}"/>
    	<ui:param name="subviewId" value="suite"/>
    	<ui:param name="formName" value="suiteEditForm" />
    </ui:include>
</ui:composition>
</html>
