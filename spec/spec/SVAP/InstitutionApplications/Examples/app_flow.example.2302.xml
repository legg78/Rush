<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://sv.bpc.in/SVAP/ins" id="application_1">
    <application_type>APTPINSA</application_type>                                       <!-- Application type - Institution -->
    <application_flow_id>2302</application_flow_id>                                     <!-- Application flow (business process) - Create new institution -->
    <application_status>APST0006</application_status>                                   <!-- Application status - Ready to process -->
    <operator_id>OPERATOR1</operator_id>                                                <!-- User name who made this application -->
    <institution_id>9998</institution_id>                                               <!-- Institution identifier, it is a fixed value -->
    <customer_type>ENTTCOMP</customer_type>                                             <!-- Customer type - Company -->
    <institution id="inst1">
        <command>CMMDCREX</command>
        <inst_id>5678</inst_id>
        <institution_name>New Awesome Institution</institution_name>
        <institution_type>INTPPRCN</institution_type>                                   <!-- Institution type is "Processing center" -->
        <network_id>1001</network_id>

        <agent>
            <command>CMMDCREX</command>
            <institution_agent_id>6789</institution_agent_id>
            <agent_number>345234698798237456</agent_number>
            <agent_name>New default agent</agent_name>
            <agent_type>AGTPHEAD</agent_type>                                               <!-- agent type is "Headquarters" -->
            <is_default>1</is_default>
        </agent>

        <customer>
            <command>CMMDCREX</command>                                                     <!-- Command for customer - Create new or raise error -->
            <customer_number>009302127</customer_number>                                    <!-- Unique customer number -->
            <customer_category>CCTGORDN</customer_category>                                 <!-- Customer category - ordinary customer -->
            <customer_relation>RSCBEXTR</customer_relation>                                 <!-- Customer and bank additional relation - No relation -->
            <account_scheme>2</account_scheme>
            <contract>
                <command>CMMDCREX</command>                                                 <!-- Command for contract - Create new or raise error -->
                <contract_type>CNTPINST</contract_type>                                     <!-- Contract type - Institution servicing -->
                <product_id>2</product_id>                                                  <!-- Product identifier -->
                <contract_number>009302127001</contract_number>                             <!-- Contract number -->
                <start_date>2018-01-01</start_date>                                         <!-- Date when contract was signed -->
                <service value="10002158">                                                  <!-- Service - attribute value contain service identifier which opened for account -->
                    <service_object ref_id="inst1">                                    <!-- Service reference - attribute ref_id contain reference on attached object - New institution -->
                        <start_date>2018-01-01</start_date>                                 <!-- Service open date -->
                    </service_object>
                </service>
            </contract>
        </customer>

        <account id="account_1">                                                    <!-- Account - value in attribute ID could be used as reference on this object -->
            <command>CMMDCREX</command>                                             <!-- Command for account - Create new or raise error -->
            <account_number>40817840010009302127</account_number>                   <!-- Account number  -->
            <currency>643</currency>                                                <!-- Account currency code - US Dollars -->
            <account_type>ACTP0120</account_type>                                   <!-- Account type - Checking account -->
        </account>

        <contact>                                                                       <!-- Contact -->
            <command>CMMDCRUP</command>                                                 <!-- Command for contact - Create new or update if exists -->
            <contact_type>CNTTPRMC</contact_type>                                       <!-- Contact type - Primary -->
            <preferred_lang>LANGENG</preferred_lang>                                    <!-- Preferred language of speaking -->
            <contact_data>
                <commun_method>CMNM0001</commun_method>                                 <!-- Communication method - Mobile phone -->
                <commun_address>04728428779</commun_address>                            <!-- Communication address - Mobile phone number -->
            </contact_data>
        </contact>
        
        <address>                                                                       <!-- Address -->
            <command>CMMDCRUP</command>                                                 <!-- Command for address - Create new or update if exists -->
            <address_type>ADTPBSNA</address_type>                                       <!-- Address type - Business address -->
            <country>643</country>                                                      <!-- Country ISO code - Russia -->
            <address_name language="LANGENG">                                           <!-- Address. Attribute LANGUAGE contain code of language of provided address - English -->
                <region>Moscow</region>                                                 <!-- Region name -->
                <city>Moscow</city>                                                     <!-- Name of city -->
                <street>Street 3</street>                                               <!-- Street -->
            </address_name>
            <house>17</house>                                                           <!-- House number -->
            <apartment>10</apartment>                                                   <!-- Appartment number -->
        </address>
    </institution>
</application>
