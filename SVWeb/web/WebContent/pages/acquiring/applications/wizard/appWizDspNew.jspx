<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:bpct="http://www.bpc.ru/jsf/tiles"
      xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
      xmlns:bm="http://www.bpc.ru/jsf/misc"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:o="http://openfaces.org/"
      xmlns:g="http://java.sun.com/jsf/html">
<ui:composition>
    <rich:calendar id="calendard"
                   buttonIcon="/images/calendar.gif"
                   datePattern="#{usession.fullDatePattern}"
                   buttonClass="hidden"
                   inputClass="hidden"
                   defaultTime="00:00"
                   onchanged="#{rich:component('calendard')}.customInput.value=event.rich.component.getSelectedDateString();"
                   zindex="1000"/>
    <script>
        #{rich:component('calendard')}.customExpand=customExpand;
    </script>

    <script type="text/javascript">
        //<!--
        function checkFields() {
            var colorOk = "#FFFFFF";
            var colorMandatory = "#FF5555";
            var checked = true;

            if (document.getElementById('newDspForm:agentId').value == "") {
                document.getElementById('newDspForm:agentIdError').style.display = "inline";
                checked = false;
            }
            if (document.getElementById('newDspForm:cardMaskVwcardMask').value == "") {
                document.getElementById('newDspForm:cardMaskError').style.display = "inline";
                checked = false;
            }
            if (document.getElementById('newDspForm:transDateInputDate').value == "") {
                document.getElementById('newDspForm:transDateError').style.display = "inline";
                checked = false;
            }
            if (document.getElementById('newDspForm:currency').value == "") {
                document.getElementById('newDspForm:currencyError').style.display = "inline";
                checked = false;
            }
            if (document.getElementById('newDspForm:amount').value == "") {
                document.getElementById('newDspForm:amountError').style.display = "inline";
                checked = false;
            }
            if (document.getElementById('newDspForm:disputedCurrency').value == "") {
                document.getElementById('newDspForm:disputedCurrencyError').style.display = "inline";
                checked = false;
            }
