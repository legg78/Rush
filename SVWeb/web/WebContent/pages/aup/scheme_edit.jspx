<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<script type="text/javascript">
//<!-- 
		function checkFields() {
			var checked = true;
			if (document.getElementById('schemeModalDiv:instId').value == "") {
				document.getElementById('schemeModalDiv:instIdError').style.display = "inline";
				checked = false;
			}
			if (document.getElementById('schemeModalDiv:newSchemeType').value == "") {
				document.getElementById('schemeModalDiv:newSchemeTypeError').style.display = "inline";
				checked = false;
			}
			if (document.getElementById('schemeModalDiv:newSchemeType').value != "AUSC0002"){
				if (document.getElementById('schemeModalDiv:responseCode').value == "") {
					document.getElementById('schemeModalDiv:responseCodeError').style.display = "inline";
					checked = false;
				}
			}	

			if (document.getElementById('schemeModalDiv:newLabel').value == "") {
				document.getElementById('schemeModalDiv:newLabelError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('schemeModalDiv:newSystemName').value == "") {
				document.getElementById('schemeModalDiv:newSystemNameError').style.display = "inline";
				checked = false;
			}
			
			return checked;
		}
	//-->
	</script>
	
	<rich:modalPanel id="aupSchemeModalPanel" autosized="true" minWidth="300" minHeight="100"
			rendered="#{usession.inRole['ADD_AUTHORIZATION_SCHEME'] or usession.inRole['MODIFY_AUTHORIZATION_SCHEME']}">
      	<f:facet name="header">
			<h:panelGroup id="schemeModalHeader">
           	    <h:outputText value="#{lblAup.edit_scheme}"	rendered="#{MbAupSchemes.editMode}" />
				<h:outputText value="#{lblAup.new_scheme}" rendered="#{MbAupSchemes.newMode}" />
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
	    </f:facet>
		<h:form id="schemeModalDiv">
			<script type="text/javascript">
//<!--
				oldValue["schemeModalDiv"] = "#{MbAupSchemes.newScheme.lang}";
			//-->
			</script>
			
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="firstColModal, width250">

					<h:outputLabel value="#{lblCommon.id}: " title="#{lblCommon.id}"
						rendered="#{MbAupSchemes.editMode}" />
					<h:inputText readonly="true" rendered="#{MbAupSchemes.editMode}"
						value="#{MbAupSchemes.newScheme.id}" />

					<h:outputLabel value="* #{lblAup.scheme_type}: " title="#{lblAup.scheme_type}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
            			<h:selectOneMenu id="newSchemeType" 
            					value="#{MbAupSchemes.newScheme.schemeType}"
            					label="#{lblAup.scheme_type}"
            					onblur="hideErrorField(this)">
							<a4j:support event="onchange" reRender="instId, respCodeGroup, respCodeGroupLabel"
								limitToList="true" ajaxSingle="true" />
							<f:selectItem itemValue=""/>
		      				<f:selectItems value="#{MbAupSchemes.schemeTypes}"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newSchemeTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblAup.scheme_type}"/>
						</h:outputFormat>
           			</h:panelGrid>

					<h:outputLabel value="* #{lblCommon.institution}: " title="#{lblCommon.institution}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
            			<h:selectOneMenu id="instId" 
            					value="#{MbAupSchemes.newScheme.instId}"
            					label="#{lblCommon.institution}"
            					disabled="#{MbAupSchemes.editMode}"
            					onblur="hideErrorField(this)">
            				<f:selectItem itemValue=""/>
		      				<f:selectItems value="#{MbAupSchemes.institutions}"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="instIdError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.institution}"/>
						</h:outputFormat>
           			</h:panelGrid>

					<h:outputLabel value="#{lblAup.scale_id}: " title="#{lblAup.scale_id}" rendered="false"/>
					<h:inputText value="#{MbAupSchemes.newScheme.scaleId}" styleClass="grayInput" rendered="false"/>

					<h:panelGroup id="respCodeGroupLabel">
						<h:outputLabel value="* #{lblAup.resp_code}: " title="#{lblAup.resp_code}"
							rendered="#{!MbAupSchemes.negativeSchemeType}"/>
					</h:panelGroup>	
					<h:panelGroup id="respCodeGroup">
						<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
	            			<h:selectOneMenu id="responseCode" 
	            					rendered="#{!MbAupSchemes.negativeSchemeType}"
	            					value="#{MbAupSchemes.newScheme.respCode}"
	            					label="#{lblAup.resp_code}" onblur="hideErrorField(this)">
								<f:selectItem itemValue=""/>
			      				<f:selectItems value="#{MbAupSchemes.responseCodes}"/>
							</h:selectOneMenu>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
									id="responseCodeError" style="display:none;">
								<f:param name="fieldName" value="#{lblAup.resp_code}"/>
							</h:outputFormat>
	           			</h:panelGrid>
	           		</h:panelGroup>	

					<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
					<h:selectOneMenu id="newLang" value="#{MbAupSchemes.newScheme.lang}"
							rendered="#{MbAupSchemes.newMode}">
						<f:selectItems value="#{MbAupSchemes.languages}"/>
					</h:selectOneMenu>
					<h:selectOneMenu id="editLang" value="#{MbAupSchemes.newScheme.lang}"
							rendered="#{MbAupSchemes.editMode}"
							onchange="document.getElementById('confirmPanelView:confirmPanelForm:newValue').value = this.value;
									#{rich:component('confirmPanel')}.show()">
						<f:selectItems value="#{MbAupSchemes.languages}"/>
					</h:selectOneMenu>

					<h:outputLabel for="newLabel" value="* #{lblCommon.name}: " title="#{lblCommon.name}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
            			<h:inputText id="newLabel" 
            					value="#{MbAupSchemes.newScheme.label}" 
            					label="#{lblCommon.name}"
            					maxlength="200" onblur="hideErrorField(this)">
            				<f:validateLength minimum="3"/>
            				<a4j:support event="onchange" reRender="newLabelErr" limitToList="true"/>	
            			</h:inputText>
						<rich:message id="newLabelErr" for="newLabel" styleClass="errorMarker"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newLabelError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.name}"/>
						</h:outputFormat>
           			</h:panelGrid>

					<h:outputLabel for="newSystemName" value="* #{lblCommon.system_name}: " title="#{lblCommon.system_name}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
            			<h:inputText id="newSystemName" 
            					value="#{MbAupSchemes.newScheme.systemName}" 
            					label="#{lblCommon.system_name}"
            					maxlength="200" onblur="hideErrorField(this)">
            				<f:validateLength minimum="3"/>
            				<a4j:support event="onchange" reRender="newSystemNameErr" limitToList="true"/>	
            			</h:inputText>
						<rich:message id="newSystemNameErr" for="newSystemName" styleClass="errorMarker"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newSystemNameError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.system_name}"/>
						</h:outputFormat>
           			</h:panelGrid>
					
					<h:outputLabel for="newDesc" value="#{lblCommon.description}: " title="#{lblCommon.description}"/>
           			<h:inputTextarea id="newDesc" value="#{MbAupSchemes.newScheme.description}" rows="5" cols="150" 
							onkeypress="if (!limitText(event,this,2000)) return false;"
							label="#{lblCommon.description}">
			            	<f:validateLength maximum="2000" />
			        </h:inputTextarea>
				</h:panelGrid>
			</h:panelGroup>

      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
	       	    		<h:outputText/>
                       	<bre:taggedCommandButton
                       			value="#{lblForm.save}" action="#{MbAupSchemes.save}"
                       			onclick="if (!checkFields()) return false; disableModalPanelBtns(this)"
			                   	oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) 
			                   			#{rich:component('aupSchemeModalPanel')}.hide()"
                       			reRender="${rerenderList}"
                        		/>
                       	<bre:taggedCommandButton
                        		value="#{lblForm.cancel}" 
                        		action="#{MbAupSchemes.cancel}" 
                        		immediate="true" limitToList="true"
                        		oncomplete="#{rich:component('aupSchemeModalPanel')}.hide()"
                        		reRender="schemeModalDiv">
                        	<f:actionListener type="ru.bpc.jsf.A4JFormReset"/>
                        </bre:taggedCommandButton>	
		    		</h:panelGrid>
		    	</h:panelGroup>
		    </h:panelGroup>
		</h:form>			
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/langConfirmPanel.jspx">
    	<ui:param name="backingBean" value="#{MbAupSchemes}"/>
    	<ui:param name="rerenderList" value="schemeModalDiv:newLabel, schemeModalDiv:newDesc"/>
    	<ui:param name="editElem" value="schemeModalDiv:editLang"/>
    	<ui:param name="newValue" value="#{MbAupSchemes.newScheme.lang}"/>
    	<ui:param name="formName" value="schemeModalDiv"/>
    </ui:include>

</ui:composition>
</html>