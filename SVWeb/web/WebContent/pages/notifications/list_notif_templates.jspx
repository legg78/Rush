<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition	template="/WEB-INF/templates/navigatable.jspx">
	<ui:param name="pageHelp" value="notification_templates.htm"/>
	<ui:param name="pageHelpModalAdd" value="notification_template_create.htm" />
	<ui:param name="pageHelpModalEdit" value="notification_template_edit.htm" />
	<ui:param name="showHelpModal" value="true" />
	
	<ui:define name="navigatableContent">
		<f:loadBundle var="lblNtf" basename="ru.bpc.sv2.ui.bundles.Ntf"/>
		<a4j:loadScript src="/js/stretch.js" />
		
		<!-- navigation bar -->
        <bpct:navBar pageName="#{lblNtf.notif_templates}"/>
        <a4j:queue name="queue" requestDelay="500" ignoreDupResponses="true" size="1" sizeExceededBehavior="dropNew"/>
        
        <script type="text/javascript">
			//<![CDATA[
			function handleEnter(event) {
				 if (event.keyCode == 13) {
					 document.getElementById('notifTemplatesSearchForm:searchBtn').click(); 
					 return false; 
				} 
				return true;
			 }	
			//]]>
			</script>
			
    	<h:form id="notifTemplatesSearchForm" onkeypress="handleEnter(event)">			

			<!-- search panel -->
			<h:panelGroup styleClass="search_block" layout="block">
				<h:panelGroup layout="block" styleClass="search_block_inner1">
				<h:panelGroup layout="block" styleClass="search_block_inner2">
	                <h:panelGroup styleClass="search_block_left" layout="block">
	                	<h:panelGrid styleClass="fw" columns="2" columnClasses="top ,link-cont">
		                	<h:panelGrid styleClass="filter-table field-cont twoColumnTable" columns="4" columnClasses="firstCol,secondCol,firstCol,secondCol">
	                			<h:outputLabel value="#{lblNtf.notification}:" title="#{lblNtf.notification}" />
				      			<h:selectOneMenu id="notifSelector" 
				      						value="#{MbNotificationTemplates.filter.notificationId}">
				      				<f:selectItem itemValue=""/>
				      				<f:selectItems value="#{MbNotificationTemplates.notifications}"/>
				      			</h:selectOneMenu>

	                			<h:outputLabel value="#{lblNtf.channel}:" title="#{lblNtf.channel}" />
				      			<h:selectOneMenu id="channelSelector" 
				      					value="#{MbNotificationTemplates.filter.channelId}">
				      				<f:selectItem itemValue=""/>
				      				<f:selectItems value="#{MbNotificationTemplates.channels}"/>
				      			</h:selectOneMenu>

		            			<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}" />
				      			<h:selectOneMenu id="langSelector" 
				      						value="#{MbNotificationTemplates.filter.lang}">
				      				<f:selectItem itemValue=""/>
				      				<f:selectItems value="#{MbNotificationTemplates.languages}"/>
				      			</h:selectOneMenu>
                			</h:panelGrid>
	                		<h:panelGrid columns="1">
		                		<bre:taggedCommandButton
			                			action="#{MbNotificationTemplates.search}"
	        							reRender="templatesTable, templatesDs, pagesNum, notifTemplatesBtnForm:btnPanel, detailsTab"
	        							id="searchBtn"
	                					image="/_img/icon_search.png" type="submit"
	                					value="#{lblForm.search}" style="width:85px;"
	                					onclick="disableModalPanelBtns(this);"
	                					oncomplete="enableModalPanelBtns(this);"
	                					eventsQueue="queue"/>
	                			<h:panelGroup styleClass="link-clear" layout="block">
		                			<h:graphicImage url="/_img/icon_clear.png"/>
		                			<a4j:commandLink value="#{lblForm.clear_all}"
						        			action="#{MbNotificationTemplates.clearFilter}"
						        			reRender="notifTemplatesSearchForm, notifTemplatesForm, notifTemplatesBtnForm, details">
						        	</a4j:commandLink>
	            	    		</h:panelGroup>
	                		</h:panelGrid>
	               		</h:panelGrid>
	               		<a4j:outputPanel ajaxRendered="true">
	               			<h:graphicImage url="/_img/hd_searchblock.gif"  styleClass="hd-searchblock"/>
	               			<h:panelGroup styleClass="collapse-vert" layout="block"/>
               			</a4j:outputPanel>
	               	</h:panelGroup>
               	</h:panelGroup>
               	</h:panelGroup>
			</h:panelGroup>
		</h:form>
		
		<h:form id="notifTemplatesForm">
			<h:panelGroup styleClass="search_result_block" layout="block">
		    	<h:panelGroup styleClass="search_result_block_left fix-ff" layout="block">
		    		<h:panelGroup id="mainTableWrapper" layout="block"
						styleClass="search_result_block_inner">
				    <rich:extendedDataTable
							id="templatesTable"
							var="item"
							tableState="#{MbNotificationTemplates.tableState}"
							value="#{MbNotificationTemplates.templates}"
							selection="#{MbNotificationTemplates.itemSelection}"
							rows="#{MbNotificationTemplates.rowsNum}"
							height="255px"
							selectionMode="single"
							rowClasses=",odd"
							headerClass="res-table-header"
							selectedClass="res-table-selected"
							styleClass="res-table"
							enableContextMenu="true"
							noDataLabel="#{MbNotificationTemplates.searching?lblCommon['no_records_found'] : lblCommon['enter_search_criteria_above']}"
							reRender="detailsTab, notifTemplatesBtnForm:btnPanel">
			
						<a4j:support event="onselectionchange" eventsQueue="queue"
								reRender="detailsTab, notifTemplatesBtnForm:btnPanel"/>
			
						<rich:column id="id" label="#{lblCommon.id}" sortBy="#{'id'}" width="10%">
							<f:facet name="header">
								<a4j:outputPanel layout="none">
									<script>updateHeight();</script>
									<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}"/>
								</a4j:outputPanel>
							</f:facet>
			               	<h:outputText value="#{item.id}" />
						</rich:column>
			
						<rich:column id="notification" label="#{lblNtf.notification}" sortBy="#{'notifName'}" width="20%">
							<f:facet name="header">
								<h:outputText value="#{lblNtf.notification}" title="#{lblNtf.notification}" />
							</f:facet>
			               	<h:outputText value="#{item.notificationName}"/>
						</rich:column>
						
						<rich:column id="channel" label="#{lblNtf.channel}" sortBy="#{'channelName'}" width="20%">
							<f:facet name="header">
								<h:outputText value="#{lblNtf.channel}" title="#{lblNtf.channel}" />
							</f:facet>
			               	<h:outputText value="#{item.channelName}"/>
						</rich:column>
						
				        <rich:column id="language" label="#{lblCommon.language}" sortBy="#{'templateLang'}" width="20%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblCommon.language}" title="#{lblCommon.language}"/>
			                </f:facet>
			                <h:outputText value="#{DictUtils.articles[item.lang]}"/>
				        </rich:column>

				        <rich:column id="report" label="#{lblNtf.report}" sortBy="#{'reportName'}" width="30%">
							<f:facet name="header">
								<h:outputText value="#{lblNtf.report}" title="#{lblNtf.report}"/>
							</f:facet>
							<h:outputText value="#{item.reportTemplateName}"/>
				        </rich:column>
				    </rich:extendedDataTable>
				    </h:panelGroup>
				    <a4j:outputPanel ajaxRendered="true">
				    	<h:panelGroup id="show_more_panel" styleClass="show-more-vert show-more-result-tab" layout="block"/>
					    <h:graphicImage url="/_img/hd_searchblock.gif" styleClass="hd-searchblock"/>
					    <h:panelGroup styleClass="collapse-vert table-collapse-vert" layout="block"/>
				    </a4j:outputPanel>
			    </h:panelGroup>
			</h:panelGroup>
        </h:form>

        <h:form id="notifTemplatesBtnForm">
			<h:panelGroup layout="block" styleClass="bottom_search_result_block">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left">
					<h:panelGroup layout="block" styleClass="table_tools">
						<h:panelGrid styleClass="fw field-cont" columns="5"
							columnClasses="per-page-lbl,per-page-sel,nav-cont,pagecount, table_tools_state">
							<h:outputLabel for="rows_num" value="#{lblCommon.rows_per_page}" title="#{lblCommon.rows_per_page}" />
							<h:selectOneMenu id="rows_num"
								value="#{MbNotificationTemplates.rowsNum}" styleClass="row_per_page">
								<a4j:support event="onchange"
									reRender="templatesTable, templatesDs, pagesNum, detailsTab, notifTemplatesBtnForm" />
								<f:selectItems value="#{CommonUtils.rowNumsList}"/>
							</h:selectOneMenu>

							<rich:datascroller maxPages="10" fastControls="hide"
								pagesVar="pages" styleClass="res-datascroller" id="templatesDs"
								for="templatesTable" reRender="detailsTab, notifTemplatesBtnForm:btnPanel">
								<f:facet name="first">
									<h:outputText value="&lt;&lt;" styleClass="prev-next" />
								</f:facet>
								<f:facet name="first_disabled">
									<h:outputText value="&lt;&lt;" styleClass="prev-next-dis" />
								</f:facet>
								<f:facet name="last">
									<h:outputText value="&gt;&gt;" styleClass="prev-next" />
								</f:facet>
								<f:facet name="last_disabled">
									<h:outputText value="&gt;&gt;" styleClass="prev-next-dis" />
								</f:facet>
								<f:facet name="previous">
									<h:outputText value="#{lblCommon.prev}" styleClass="prev-next" />
								</f:facet>
								<f:facet name="previous_disabled">
									<h:outputText value="#{lblCommon.prev}"
										styleClass="prev-next-dis" />
								</f:facet>
								<f:facet name="next">
									<h:outputText value="#{lblCommon.next}" styleClass="prev-next" />
								</f:facet>
								<f:facet name="next_disabled">
									<h:outputText value="#{lblCommon.next}"
										styleClass="prev-next-dis" />
								</f:facet>
								<f:facet name="pages">
								</f:facet>
							</rich:datascroller>

							<h:panelGroup id="pagesNum">
								<h:outputText styleClass="strongClass" value="#{pages} " />
								<h:outputText value=" #{lblCommon.pages}" />
                                <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
                                <h:outputText styleClass="strongClass" value="#{MbNotificationTemplates.templates.rowCount}"/>
                                <h:outputText value=" #{lblCommon.records}"/>
                                <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
							</h:panelGroup>
							
							<h:panelGroup>
								<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
									onclick="saveTableState();"/>
								<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
									onclick="deleteTableState();"/>
								<a4j:queue name="tablestatequeue"/>
								<a4j:jsFunction name="saveTableState" action="#{MbNotificationTemplates.saveTableStateDB}" eventsQueue="tablestatequeue"/>
								<a4j:jsFunction name="deleteTableState" action="#{MbNotificationTemplates.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
							</h:panelGroup>
						</h:panelGrid>
					</h:panelGroup>

					<h:panelGrid id="btnPanel" columns="4" styleClass="itempanel">
						<bre:taggedCommandButton id="addBtn"
							reRender="notifModalPanel" value="#{lblForm.add}"
							oncomplete="#{rich:component('notifModalPanel')}.show()"
							action="#{MbNotificationTemplates.add}"
							rendered="#{usession.inRole['ADD_NOTIF_TEMPLATE']}"
							image="/images/create_doc.gif" />
						<bre:taggedCommandButton id="editBtn"
							reRender="notifModalPanel"
							value="#{lblForm.edit}" action="#{MbNotificationTemplates.edit}"
							oncomplete="#{rich:component('notifModalPanel')}.show()"
							disabled="#{MbNotificationTemplates.activeTemplate == null}"
							rendered="#{usession.inRole['MODIFY_NOTIF_TEMPLATE']}"
							image="/images/edit.gif" />
						<bre:taggedCommandButton id="deleteBtn"
							value="#{lblForm.delete}"
							disabled="#{MbNotificationTemplates.activeTemplate == null}"
							rendered="#{usession.inRole['REMOVE_NOTIF_TEMPLATE']}"
							image="/images/delete.gif" 
							oncomplete="#{rich:component('deleteTemplateView:confirmPanel')}.show()"/>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>

        <h:form>
            <a4j:jsFunction name="storeTab" ajaxSingle="true" limitToList="true" reRender="#{MbNotificationTemplates.tabName}">
                <a4j:actionparam name="tabName" assignTo="#{MbNotificationTemplates.tabName}" />
            </a4j:jsFunction>
        </h:form>

		<h:panelGroup styleClass="workplace" id="workplacePanel" layout="block">
	    	<rich:tabPanel switchType="client" id="details" tabClass="tab-cell"
	    			activeTabClass="active-tab-cell" headerClass="tabs" headerSpacing="0px"
	    			contentClass="tab-content" selectedTab="#{MbNotificationTemplates.tabName}">

				<rich:tab ontabenter="storeTab('detailsTab')" label="#{lblCommon.details}" name="detailsTab">
					<f:facet name="label">
						<h:panelGroup styleClass="first tab-label" layout="block">
							<h:outputText value="#{lblCommon.details}"
								title="#{lblCommon.details}" />
						</h:panelGroup>
					</f:facet>

					<h:panelGroup id="detailsTab" layout="block">
						<ui:include src="/pages/notifications/notif_template_details.jspx"/>
						<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons"/>
					</h:panelGroup>

				</rich:tab>

			</rich:tabPanel>
        </h:panelGroup>

		<ui:include src="/pages/notifications/edit_notif_template.jspx">
			<ui:param name="rerenderList" value="templatesTable, templatesDs, pagesNum, btnPanel, detailsTab"/>
		</ui:include>
	
		<ui:include src="/pages/utils/confirmPanel.jspx">
			<ui:param name="backingBean" value="#{MbNotificationTemplates}"/>
			<ui:param name="yesAction" value="delete"/>
			<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
			<ui:param name="rerenderList" value="templatesTable, templatesDs, pagesNum, btnPanel, detailsTab"/>
			<ui:param name="confirmQuestion" value=" "/> 
			<ui:param name="subviewId" value="deleteTemplateView"/>
			<ui:param name="yes" value="#{lblForm.ok}"/>
			<ui:param name="no" value="#{lblForm.cancel}"/>			
		</ui:include>

		<script type="text/javascript">
			function updateHeight(){
                updateGridHeight();
			}

            layout =
            {
                SEARCH_FORM_ID:                 'notifTemplatesSearchForm',
                SEARCH_RESULT_FORM_ID:          'notifTemplatesForm',
                SEARCH_RESULT_FORM_WRAPPER_ID:  'mainTableWrapper',
                SEARCH_RESULT_FOOTER_FORM_ID:   'notifTemplatesBtnForm',
                TAB_PANEL_ID:                   'workplacePanel',

                TAB_DATA:      [{
                    TAB_FORM_ID:            'notifTemplateDetailsForm',
                    TAB_FORM_WRAPPER_ID:    'notifTemplateDetailsWrapper',
                    CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS + Stretch.LANG_SELECTOR
                }]
            };

			updateHeight();
            jQuery(window).resize(updateHeight);
		</script>
	</ui:define>
</ui:composition>
</html>
