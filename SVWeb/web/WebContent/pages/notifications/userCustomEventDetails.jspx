<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<h:form id="userCustomEventDetailsForm">
	    <h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
	        <h:panelGrid columns="4" styleClass="cardholderdata twoColumnTable" width="100%" columnClasses="firstCol,secondCol,firstCol,secondCol">
				<h:outputLabel value="#{lblCommon.lang_selector}: " title="#{lblCommon.lang_selector}" />
				<h:selectOneMenu id="lang"
						disabled="#{MbUserCustomEvents.activeUserCustomEvent.id == null}"
						value="#{MbUserCustomEvents.curLang}"
						valueChangeListener="#{MbUserCustomEvents.changeLanguage}"
						>
					<a4j:support event="onchange" reRender="userCustomEventDetailsForm"/>
				    <f:selectItems value="#{MbUserCustomEvents.languages}"/>
				</h:selectOneMenu>
				
				<h:outputText/>
				<h:outputText/>

				<h:outputText/>
				<rich:separator height="2" lineType="dotted" styleClass="separator"/>
				
				<h:outputText/>
				<h:outputText/>

				<h:outputLabel value="#{lblCommon.id}: " title="#{lblCommon.id}" />
				<h:inputText id="customEventId" readonly="true" 
						value="#{MbUserCustomEvents.activeUserCustomEvent.id}"
						title="#{MbUserCustomEvents.activeUserCustomEvent.id}"/>

				<h:outputLabel value="#{lblNtf.scheme_event}: " title="#{lblNtf.scheme_event}" />
				<h:inputText id="schemeEventId" readonly="true" 
						value="#{MbUserCustomEvents.activeUserCustomEvent.schemeEventId}"
						title="#{MbUserCustomEvents.activeUserCustomEvent.schemeEventId}"/>
				
				<h:outputLabel value="#{lblNtf.delivery_address}: " title="#{lblNtf.delivery_address}" />
				<h:inputText id="deliveryAddress" readonly="true" 
						value="#{MbUserCustomEvents.activeUserCustomEvent.deliveryAddress}"
						title="#{MbUserCustomEvents.activeUserCustomEvent.deliveryAddress}"/>

				<h:outputLabel value="#{lblNtf.delivery_time}: " title="#{lblNtf.delivery_time}" />
				<h:inputText id="deliveryTime" readonly="true" 
						value="#{MbUserCustomEvents.activeUserCustomEvent.deliveryTime}"
						title="#{MbUserCustomEvents.activeUserCustomEvent.deliveryTime}"/>

				<h:outputLabel value="#{lblCommon.entity_type}:" title="#{lblCommon.entity_type}" />
				<h:inputText id="entityType" readonly="true" 
						value="#{DictUtils.articlesByLang[MbUserCustomEvents.curLang][MbUserCustomEvents.activeUserCustomEvent.entityType]}"
						title="#{DictUtils.articlesByLang[MbUserCustomEvents.curLang][MbUserCustomEvents.activeUserCustomEvent.entityType]}"/>

				<h:outputLabel value="#{lblCommon.object_id}:" title="#{lblCommon.object_id}" />
				<h:inputText id="objectId" readonly="true" 
						value="#{MbUserCustomEvents.activeUserCustomEvent.objectId}"
						title="#{MbUserCustomEvents.activeUserCustomEvent.objectId}"/>

				<h:outputLabel value="#{lblCommon.event_type}: " title="#{lblCommon.event_type}" />
				<h:inputText id="eventType" readonly="true" 
						value="#{DictUtils.articlesByLang[MbUserCustomEvents.curLang][MbUserCustomEvents.activeUserCustomEvent.eventType]}"
						title="#{DictUtils.articlesByLang[MbUserCustomEvents.curLang][MbUserCustomEvents.activeUserCustomEvent.eventType]}"/>

				<h:outputLabel value="#{lblNtf.channel}: " title="#{lblNtf.channel}" />
				<h:inputText id="channelName" readonly="true" 
						value="#{MbUserCustomEvents.activeUserCustomEvent.channelName}"
						title="#{MbUserCustomEvents.activeUserCustomEvent.channelName}"/>

				<h:outputLabel value="#{lblCommon.modifier}: " title="#{lblCommon.modifier}" />
				<h:inputText id="modName" readonly="true" 
						value="#{MbUserCustomEvents.activeUserCustomEvent.modName}"
						title="#{MbUserCustomEvents.activeUserCustomEvent.modName}"/>
			</h:panelGrid>
		</h:panelGroup>		
	</h:form>
</ui:composition>
</html>