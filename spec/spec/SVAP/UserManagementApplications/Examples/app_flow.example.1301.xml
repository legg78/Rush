<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://sv.bpc.in/SVAP/acm">
	<application_type>APTPUMGT</application_type>								<!-- Application type - User management -->
	<application_flow_id>1301</application_flow_id>								<!-- Application flow (business process) - Create user -->
	<application_status>APST0006</application_status>							<!-- Application status - Ready to process -->
	<institution_id>1001</institution_id>										<!-- Institution identifier -->
	<operator_id>OPERATOR1</operator_id>										<!-- User name who made this application -->
	<user>
		<command>CMMDCREX</command>												<!-- Command for user - Create or except -->
		<user_id>10000001</user_id>												<!-- User identifier (optional) -->
		<user_name>NEW_USER</user_name>											<!-- User name -->
		<password_hash>{SHA-1}Gd1GbkPNvTgzq8Bgnrpth4b5s0I=</password_hash>		<!-- User password hash -->
		<user_status>USSTACTV</user_status>										<!-- User status - Active (optional) -->
		<auth_scheme>ATHSPASS</auth_scheme>										<!-- User's authentication scheme - Password (optional)-->
		<password_change_needed>1</password_change_needed>						<!-- User must change password at first login - Yes (optional) -->
		<person>
			<command>CMMDCRUP</command>											<!-- Command for person - Create or update -->
            <person_name language="LANGENG">									<!-- Person name. Attribute LANGUAGE contain code of language of provided person name - English -->
				<surname>Petrov</surname>										<!-- Person surname -->
				<first_name>Alexey</first_name>									<!-- Person first name --> 				
			</person_name>
			<birthday>2000-05-01</birthday>										<!-- Person birthday (optional) -->
			<gender>GNDRMALE</gender>											<!-- Person gender - Male (optional) -->
			<identity_card>														<!-- Identity card data -->	
				<command>CMMDCRUP</command>										<!-- Command for identity card - Create or update -->
				<id_type>IDTP0005</id_type>										<!-- Identity card type - Army officer certificate -->
				<id_series>123456</id_series>									<!-- Identity card series (optional) -->
				<id_number>654321</id_number>									<!-- Identity card number -->
			</identity_card>
		</person>
		<contact>																<!-- Person contact (optional) -->
			<command>CMMDCRUP</command>											<!-- Command for contact - Create or update -->
			<contact_type>CNTTPRMC</contact_type>								<!-- Contact type - Primary -->
			<preferred_lang>LANGENG</preferred_lang>							<!-- Preferred language of speaking - English (optional) -->
			<contact_data>														<!-- Contact data (optional) -->
				<commun_method>CMNM0001</commun_method>							<!-- Communication method - Mobile phone -->
                <commun_address>79091234567</commun_address>					<!-- Communication address - Mobile phone number -->
			</contact_data>
		</contact>
		<user_inst>																<!-- User's institution -->
			<command>CMMDCRPR</command>											<!-- Command for user's institution - Create or proceed -->
			<institution_id>1001</institution_id>								<!-- Institution identifier -->
		</user_inst>
		<user_role>
			<command>CMMDCRPR</command>											<!-- Command for user's role - Create or proceed -->
			<role_id>5</role_id>												<!-- Role identifier -->
			<role_name>ADMIN_ROLE</role_name>									<!-- Role name (optional) -->
		</user_role>
	</user>
</application>