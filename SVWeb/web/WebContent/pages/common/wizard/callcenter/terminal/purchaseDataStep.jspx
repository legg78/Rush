<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:bpct="http://www.bpc.ru/jsf/tiles" xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	xmlns:rich="http://richfaces.org/rich" xmlns:a4j="http://richfaces.org/a4j">
	<ui:composition>

		<f:loadBundle var="lblAcq" basename="ru.bpc.sv2.ui.bundles.Acq" />
		<f:loadBundle var="lblPrd" basename="ru.bpc.sv2.ui.bundles.Prd" />
		<f:loadBundle var="lblCommon" basename="ru.bpc.sv2.ui.bundles.Common" />

		<h:form>
			<ui:include src="/pages/common/wizard/commonWizardActions.jspx" >
				<ui:param name="bean" value="#{bean}" />
				<ui:param name="action" value="#{action}" />
			</ui:include>
		</h:form>

		<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
			<h:panelGrid columns="2" styleClass="cardholderdata"
				columnClasses="width-250, width250">

				<h:outputLabel for="cardMask" title="#{lblAtm.card_mask}"
					value="#{lblAtm.card_mask}:" />
				<h:inputText id="cardMask" value="#{MbPurchaseStep.card.mask}"
					label="#{lblNet.card_mask}" readonly="true">
				</h:inputText>

				<h:outputLabel for="cardType" title="#{lblNet.card_type}"
					value="#{lblNet.card_type}:" />
				<h:inputText id="cardType" value="#{MbPurchaseStep.card.cardTypeName}"
					label="#{lblNet.card_mask}" readonly="true">
				</h:inputText>

				<h:outputLabel for="cardholderName" title="#{lblPrs.cardholder_name}"
					value="#{lblPrs.cardholder_name}:" />
				<h:inputText id="cardholderName"
					value="#{MbPurchaseStep.card.cardholderName}" label="#{lblPrs.cardholder_name}"
					readonly="true">
				</h:inputText>

			</h:panelGrid>
		</h:panelGroup>

		<hr />

		<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
			<h:panelGrid columns="2" styleClass="cardholderdata"
				columnClasses="width-250, width250">

				<h:outputLabel for="customerType" title="#{lblPrd.customer_type}"
					value="#{lblPrd.customer_type}:" />
				<h:inputText id="customerType"
					value="#{MbPurchaseStep.customer.entityType}  - #{DictUtils.allArticlesDesc[MbPurchaseStep.customer.entityType]}"
					label="#{lblPrd.customer_type}" readonly="true">
				</h:inputText>

				<h:outputLabel for="name" title="#{lblCommon.name}"
					value="#{lblCommon.name}:" />
				<h:inputText id="name" value="#{MbPurchaseStep.customer.name}"
					label="#{lblCommon.name}" readonly="true">
				</h:inputText>
			</h:panelGrid>
		</h:panelGroup>

	</ui:composition>
</html>
