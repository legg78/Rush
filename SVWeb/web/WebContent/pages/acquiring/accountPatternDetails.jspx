<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<f:loadBundle var="lblAcq" basename="ru.bpc.sv2.ui.bundles.Acq"/>
	
	<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
		<h:panelGrid columns="2" styleClass="cardholderdata oneColumnTable" columnClasses="firstColModal, width250">
			
			<h:outputLabel value="#{lblCommon.id}: " title="#{lblCommon.id}" />
			<h:inputText readonly="true"
					value="#{MbAccountPatterns.activeAccountPattern.id}"/>

			<h:outputLabel value="#{lblAcq.account_scheme}: " title="#{lblAcq.account_scheme}" />
			<h:inputText readonly="true"
					value="#{MbAccountPatterns.activeAccountPattern.schemeName}"/>

			<h:outputLabel value="#{lblAcq.operation_type}: " title="#{lblAcq.operation_type}" />
			<h:inputText readonly="true" 
					rendered="#{MbAccountPatterns.activeAccountPattern.operType !='%'}"
					value="#{DictUtils.articles[MbAccountPatterns.activeAccountPattern.operType]}"
					title="#{DictUtils.articles[MbAccountPatterns.activeAccountPattern.operType]}"/>
			<h:inputText readonly="true" value="#{lblCommon.any}"
					rendered="#{MbAccountPatterns.activeAccountPattern.operType == '%'}"/>
					
			<h:outputLabel value="#{lblAcq.reason}: " title="#{lblAcq.reason}" />
			<h:inputText readonly="true"
					rendered="#{!MbAccountPatterns.activeAccountPattern.anyOperReason}"
					value="#{DictUtils.articles[MbAccountPatterns.activeAccountPattern.operReason]}"/>
			<h:inputText readonly="true" value="#{lblCommon.any}"
					rendered="#{MbAccountPatterns.activeAccountPattern.anyOperReason}"/>

			<h:outputLabel value="#{lblAcq.sttl_type}: " title="#{lblAcq.sttl_type}" />
			<h:inputText readonly="true"
					rendered="#{MbAccountPatterns.activeAccountPattern.sttlType !=null}"
					value="#{DictUtils.articles[MbAccountPatterns.activeAccountPattern.sttlType]}"/>
			<h:inputText readonly="true" 
					rendered="#{MbAccountPatterns.activeAccountPattern.sttlType == null}"/>
			
			<h:outputLabel value="#{lblAcq.terminal_type}: " title="#{lblAcq.terminal_type}" />
			<h:inputText readonly="true" 
					rendered="#{MbAccountPatterns.activeAccountPattern.terminalType !=null}"
					value="#{DictUtils.articles[MbAccountPatterns.activeAccountPattern.terminalType]}"/>
			<h:inputText readonly="true" value="#{lblCommon.any}"
					rendered="#{MbAccountPatterns.activeAccountPattern.terminalType == null}"/>
								
			<h:outputLabel value="#{lblCommon.currency}: " title="#{lblCommon.currency}" />
			
			<h:panelGroup layout="block" class="pseudo-input-with-flag" style="border:1px solid #999999; width:251px;">
				<div class="#{EntityIcons.objectsMapS['ENTT0046'][MbAccountPatterns.activeAccountPattern.currency]}"/>
				<h:inputText readonly="true" size="20"
						value="#{CurrencyUtils.currencyMap[MbAccountPatterns.activeAccountPattern.currency]}"/>
			</h:panelGroup>

			<h:outputLabel value="#{lblAcq.operation_sign}: " title="#{lblAcq.operation_sign}" />
			<h:selectOneMenu id="operationSign"
					value="#{MbAccountPatterns.activeAccountPattern.operSign}"
					disabled="true">
				<f:selectItem itemValue="" itemLabel=""/>
				<f:selectItem itemValue="-1" itemLabel="debit"/>
				<f:selectItem itemValue="1" itemLabel="credit"/>
			</h:selectOneMenu>

			<h:outputLabel value="#{lblAcq.merchant_type}: " title="#{lblAcq.merchant_type}" />
			<h:inputText rendered="#{MbAccountPatterns.activeAccountPattern.merchantType !='%'}"
					value="#{DictUtils.articlesByLang[MbAccountPatterns.curLang][MbAccountPatterns.activeAccountPattern.merchantType]}"
					title="#{DictUtils.articlesByLang[MbAccountPatterns.curLang][MbAccountPatterns.activeAccountPattern.merchantType]}"
					readonly="true"/>
			<h:inputText readonly="true" value="#{lblCommon.any}"
					rendered="#{MbAccountPatterns.activeAccountPattern.merchantType == '%'}"/>

			<h:outputLabel value="#{lblAcq.account_type}: " title="#{lblAcq.account_type}" />
			<h:inputText rendered="#{MbAccountPatterns.activeAccountPattern.accountType !='%'}"
					value="#{DictUtils.articlesByLang[MbAccountPatterns.curLang][MbAccountPatterns.activeAccountPattern.accountType]}"
					title="#{DictUtils.articlesByLang[MbAccountPatterns.curLang][MbAccountPatterns.activeAccountPattern.accountType]}"
					readonly="true"/>
			<h:inputText readonly="true" value="#{lblCommon.any}"
					rendered="#{MbAccountPatterns.activeAccountPattern.accountType == '%'}"/>

			<h:outputLabel value="#{lblAcq.account_currency}: " title="#{lblAcq.account_currency}" />
			<h:panelGroup layout="block" class="pseudo-input-with-flag" style="border:1px solid #999999; width:251px;"
					rendered="#{MbAccountPatterns.activeAccountPattern.accountCurrency !='%'}">
				<div class="#{EntityIcons.objectsMapS['ENTT0046'][MbAccountPatterns.activeAccountPattern.accountCurrency]}"/>
				<h:inputText readonly="true"
						value="#{CurrencyUtils.currencyMap[MbAccountPatterns.activeAccountPattern.accountCurrency]}"/>
			</h:panelGroup>
			<h:inputText readonly="true" value="#{lblCommon.any}"
					rendered="#{MbAccountPatterns.activeAccountPattern.accountCurrency == '%'}"/>

			<h:outputLabel value="#{lblAcq.priority}: " title="#{lblAcq.priority}" />
			<h:inputText id="priority" value="#{MbAccountPatterns.activeAccountPattern.priority}"
					readonly="true"/>
	    </h:panelGrid>
	</h:panelGroup>
</ui:composition>
</html>
