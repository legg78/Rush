<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:bpct="http://www.bpc.ru/jsf/tiles" xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	xmlns:rich="http://richfaces.org/rich" xmlns:a4j="http://richfaces.org/a4j"
	xmlns:o="http://openfaces.org/">
	<ui:composition>
		<fieldset onblur="alert(1);">
			<legend id="legend">#{MbAppWizAtm.node.label}</legend>
			<h:panelGrid styleClass="filter-table field-cont twoColumnTable"
				columns="2" columnClasses="firstCol200px,column200px" >
				<a4j:support event="onblur" onsubmit="alert(1);" />

				<h:outputLabel
					value="#{MbAppWizAtm.fieldMap['TERMINAL_NUMBER'].required ? '*' : ''} #{MbAppWizAtm.fieldMap['TERMINAL_NUMBER'].shortDesc}: "
					title="#{MbAppWizAtm.fieldMap['TERMINAL_NUMBER'].shortDesc}"
					class="#{MbAppWizAtm.fieldMap['TERMINAL_NUMBER'].valid ? 'valid' : 'invalid'}" />
				<h:inputText id="terminalNumber"
					value="#{MbAppWizAtm.fieldMap['TERMINAL_NUMBER'].valueV}" label="#{MbAppWizAtm.fieldMap['TERMINAL_NUMBER'].shortDesc}">
				<a4j:support event="onchange" ajaxSingle="true"
						action="#{MbAppWizAtm.updateTerminalLabel}" limitToList="true"
						reRender="atmDetailsTable, detailsInclude"/>
				</h:inputText>	
				
				<h:outputLabel
					value="#{MbAppWizAtm.fieldMap['TERMINAL_TYPE'].required ? '*' : ''} #{MbAppWizAtm.fieldMap['TERMINAL_TYPE'].shortDesc}: "
					title="#{MbAppWizAtm.fieldMap['TERMINAL_TYPE'].shortDesc}"
					class="#{MbAppWizAtm.fieldMap['TERMINAL_TYPE'].valid ? 'valid' : 'invalid'}" />
				<h:selectOneMenu
					value="#{MbAppWizAtm.fieldMap['TERMINAL_TYPE'].valueV}" label="#{MbAppWizAtm.fieldMap['TERMINAL_TYPE'].shortDesc}"
					disabled="true">
					<f:selectItem itemValue="" />
					<f:selectItems value="#{MbAppWizAtm.lovMap['TERMINAL_TYPE']}" />
				</h:selectOneMenu>
				
				<h:outputLabel
					value="#{MbAppWizAtm.fieldMap['ATM_TYPE'].required ? '*' : ''} #{MbAppWizAtm.fieldMap['ATM_TYPE'].shortDesc}: "
					title="#{MbAppWizAtm.fieldMap['ATM_TYPE'].shortDesc}"
					class="#{MbAppWizAtm.fieldMap['ATM_TYPE'].valid ? 'valid' : 'invalid'}" />
				<h:selectOneMenu
					value="#{MbAppWizAtm.fieldMap['ATM_TYPE'].valueV}" label="#{MbAppWizAtm.fieldMap['ATM_TYPE'].shortDesc}">
					<f:selectItem itemValue="" />
					<f:selectItems value="#{MbAppWizAtm.lovMap['ATM_TYPE']}" />
				</h:selectOneMenu>
				<h:outputLabel />
				
				<h:outputLabel />
				<bre:taggedCommandButton id="delete" value="#{lblForm.delete}"
					ajaxOnly="true" reRender="atmDetailsTable, details"
					action="#{MbAppWizAtm.deleteTerminal}" style="margin-left:5px; margin-top:5px;"
					onclick="if (!confirm('#{lblMsg.confirm_delete}')) return false;" />
				<h:outputLabel />
				
						
			</h:panelGrid>
		</fieldset>
	</ui:composition>
</html>