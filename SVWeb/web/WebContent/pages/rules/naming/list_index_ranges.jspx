<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition	template="/WEB-INF/templates/navigatable.jspx">
	<ui:define name="navigatableContent">
		<f:loadBundle var="lblRul" basename="ru.bpc.sv2.ui.bundles.Rul"/>
		<a4j:loadScript src="/js/stretch.js" />
		
		<!-- navigation bar -->
		<bpct:navBar pageName="#{lblRul.naming_index_ranges}"/>
		<a4j:queue name="queue" requestDelay="500" ignoreDupResponses="true" size="1" sizeExceededBehavior="dropNew"/>
		<script type="text/javascript">
			//<![CDATA[
			function handleEnter(event) {
				 if (event.keyCode == 13) {
					 document.getElementById('nameIndexRangesSearchForm:searchBtn').click(); 
					 return false; 
				} 
				return true;
			 }	
			//]]>
			</script>	
    	<h:form id="nameIndexRangesSearchForm" onkeypress="handleEnter(event)">			

			<!-- search panel -->
			<h:panelGroup styleClass="search_block" layout="block">
				<h:panelGroup layout="block" styleClass="search_block_inner1">
				<h:panelGroup layout="block" styleClass="search_block_inner2">
	                <h:panelGroup styleClass="search_block_left" layout="block">
	                	<h:panelGrid styleClass="fw" columns="2" columnClasses="top ,link-cont">
		                	<h:panelGrid styleClass="filter-table field-cont twoColumnTable" columns="4" columnClasses="firstCol,secondCol,firstCol,secondCol">
		                		
		            			<h:outputLabel for="instFilter" value="#{lblCommon.institution}: " title="#{lblCommon.institution}" />
				      			<h:selectOneMenu id="instFilter"
				      						value="#{MbNameIndexRangesSearch.filter.instId}">
				      				<f:selectItem itemValue=""/>
				      				<f:selectItems value="#{MbNameIndexRangesSearch.institutions}"/>
				      			</h:selectOneMenu>
				      			
		            			<h:outputLabel for="algFilter" value="#{lblRul.algorithm}: " title="#{lblRul.algorithm}" />
				      			<h:selectOneMenu id="algFilter"
				      						value="#{MbNameIndexRangesSearch.filter.algorithm}">
				      				<f:selectItem itemValue=""/>
				      				<f:selectItems value="#{MbNameIndexRangesSearch.algorithms}"/>
				      			</h:selectOneMenu>
				      			
				      			<h:outputLabel for="nameFilter" value="#{lblCommon.name}: " title="#{lblCommon.name}" />
				      			<h:inputText id="nameFilter" value="#{MbNameIndexRangesSearch.filter.name}"/>				      				
								
								<h:outputLabel for="entityType" value="#{lblCommon.entity_type}: " title="#{lblCommon.entity_type}" />
								<h:selectOneMenu id="entityType" 
										value="#{MbNameIndexRangesSearch.filter.entityType}">
									<f:selectItem itemValue=""/>
									<f:selectItems value="#{MbNameIndexRangesSearch.entityTypes}"/>
								</h:selectOneMenu>

		            			<h:inputText style="display:none" 
		            					value="IE hack for 'Enter' hit when there's only one input field 
		            							on form. Stick it to the bottom to not to break layout"/>
                			</h:panelGrid>
	                		<h:panelGrid columns="1">
		                		<bre:taggedCommandButton
			                			action="#{MbNameIndexRangesSearch.search}"
	        							reRender="rangesTable, nameIndexRangesBtnForm:dsRanges, nameIndexRangesBtnForm:pagesNum, nameIndexRangesBtnForm:btnPanel, workplacePanel"
	                					image="/_img/icon_search.png" type="submit"
	                					id="searchBtn"
	                					value="#{lblForm.search}" style="width:85px;"
	                					onclick="disableModalPanelBtns(this);"
	                					oncomplete="enableModalPanelBtns(this);"
	                					eventsQueue="queue"/>
	                			<h:panelGroup styleClass="link-clear" layout="block">
		                			<h:graphicImage url="/_img/icon_clear.png"/>
		                			<a4j:commandLink value="#{lblForm.clear_all}"
							        		action="#{MbNameIndexRangesSearch.clearFilter}"
							        		reRender="nameIndexRangesSearchForm, 
							        				nameIndexRangesBtnForm, nameIndexRangesForm, details">
							        </a4j:commandLink>
	            	    		</h:panelGroup>
	                		</h:panelGrid>
	               		</h:panelGrid>
	               		<a4j:outputPanel ajaxRendered="true">
		               		<h:graphicImage url="/_img/hd_searchblock.gif"  styleClass="hd-searchblock"/>
		               		<h:panelGroup styleClass="collapse-vert" layout="block"/>
	               		</a4j:outputPanel>
	               	</h:panelGroup>
               	</h:panelGroup>
               	</h:panelGroup>
			</h:panelGroup>
		</h:form>
		
		<h:form id="nameIndexRangesForm">
			<h:panelGroup styleClass="search_result_block" layout="block">
		    	<h:panelGroup styleClass="search_result_block_left fix-ff" layout="block">
		    		<h:panelGroup id="mainTableWrapper" layout="block"
						styleClass="search_result_block_inner">
				    <rich:extendedDataTable
							id="rangesTable"
							tableState="#{MbNameIndexRangesSearch.tableState}"
							styleClass="res-table"
							headerClass="res-table-header"
							rowClasses=",odd"
							selectedClass="res-table-selected"
							var="item"
							value="#{MbNameIndexRangesSearch.indexRanges}"
							selection="#{MbNameIndexRangesSearch.itemSelection}"
							rows="#{MbNameIndexRangesSearch.rowsNum}"
							height="255px"
							selectionMode="single"
							width="100%"
							enableContextMenu="true"
							noDataLabel="#{MbNameIndexRangesSearch.searching?lblCommon['no_records_found'] : lblCommon['enter_search_criteria_above']}"
							reRender="nameIndexRangesBtnForm:btnPanel, detailsTab, poolsTab">

						<a4j:support event="onselectionchange" eventsQueue="queue" limitToList="true"
								reRender="nameIndexRangesBtnForm:btnPanel, detailsTab, poolsTab, workplacePanel"/>

						<rich:column id="id" label="#{lblCommon.id}" title="Id" sortBy="#{'id'}" width="10%">
		                    <f:facet name="header">
		                    	 <a4j:outputPanel layout="none">
									<script>updateHeight();</script>
									<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}"/>
								</a4j:outputPanel>
		                    </f:facet>
		                	<h:outputText value="#{item.id}" />
						</rich:column>
						
						<rich:column id="name" label="#{lblCommon.name}" title="Name" sortBy="#{'name'}" width="20%">
		                    <f:facet name="header">
		                    	<h:outputText value="#{lblCommon.name}" title="#{lblCommon.name}" />
		                    </f:facet>
		                	<h:outputText value="#{item.name}" title="#{item.name}" />
						</rich:column>

						<rich:column id="algorithm" label="#{lblRul.algorithm}" title="Algorithm" sortBy="#{'algorithm'}" width="15%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblRul.algorithm}" title="#{lblRul.algorithm}" />
			                </f:facet>
			                <h:outputText value="#{DictUtils.articles[item.algorithm]}" title="#{DictUtils.articles[item.algorithm]}" />
				        </rich:column>
				        
						<rich:column id="institution" label="#{lblCommon.institution}" title="Inst name" sortBy="#{'instName'}" width="15%">
		                    <f:facet name="header">
		                    	<h:outputText value="#{lblCommon.institution}" title="#{lblCommon.institution}"/>
		                    </f:facet>
		                    <bm:entityDisplay  entityId="#{item.instId}"
										value="#{item.instName}"/>
						</rich:column>

						<rich:column id="entity_type" label="#{lblCommon.entity_type}" title="Entity type" sortBy="#{'entityType'}" width="10%">
		                    <f:facet name="header">
		                    	<h:outputText value="#{lblCommon.entity_type}" title="#{lblCommon.entity_type}"/>
		                    </f:facet>
		                	<h:outputText value="#{DictUtils.articles[item.entityType]}" 
		                			title="#{DictUtils.articles[item.entityType]}"/>
						</rich:column>

				        <rich:column id="low_value" label="#{lblRul.low_value}" title="Low value" sortBy="#{'lowValue'}" width="10%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblRul.low_value}" title="#{lblRul.low_value}"/>
			                </f:facet>
			                <h:outputText value="#{item.lowValue}" title="#{item.lowValue}"/>
				        </rich:column>

				        <rich:column id="high_value" label="#{lblRul.high_value}" title="High value" sortBy="#{'highValue'}" width="10%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblRul.high_value}" title="#{lblRul.high_value}"/>
			                </f:facet>
			                <h:outputText value="#{item.highValue}" title="#{item.highValue}"/>
				        </rich:column>

						<rich:column id="current_value" label="#{lblRul.current_value}" title="Current value" sortBy="#{'currentValue'}" width="10%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblRul.current_value}" title="#{lblRul.current_value}"/>
			                </f:facet>
			                <h:outputText value="#{item.currentValue}" title="#{item.currentValue}"/>
				        </rich:column>
				        
				    </rich:extendedDataTable>
				    </h:panelGroup>
				    <a4j:outputPanel ajaxRendered="true">
				    	<h:panelGroup id="show_more_panel" styleClass="show-more-vert show-more-result-tab" layout="block"/>
					    <h:graphicImage url="/_img/hd_searchblock.gif" styleClass="hd-searchblock"/>
					    <h:panelGroup styleClass="collapse-vert table-collapse-vert" layout="block"/>
				    </a4j:outputPanel>
			    </h:panelGroup>
			</h:panelGroup>
		</h:form>
		<h:form id="nameIndexRangesBtnForm">
		    <h:panelGroup layout="block" styleClass="bottom_search_result_block">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left">
		        	<h:panelGroup layout="block" styleClass="table_tools">
			        	<h:panelGrid styleClass="fw field-cont" columns="5"
			        			columnClasses="per-page-lbl,per-page-sel,nav-cont,pagecount, table_tools_state">
				        	<h:outputLabel for="rows_num" value="#{lblCommon.rows_per_page}" title="#{lblCommon.rows_per_page}"/>
							<h:selectOneMenu id="rows_num" value="#{MbNameIndexRangesSearch.rowsNum}" styleClass="row_per_page">
								<a4j:support event="onchange" reRender="rangesTable, dsRanges, pagesNum, btnPanel, detailsTab, poolsTab"/>
		                        <f:selectItems value="#{CommonUtils.rowNumsList}"/>
		                    </h:selectOneMenu>

		                    <rich:datascroller maxPages="10" fastControls="hide"
		                    		pagesVar="pages" styleClass="res-datascroller"
				                    id="dsRanges" for="rangesTable" page="#{MbNameIndexRangesSearch.pageNumber}"
				                    reRender="nameIndexRangesForm:btnPanel, detailsTab, poolsTab">
				            	<f:facet name="first">
				                	<h:outputText value="&lt;&lt;" styleClass="prev-next" />
								</f:facet>
				                <f:facet name="first_disabled">
				                    <h:outputText value="&lt;&lt;" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="last">
				                    <h:outputText  value="&gt;&gt;" styleClass="prev-next" />
				                </f:facet>
				                <f:facet name="last_disabled">
				                    <h:outputText value="&gt;&gt;" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="previous">
									<h:outputText value="#{lblCommon.prev}" styleClass="prev-next" />
				                </f:facet>
				                <f:facet name="previous_disabled">
				                	<h:outputText value="#{lblCommon.prev}" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="next">
				                	<h:outputText value="#{lblCommon.next}" styleClass="prev-next" />
				                </f:facet>
				                <f:facet name="next_disabled">
				                	<h:outputText value="#{lblCommon.next}" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="pages">
				                </f:facet>
							</rich:datascroller>

		                    <h:panelGroup id="pagesNum">
		                       	<h:outputText styleClass="strongClass" value="#{pages} "/>
		                       	<h:outputText value=" #{lblCommon.pages}"/>
                                <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
                                <h:outputText styleClass="strongClass" value="#{MbNameIndexRangesSearch.indexRanges.rowCount}"/>
                                <h:outputText value=" #{lblCommon.records}"/>
                                <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
		                    </h:panelGroup>
		                    
		                    <h:panelGroup>
								<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
									onclick="saveTableState();"/>
								<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
									onclick="deleteTableState();"/>
								<a4j:queue name="tablestatequeue"/>
								<a4j:jsFunction name="saveTableState" action="#{MbNameIndexRangesSearch.saveTableStateDB}" eventsQueue="tablestatequeue"/>
								<a4j:jsFunction name="deleteTableState" action="#{MbNameIndexRangesSearch.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
							</h:panelGroup>
						</h:panelGrid>
					</h:panelGroup>

		            <h:panelGrid id="btnPanel" columns="6" styleClass="buttons_block">
		            	<bre:taggedCommandButton id="addBtn"
	                      		reRender="rul_name_range_modal_div,rul_name_range_modal_header"
	                      		value="#{lblForm.add}"
                    			oncomplete="#{rich:component('rul_name_range_modal_panel')}.show()"
	                      		action="#{MbNameIndexRangesSearch.add}"
	                      		image="/images/create_doc.gif"
	                      		rendered="#{usession.inRole['SYNC_RULE_NAME_RANGE'] and false}"
	                      		/>
						<bre:taggedCommandButton id="editBtn"
	                      		reRender="rul_name_range_modal_div,rul_name_range_modal_header"
	                      		value="#{lblForm.edit}"
	                      		action="#{MbNameIndexRangesSearch.edit}"
                    			oncomplete="#{rich:component('rul_name_range_modal_panel')}.show()"
	                      		disabled="#{MbNameIndexRangesSearch.activeIndexRange == null}"
	                      		rendered="#{usession.inRole['SYNC_RULE_NAME_RANGE']}"
	                      		image="/images/edit.gif"
	                      		/>
						<bre:taggedCommandButton id="deleteBtn"
	                      		value="#{lblForm.delete}"
	                      		oncomplete="#{rich:component('deleteViewId:confirmPanel')}.show()"
	                      		disabled="#{MbNameIndexRangesSearch.activeIndexRange == null}"
	                      		image="/images/delete.gif"
	                      		/>
					</h:panelGrid>
				</h:panelGroup>
		    </h:panelGroup>
	    </h:form>

        <h:form>
            <a4j:jsFunction name="storeTab" ajaxSingle="true" limitToList="true" reRender="#{MbNameIndexRanges.tabName}">
                <a4j:actionparam name="tabName" assignTo="#{MbNameIndexRanges.tabName}" />
            </a4j:jsFunction>
        </h:form>

		<h:panelGroup styleClass="workplace" layout="block"
			id="workplacePanel">
			<rich:tabPanel switchType="client" id="details" tabClass="tab-cell"
				activeTabClass="active-tab-cell" headerClass="tabs"
				headerSpacing="0px" contentClass="tab-content"
				selectedTab="#{MbNameIndexRanges.tabName}">

				<rich:tab ontabenter="storeTab('detailsTab')" label="Details">
					<f:facet name="label">
						<h:panelGroup styleClass="first tab-label" layout="block">
							<h:outputText value="#{lblCommon.details}"
								title="#{lblCommon.details}" />
						</h:panelGroup>
					</f:facet>
					<h:panelGroup id="detailsTab" layout="block">
						<ui:include src="/pages/rules/naming/index_range_details.jspx" />
						<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons"/>
					</h:panelGroup>
				</rich:tab>

				<rich:tab ontabenter="storeTab('poolsTab')" label="Pool" style="height:100%;" rendered="#{MbNameIndexRangesSearch.activeIndexRange.algorithm=='IRAGRNGS'}" >
					<f:facet name="label">
						<h:panelGroup styleClass="first tab-label" layout="block">
							<h:outputText value="#{lblRul.pool}" title="#{lblRul.pool}" />
						</h:panelGroup>
					</f:facet>
					<h:panelGroup id="poolsTab" layout="block"
						styleClass="carddata-wrapper"
						style="height: 100%;overflow:hidden;position:relative;">
						<ui:include src="/pages/rules/naming/indexPoolsListBottom.jspx" />
					</h:panelGroup>
				</rich:tab>
			</rich:tabPanel>
		</h:panelGroup>

		<ui:include src="/pages/rules/naming/index_range_edit.jspx">
			<ui:param name="rerenderList" value="rangesTable, nameIndexRangesBtnForm:dsRanges, nameIndexRangesBtnForm:pagesNum, nameIndexRangesBtnForm:btnPanel, workplacePanel"/>
			<ui:param name="backingBean" value="#{MbNameIndexRangesSearch}"/>
		</ui:include>
		
		<ui:include src="/pages/utils/confirmPanel.jspx">
			<ui:param name="backingBean" value="#{MbNameIndexRangesSearch}"/>
			<ui:param name="yesAction" value="delete"/>
			<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
			<ui:param name="rerenderList" value="rangesTable, nameIndexRangesBtnForm:dsRanges, nameIndexRangesBtnForm:pagesNum, nameIndexRangesBtnForm:btnPanel, detailsTab"/>
			<ui:param name="confirmQuestion" value=" "/> 
			<ui:param name="subviewId" value="deleteViewId"/>
			<ui:param name="yes" value="#{lblForm.ok}"/>
			<ui:param name="no" value="#{lblForm.cancel}"/>
		</ui:include>
		
		<script>
			//<![CDATA[
			/*
				Short manual for the tabs stretching
				
				* Put in head of the page a link to "streach.js" script.
				* Copy "updateHeight()" from here to end of the page.
				* Chage the function as you need. Change the forms names
				* Set id="workplacePanel"¸ layout="block" for workplace panel					
				* Set style="height:100%" for rich:tabPanel, rich:tab. Set style="height: 100%;overflow:hidden;position:relative;" 
				for h:panelGroup surrounding ui:include. Below lying elements must not have a har-coded height in theirs styles.
				* Surround the tables with h:panelGroup layout="block" style="padding:0px;margin:0px;"
				* Correct updateHeight() in correspondence with wrappers you wrote.
				* Add to header of one of the columns of the tables updateHeight() call. Every time the table is rendered, udpateHeight() will be called.
				* If the result table is rich:extendedDataTable you need surround it with a wrapper panel too, but also you need to set style with hard-coded
				height to this wrapper. For this wrapper you need call Stretch.updateTreeHeightByFixedHeight(). 
			*/
		
			function updateHeight(){
	            updateGridHeight();
	        }

	        layout =
	                {
	                    SEARCH_FORM_ID:                 'nameIndexRangesSearchForm',
	                    SEARCH_RESULT_FORM_ID:          'nameIndexRangesForm',
	                    SEARCH_RESULT_FORM_WRAPPER_ID:  'mainTableWrapper',
	                    SEARCH_RESULT_FOOTER_FORM_ID:   'nameIndexRangesBtnForm',
	                    TAB_PANEL_ID:                   'workplacePanel',

	                    TAB_DATA:      [{
	                                    TAB_FORM_ID:            'rangeDetailsForm',
	                                    TAB_FORM_WRAPPER_ID:    'rangeDetailsWrapper',
	                                    CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS + Stretch.LANG_SELECTOR
	                                    }, {
	                                    TAB_FORM_ID:            'poolsBtmForm',
	                                    TAB_FORM_WRAPPER_ID:    'poolsTableWrapper',
	                                    CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS
	                                    }, {
	                                    TAB_FORM_ID:            'processFileForm',
	                                    TAB_FORM_WRAPPER_ID:    'processFileTableWrapper',
	                                    CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS + Stretch.LANG_SELECTOR
	                                    }, {
	                                    TAB_FORM_ID:            'containersForm',
	                                    TAB_FORM_WRAPPER_ID:    'containersTableWrapper',
	                                    CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS
	                                    }]

	                };
	        jQuery(window).resize(updateHeight);
			
			updateHeight();
			//]]>
		</script>		
    </ui:define>
</ui:composition>
</html>
