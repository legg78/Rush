<?xml version="1.0" encoding="UTF-8"?>

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	xmlns:bpct="http://www.bpc.ru/jsf/tiles">

<ui:composition template="/WEB-INF/templates/navigatable.jspx">
	<ui:define name="navigatableContent">	
		<h:panelGroup rendered="#{usession.inRole['VIEW_EMV_APPLICATIONS']}">

			<link rel="stylesheet" type="text/css" href="#{request.contextPath}/css/stretch.css" />
			<script type="text/javascript" src="#{request.contextPath}/js/stretch.js" />
			<a4j:queue name="queue" requestDelay="500" ignoreDupResponses="true" size="1" sizeExceededBehavior="dropNew"/>

			<f:loadBundle var="lblEmv" basename="ru.bpc.sv2.ui.bundles.Emv" />
			<f:loadBundle var="lblSec" basename="ru.bpc.sv2.ui.bundles.Sec" />

			<!-- navigation bar -->
			<bpct:navBar pageName="#{lblEmv.application}" />
			
			<script type="text/javascript">
			//<![CDATA[
			function handleEnter(event) {
							 if (event.keyCode == 13) {
								 document.getElementById('applicationSearchForm:searchBtn').click(); 
								 return false; 
							} 
							return true;
						 }	
			//]]>
			</script>  

			<!-- search panel -->
			<h:form id="applicationSearchForm" onkeypress="handleEnter(event)">
				<h:panelGroup layout="block" styleClass="search_block">
					<h:panelGroup layout="block" styleClass="search_block_inner1">
						<h:panelGroup layout="block" styleClass="search_block_inner2">
							<h:panelGroup layout="block" styleClass="search_block_left">
								<h:panelGrid styleClass="fw" columns="2"
									columnClasses="top ,link-cont">
									<h:panelGrid styleClass="filter-table field-cont twoColumnTable" columns="4"
										columnClasses="firstCol,secondCol,firstCol,secondCol">

										<h:outputLabel for="aid" value="#{lblEmv.aid}:" title="#{lblEmv.aid}" />
										<h:inputText id="aid" value="#{MbEmvApplication.filter.aid}">
										</h:inputText>

										<h:outputLabel for="name" value="#{lblEmv.name}:" title="#{lblEmv.name}" />
										<h:inputText id="name" value="#{MbEmvApplication.filter.name}"/>
										
										<h:outputLabel for="schemeId" title="#{lblEmv.scheme}" 
												value="#{lblEmv.scheme}:" />
										<h:selectOneMenu id="schemeId"
												value="#{MbEmvApplication.filter.applSchemeId}">
											<f:selectItem itemValue="" />
											<f:selectItems value="#{MbEmvApplication.emvSchemes}"/>
										</h:selectOneMenu>										
										
									</h:panelGrid>

									<h:panelGrid columns="1">
										<bre:taggedCommandButton action="#{MbEmvApplication.search}"
												reRender="ApplicationTable, ApplicationDataScroller, pagesNum, applicationBtnForm:btnPanel, #{MbEmvApplication.tabName}"
												id="searchBtn"
												image="/_img/icon_search.png" value="#{lblForm.search }"
												style="width:85px;"
												onclick="disableModalPanelBtns(this);"
												oncomplete="enableModalPanelBtns(this);"
												eventsQueue="queue"/>
										<h:panelGroup styleClass="link-clear" layout="block">
											<h:graphicImage url="/_img/icon_clear.png" />
											<a4j:commandLink value="#{lblForm.clear_all}"
												action="#{MbEmvApplication.clearFilter}"
												reRender="applicationResultForm, applicationSearchForm, applicationBtnForm, details">
											</a4j:commandLink>
										</h:panelGroup>
									</h:panelGrid>

								</h:panelGrid>
								<h:graphicImage url="/_img/hd_searchblock.gif"
									styleClass="hd-searchblock" />
								<h:panelGroup styleClass="collapse-vert" layout="block" />
							</h:panelGroup>
						</h:panelGroup>
					</h:panelGroup>
				</h:panelGroup>
			</h:form>

			<!-- Result panel -->
			<h:form id="applicationResultForm">
				<h:panelGroup styleClass="search_result_block" layout="block">
					<h:panelGroup styleClass="search_result_block_left fix-ff"
						layout="block">
						<h:panelGroup layout="block" styleClass="search_result_block_inner" id="ApplicationTableWrapper">
						<rich:extendedDataTable id="ApplicationTable"
							tableState="#{MbEmvApplication.tableState}"
							styleClass="res-table" headerClass="res-table-header"
							rowClasses=",odd" selectedClass="res-table-selected" var="item"
							value="#{MbEmvApplication.dataModel}"
							selection="#{MbEmvApplication.itemSelection}"
							rows="#{MbEmvApplication.rowsNum}" height="255px"
							selectionMode="single" width="100%" enableContextMenu="true"
							noDataLabel="#{MbEmvApplication.searching ? lblCommon.no_records_found : lblCommon.enter_search_criteria_above}"
							reRender="applicationBtnForm:btnPanel, #{MbEmvApplication.tabName}">

							<a4j:support event="onselectionchange" eventsQueue="queue"
								reRender="applicationBtnForm:btnPanel, #{MbEmvApplication.tabName}" oncomplete="updateHeight();"/>

							<rich:column id="id" label="#{lblCommon.id}" title="Id" sortBy="#{'id'}" width="10%">
								<f:facet name="header">
									<h:panelGroup>
										<script>
											updateHeight();
										</script>
										<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}" />
									</h:panelGroup>
								</f:facet>
								<h:outputText value="#{item.id}" title="#{item.id}" />
							</rich:column>

							<rich:column id="name" label="#{lblEmv.name}" title="Name" sortBy="#{'name'}" width="10%">
								<f:facet name="header">
									<h:outputText value="#{lblEmv.name}" title="#{lblEmv.name}" />
								</f:facet>
								<h:outputText value="#{item.name}" title="#{item.name}" />
							</rich:column>

							<rich:column id="emvScheme" label="EMV Scheme" sortBy="#{'emvScheme'}"
								width="10%">
								<f:facet name="header">
									<h:outputText value="#{lblEmv.scheme}" title="#{lblEmv.scheme}"/>
								</f:facet>
								<h:outputLabel value="#{item.applSchemeId} - #{item.applSchemeName}"
										title="#{item.applSchemeId} - #{item.applSchemeName}" rendered="#{item.applSchemeId != null}" />
								<h:outputLabel value=""
										title="" rendered="#{item.applSchemeId == null}" />
							</rich:column>

							<rich:column id="aid" label="#{lblEmv.aid}" title="Aid" sortBy="#{'aid'}" width="20%">
								<f:facet name="header">
									<h:outputText value="#{lblEmv.aid}" title="#{lblEmv.aid}" />
								</f:facet>
								<h:outputText value="#{item.aid}" title="#{item.aid}" />
							</rich:column>

							<rich:column id="idOwner" label="#{lblEmv.id_owner}" title="ID owner" sortBy="#{'idOwner'}" width="10%">
								<f:facet name="header">
									<h:outputText value="#{lblSec.rid}" title="#{lblSec.rid}" />
								</f:facet>
								<h:outputText value="#{item.idOwner} - #{item.ownerName}" title="#{item.idOwner} - #{item.ownerName}"/>
							</rich:column>
							
							<rich:column id="modId" label="#{lblEmv.modId}" title="Modification ID" sortBy="#{'modId'}" width="15%">
								<f:facet name="header">
									<h:outputText value="#{lblEmv.modId}" title="#{lblEmv.modId}" />
								</f:facet>
								<h:outputText value="#{item.modId}" title="#{item.modId}"/>
							</rich:column>
							
							<rich:column id="pix" label="#{lblEmv.pix}" title="PIX" sortBy="#{'pix'}" width="15%">
								<f:facet name="header">
									<h:outputText value="#{lblEmv.pix}" title="#{lblEmv.pix}" />
								</f:facet>
								<h:outputText value="#{item.pix}" title="#{item.pix}"/>
							</rich:column>
							
						</rich:extendedDataTable>
						</h:panelGroup>
						<a4j:outputPanel ajaxRendered="true">
							<h:panelGroup id="show_more_panel" styleClass="show-more-vert show-more-result-tab" layout="block"/>
							<h:graphicImage url="/_img/hd_searchblock.gif"
								styleClass="hd-searchblock" />
							<h:panelGroup styleClass="collapse-vert table-collapse-vert"
								layout="block" />
						</a4j:outputPanel>
					</h:panelGroup>
				</h:panelGroup>
            </h:form>

            <h:form id="applicationBtnForm">
				<h:panelGroup layout="block" styleClass="bottom_search_result_block">
					<h:panelGroup layout="block" styleClass="bottom_search_result_left">
						<h:panelGroup layout="block" styleClass="table_tools">
							<h:panelGrid styleClass="fw field-cont" columns="5"
								columnClasses="per-page-lbl,per-page-sel,nav-cont,pagecount, table_tools_state">

								<h:outputLabel for="rows_num" value="#{lblCommon.rows_per_page}" title="#{lblCommon.rows_per_page}" />

								<h:selectOneMenu id="rows_num"
									value="#{MbEmvApplication.rowsNum}" styleClass="row_per_page">
									<a4j:support event="onchange"
										reRender="ApplicationTable, ApplicationDataScroller, pagesNum, applicationBtnForm, #{MbEmvApplication.tabName}" />
									<f:selectItems value="#{CommonUtils.rowNumsList}"/>
								</h:selectOneMenu>

								<rich:datascroller id="ApplicationDataScroller" maxPages="10"
									fastControls="hide" pagesVar="pages"
									styleClass="res-datascroller" for="ApplicationTable"
									reRender="applicationBtnForm:btnPanel, #{MbEmvApplication.tabName}">
									<f:facet name="first">
										<h:outputText value="&lt;&lt;" styleClass="prev-next" />
									</f:facet>
									<f:facet name="first_disabled">
										<h:outputText value="&lt;&lt;" styleClass="prev-next-dis" />
									</f:facet>
									<f:facet name="last">
										<h:outputText value="&gt;&gt;" styleClass="prev-next" />
									</f:facet>
									<f:facet name="last_disabled">
										<h:outputText value="&gt;&gt;" styleClass="prev-next-dis" />
									</f:facet>
									<f:facet name="previous">
										<h:outputText value="#{lblCommon.prev}" styleClass="prev-next" />
									</f:facet>
									<f:facet name="previous_disabled">
										<h:outputText value="#{lblCommon.prev}"
											styleClass="prev-next-dis" />
									</f:facet>
									<f:facet name="next">
										<h:outputText value="#{lblCommon.next}" styleClass="prev-next" />
									</f:facet>
									<f:facet name="next_disabled">
										<h:outputText value="#{lblCommon.next}"
											styleClass="prev-next-dis" />
									</f:facet>
									<f:facet name="pages">
									</f:facet>
								</rich:datascroller>

								<h:panelGroup id="pagesNum">
									<h:outputText styleClass="strongClass" value="#{pages} " />
									<h:outputText value=" #{lblCommon.pages}" />
                                    <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
                                    <h:outputText styleClass="strongClass" value="#{MbEmvApplication.dataModel.rowCount}"/>
                                    <h:outputText value=" #{lblCommon.records}"/>
                                    <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
								</h:panelGroup>
								
								<h:panelGroup>
									<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
										onclick="saveTableState();"/>
									<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
										onclick="deleteTableState();"/>
									<a4j:queue name="tablestatequeue"/>
									<a4j:jsFunction name="saveTableState" action="#{MbEmvApplication.saveTableStateDB}" eventsQueue="tablestatequeue"/>
									<a4j:jsFunction name="deleteTableState" action="#{MbEmvApplication.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
								</h:panelGroup>
							</h:panelGrid>
						</h:panelGroup>

						<h:panelGrid id="btnPanel" columns="3" styleClass="buttons_block">
							<bre:taggedCommandButton id="addBtn"
								reRender="applicationEditModalPanel"
								value="#{lblForm.add}"
								oncomplete="#{rich:component('applicationEditModalPanel')}.show()"
								action="#{MbEmvApplication.createNewApplication}"
								image="/images/create_doc.gif"
								rendered="#{usession.inRole['ADD_EMV_APPLICATION']}" />
							<bre:taggedCommandButton id="editBtn"
								reRender="applicationEditModalPanel"
								value="#{lblForm.edit}"
								action="#{MbEmvApplication.editActiveApplication}"
								oncomplete="#{rich:component('applicationEditModalPanel')}.show()"
								disabled="#{MbEmvApplication.activeItem == null}"
								image="/images/edit.gif"
								rendered="#{usession.inRole['MODIFY_EMV_APPLICATION']}" />
							<bre:taggedCommandButton id="deleteBtn"
								value="#{lblForm.delete}"
								disabled="#{MbEmvApplication.activeItem == null}"
								image="/images/delete.gif"
								rendered="#{usession.inRole['REMOVE_EMV_APPLICATION']}" 
								oncomplete="#{rich:component('deleteAppView:confirmPanel')}.show()"/>
						</h:panelGrid>
					</h:panelGroup>
				</h:panelGroup>
			</h:form>

            <h:form>
                <a4j:jsFunction oncomplete="updateHeight();" name="storeTab" ajaxSingle="true" limitToList="true" reRender="#{MbEmvApplication.tabName}">
                    <a4j:actionparam name="tabName" assignTo="#{MbEmvApplication.tabName}" />
                </a4j:jsFunction>
            </h:form>

			<!-- Working panel -->
			<h:panelGroup styleClass="workplace" id="workplacePanel" layout="block">
				<rich:tabPanel switchType="client" id="details" tabClass="tab-cell"
					activeTabClass="active-tab-cell" headerClass="tabs"
					headerSpacing="0px" contentClass="tab-content">

					<rich:tab ontabenter="storeTab('detailsTab')" label="#{lblCommon.details}" name="detailsTab">
						<f:facet name="label">
							<h:panelGroup styleClass="first tab-label" layout="block">
								<h:outputText value="#{lblCommon.details}"
									title="#{lblCommon.details}" />
							</h:panelGroup>
						</f:facet>

						<h:panelGroup layout="block" id="detailsTab">
							<ui:include src="/pages/emv/applicationDetails.jspx"></ui:include>
							<h:panelGroup layout="block"
								styleClass="bottom_search_result_block_buttons"/>
						</h:panelGroup>
					</rich:tab>

					<rich:tab ontabenter="storeTab('blocksTab')" label="#{lblEmv.blocks}" name="blocksTab" style="height:100%;"
						rendered="#{usession.inRole['VIEW_EMV_DATA_BLOCKS']}">
						<f:facet name="label">
							<h:panelGroup styleClass="first tab-label" layout="block">
								<h:outputText value="#{lblEmv.blocks}" title="#{lblEmv.blocks}" />
							</h:panelGroup>
						</f:facet>

						<h:panelGroup id="blocksTab" layout="block"
							styleClass="carddata-wrapper"
							style="height: 100%;overflow:hidden;position:relative;">
							<ui:include src="/pages/emv/applicationBlocksBottom.jspx"></ui:include>
						</h:panelGroup>
					</rich:tab>

					<rich:tab ontabenter="storeTab('variablesTab')" label="#{lblEmv.variables}" name="variablesTab" style="height:100%;"
						rendered="#{usession.inRole['VIEW_EMV_DATA_VARS']}">
						<f:facet name="label">
							<h:panelGroup styleClass="first tab-label" layout="block">
								<h:outputText value="#{lblEmv.variables}"
									title="#{lblEmv.variables}" />
							</h:panelGroup>
						</f:facet>

						<h:panelGroup id="variablesTab" layout="block"
							styleClass="carddata-wrapper"
							style="height: 100%;overflow:hidden;position:relative;">
							<ui:include src="/pages/emv/applicationVariablesBottom.jspx"></ui:include>
						</h:panelGroup>
					</rich:tab>

				</rich:tabPanel>
			</h:panelGroup>

			<ui:include src="/pages/emv/applicationEditModalPanel.jspx"></ui:include>
			
			<ui:include src="/pages/utils/confirmPanel.jspx">
				<ui:param name="backingBean" value="#{MbEmvApplication}"/>
				<ui:param name="yesAction" value="deleteActiveApplication"/>
				<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
				<ui:param name="rerenderList" value="ApplicationTable, ApplicationDataScroller, pagesNum, btnPanel, #{MbEmvApplication.tabName}"/>
				<ui:param name="confirmQuestion" value=" "/> 
				<ui:param name="subviewId" value="deleteAppView"/>
				<ui:param name="yes" value="#{lblForm.ok}"/>
				<ui:param name="no" value="#{lblForm.cancel}"/>
			</ui:include>
			
			<script type="text/javascript">
			
				function updateHeight(){
                    updateGridHeight();
				}

                layout =
                        {
                            SEARCH_FORM_ID:                 'applicationSearchForm',
                            SEARCH_RESULT_FORM_ID:          'applicationResultForm',
                            SEARCH_RESULT_FORM_WRAPPER_ID:  'ApplicationTableWrapper',
                            SEARCH_RESULT_FOOTER_FORM_ID:   'applicationBtnForm',
                            TAB_PANEL_ID:                   'workplacePanel',

                            TAB_DATA:      [{
                                TAB_FORM_ID:            'applicationDetailsForm',
                                TAB_FORM_WRAPPER_ID:    'applicationDetailsWrapper',
                                CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS + Stretch.LANG_SELECTOR
                            }, {
                                TAB_FORM_ID:            'applicationBlockBottomForm',
                                TAB_FORM_WRAPPER_ID:    'blockTableWrapper',
                                CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS
                            }, {
                                TAB_FORM_ID:            'blockElementsForm',
                                TAB_FORM_WRAPPER_ID:    'blockElementsTableWrapper',
                                CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS
                            }, {
                                TAB_FORM_ID:            'applicationVarablesForm',
                                TAB_FORM_WRAPPER_ID:    'variableTableWrapper',
                                CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS + Stretch.LANG_SELECTOR
                            }, {
                                TAB_FORM_ID:            'variableElementsForm',
                                TAB_FORM_WRAPPER_ID:    'blockElementsTableWrapper',
                                CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS
                            }]
                        };

				updateHeight();
                jQuery(window).resize(updateHeight);
			</script>		
		</h:panelGroup>

	</ui:define>
</ui:composition>
</html>
