<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<h:form id="capturedCardsForm">
		<h:panelGroup id="capturedCardsTableWrapper" layout="block"
			style="padding:0px;margin:0px;haight:100%;">
			<rich:extendedDataTable enableContextMenu="true"
				id="capturedCardsTable" styleClass="res-table"
				headerClass="res-table-header table-header-ext" selectedClass="res-table-selected"
				rowClasses=",odd" var="item"
				tableState="#{MbCapturedCard.tableState}"
				value="#{MbCapturedCard.dataModel}"
				selection="#{MbCapturedCard.itemSelection}" rows="0"
				selectionMode="single"
				noDataLabel="#{lblCommon['no_records_found']}">

				<rich:column id="oper_date" label="#{lblAtm.oper_date}" title="Auth Date" sortBy="#{'operDate'}" width="30%">
					<f:facet name="header">
						<h:panelGroup>
							<script>
								updateHeight();
							</script>
							<h:outputText value="#{lblAtm.oper_date}"
								title="#{lblAtm.oper_date}" />
						</h:panelGroup>
					</f:facet>
					<f:facet name="filter">
						<h:panelGroup>
							<h:outputText value="#{lblAtm.from}: " />
							<rich:calendar buttonIcon="/images/calendar.gif"
								id="startDateFilter"
								reRender="collectionsTable"
								value="#{MbCapturedCard.filterStartDate}"
								datePattern="#{usession.datePattern}"
								timeZone="#{CommonUtils.timeZone}" inputStyle="width:30%;" >
								<a4j:support event="onchanged" process="startDateFilter" ajaxSingle="true" reRender="capturedCardsTable" limitToList="true" action="#{MbCapturedCard.updateData}"/>
							</rich:calendar>
							<h:outputText value="#{lblAtm.to}: " />
							<rich:calendar buttonIcon="/images/calendar.gif"
								id="endDateFilter"
								reRender="collectionsTable"
								value="#{MbCapturedCard.filterEndDate}"
								datePattern="#{usession.datePattern}"
								timeZone="#{CommonUtils.timeZone}" inputStyle="width:30%;" >
								<a4j:support event="onchanged" process="endDateFilter" ajaxSingle="true" reRender="capturedCardsTable" limitToList="true" action="#{MbCapturedCard.updateData}"/>
							</rich:calendar>
						</h:panelGroup>
					</f:facet>
					<h:outputText value="#{item.operDate}" title="#{item.operDate}">
						<f:convertDateTime pattern="#{usession.datePattern}"
							timeZone="#{CommonUtils.timeZone}" />
					</h:outputText>
				</rich:column>

				<rich:column id="card_mask" label="#{lblAtm.card_mask}" title="Card Mask" sortBy="#{'cardMask'}" width="20%">
					<f:facet name="header">
						<h:outputText value="#{lblAtm.card_mask}"
							title="#{lblAtm.card_mask}" />
					</f:facet>
					<f:facet name="filter">
						<h:inputText value="#{MbCapturedCard.filter.cardMask}" style="width:100%;">
							<a4j:support event="onchange" ajaxSingle="true" reRender="capturedCardsTable" limitToList="true" action="#{MbCapturedCard.updateData}"></a4j:support>
						</h:inputText>
					</f:facet>
					<h:outputText value="#{item.cardMask}" title="#{item.cardMask}" />
				</rich:column>

				<rich:column id="resp_code" label="#{lblCmn.resp_code}" title="Resp Code" sortBy="#{'respCode'}" width="20%">
					<f:facet name="header">
						<h:outputText value="#{lblCmn.resp_code}"
							title="#{lblCmn.resp_code}" />
					</f:facet>
					<f:facet name="filter">
						<h:selectOneMenu value="#{MbCapturedCard.filter.respCode}" style="width:100%;">
							<f:selectItems value="#{MbCapturedCard.respCodes}" />
							<a4j:support event="onchange" ajaxSingle="true" reRender="capturedCardsTable" limitToList="true" action="#{MbCapturedCard.updateData}"></a4j:support>
						</h:selectOneMenu>
					</f:facet>
					<h:outputText value="#{item.respCode}" title="#{item.respCode}" />
				</rich:column>

			</rich:extendedDataTable>
		</h:panelGroup>

		<h:panelGroup layout="block"
			styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block"
				styleClass="bottom_search_result_left_buttons">
				<h:panelGrid styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
					<h:panelGroup></h:panelGroup>
					<h:panelGroup>
							<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
								onclick="saveCapTableState();"/>
							<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
								onclick="deleteCapTableState();"/>
							<a4j:queue name="tablestatequeue"/>
							<a4j:jsFunction name="saveCapTableState" action="#{MbCapturedCard.saveTableStateDB}" eventsQueue="tablestatequeue"/>
							<a4j:jsFunction name="deleteCapTableState" action="#{MbCapturedCard.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
						</h:panelGroup>
				</h:panelGrid>
			</h:panelGroup>
		</h:panelGroup>
	</h:form>
</ui:composition>
</html>
