<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<h:form id="cycleCountersForm">	
		<h:panelGroup id="countersTableWrapper" layout="block" style="padding:0px;margin:0px;">
			<rich:extendedDataTable
					id="countersTable"
					var="item"
					value="#{(cycleCountersBean==null ? MbCycleCounters : cycleCountersBean).cycleCounters}"
					selection="#{(cycleCountersBean==null ? MbCycleCounters : cycleCountersBean).itemSelection}"
					rows="0"
					height="${tableHeight == null ? '220px' : tableHeight}"
					selectionMode="single"
					rowClasses=",odd"
					headerClass="res-table-header table-header-ext"
					tableState="#{(cycleCountersBean==null ? MbCycleCounters : cycleCountersBean).tableState}"
					selectedClass="res-table-selected" 
					styleClass="res-table"
					enableContextMenu="true"
					noDataLabel="#{lblCommon['no_records_found']}"
					>
				<rich:column id="cycle_type" label="Cycle type" title="Cycle type" width="60%" sortBy="#{'cycleType'}">
					<f:facet name="header">
						<h:panelGroup>         
							<script>updateHeight();</script>
							<h:outputText value="#{lblFcl.cycle_type}" title="#{lblFcl.cycle_type}" />
						</h:panelGroup>
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.cycleType]}"
							title="#{DictUtils.articles[item.cycleType]}"
							rendered="#{item.cycleType != null}" />
					<h:outputText value="" title="" rendered="#{item.cycleType == null}" />
				</rich:column>
				
				<rich:column id="prev_date" label="Prev date" title="Next date" width="20%" sortBy="#{'prevDate'}">
		           <f:facet name="header">
	                    <h:outputText value="#{lblFcl.prev_date}" title="#{lblFcl.prev_date}"/>
	                </f:facet>
	                <h:outputText value="#{item.prevDate}">
	                	<f:convertDateTime pattern="#{usession.datePattern} HH:mm" 
	                			timeZone="#{CommonUtils.timeZone}"/>
	                </h:outputText>
		        </rich:column>
	
		        <rich:column id="next_date" label="Next date" title="Next date" width="20%" sortBy="#{'nextDate'}">
		           <f:facet name="header">
	                    <h:outputText value="#{lblFcl.next_date}" title="#{lblFcl.next_date}"/>
	                </f:facet>
	                <h:outputText value="#{item.nextDate}">
	                	<f:convertDateTime pattern="#{usession.datePattern} HH:mm" 
	                			timeZone="#{CommonUtils.timeZone}"/>
	                </h:outputText>
		        </rich:column>
		    </rich:extendedDataTable>
		</h:panelGroup>
		    
	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons" rendered="#{cycleCountersBean==null}">
		        <h:panelGrid id="btns_shift" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
		        	<h:panelGroup />
					<h:panelGroup>
						<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
							onclick="saveCycleCounterTableState();"/>
						<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
							onclick="deleteCycleCounterTableState();"/>
						<a4j:queue name="tablestatequeue"/>
						<a4j:jsFunction name="saveCycleCounterTableState" action="#{(cycleCountersBean==null ? MbCycleCounters : cycleCountersBean).saveTableStateDB}" eventsQueue="tablestatequeue"/>
						<a4j:jsFunction name="deleteCycleCounterTableState" action="#{(cycleCountersBean==null ? MbCycleCounters : cycleCountersBean).deleteTableStateDB}" eventsQueue="tablestatequeue"/>
					</h:panelGroup>

		    	</h:panelGrid>
			</h:panelGroup>
		</h:panelGroup>
		
   	</h:form>
</ui:composition>
</html>
