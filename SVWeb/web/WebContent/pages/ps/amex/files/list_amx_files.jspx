<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
                      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
      xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition template="/WEB-INF/templates/navigatable.jspx">
    <ui:define name="navigatableContent">
        <link rel="stylesheet" type="text/css" href="#{request.contextPath}/css/stretch.css"/>
        <script type="text/javascript" src="#{request.contextPath}/js/stretch.js"></script>

        <f:loadBundle var="lblCrd" basename="ru.bpc.sv2.ui.bundles.Crd"/>
        <f:loadBundle var="lblAcc" basename="ru.bpc.sv2.ui.bundles.Acc"/>
        <f:loadBundle var="lblApp" basename="ru.bpc.sv2.ui.bundles.App"/>
        <f:loadBundle var="lblPrc" basename="ru.bpc.sv2.ui.bundles.Process"/>
        <f:loadBundle var="lblOst" basename="ru.bpc.sv2.ui.bundles.Ost"/>
        <f:loadBundle var="lblAtm" basename="ru.bpc.sv2.ui.bundles.Atm"/>
        <f:loadBundle var="lblForm" basename="ru.bpc.sv2.ui.bundles.Form"/>
        <f:loadBundle var="lblRej" basename="ru.bpc.sv2.ui.bundles.Reject"/>

        <h:panelGroup rendered="#{usession.inRole['VIEW_AMX_FILES']}">
            <a4j:loadScript src="/js/calendarUtils.js"/>
            <a4j:loadScript src="/js/stretch.js"/>
            <a4j:queue name="queue" requestDelay="500" ignoreDupResponses="true" size="1" sizeExceededBehavior="dropNew"/>

            <script type="text/javascript">
                //<![CDATA[
                function handleEnter(event) {
                    if (event.keyCode == 13) {
                        document.getElementById('entitySearchForm:searchBtn').click();
                        return false;
                    }
                    return true;
                }
                //]]>
            </script>

            <rich:calendar id="calendar"
                           buttonIcon="/images/calendar.gif"
                           datePattern="#{usession.datePattern}"
                           onchanged="#{rich:component('calendar')}.customInput.value=event.rich.component.getSelectedDateString();"
                           zindex="1000"
                           inputClass="hidden"
                           buttonClass="hidden"/>

            <script type="text/javascript">
                #{rich:component('calendar')}.customExpand = customExpand;
            </script>

            <!-- navigation bar -->
            <bpct:navBar pageName="#{lblCommon.files}"/>

            <!-- search panel -->
            <h:form id="entitySearchForm" onkeypress="handleEnter(event)">
                <h:panelGroup layout="block" styleClass="search_block">
                    <h:panelGroup layout="block" styleClass="search_block_inner1">
                        <h:panelGroup layout="block" styleClass="search_block_inner2">
                            <h:panelGroup layout="block" styleClass="search_block_left">
                                <h:panelGrid styleClass="fw" columns="2" columnClasses="top ,link-cont">
                                    <h:panelGrid styleClass="filter-table field-cont twoColumnTable"
                                                 columns="4"
                                                 columnClasses="firstCol,secondCol,firstCol,secondCol">
                                        <h:outputLabel for="sessionId" title="#{lblCommon.session_id}"
                                                       value="#{lblCommon.session_id}:"/>
                                        <h:inputText id="sessionId"
                                                     value="#{MbAmexFilesSearch.filter.sessionId}"/>

                                        <h:outputText value="#{lblCommon.date_from }:" title="#{lblCommon.date_from}"/>
                                        <h:panelGroup>
                                            <h:inputText id="dateFrom"
                                                         style="max-width:225px"
                                                         value="#{MbAmexFilesSearch.filter.dateFrom}"
                                                         onclick="#{rich:component('calendar')}.customExpand(event,
                                                                  #{rich:element('dateFrom')},
                                                                  #{rich:element('dateFromBtn')});">
                                                <f:convertDateTime pattern="#{usession.datePattern}"
                                                                   timeZone="#{CommonUtils.timeZone}"/>
                                            </h:inputText>
                                            <h:graphicImage id="dateFromBtn"
                                                            value="/images/calendar.gif"
                                                            onclick="#{rich:component('calendar')}.customExpand(event,
                                                                     #{rich:element('dateFrom')},
                                                                     #{rich:element('dateFromBtn')});"/>
                                        </h:panelGroup>

                                        <h:outputLabel for="fileName" title="#{lblPrc.file_name}"
                                                       value="#{lblPrc.file_name}:"/>
                                        <h:inputText id="fileName"
                                                     value="#{MbAmexFilesSearch.filter.fileName}"/>

                                        <h:outputText value="#{lblCommon.date_to}:" title="#{lblCommon.date_to}"/>
                                        <h:panelGroup>
                                            <h:inputText id="dateTo" style="max-width:225px"
                                                         value="#{MbAmexFilesSearch.filter.dateTo}"
                                                         onclick="#{rich:component('calendar')}.customExpand(event,
                                                                  #{rich:element('dateTo')},
                                                                  #{rich:element('dateFromBtn')});">
                                                <f:convertDateTime pattern="#{usession.datePattern}"
                                                                   timeZone="#{CommonUtils.timeZone}"/>
                                            </h:inputText>
                                            <h:graphicImage id="dateToBtn"
                                                            value="/images/calendar.gif"
                                                            onclick="#{rich:component('calendar')}.customExpand(event,
                                                                     #{rich:element('dateTo')},
                                                                     #{rich:element('dateToBtn')});"/>
                                        </h:panelGroup>
                                    </h:panelGrid>

                                    <h:panelGrid columns="1">
                                        <h:panelGroup styleClass="stdButton">
                                            <bre:taggedCommandButton id="searchBtn"
                                                                     value="#{lblForm.search}"
                                                                     action="#{MbAmexFilesSearch.search}"
                                                                     image="/_img/icon_search.png"
                                                                     type="submit"
                                                                     eventsQueue="queue"
                                                                     reRender="entityForm, entityBtnForm, workplacePanel"
                                                                     oncomplete="enableModalPanelBtns(this);"
                                                                     style="width:85px;"/>
                                        </h:panelGroup>

                                        <h:panelGroup styleClass="link-clear" layout="block">
                                            <h:graphicImage url="/_img/icon_clear.png"/>
                                            <a4j:commandLink value="#{lblForm.clear_all}"
                                                             action="#{MbAmexFilesSearch.clearFilter}"
                                                             reRender="entitySearchForm, entityForm, entityBtnForm">
                                            </a4j:commandLink>
                                        </h:panelGroup>
                                    </h:panelGrid>

                                </h:panelGrid>
                                <a4j:outputPanel ajaxRendered="true">
                                    <h:graphicImage url="/_img/hd_searchblock.gif" styleClass="hd-searchblock"/>
                                    <h:panelGroup styleClass="collapse-vert" layout="block"/>
                                </a4j:outputPanel>
                            </h:panelGroup>
                        </h:panelGroup>
                    </h:panelGroup>
                </h:panelGroup>
            </h:form>


            <h:form id="entityForm">
                <!-- result panel -->
                <h:panelGroup styleClass="search_result_block" layout="block">
                    <h:panelGroup styleClass="search_result_block_left fix-ff"
                                  layout="block">
                        <h:panelGroup id="mainTableWrapper" layout="block"
                                      styleClass="search_result_block_inner">
                            <rich:extendedDataTable id="entityTable"
                                                    styleClass="res-table"
                                                    tableState="#{MbAmexFilesSearch.tableState}"
                                                    headerClass="res-table-header"
                                                    rowClasses=",odd"
                                                    selectedClass="res-table-selected"
                                                    var="item"
                                                    value="#{MbAmexFilesSearch.items}"
                                                    selection="#{MbAmexFilesSearch.itemSelection}"
                                                    rows="#{MbAmexFilesSearch.rowsNum}"
                                                    selectionMode="single"
                                                    width="100%"
                                                    height="255px"
                                                    enableContextMenu="true"
                                                    noDataLabel="#{MbAmexFilesSearch.searching ? lblCommon.no_records_found : lblCommon.enter_search_criteria_above}">
                                <a4j:support event="onselectionchange"
                                             eventsQueue="queue"
                                             limitToList="true"
                                             reRender=""/>


                                <rich:column label="#{lblPrc.id}" title="#{lblPrc.id}" id="id" sortBy="#{'id'}"
                                             width="6%">
                                    <f:facet name="header">
                                        <a4j:outputPanel layout="none">
                                            <h:outputText value="#{lblPrc.id}" title="#{lblPrc.id}"/>
                                        </a4j:outputPanel>
                                    </f:facet>
                                    <h:outputText value="#{item.id}" title="#{item.id}"/>
                                </rich:column>

                                <rich:column label="#{lblPrc.file_name}" title="#{lblPrc.file_name}" id="fileNameId" sortBy="#{'fileName'}"
                                             width="10%">
                                    <f:facet name="header">
                                        <a4j:outputPanel layout="none">
                                            <h:outputText value="#{lblPrc.file_name}" title="#{lblPrc.file_name}"/>
                                        </a4j:outputPanel>
                                    </f:facet>
                                    <h:outputText value="#{item.fileName}" title="#{item.fileName}"/>
                                </rich:column>

                                <rich:column label="#{lblPrc.session_id}" title="#{lblPrc.session_id}" id="sessionid" sortBy="#{'sessionId'}"
                                             width="15%">
                                    <f:facet name="header">
                                        <a4j:outputPanel layout="none">
                                            <h:outputText value="#{lblPrc.session_id}" title="#{lblPrc.session_id}"/>
                                        </a4j:outputPanel>
                                    </f:facet>
                                    <h:outputText value="#{item.sessionId}" title="#{item.sessionId}"/>
                                </rich:column>

                                <rich:column id="processStartDate" label="#{lblPrc.file_date}" width="15%"
                                             sortBy="#{'fileDate'}">
                                    <f:facet name="header">
                                        <h:outputText value="#{lblPrc.file_date}" title="#{lblPrc.file_date}" />
                                    </f:facet>
                                    <h:outputText value="#{item.fileDate}">
                                        <f:convertDateTime pattern="#{usession.datePattern} HH:mm:ss"
                                                           timeZone="#{CommonUtils.timeZone}" />
                                    </h:outputText>
                                </rich:column>

                                <rich:column label="#{lblOst.institution}" title="#{lblOst.institution}" id="instNameId" sortBy="#{'instName'}"
                                             width="15%">
                                    <f:facet name="header">
                                        <a4j:outputPanel layout="none">
                                            <h:outputText value="#{lblOst.institution}" title="#{lblOst.institution}"/>
                                        </a4j:outputPanel>
                                    </f:facet>
                                    <h:outputText value="#{item.instName}" title="#{item.instName}"/>
                                </rich:column>

                                <rich:column label="#{lblOst.inst_id}" title="#{lblOst.inst_id}" id="instId" sortBy="#{'instId'}"
                                             width="12%">
                                    <f:facet name="header">
                                        <a4j:outputPanel layout="none">
                                            <h:outputText value="#{lblOst.inst_id}" title="#{lblOst.inst_id}"/>
                                        </a4j:outputPanel>
                                    </f:facet>
                                    <h:outputText value="#{item.instId}" title="#{item.instId}"/>
                                </rich:column>

                                <rich:column label="#{lblNet.network_id}" title="#{lblNet.network_id}" id="networkId" sortBy="#{'networkId'}"
                                             width="12%">
                                    <f:facet name="header">
                                        <a4j:outputPanel layout="none">
                                            <h:outputText value="#{lblNet.network_id}" title="#{lblNet.network_id}"/>
                                        </a4j:outputPanel>
                                    </f:facet>
                                    <h:outputText value="#{item.networkId}" title="#{item.networkId}"/>
                                </rich:column>

                                <rich:column label="#{'incoming'}" title="#{'incoming'}" id="incomingId" sortBy="#{'incoming'}"
                                             width="10%" visible="false">
                                    <f:facet name="header">
                                        <a4j:outputPanel layout="none">
                                            <h:outputText value="#{'incoming'}" title="#{'incoming'}"/>
                                        </a4j:outputPanel>
                                    </f:facet>
                                    <h:outputText value="#{item.incoming}" title="#{item.incoming}"/>
                                </rich:column>

                                <rich:column label="#{lblApp.proc_date}" title="#{lblApp.proc_date}" id="procDateId" sortBy="#{'procDate'}"
                                             width="10%" visible="false">
                                    <f:facet name="header">
                                        <a4j:outputPanel layout="none">
                                            <h:outputText value="#{lblApp.proc_date}" title="#{lblApp.proc_date}"/>
                                        </a4j:outputPanel>
                                    </f:facet>
                                    <h:outputText value="#{item.transmittalDate}" title="#{item.transmittalDate}">
                                        <f:convertDateTime pattern="#{usession.datePattern} HH:mm:ss"
                                                           timeZone="#{CommonUtils.timeZone}" />
                                    </h:outputText>
                                </rich:column>

                                <rich:column label="#{lblAcq.session_file_id}" title="#{lblAcq.session_file_id}" id="sessionFileId" sortBy="#{'sessionFileId'}"
                                             width="10%" visible="false">
                                    <f:facet name="header">
                                        <a4j:outputPanel layout="none">
                                            <h:outputText value="#{lblAcq.session_file_id}" title="#{lblAcq.session_file_id}"/>
                                        </a4j:outputPanel>
                                    </f:facet>
                                    <h:outputText value="#{item.sessionFileId}" title="#{item.sessionFileId}"/>
                                </rich:column>

                                <rich:column label="#{lblAtm.rejected}" title="#{lblAtm.rejected}" id="rejectedId" sortBy="#{'rejected'}"
                                             width="10%" visible="false">
                                    <f:facet name="header">
                                        <a4j:outputPanel layout="none">
                                            <h:outputText value="#{lblAtm.rejected}" title="#{lblAtm.rejected}"/>
                                        </a4j:outputPanel>
                                    </f:facet>
                                    <h:outputText value="#{item.rejected}" title="#{item.rejected}"/>
                                </rich:column>
                            </rich:extendedDataTable>
                        </h:panelGroup>
                        <a4j:outputPanel ajaxRendered="true">
                            <h:panelGroup id="show_more_panel" styleClass="show-more-vert show-more-result-tab" layout="block"/>
                            <h:graphicImage url="/_img/hd_searchblock.gif"
                                            styleClass="hd-searchblock"/>
                            <h:panelGroup styleClass="collapse-vert table-collapse-vert"
                                          layout="block"/>
                        </a4j:outputPanel>
                    </h:panelGroup>
                </h:panelGroup>
            </h:form>

            <!-- navigation footer-->
            <h:form id="entityBtnForm">
                <h:panelGroup id="bottomSearchResultBlock"
                              layout="block"
                              styleClass="bottom_search_result_block">
                    <h:panelGroup layout="block" styleClass="bottom_search_result_left">
                        <h:panelGroup layout="block" styleClass="table_tools" id="tableTools">
                            <h:panelGrid styleClass="fw field-cont"
                                         columns="5"
                                         columnClasses="per-page-lbl,per-page-sel,nav-cont,pagecount, table_tools_state">
                                <h:outputLabel for="rows_num"
                                               value="#{lblCommon.rows_per_page}"
                                               title="#{lblCommon.rows_per_page}"/>
                                <h:selectOneMenu id="rows_num"
                                                 value="#{MbAmexFilesSearch.rowsNum}"
                                                 styleClass="row_per_page">
                                    <a4j:support event="onchange"
                                                 reRender="entityBtnForm, entityForm, pagesNum"/>
                                    <f:selectItems value="#{CommonUtils.rowNumsList}"/>
                                </h:selectOneMenu>

                                <rich:datascroller maxPages="10" fastControls="hide"
                                                   pagesVar="pages" styleClass="res-datascroller" id="dsentity"
                                                   for="entityTable"
                                                   reRender="pagesNum"
                                                   pageIndexVar="pageIndex">
                                    <f:facet name="first">
                                        <h:outputText value="&lt;&lt;" styleClass="prev-next"/>
                                    </f:facet>
                                    <f:facet name="first_disabled">
                                        <h:outputText value="&lt;&lt;" styleClass="prev-next-dis"/>
                                    </f:facet>
                                    <f:facet name="last">
                                        <h:outputText value="&gt;&gt;" styleClass="prev-next"/>
                                    </f:facet>
                                    <f:facet name="last_disabled">
                                        <h:outputText value="&gt;&gt;" styleClass="prev-next-dis"/>
                                    </f:facet>
                                    <f:facet name="previous">
                                        <h:outputText value="#{lblCommon.prev}" styleClass="prev-next"/>
                                    </f:facet>
                                    <f:facet name="previous_disabled">
                                        <h:outputText value="#{lblCommon.prev}" styleClass="prev-next-dis"/>
                                    </f:facet>
                                    <f:facet name="next">
                                        <h:outputText value="#{lblCommon.next}" styleClass="prev-next"/>
                                    </f:facet>
                                    <f:facet name="next_disabled">
                                        <h:outputText value="#{lblCommon.next}" styleClass="prev-next-dis"/>
                                    </f:facet>
                                    <f:facet name="pages">
                                    </f:facet>
                                </rich:datascroller>

                                <h:panelGroup id="pagesNum">
                                    <h:outputText styleClass="strongClass" value="#{pages} "/>
                                    <h:outputText value=" #{lblCommon.pages}"/>
                                    <h:outputText value="" style="padding-left: 20px; padding-right: 20px;"/>
                                    <h:outputText styleClass="strongClass" value="#{MbAmexFilesSearch.items.rowCount}"/>
                                    <h:outputText value=" #{lblCommon.records}"/>
                                    <h:outputText value="" style="padding-left: 20px; padding-right: 20px;"/>
                                </h:panelGroup>

                                <h:panelGroup>
                                    <h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}"
                                                    styleClass="action_icon"
                                                    onclick="saveTableState();"/>
                                    <h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}"
                                                    styleClass="action_icon"
                                                    onclick="deleteTableState();"/>
                                    <a4j:queue name="tablestatequeue"/>
                                    <a4j:jsFunction name="saveTableState" action="#{MbAmexFilesSearch.saveTableStateDB}"
                                                    eventsQueue="tablestatequeue"/>
                                    <a4j:jsFunction name="deleteTableState"
                                                    action="#{MbAmexFilesSearch.deleteTableStateDB}"
                                                    eventsQueue="tablestatequeue"/>
                                </h:panelGroup>
                            </h:panelGrid>
                        </h:panelGroup>
                    </h:panelGroup>
                </h:panelGroup>
            </h:form>

            <h:form>
                <a4j:jsFunction name="storeTab" ajaxSingle="true" limitToList="true"
                                reRender="#{MbAmexFilesSearch.rerenderList}">
                    <a4j:actionparam name="tabName" assignTo="#{MbAmexFilesSearch.tabName}"/>
                </a4j:jsFunction>
            </h:form>

            <!-- workspace -->
            <h:panelGroup id="workplacePanel" styleClass="workplace" layout="block">
                <rich:tabPanel id="tabPanel"
                               switchType="client"
                               tabClass="tab-cell"
                               activeTabClass="active-tab-cell"
                               headerClass="tabs"
                               headerSpacing="0px"
                               contentClass="tab-content"
                               selectedTab="#{MbAmexFilesSearch.tabName}">
                    <rich:tab label="Details"
                              name="detailsTab"
                              ontabenter="storeTab('detailsTab')">
                        <f:facet name="label">
                            <h:panelGroup styleClass="first tab-label" layout="block">
                                <h:outputText value="#{lblCommon.details}" title="#{lblCommon.details}"/>
                            </h:panelGroup>
                        </f:facet>
                        <ui:include src="/pages/ps/amex/files/list_details_bottom.jspx"/>
                    </rich:tab>

                    <rich:tab label="fileFinMessanges"
                              name="fileFinMessagesTab"
                              ontabenter="storeTab('fileFinMessagesTab')"
                              style="height:100%;">
                        <f:facet name="label">
                            <h:panelGroup styleClass="first tab-label" layout="block">
                                <h:outputText value="#{lblRej.fin_messages}" title="#{lblRej.fin_messages}" />
                            </h:panelGroup>
                        </f:facet>
                        <h:panelGroup id="fileFinMessagesTab" layout="block"
                                      styleClass="carddata-wrapper"
                                      style="height: 100%; overflow: hidden;position:relative;">
                            <ui:include src="/pages/ps/amex/files/list_fin_messages_bottom.jspx"/>
                        </h:panelGroup>
                    </rich:tab>
                </rich:tabPanel>
            </h:panelGroup>
        </h:panelGroup>

        <h:panelGroup rendered="#{!usession.inRole['VIEW_AMX_FILES']}" style="text-align: center">
            <h:outputText value="#{lblMsg.insufficient_rights}" style="font-size: 5em"/>
        </h:panelGroup>

        <script type="text/javascript">
            function updateHeight(){
                updateGridHeight();
            }
            //<![CDATA[
            layout =
                {
                    SEARCH_FORM_ID: 'entitySearchForm',
                    SEARCH_RESULT_FORM_ID: 'entityForm',
                    SEARCH_RESULT_FORM_WRAPPER_ID: 'mainTableWrapper',
                    SEARCH_RESULT_FOOTER_FORM_ID: 'entityBtnForm',
                    TAB_PANEL_ID: 'workplacePanel',

                    TAB_DATA: [
                        {
                            TAB_FORM_ID: 'entityFileDetailsForm',
                            TAB_FORM_WRAPPER_ID: 'entityFileDetailsWrapper',
                            CORRECTING_HEIGHT: Stretch.TABS + Stretch.BUTTONS
                        }
                        , {
                            TAB_FORM_ID: 'fileFinMessagesBottomForm',
                            TAB_FORM_WRAPPER_ID: 'fileFinMessagesBottomTableWrapper',
                            CORRECTING_HEIGHT: Stretch.TABS + Stretch.BUTTONS
                        }
                    ]
                };
            updateHeight();
            jQuery(window).resize(updateHeight);
            //]]>
        </script>
    </ui:define>
</ui:composition>
</html>
