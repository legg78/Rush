<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<f:loadBundle var="lblNtf" basename="ru.bpc.sv2.ui.bundles.Ntf"/>

	<h:form id="customObjectsForm">
		<h:panelGroup id="customObjectsTableWrapper" layout="block" style="padding:0px;margin:0px;">
			<rich:extendedDataTable id="customObjectsTable"
									styleClass="res-table"
									headerClass="res-table-header table-header-ext"
									rowClasses=",odd"
									selectedClass="res-table-selected"
									var="item"
									value="#{MbCustomObjects.customObjects}"
									selection="#{MbCustomObjects.itemSelection}"
									rows="0"
									enableContextMenu="true"
									tableState="#{MbCustomObjects.tableState}"
									noDataLabel="#{lblCommon['no_records_found']}">
				<a4j:support event="onselectionchange" reRender="btnPanel" />

				<rich:column id="object_id" label="#{lblCommon.object_id}" title="#{lblCommon.object_id}" width="30%">
					<f:facet name="header">
						<h:outputText value="#{lblCommon.object_id}" title="#{lblCommon.object_id}"/>
					</f:facet>
					<h:outputText value="#{item.objectId}" title="#{item.objectId}"/>
				</rich:column>

				<rich:column id="object_type" label="#{lblCommon.object_type}" title="#{lblCommon.object_type}" width="30%">
					<f:facet name="header">
						<h:outputText value="#{lblCommon.object_type}" title="#{lblCommon.object_type}"/>
					</f:facet>
					<h:outputText value="#{item.objectType}" title="#{item.objectType}"/>
				</rich:column>

				<rich:column id="object_number" label="#{lblCommon.object_number}" title="#{lblCommon.object_number}" width="30%">
					<f:facet name="header">
						<h:outputText value="#{lblCommon.object_number}" title="#{lblCommon.object_number}"/>
					</f:facet>
					<h:outputText value="#{item.objectNumber}" title="#{item.objectNumber}"/>
				</rich:column>

				<rich:column id="is_active" label="#{lblCommon.active}" title="#{lblCommon.active}" width="10%">
					<f:facet name="header">
						<h:outputText value="#{lblCommon.active}" title="#{lblCommon.active}"/>
					</f:facet>
					<h:outputText value="#{lblCommon.yes}" rendered="#{item.active}"/>
					<h:outputText value="#{lblCommon.no}" rendered="#{!item.active}"/>
				</rich:column>
			</rich:extendedDataTable>
		</h:panelGroup>

		<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
				<h:panelGrid id="btnPanel" styleClass="fw buttons_block" columns="3" columnClasses=",,table_tools_state">
					<h:panelGroup>
						<bre:taggedCommandButton id="viewCardNumberBtn"
												 value="#{lblIss.view_number}"
												 rendered="#{usession.inRole['VIEW_CARD_NUMBER']}"
												 disabled="#{!MbCustomObjects.showCardNumberButton()}"
												 limitToList="true"
												 action="#{MbCustomObjects.viewCardNumber}"
												 oncomplete="Richfaces.showModalPanel('cardNumberModalPanel');return false;"/>
					</h:panelGroup>
					<h:panelGroup></h:panelGroup>
					<h:panelGroup>
							<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
								onclick="saveObjTableState();"/>
							<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
								onclick="deleteObjTableState();"/>
							<a4j:queue name="tablestatequeue"/>
							<a4j:jsFunction name="saveObjTableState" action="#{MbCustomObjects.saveTableStateDB}" eventsQueue="tablestatequeue"/>
							<a4j:jsFunction name="deleteObjTableState" action="#{MbCustomObjects.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
						</h:panelGroup>
				</h:panelGrid>
			</h:panelGroup>
		</h:panelGroup>
	</h:form>

	<ui:include src="/pages/issuing/cards/cardNumberModalPanel.jspx">
		<ui:param name="backingBean" value="#{MbCustomObjects.activeCustomObject}"/>
	</ui:include>
</ui:composition>
</html>
