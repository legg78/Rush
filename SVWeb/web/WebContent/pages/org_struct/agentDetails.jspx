<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:bm="http://www.bpc.ru/jsf/misc"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<style type="text/css">
		.alignRight {
			text-align: right;
		}
	</style>
	<f:loadBundle var="lblOst" basename="ru.bpc.sv2.ui.bundles.Ost"/>
	
	<h:form id="agentDetailsForm">
        <h:panelGroup layout="block" styleClass="langSelector">
			<h:panelGrid columns="2" styleClass="cardholderdata oneColumnTable"
					id="detailsData" columnClasses=",secondCol">
				<h:outputLabel for="lang" value="#{lblCommon.lang_selector}: "
						title="#{lblCommon.lang_selector}" />
				<h:selectOneMenu id="lang"
						disabled="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.id == null}"
						value="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.lang}"
						valueChangeListener="#{(detailsBean==null ? MbAgent : detailsBean).changeLanguage}">
					<a4j:support event="onchange" reRender="agentDetailsForm"
							limitToList="true" oncomplete="updateHeight();"/>
					<f:selectItems value="#{(detailsBean==null ? MbAgent : detailsBean).languages}" />
				</h:selectOneMenu>
			</h:panelGrid>
		</h:panelGroup>
	
		<h:panelGroup id="agentDetailsWrapper" layout="block" styleClass="carddata-wrapper" 
				style="height: 100%; overflow-y: auto;overflow-x: hidden;position:relative;">
			<rich:dataTable id="agentDetailsTable"
					value="#{(detailsBean==null ? MbAgent : detailsBean).emptyTable}" 
					var="field"
					styleClass="res-table noHeader" width="100%">
				<rich:columnGroup rowClasses=",odd" 
						columnClasses="firstCol alignLeft width20, width80 width250 noPadding">
					<rich:column styleClass="detailsCategory expandedBranch">
						<h:graphicImage url="/images/minus.gif" onclick="showHideDetails(this)"/>
						<h:outputLabel value="#{lblPrd.general_data}:" />
					</rich:column>
					<rich:column>
						<script>updateHeight();</script>
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblOst.institution}:" title="#{lblOst.institution}"/>
					</rich:column>
					<rich:column>
						<bm:entityDisplay  value="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.instName}"
							description="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.instName}"/>
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.type}:" title="#{lblCommon.type}"/>
					</rich:column>
					<rich:column>
						<bm:entityDisplay  value="#{DictUtils.articlesByLang[(detailsBean==null ? MbAgent : detailsBean).detailNode.lang][(detailsBean==null ? MbAgent : detailsBean).detailNode.type]}"
							description="#{DictUtils.articlesByLang[(detailsBean==null ? MbAgent : detailsBean).detailNode.lang][(detailsBean==null ? MbAgent : detailsBean).detailNode.type]}"/>
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.name}:" title="#{lblCommon.name}"/>
					</rich:column>
					<rich:column>
						<bm:entityDisplay  value="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.name}"
							description="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.name}"/>
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.description}:" title="#{lblCommon.description}"/>
					</rich:column>
					<rich:column>
						<bm:entityDisplay  value="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.description}"
							description="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.description}"
							style="white-space: normal" />
					</rich:column>
					
					<rich:column breakBefore="true">
					<h:outputLabel value="#{lblOst.external_number}:" title="#{lblOst.external_number}" />
					</rich:column>
					
					<rich:column>
						<bm:entityDisplay  value="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.externalNumber}"
							description="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.externalNumber}" />
		            </rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.default}:" title="#{lblCommon.default}"/>
					</rich:column>
					<rich:column>
						<bm:entityDisplay  value="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.default}"
							description="#{(detailsBean==null ? MbAgent : detailsBean).detailNode.default}"/>
					</rich:column>
				</rich:columnGroup>
			</rich:dataTable>
			<script>setDetailsState("agentDetailsForm:agentDetailsTable");</script>
		</h:panelGroup>
	</h:form>

	
</ui:composition>
</html>
