<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition>
	<f:loadBundle var="lblRul" basename="ru.bpc.sv2.ui.bundles.Rul"/>
	
	<script type="text/javascript">
		//<!-- 
			function checkDspScaleFields() {
				var checked = true;
				if (document.getElementById('dspScaleEditForm:label').value == "") {
					document.getElementById('dspScaleEditForm:labelError').style.display = "inline";
					checked = false;
				}
				if (document.getElementById('dspScaleEditForm:description').value == "") {
					document.getElementById('dspScaleEditForm:descriptionError').style.display = "inline";
					checked = false;
				}
				if (document.getElementById('dspScaleEditForm:modId').value == "") {
					document.getElementById('dspScaleEditForm:modIdError').style.display = "inline";
					checked = false;
				}
				return checked;
			}
		//-->
	</script>

	<rich:modalPanel id="dsp_scale_modal_panel" autosized="true" minWidth="300" minHeight="100">
       	    <f:facet name="header">
      	    	<h:panelGroup id="dsp_scale_modal_header">
	           	    <h:outputText value="#{lblRul.new_dsp_scale}" rendered="#{MbDspScales.newMode}"/>
	           	    <h:outputText value="#{lblRul.edit_dsp_scale}" rendered="#{MbDspScales.editMode}"/>
       	    	</h:panelGroup>
            </f:facet>
   	        <f:facet name="controls">
       	    </f:facet>
       	    <h:panelGroup id="dsp_scale_modal_div">
       	    	<h:form id="dspScaleEditForm">

					<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
						<h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="firstColModal, width250">
							<h:outputLabel value="#{lblCommon.id}: " title="#{lblCommon.id}" rendered="#{MbDspScales.editMode}"/>
							<h:inputText value="#{MbDspScales.newDspScale.id}" 
									rendered="#{MbDspScales.editMode}" 
									readonly="true" styleClass="grayInput"/>
							
							<h:outputLabel for="scaleType" value="* #{lblRul.scale_type}: " title="#{lblRul.scale_type}" disabled="#{MbDspScales.editMode}" />
				      		<h:selectOneMenu id="scaleType" value="#{MbDspScales.newDspScale.scaleType}" disabled="#{MbDspScales.editMode}" 
				      			valueChangeListener="#{MbDspScales.changeScaleType}">
				      			<f:selectItem itemValue=""/>
				      			<f:selectItems value="#{MbDspScales.scaleTypes}"/>
				      			<a4j:support event="onchange" reRender="modId" limitToList="true" />
				      		</h:selectOneMenu>

							<h:outputLabel value="* #{lblRul.label}" title="#{lblRul.label}"/>
							<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
								<h:inputText value="#{MbDspScales.newDspScale.label}"
											 label="#{lblRul.label}" id="label" maxlength="200"
											 onblur="hideErrorField(this)">
									<f:validateLength minimum="3" maximum="200"/>
									<a4j:support event="onchange" reRender="labelErr" limitToList="true" ajaxSingle="true"/>
								</h:inputText>
								<rich:message id="labelErr" for="label" styleClass="errorMarker"/>
								<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
												id="labelError" style="display:none;">
									<f:param name="fieldName" value="#{lblRul.label}"/>
								</h:outputFormat>
							</h:panelGrid>

							<h:outputLabel value="* #{lblCommon.description}" title="#{lblCommon.description}"/>
							<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
								<h:inputText value="#{MbDspScales.newDspScale.description}"
											 label="#{lblCommon.description}" id="description" maxlength="200"
											 onblur="hideErrorField(this)">
									<f:validateLength minimum="3" maximum="200"/>
									<a4j:support event="onchange" reRender="descriptionErr" limitToList="true" ajaxSingle="true"/>
								</h:inputText>
								<rich:message id="descriptionlErr" for="description" styleClass="errorMarker"/>
								<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
												id="descriptionError" style="display:none;">
									<f:param name="fieldName" value="#{lblCommon.description}"/>
								</h:outputFormat>
							</h:panelGrid>

							<h:outputLabel value="* #{lblRul.mod_id}" title="#{lblRul.mod_id}" />
	                    	<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
			                	<h:selectOneMenu value="#{MbDspScales.newDspScale.modId}"
										id="modId"
										label="#{lblRul.mod_id}"
										onblur="hideErrorField(this)">
									<f:selectItems value="#{MbDspScales.modifiers}"/>
								</h:selectOneMenu>
			                	<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
										id="modIdError" style="display:none;">
										<f:param name="fieldName" value="#{lblRul.mod_id}"/>
								</h:outputFormat>
		                	</h:panelGrid>
							
	                    	<h:outputLabel value="* #{lblRul.init_rule}" title="#{lblRul.init_rule}" />
	                    	<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
			                	<h:inputText value="#{MbDspScales.newDspScale.initRuleId}" 
			                			label="#{lblRul.init_rule}" id="initRuleId"/>
		                	</h:panelGrid>
	                    	
							<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
							<h:selectOneMenu value="#{MbDspScales.newDspScale.lang}" rendered="#{MbDspScales.newMode}">										
									<f:selectItems value="#{MbDspScales.languages}"/>
							</h:selectOneMenu>
							<h:selectOneMenu id="editLang" value="#{MbDspScales.newDspScale.lang}"
								rendered="#{MbDspScales.editMode}"
								onchange="document.getElementById('dspCond:dspScaleEditForm:newValue').value = this.value;
										#{rich:component('dspCond:confirmPanel')}.show()">
								<f:selectItems value="#{MbDspScales.languages}"/>
							</h:selectOneMenu>
		                	
						</h:panelGrid>
					</h:panelGroup>

		      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
						<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
			       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
			       	    		<h:outputText/>
	                        	<bre:taggedCommandButton
	                        			value="#{lblForm.save}" type="submit" action="#{MbDspScales.save}"
	                        			onclick="if (!checkDspScaleFields()) return false; disableModalPanelBtns(this)"
	                        			oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('dsp_scale_modal_panel')}.hide()"
	                        			reRender="dspScaleSelectionForm:dspScaleSelectionTable, dspScaleSelectionBtnForm:btnPanel, detailsTab"
		                        		/>
	                        	<bre:taggedCommandButton
		                        		value="#{lblForm.cancel}" action="#{MbDspScales.close}" immediate="true"
		                        		oncomplete="#{rich:component('dsp_scale_modal_panel')}.hide()"
		                        		/>
				    		</h:panelGrid>
				    	</h:panelGroup>
				    </h:panelGroup>
				</h:form>
			</h:panelGroup>
		</rich:modalPanel>

	

	<ui:include src="/pages/utils/langConfirmPanel.jspx">
    	<ui:param name="backingBean" value="#{MbDspScales}"/>
    	<ui:param name="rerenderList" value="dspScaleEditForm:nameDspCond"/>
    	<ui:param name="editElem" value="dspScaleEditForm:editLang"/>
    	<ui:param name="newValue" value="#{MbDspScales.newDspScale.lang}"/>
    	<ui:param name="subviewId" value="dspCond"/>
    	<ui:param name="formName" value="dspScaleEditForm" />
    </ui:include>
    
</ui:composition>
</html>
