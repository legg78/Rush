<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	  xmlns:fmt="http://www.bpc.ru/el/formatter"
	  >
<ui:composition>
	<h:form id="appearanceDetailsForm">
		
		<h:panelGroup id="appearanceDetailsWrapper" layout="block" styleClass="carddata-wrapper" 
				style="height: 100%; overflow-y: auto;overflow-x: hidden;position:relative;">
			<rich:dataTable id="operationDetailsTable"
					value="#{MbAppearance.emptyTable}" 
					var="field"
					styleClass="res-table noHeader" width="100%">
				<rich:columnGroup rowClasses=",odd" 
						columnClasses="firstCol alignLeft width20, width80 width250 noPadding">
					<rich:column styleClass="detailsCategory expandedBranch">
						<h:graphicImage url="/images/minus.gif" onclick="showHideDetails(this)"/>
						<h:outputLabel value="#{lblPrd.general_data}:" />
					</rich:column>
					<rich:column>
						<script>if(window['updateHeight'])updateHeight();</script>
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel for="id" value="#{lblCommon.id}:" title="#{lblCommon.id}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbAppearance.activeItem.id}"
								title="#{MbAppearance.activeItem.id}"/>
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.entity_type}:"
							title="#{lblCommon.entity_type}" />
					</rich:column>
					<rich:column>
						<h:outputLabel
							value="#{DictUtils.articles[MbAppearance.activeItem.entityType]}"
							title="#{DictUtils.articles[MbAppearance.activeItem.entityType]}"
							rendered="#{MbAppearance.activeItem.entityType != null}">
						</h:outputLabel>
						<h:outputLabel value="" title=""
							rendered="#{MbAppearance.activeItem.entityType == null}">
						</h:outputLabel>
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.object_id}:"
							title="#{lblCommon.object_id}" />
					</rich:column>
					<rich:column>
						<h:outputText
							value="#{MbAppearance.activeItem.objectReference}"
							title="#{MbAppearance.activeItem.objectReference}"
							readonly="true"
							rendered="#{MbAppearance.activeItem.objectReference != null }" />
						<h:outputText value="" readonly="true"
							rendered="#{MbAppearance.activeItem.objectReference == null }" />
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel for="cssClass" value="#{lblAcm.css_class}:" title="#{lblAcm.css_class}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbAppearance.activeItem.cssClass}"
								title="#{MbAppearance.activeItem.cssClass}"/>
					</rich:column>

					

				</rich:columnGroup>
			</rich:dataTable>
			<script>setDetailsState("appearanceDetailsForm:appearanceDetailsWrapper");</script>
		</h:panelGroup>
	</h:form>

</ui:composition>
</html>