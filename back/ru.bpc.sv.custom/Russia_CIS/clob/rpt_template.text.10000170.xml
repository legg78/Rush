<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<xsl:output method="text" encoding="utf-8" indent="no"/>
						
<xsl:template match="event">
<xsl:value-of select="eff_date" />. <xsl:value-of select="host_description" />. <xsl:choose><xsl:when test="event_type='EVNT1905'">Логическое соединение в режиме Snand-In разорвано</xsl:when><xsl:when test="event_type='EVNT1904'">Логическое соединение в режиме Snand-In установлено</xsl:when><xsl:when test="event_type='EVNT1903'">Логическое соединение разорвано</xsl:when><xsl:when test="event_type='EVNT1902'">Логическое соединение установлено</xsl:when><xsl:when test="event_type='EVNT1901'">Соединение восстановлено</xsl:when><xsl:otherwise>Соединение потеряно</xsl:otherwise></xsl:choose>
