<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:o="http://openfaces.org/">
<ui:composition>
	<f:loadBundle var="lblCmn" basename="ru.bpc.sv2.ui.bundles.Cmn"/>
	
	<script type="text/javascript">
//<!--
	function enableHSMStdVerButtons() {
        var disableBottom = #{MbHsmStandards.paramObjectId == null};
        var rowId = "row_" +
                document.getElementById("hsmStdVerForm:stdTreeTable").getSelectedNodeKey();
        if (disableBottom) {
            document.getElementById("hsmStdVerForm:addStdBtn").disabled = true;
            document.getElementById("hsmStdVerForm:addVersionBtn").disabled = true;
            document.getElementById("hsmStdVerForm:editBtn").disabled = true;
            document.getElementById("hsmStdVerForm:deleteBtn").disabled = true;
            document.getElementById("hsmStdVerForm:configBtn").disabled = true;
        } else if (document.getElementById("hsmStdVerForm:stdTreeTable").isSelectionEmpty()) {
            document.getElementById("hsmStdVerForm:addStdBtn").disabled = false;
            document.getElementById("hsmStdVerForm:addVersionBtn").disabled = true;
            document.getElementById("hsmStdVerForm:editBtn").disabled = true;
            document.getElementById("hsmStdVerForm:deleteBtn").disabled = true;
            document.getElementById("hsmStdVerForm:configBtn").disabled = true;
        } else {
            document.getElementById("hsmStdVerForm:addStdBtn").disabled = false;
            document.getElementById("hsmStdVerForm:addVersionBtn").disabled = false;
            document.getElementById("hsmStdVerForm:deleteBtn").disabled = false;
            document.getElementById("hsmStdVerForm:configBtn").disabled = false;
			if (document.getElementsByClassName(rowId)[0].className.indexOf("isStandard") >= 0) {
				document.getElementById("hsmStdVerForm:editBtn").disabled = true;
			} else {
				document.getElementById("hsmStdVerForm:editBtn").disabled = false;
			}
		}
	}

	function checkStandardVersionFields() {
		var checked = true;
		checked = checkField('stdVerObjEditForm:versionId');
		checked = checkDateField('stdVerObjEditForm:newStartDate') && checked;
		return checked;
	}

    function checkStandardField() {
        var checked = true;
        checked = checkField('stdVerObjEditForm:standardId') && checked;
        return checked;
    }
	
	//-->
	</script>

   	<h:form id="hsmStdVerForm">
		<h:panelGroup id="stdTreeTableWrapper" style="position: relative; zoom: 1;" layout="block">
			<o:treeTable id="stdTreeTable" var="stdVer"
					expansionState="allExpanded"
					headerHorizSeparator="1px solid #D7DAC2"
					headerVertSeparator="1px solid #D7DAC2"
					headerSectionClass="res-tree-table-header"
					commonHeaderRowClass="res-tree-table-header"
					sortableHeaderClass="res-tree-table-header"
					sortedColumnHeaderClass="res-tree-table-header"
					sortableHeaderRolloverClass="res-tree-table-header"
					styleClass="extdt-table-layout res-tree-table"
					bodyOddRowClass="res-tree-table-row odd-tree-table"
					bodyRowClass="res-tree-table-row" headerRowClass="res-tree-table-header"
					verticalGridLines="1px solid #D7DAC2"
					cellpadding="0" cellspacing="0"
					preloadedNodes="all"
					useAjax="true"
					style="height: 100%;"
					>
				<o:scrolling/>
				<f:facet name="noDataMessage">
				  	<h:panelGroup>
				       <h:outputText value="#{lblCommon['no_records_found']}"/>
					</h:panelGroup>
				</f:facet>
				
      			<o:dynamicTreeStructure 
      					nodeChildren="#{MbHsmStandards.nodeChildren}" 
      					nodeHasChildren="#{MbHsmStandards.nodeHasChildren}" 
      					nodeKey="#{stdVer.modelId}"/>
	
			    <o:singleNodeSelection 
			    		nodePath="#{MbHsmStandards.nodePath}"
			          	nodeData="#{MbHsmStandards.node}"
	         			keyboardSupport="false"
	         			required="true"
	         			onchange="enableHSMStdVerButtons()"
	         			styleClass="treetable_selection"
	         			>
				</o:singleNodeSelection>
	
			    <o:treeColumn id="nodeLabel" width="40%" >
			    	<f:facet name="header">
			        	<h:outputText value="#{lblCommon.name}"/>
			      	</f:facet>
			      	<h:outputText value="#{stdVer.objectName}" title="#{stdVer.objectName}"
							styleClass="treeTableText isStandard row_#{stdVer.modelId}"
			      			rendered="#{stdVer.parentId == null}"/>
			      	<h:outputText value="#{stdVer.versionNumber}" title="#{stdVer.versionNumber}" 
							styleClass="treeTableText row_#{stdVer.modelId}"
							rendered="#{stdVer.parentId != null}"/>
			    </o:treeColumn>
	
			    <o:column id="startDate" width="25%">
			    	<f:facet name="header">
			        	<h:outputText value="#{lblCommon.start_date}"/>
			      	</f:facet>
			      	<h:outputText styleClass="res-tree-table-cell"
			      			value="#{stdVer.startDate}"
			      			title="#{stdVer.startDate}">
			      		<f:convertDateTime pattern="#{usession.datePattern}" timeZone="#{CommonUtils.timeZone}"/>
			      	</h:outputText>
			    </o:column>
			</o:treeTable>
		</h:panelGroup>
	
		<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	            <h:panelGrid id="btnPanel" columns="5" style="vertical-align: top;" cellpadding="0" cellspacing="0">
                    <bre:taggedCommandButton id="addStdBtn"
                            value="#{lblForm.add}" reRender="stdObjNewForm"
                            oncomplete="#{rich:component('stdObjModalPanel')}.show()"
                            action="#{MbHsmStandards.add}"
                            image="/images/create_doc.gif"/>
                    <bre:taggedCommandButton id="addVersionBtn"
		                	value="#{lblForm.add_version}" reRender="stdVerObjEditForm"
							oncomplete="#{rich:component('stdVerObjModalPanel')}.show()"
		                	action="#{MbHsmStandards.add}"
		        			image="/images/create_doc.gif"/>
					<bre:taggedCommandButton id="editBtn"
							value="#{lblForm.edit}"
							reRender="stdVerObjEditForm"
   							action="#{MbHsmStandards.edit}"
							oncomplete="#{rich:component('stdVerObjModalPanel')}.show()"
							image="/images/edit.gif"/>
		        	<bre:taggedCommandButton id="deleteBtn"
		                	value="#{lblForm.delete}"
		        			image="/images/delete.gif"
		        			oncomplete="#{rich:component('deleteStdVerView:confirmPanel')}.show()"/>
                    <bre:taggedCommandButton id="configBtn"
                             value="#{lblForm.configure}" reRender="cmnParamValuesModalForm"
                             oncomplete="#{rich:component('paramValuesModalPanel')}.show()"
                             action="#{MbHsmStandards.config}"/>
		        	<script type="text/javascript">
	        			enableHSMStdVerButtons();
		        	</script>
				</h:panelGrid>
			</h:panelGroup>
	    </h:panelGroup>
        <script>updateHeight();</script>
    </h:form>

    <ui:include src="/pages/hsm/stdObjectAddModalPanel.jspx"/>

    <ui:include src="/pages/hsm/stdVersionObjectEditModalPanel.jspx"/>

    <ui:include src="/pages/communication/parameterValuesModalPanel.jspx"/>
	
	<ui:include src="/pages/utils/confirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbHsmStandards}"/>
		<ui:param name="yesAction" value="delete"/>
		<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
		<ui:param name="rerenderList" value="hsmStdVerForm"/>
		<ui:param name="confirmQuestion" value=" "/> 
		<ui:param name="subviewId" value="deleteStdVerView"/>
		<ui:param name="yes" value="#{lblForm.ok}"/>
		<ui:param name="no" value="#{lblForm.cancel}"/>
	</ui:include>

</ui:composition>
</html>
