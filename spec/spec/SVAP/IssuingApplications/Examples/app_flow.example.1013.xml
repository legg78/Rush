<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://sv.bpc.in/SVAP/iss">
    <application_type>APTPISSA</application_type>                                       <!-- Application type - Issuing -->
    <application_flow_id>1013</application_flow_id>                                     <!-- Application flow (business process) - Change cardholder info -->
    <application_status>APST0006</application_status>                                   <!-- Application status - Ready to process -->
    <operator_id>OPERATOR1</operator_id>                                                <!-- User name who made this application -->
    <institution_id>1001</institution_id>                                               <!-- Institution identifier -->
    <agent_id>10000001</agent_id>                                                       <!-- Agent identifier -->
    <agent_number>123</agent_number>                                                    <!-- Agent number -->
    <customer_type>ENTTPERS</customer_type>                                             <!-- Customer type - Person -->
    <customer>
        <command>CMMDEXPR</command>                                                     <!-- Command for customer - Except or proceed -->
        <customer_number>125</customer_number>                                          <!-- Unique customer number -->
        <employment_status>CSESEMPL</employment_status>
        <employment_period>EMPR0001</employment_period>
        <residence_type>RESTRENT</residence_type>
        <marital_status_date>2016-02-01</marital_status_date>
        <number_of_children>CHLD0001</number_of_children>
        <contract>
            <command>CMMDEXPR</command>                                                 <!-- Command for contract - Except or proceed -->
            <product_id>1</product_id>                                                  <!-- Product identifier -->
            <contract_number>225</contract_number>                                      <!-- Contract number -->
            <card id="card_1">
                <command>CMMDEXPR</command>                                             <!-- Command for card - Except or proceed -->
                <card_number>5186220000000215</card_number>                             <!-- Card number -->
                <cardholder>
                    <command>CMMDEXUP</command>                                         <!-- Command for cardholder - Except or update  -->
                    <cardholder_number>CH_1251</cardholder_number>                      <!-- Cardholder number  -->    
                    <cardholder_name>IVANOV PETER</cardholder_name>                     <!-- Embodssing name  --> 
