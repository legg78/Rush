<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<f:loadBundle var="lblIss" basename="ru.bpc.sv2.ui.bundles.Iss"/>
	<f:loadBundle var="lblEvt" basename="ru.bpc.sv2.ui.bundles.Evt"/>
    <f:loadBundle var="lblPrs" basename="ru.bpc.sv2.ui.bundles.Prs"/>
	<f:loadBundle var="lblCrd" basename="ru.bpc.sv2.ui.bundles.Crd"/>
	
	<script type="text/javascript">//<![CDATA[			
		function checkCardInstanceFields() {
			var checked = true;
			
			if (document.getElementById('changeStatusModalDiv:changeCommand').value == "") {
				document.getElementById('changeStatusModalDiv:changeCommandError').style.display = "inline";
				checked = false;
			}
			
			return checked;
		}
		//]]>
	</script>
	
	<h:form id="cardInstancesBtmForm">		
		<h:panelGroup id="cardInstancesBtmFormWrapper" layout="block" style="padding:0px;margin:0px;">
			<rich:extendedDataTable
					headerClass="res-table-header table-header-ext" 
		           	selectedClass="res-table-selected" styleClass="res-table"           
		           	rowClasses=",odd"
		           	id="mainTable"
		           	var="item"
		           	value="#{(instancesBean==null ? MbCardInstancesSearch : instancesBean).cardInstances}"	
		            selection="#{(instancesBean==null ? MbCardInstancesSearch : instancesBean).itemSelection}"
		           	rows="0"
		           	selectionMode="single" enableContextMenu="true"
		           	tableState="#{(instancesBean==null ? MbCardInstancesSearch : instancesBean).tableState}"
		           	noDataLabel="#{lblCommon['no_records_found']}">
				<a4j:support event="onselectionchange" 
	            	reRender="btnPanelInstances"/>
					<rich:column id="card_uid" label="#{lblCrd.card_uid}" title="#{lblCrd.card_uid}"
								 sortBy="#{'cardUid'}" width="15%" sortOrder="DESCENDING">
					<f:facet name="header">
						<h:panelGroup>
							<script>updateHeight();</script>
							<h:outputText value="#{lblCrd.card_uid}" title="#{lblCrd.card_uid}"/>
						</h:panelGroup>
					</f:facet>
					<h:outputText value="#{item.cardUid}"/>
				</rich:column>

					<rich:column id="seq_number" label="#{lblIss.seq_number}" title="Seq number" sortBy="#{'seqNumber'}" width="5%" sortOrder="DESCENDING">
			        	<f:facet name="header">
			        		<h:panelGroup>         
								<script>updateHeight();</script>
								<h:outputText value="#{lblIss.seq_number}" title="#{lblIss.seq_number}"/>
							</h:panelGroup>
			            </f:facet>
			        	<h:outputText value="#{item.seqNumber}"/>
					</rich:column>
	
					<rich:column id="status" label="#{lblCommon.status}" title="Status" sortBy="#{'status'}" width="10%">
						<f:facet name="header">
				        	<h:outputText value="#{lblCommon.status}" title="#{lblCommon.status}" />
				        </f:facet>
				        <h:outputText value="#{DictUtils.articles[item.status]}" title="#{DictUtils.articles[item.status]}"/>
					</rich:column>
					
					<rich:column id="state" label="#{lblIss.state}" title="State" sortBy="#{'state'}" width="10%">
					    <f:facet name="header">
				        	<h:outputText value="#{lblIss.state}" title="#{lblIss.state}"/>
				        </f:facet>
				    	<h:outputText value="#{DictUtils.articles[item.state]}" title="#{DictUtils.articles[item.state]}"/>
					</rich:column>
					
					<rich:column id="expir_date" label="#{lblIss.expir_date}" title="Expiration date" sortBy="#{'expirDate'}" width="10%">
			        	<f:facet name="header">
			            	<h:outputText value="#{lblIss.expir_date}" title="#{lblIss.expir_date}" />
			            </f:facet>
			        	<h:outputText value="#{item.expirDate}">
			        		<f:convertDateTime pattern="MM.yyyy" timeZone="#{CommonUtils.timeZone}"/>
				        </h:outputText>
					</rich:column>
		        
		        	<rich:column id="cardholder_name" label="#{lblIss.cardholder_name}" title="Cardholder" sortBy="#{'cardholderName'}" width="16%">
						<f:facet name="header">
				        	<h:outputText value="#{lblIss.cardholder_name}" title="#{lblIss.cardholder_name}" />
				        </f:facet>
						<h:outputText value="#{item.cardholderName}" title="#{item.cardholderName}"/>
					</rich:column>
					        
					<rich:column id="company" label="#{lblIss.company}" title="Company" sortBy="#{'companyName'}" width="15%">
					    <f:facet name="header">
				        	<h:outputText value="#{lblIss.company}" title="#{lblIss.company}"/>
				        </f:facet>
				    	<h:outputText value="#{item.companyName}" title="#{item.companyName}"/>
					</rich:column>
				
					<rich:column id="pin_request" label="#{lblIss.pin_request}" title="Pin request" width="8%">
					    <f:facet name="header">
				        	<h:outputText value="#{lblIss.pin_request}" title="#{lblIss.pin_request}"/>
				        </f:facet>
				    	<h:outputText value="#{DictUtils.articles[item.pinRequest]}" 
				    			title="#{DictUtils.articles[item.pinRequest]}"/>
					</rich:column>
	
					<rich:column id="pin_mailer_request" label="#{lblIss.pin_mailer_request}" title="Pin mailer request" width="8%">
					    <f:facet name="header">
				        	<h:outputText value="#{lblIss.pin_mailer_request}" title="#{lblIss.pin_mailer_request}"/>
				        </f:facet>
				    	<h:outputText value="#{DictUtils.articles[item.pinMailerRequest]}" 
				    			title="#{DictUtils.articles[item.pinMailerRequest]}"/>
					</rich:column>
	
					<rich:column id="embossing_request" label="#{lblIss.embossing_request}" title="Embossing request" width="8%">
					    <f:facet name="header">
				        	<h:outputText value="#{lblIss.embossing_request}" title="#{lblIss.embossing_request}"/>
				        </f:facet>
				    	<h:outputText value="#{DictUtils.articles[item.embossingRequest]}" 
				    			title="#{DictUtils.articles[item.embossingRequest]}"/>
					</rich:column>
				<f:facet name="footer">                      
	            </f:facet>
		    </rich:extendedDataTable>
		</h:panelGroup>

		<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons"
				style="border-bottom: 1px #B0B588; border-top: 1px #B0B588;position:absolute;bottom:0;left:0;width:100%">
			<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons" rendered="#{instancesBean==null}">
				<h:panelGrid id="btnPanelInstances" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
					<h:panelGroup>
					<bre:taggedCommandButton id="viewBtn"
							reRender="cardInstanceModalPanel"
							value="#{lblForm.view}" limitToList="true"
							oncomplete="#{rich:component('cardInstanceModalPanel')}.show()"
							action="#{(instancesBean==null ? MbCardInstancesSearch : instancesBean).view}"
							disabled="#{(instancesBean==null ? MbCardInstancesSearch : instancesBean).activeCardInstance == null}"
					        />

                    <bre:taggedCommandButton id="modifyBtn"
                            reRender="cardPersoStateEditForm, cardPersoStateModalHeader"
                            value="#{lblIss.modify}"
                            oncomplete="#{rich:component('cardPersoStateModalPanel')}.show()"
                            action="#{(instancesBean==null ? MbCardInstancesSearch : instancesBean).prepareNewCardInstanceData}"
                            rendered="true"
                            disabled="#{(instancesBean==null ? MbCardInstancesSearch : instancesBean).activeCardInstance == null}"
                            image="/images/edit.gif"
                                />

					</h:panelGroup>
	            	<h:panelGroup>
						<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
							onclick="saveCardInstTableState();"/>
						<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
							onclick="deleteCardInstTableState();"/>
						<a4j:queue name="tablestatequeue"/>
						<a4j:jsFunction name="saveCardInstTableState" action="#{(instancesBean==null ? MbCardInstancesSearch : instancesBean).saveTableStateDB}" eventsQueue="tablestatequeue"/>
						<a4j:jsFunction name="deleteCardInstTableState" action="#{(instancesBean==null ? MbCardInstancesSearch : instancesBean).deleteTableStateDB}" eventsQueue="tablestatequeue"/>
					</h:panelGroup>
				</h:panelGrid>				
			</h:panelGroup>
		</h:panelGroup>
	</h:form>
	
	<ui:include src="/pages/issuing/cards/card_instance_details.jspx">
	</ui:include>


    <ui:include src="/pages/issuing/personalization/card_perso_state_modify.jspx">
        <ui:param name="rerenderList" value="cardInstancesBtmForm:mainTable, cardInstancesBtmForm:pagesNum, cardInstancesBtmForm:btnPanelInstances, ${pageTabName}"/>
        <ui:param name="baseManageBean" value="#{(instancesBean==null ? MbCardInstancesSearch : instancesBean)}" />
    </ui:include>

    <!--<ui:include src="/pages/issuing/cards/card_instance_state_modify.jspx">-->
        <!--<ui:param name="rerenderList" value="cardInstancesBtmForm:mainTable, cardInstancesBtmForm:pagesNum, cardInstancesBtmForm:btnPanelInstances"/>-->
    <!--</ui:include>-->

</ui:composition>
</html>
