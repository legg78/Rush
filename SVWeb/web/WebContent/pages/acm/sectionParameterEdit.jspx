<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<script type="text/javascript">
//<!--
		function checkSectionParamFields() {
			var checked = true;
			
			if (document.getElementById('sectionParamModalForm:newSysName').value == "") {
				document.getElementById('sectionParamModalForm:newSysNameError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('sectionParamModalForm:newSection').value == "") {
				document.getElementById('sectionParamModalForm:newSectionError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('sectionParamModalForm:newDataType').value == "") {
				document.getElementById('sectionParamModalForm:newDataTypeError').style.display = "inline";
				checked = false;
			}
			if (document.getElementById('sectionParamModalForm:newLabel').value == "") {
				document.getElementById('sectionParamModalForm:newLabelError').style.display = "inline";
				checked = false;
			}
			
			return checked;
		}
		//-->
	</script>

	<rich:modalPanel id="sectionParamModalPanel" autosized="true" minWidth="300" minHeight="100"
			rendered="#{usession.inRole['ADD_SECTION_PARAMETER'] or usession.inRole['MODIFY_SECTION_PARAMETER']}">
      	<f:facet name="header">
			<h:panelGroup id="sectionParamModalHeader">
           	    <h:outputText value="#{lblAcm.edit_section_param}" rendered="#{MbSectionParameters.editMode}"/>
           	    <h:outputText value="#{lblAcm.new_section_param}" rendered="#{MbSectionParameters.newMode}"/>
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
	    </f:facet>
		<h:form id="sectionParamModalForm">
			<script type="text/javascript">//<!--
				oldValue["sectionParamModalForm"] = "#{MbSectionParameters.newSectionParameter.lang}";
			//-->
			</script>
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
		        <h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">
		
					<h:outputLabel value="* #{lblCommon.system_name}: " title="#{lblCommon.system_name}"/>
					<h:panelGrid cellpadding="0" cellspacing="0">
						<h:inputText id="newSysName" 
								value="#{MbSectionParameters.newSectionParameter.systemName}"
								label="#{lblCommon.system_name}"
								maxlength="200"
								onblur="hideErrorField(this)"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="newSysNameError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.system_name}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel value="* #{lblAcm.section}: " title="#{lblAcm.section}"/>
					<h:panelGrid cellpadding="0" cellspacing="0">
						<h:selectOneMenu id="newSection"
								value="#{MbSectionParameters.newSectionParameter.sectionId}"
								label="#{lblAcm.section}"
								onblur="hideErrorField(this)">
							<f:selectItem itemValue=""/>
						    <f:selectItems value="#{MbSectionParameters.sections}"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="newSectionError" style="display:none;">
							<f:param name="fieldName" value="#{lblAcm.section}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel value="* #{lblCommon.data_type}: " title="#{lblCommon.data_type}"/>
					<a4j:outputPanel>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:selectOneMenu id="newDataType"
									value="#{MbSectionParameters.newSectionParameter.dataType}"
									label="#{lblCommon.data_type}"
									onblur="hideErrorField(this)">
								<a4j:support event="onchange" reRender="newLov" 
										limitToList="true" ajaxSingle="true"/>
								<f:selectItem itemValue=""/>
							    <f:selectItems value="#{MbSectionParameters.dataTypes}"/>
							</h:selectOneMenu>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newDataTypeError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.data_type}"/>
							</h:outputFormat>
						</h:panelGrid>
					</a4j:outputPanel>
	
					<h:outputLabel value="#{lblCommon.lov}: " title="#{lblCommon.lov}"/>
					<h:selectOneMenu id="newLov"
							value="#{MbSectionParameters.newSectionParameter.lovId}"
							>
						<f:selectItem itemValue=""/>
					    <f:selectItems value="#{MbSectionParameters.lovs}"/>
					</h:selectOneMenu>

					<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
					<h:selectOneMenu id="lang" 
							value="#{MbSectionParameters.newSectionParameter.lang}"
							onchange="if (#{MbSectionParameters.newMode}) {return true;} document.getElementById('sectionParamModalView:confirmPanelForm:newValue').value = this.value;
									#{rich:component('sectionParamModalView:confirmPanel')}.show()">
					    <f:selectItems value="#{MbSectionParameters.languages}"/>
					</h:selectOneMenu>

					<h:outputLabel value="* #{lblCommon.name}: " title="#{lblCommon.name}"/>
					<h:panelGrid cellpadding="0" cellspacing="0">
						<h:inputText id="newLabel" 
								value="#{MbSectionParameters.newSectionParameter.label}"
								label="#{lblCommon.name}"
								maxlength="200"
								onblur="hideErrorField(this)"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="newLabelError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.name}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel value="#{lblCommon.description}: " title="#{lblCommon.description}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:inputTextarea id="newDescription" 
								value="#{MbSectionParameters.newSectionParameter.description}" rows="3"
								label="#{lblCommon.description}"
								onkeypress="if (!limitText(event,this,2000)) return false;">
							<f:validateLength maximum="2000"/>
							<a4j:support event="onchange" reRender="newDescriptionErr" limitToList="true"/>
						</h:inputTextarea>
						<rich:message for="newDescription" id="newDescriptionErr" styleClass="errorMarker"/>
					</h:panelGrid>
				</h:panelGrid>
			</h:panelGroup>
      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
	       	    		<h:outputText/>
                       	<bre:taggedCommandButton
                       			value="#{lblForm.save}" type="submit" action="#{MbSectionParameters.save}"
                       			onclick="if (!checkSectionParamFields()) return false; disableModalPanelBtns(this)"
			                   	oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('sectionParamModalPanel')}.hide()"
                       			reRender="${rerenderList}"
                        		/>
                       	<bre:taggedCommandButton
                        		value="#{lblForm.cancel}" 
                        		action="#{MbSectionParameters.cancel}" 
                        		immediate="true"
                        		oncomplete="#{rich:component('sectionParamModalPanel')}.hide()">
                        	<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
                		</bre:taggedCommandButton>
		    		</h:panelGrid>
		    	</h:panelGroup>
		    </h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/langConfirmPanel.jspx">
    	<ui:param name="backingBean" value="#{MbSectionParameters}"/>
    	<ui:param name="rerenderList" value="sectionParamModalForm:newLabel, sectionParamModalForm:newDescription"/>
    	<ui:param name="editElem" value="sectionParamModalForm:lang"/>
    	<ui:param name="newValue" value="#{MbSectionParameters.newSectionParameter.lang}"/>
    	<ui:param name="subviewId" value="sectionParamModalView" />
    	<ui:param name="formName" value="sectionParamModalForm"/>
    </ui:include>
</ui:composition>
</html>
