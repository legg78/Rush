<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:bpct="http://www.bpc.ru/jsf/tiles" xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	xmlns:rich="http://richfaces.org/rich" xmlns:a4j="http://richfaces.org/a4j"
	xmlns:o="http://openfaces.org/">
	<ui:composition>
		<h:form>
			<link rel="stylesheet" type="text/css"
				href="#{request.contextPath}/css/pages/common/application/wizardStartPage.css" />
			<link rel="stylesheet" type="text/css"
				href="#{request.contextPath}/css/pages/common/application/appWizNewCustomerContract.css" />

			<f:loadBundle var="lblOst" basename="ru.bpc.sv2.ui.bundles.Ost" />
			<f:loadBundle var="lblApp" basename="ru.bpc.sv2.ui.bundles.App" />

			<h:panelGrid styleClass="filter-table field-cont twoColumnTable"
				columns="2" columnClasses="firstCol250px,secondCol250px">				

				<h:outputLabel
					value="#{MbAppWizCardPool.fieldMap['CARD_TYPE'].required ? '*' : ''} #{MbAppWizCardPool.fieldMap['CARD_TYPE'].shortDesc}: "
					title="#{MbAppWiRzCustomer.fieldMap['CARD_TYPE'].shortDesc}"
					class="#{MbAppWizCardPool.fieldMap['CARD_TYPE'].valid ? 'valid' : 'invalid'}" />
				<h:selectOneMenu
					value="#{MbAppWizCardPool.fieldMap['CARD_TYPE'].valueN}" label="#{MbAppWizCardPool.fieldMap['CARD_TYPE'].shortDesc}">
					<f:selectItem itemValue="" />
					<f:selectItems value="#{MbAppWizCardPool.lovMap['CARD_TYPE']}" />
				</h:selectOneMenu>
				
				<h:outputLabel
					value="#{MbAppWizCardPool.fieldMap['EMBOSSED_NAME'].required ? '*' : ''} #{MbAppWizCardPool.fieldMap['EMBOSSED_NAME'].shortDesc}: "
					title="#{MbAppWizCardPool.fieldMap['EMBOSSED_NAME'].shortDesc}"
					class="#{MbAppWizCardPool.fieldMap['EMBOSSED_NAME'].valid ? 'valid' : 'invalid'}" />
				<h:inputText id="EmbossedName"
					value="#{MbAppWizCardPool.fieldMap['EMBOSSED_NAME'].valueV}" label="#{MbAppWizCardPool.fieldMap['EMBOSSED_NAME'].shortDesc}">
				</h:inputText>	
				
				<h:outputLabel
					value="#{MbAppWizCardPool.fieldMap['CARD_COUNT'].required ? '*' : ''} #{MbAppWizCardPool.fieldMap['CARD_COUNT'].shortDesc}: "
					title="#{MbAppWizCardPool.fieldMap['CARD_COUNT'].shortDesc}"
					class="#{MbAppWizCardPool.fieldMap['CARD_COUNT'].valid ? 'valid' : 'invalid'}" />
				<h:inputText id="CardPoolNumber"
					value="#{MbAppWizCardPool.fieldMap['CARD_COUNT'].valueV}" label="#{MbAppWizCardPool.fieldMap['CARD_COUNT'].shortDesc}">
				</h:inputText>	

			</h:panelGrid>

			<ui:include src="/pages/common/application/appWizActions.jspx" />

		</h:form>
		<a4j:keepAlive beanName="MbAppWizCardPool" ajaxOnly="true" />
	</ui:composition>
</html>
