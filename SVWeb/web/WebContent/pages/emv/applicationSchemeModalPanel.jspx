<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>

	<rich:modalPanel id="applicationSchemeEditModalPanel" autosized="true"
		minWidth="300" minHeight="100">
		<f:facet name="header">
			<h:panelGroup id="applicationShemaHeader">
				<h:outputText value="#{lblEmv.edit_application_scheme}"
					rendered="#{MbEmvApplicationScheme.editMode}" />
				<h:outputText value="#{lblEmv.new_application_scheme}"
					rendered="#{MbEmvApplicationScheme.newMode}" />
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
		</f:facet>
		<h:form id="applicationSchemeEditModalPanelForm">
			<script type="text/javascript">
//<!--
				oldValue["applicationSchemeEditModalPanelForm"] = "#{MbEmvApplicationScheme.editingItem.lang}";
				
				function checkAppSchemeFields() {
					var checked = true;
					
					if (document.getElementById('applicationSchemeEditModalPanelForm:instId').value == "") {
						document.getElementById('applicationSchemeEditModalPanelForm:instIdError').style.display = "inline";
						checked = false;
					}
					
					if (document.getElementById('applicationSchemeEditModalPanelForm:name').value == "") {
						document.getElementById('applicationSchemeEditModalPanelForm:nameError').style.display = "inline";
						checked = false;
					}							
					
					if (document.getElementById('applicationSchemeEditModalPanelForm:applicationSchemeType').value == "") {
						document.getElementById('applicationSchemeEditModalPanelForm:applicationSchemeTypeError').style.display = "inline";
						checked = false;
					}							
					
					return checked;
				}
				//-->
			</script>

			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata"
					columnClasses="firstColModal, width250">

					<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}" />
					<h:panelGrid columns="1">
						<h:selectOneMenu
							value="#{MbEmvApplicationScheme.editingItem.lang}"
							rendered="#{MbEmvApplicationScheme.newMode}">
							<f:selectItems value="#{MbEmvApplicationScheme.languages}" />
						</h:selectOneMenu>
						<h:selectOneMenu id="editLang"
							value="#{MbEmvApplicationScheme.editingItem.lang}"
							rendered="#{MbEmvApplicationScheme.editMode}"
							onchange="document.getElementById('emvAppScheme:confirmPanelForm:newValue').value = this.value;
											#{rich:component('emvAppScheme:confirmPanel')}.show()">
							<f:selectItems value="#{MbEmvApplicationScheme.languages}" />
						</h:selectOneMenu>
					</h:panelGrid>

					<h:outputLabel for="instId" value="* #{lblCommon.institution}:" title="#{lblCommon.institution}" />
					<h:panelGrid columns="1">
						<h:selectOneMenu id="instId"
							label="#{lblCommon.institution}"
							value="#{MbEmvApplicationScheme.editingItem.instId}"
							onblur="hideErrorField(this)">
							<f:selectItem itemValue="" />
							<f:selectItems value="#{MbEmvApplicationScheme.institutions}" />
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="instIdError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.institution}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel for="applicationSchemeType" value="* #{lblEmv.scheme_type}:" title="#{lblEmv.scheme_type}" />
					<h:panelGrid columns="1">
						<h:selectOneMenu id="applicationSchemeType"
							label="#{lblEmv.scheme_type}"
							value="#{MbEmvApplicationScheme.editingItem.type}"
							onblur="hideErrorField(this)">
							<f:selectItem itemValue="" />
							<f:selectItems value="#{MbEmvApplicationScheme.applicationSchemeTypes}" />
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="applicationSchemeTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblEmv.scheme_type}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel for="name" value="* #{lblEmv.name}:" title="#{lblEmv.name}" />
					<h:panelGrid columns="1">
						<h:inputText id="name" label="#{lblEmv.name}"
							value="#{MbEmvApplicationScheme.editingItem.name}"
							onblur="hideErrorField(this)">
						</h:inputText>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="nameError" style="display:none;">
							<f:param name="fieldName" value="#{lblEmv.name}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel for="description" value="#{lblEmv.description}:" title="#{lblEmv.description}" />
					<h:panelGrid columns="1">
						<h:inputTextarea id="description" label="#{lblEmv.description}"
							value="#{MbEmvApplicationScheme.editingItem.description}">
						</h:inputTextarea>
					</h:panelGrid>

				</h:panelGrid>
			</h:panelGroup>

			<h:panelGroup layout="block"
				styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block"
					styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.save}" type="submit"
							action="#{MbEmvApplicationScheme.saveEditingApplicationScheme}"
							onclick="if (!checkAppSchemeFields()) return false; disableModalPanelBtns(this)"
							oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) 
			                   			#{rich:component('applicationSchemeEditModalPanel')}.hide()"
							reRender="ApplicationSchemaTable, ApplicationSchemaDataScroller, pagesNum, btnPanel, detailsTab, tagValueTab" />
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbEmvApplicationScheme.resetEditingApplicationScheme}"
							immediate="true" limitToList="true"
							oncomplete="#{rich:component('applicationSchemeEditModalPanel')}.hide()"
							reRender="applicationSchemeEditModalPanelForm">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>

	<ui:include src="/pages/utils/langConfirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbEmvApplicationScheme}" />
		<ui:param name="rerenderList"
			value="applicationSchemeEditModalPanelForm" />
		<ui:param name="editElem"
			value="applicationSchemeEditModalPanelForm:editLang" />
		<ui:param name="newValue"
			value="#{MbEmvApplicationScheme.editingItem.lang}" />
		<ui:param name="subviewId" value="emvAppScheme" />
		<ui:param name="formName" value="applicationSchemeEditModalPanel" />
	</ui:include>
</ui:composition>
</html>