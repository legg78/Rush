<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition>
	<f:loadBundle var="lblRul" basename="ru.bpc.sv2.ui.bundles.Rul"/>
	
	<script type="text/javascript">
		//<!-- 
			function checkDpsConditionFields() {
				var checked = true;
				if (document.getElementById('dspConditionEditForm:initRule').value == "") {
					document.getElementById('dspConditionEditForm:initRuleError').style.display = "inline";
					checked = false;
				}
				if (document.getElementById('dspConditionEditForm:genRule').value == "") {
					document.getElementById('dspConditionEditForm:genRuleError').style.display = "inline";
					checked = false;
				}
				if (document.getElementById('dspConditionEditForm:order').value == "") {
					document.getElementById('dspConditionEditForm:orderError').style.display = "inline";
					checked = false;
				}
				if (document.getElementById('dspConditionEditForm:modId').value == "") {
					document.getElementById('dspConditionEditForm:modIdError').style.display = "inline";
					checked = false;
				}
				if (document.getElementById('dspConditionEditForm:online').value == "") {
					document.getElementById('dspConditionEditForm:onlineError').style.display = "inline";
					checked = false;
				}
				if (document.getElementById('dspConditionEditForm:nameDspCond').value == "") {
					document.getElementById('dspConditionEditForm:nameDspCondError').style.display = "inline";
					checked = false;
				}

				return checked;
			}

			function resetScheduleErrors() {
				if (!document.getElementById("templateEditForm:addSchedule").checked) {
					document.getElementById('templateEditForm:newEventTypeError').style.display = "none";
					document.getElementById('templateEditForm:newEntityTypeError').style.display = "none";
					document.getElementById('templateEditForm:newObjectIdError').style.display = "none";
					document.getElementById('templateEditForm:newAttemptLimitError').style.display = "none";
					document.getElementById('templateEditForm:newAmountAlgoError').style.display = "none";
				}
			}
		//-->
	</script>

	<rich:modalPanel id="dsp_condition_modal_panel" autosized="true" minWidth="300" minHeight="100">
       	    <f:facet name="header">
      	    	<h:panelGroup id="dsp_condition_modal_header">
	           	    <h:outputText value="#{lblRul.new_mod_scale}" rendered="#{MbDspConditions.newMode}"/>
	           	    <h:outputText value="#{lblRul.edit_mod_scale}" rendered="#{MbDspConditions.editMode}"/>
       	    	</h:panelGroup>
            </f:facet>
   	        <f:facet name="controls">
       	    </f:facet>
       	    <h:panelGroup id="dsp_condition_modal_div">
       	    	<h:form id="dspConditionEditForm">

					<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
						<h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="firstColModal, width250">
							<h:outputLabel value="#{lblCommon.id}: " title="#{lblCommon.id}" rendered="#{MbDspConditions.editMode}"/>
							<h:inputText value="#{MbDspConditions.newDspCondition.id}" 
									rendered="#{MbDspConditions.editMode}" 
									readonly="true" styleClass="grayInput"/>
							
							<h:outputLabel for="scaleType" value="* #{lblRul.scale_type}: " title="#{lblRul.scale_type}" disabled="#{MbDspConditions.editMode}" />
				      		<h:selectOneMenu id="scaleType" value="#{MbDspConditions.newDspCondition.scaleType}" disabled="#{MbDspConditions.editMode}" 
				      			valueChangeListener="#{MbDspConditions.changeScaleType}">
				      			<f:selectItem itemValue=""/>
				      			<f:selectItems value="#{MbDspConditions.scaleTypes}"/>
				      			<a4j:support event="onchange" reRender="modId" limitToList="true" />
				      		</h:selectOneMenu>
				      					
							<h:outputLabel value="* #{lblRul.mod_id}" title="#{lblRul.mod_id}" />
	                    	<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
			                	<h:selectOneMenu value="#{MbDspConditions.newDspCondition.modId}"
										id="modId"
										label="#{lblRul.mod_id}"
										onblur="hideErrorField(this)">
									<f:selectItems value="#{MbDspConditions.modifiers}"/>
								</h:selectOneMenu>
			                	<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
										id="modIdError" style="display:none;">
										<f:param name="fieldName" value="#{lblRul.mod_id}"/>
								</h:outputFormat>
		                	</h:panelGrid>
							
	                    	<h:outputLabel value="* #{lblRul.init_rule}" title="#{lblRul.init_rule}" />
	                    	<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
			                	<h:inputText value="#{MbDspConditions.newDspCondition.initRule}" 
			                			label="#{lblRul.init_rule}" id="initRule"
			                			onblur="hideErrorField(this)" />
			                	<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
										id="initRuleError" style="display:none;">
										<f:param name="fieldName" value="#{lblRul.init_rule}"/>
								</h:outputFormat>
		                	</h:panelGrid>
	                    	
	                    	<h:outputLabel value="* #{lblRul.gen_rule}" title="#{lblRul.gen_rule}" />
	                    	<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
			                	<h:inputText value="#{MbDspConditions.newDspCondition.genRule}" 
			                			label="#{lblRul.gen_rule}" id="genRule"
			                			onblur="hideErrorField(this)" />
			                	<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
										id="genRuleError" style="display:none;">
										<f:param name="fieldName" value="#{lblRul.gen_rule}"/>
								</h:outputFormat>
		                	</h:panelGrid>
	                    	
	                    	<h:outputLabel value="* #{lblCommon.order}" title="#{lblCommon.order}" />
	                    	<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
			                	<h:inputText value="#{MbDspConditions.newDspCondition.funcOrder}" 
			                			label="#{lblCommon.order}" id="order"
			                			onblur="hideErrorField(this)" />
			                	<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
										id="orderError" style="display:none;">
										<f:param name="fieldName" value="#{lblCommon.order}"/>
								</h:outputFormat>
		                	</h:panelGrid>
	                    	
	                    	<h:outputLabel value="* #{lblRul.online}" title="#{lblRul.online}" />
	                    	<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
			                	<h:inputText value="#{MbDspConditions.newDspCondition.online}" 
			                			label="#{lblRul.online}" id="online"
			                			onblur="hideErrorField(this)" />
			                	<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
										id="onlineError" style="display:none;">
										<f:param name="fieldName" value="#{lblRul.online}"/>
								</h:outputFormat>
		                	</h:panelGrid>

							<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
							<h:selectOneMenu value="#{MbDspConditions.newDspCondition.lang}" rendered="#{MbDspConditions.newMode}">										
									<f:selectItems value="#{MbDspConditions.languages}"/>
							</h:selectOneMenu>
							<h:selectOneMenu id="editLang" value="#{MbDspConditions.newDspCondition.lang}"
								rendered="#{MbDspConditions.editMode}"
								onchange="document.getElementById('dspCond:dspConditionEditForm:newValue').value = this.value;
										#{rich:component('dspCond:confirmPanel')}.show()">
								<f:selectItems value="#{MbDspConditions.languages}"/>
							</h:selectOneMenu>
		                	
		                	<h:outputLabel value="* #{lblCommon.name}" title="#{lblCommon.name}"/>
		                	<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
			                	<h:inputText value="#{MbDspConditions.newDspCondition.name}"
			                			label="#{lblCommon.name}" id="nameDspCond" maxlength="200"
			                			onblur="hideErrorField(this)" >
			                			<f:validateLength minimum="3" maximum="200"/>
			                			<a4j:support event="onchange" reRender="nameDspCondErr" limitToList="true" ajaxSingle="true"/>
			                	</h:inputText>
			                	<rich:message id="nameDspCondErr" for="nameDspCond" styleClass="errorMarker"/>
			                	<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
										id="nameDspCondError" style="display:none;">
										<f:param name="fieldName" value="#{lblCommon.name}"/>
								</h:outputFormat>
		                	</h:panelGrid>
						</h:panelGrid>
					</h:panelGroup>

		      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
						<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
			       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
			       	    		<h:outputText/>
	                        	<bre:taggedCommandButton
	                        			value="#{lblForm.save}" type="submit" action="#{MbDspConditions.save}"
	                        			onclick="if (!checkDpsConditionFields()) return false; disableModalPanelBtns(this)"
	                        			oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('dsp_condition_modal_panel')}.hide()"
	                        			reRender="dspConditionsForm:dspConditionsTable, dspConditionsBtnForm:btnPanel, detailsTab"
		                        		/>
	                        	<bre:taggedCommandButton
		                        		value="#{lblForm.cancel}" action="#{MbDspConditions.close}" immediate="true"
		                        		oncomplete="#{rich:component('dsp_condition_modal_panel')}.hide()"
		                        		/>
				    		</h:panelGrid>
				    	</h:panelGroup>
				    </h:panelGroup>
				</h:form>
			</h:panelGroup>
		</rich:modalPanel>

	

	<ui:include src="/pages/utils/langConfirmPanel.jspx">
    	<ui:param name="backingBean" value="#{MbDspConditions}"/>
    	<ui:param name="rerenderList" value="dspConditionEditForm:nameDspCond"/>
    	<ui:param name="editElem" value="dspConditionEditForm:editLang"/>
    	<ui:param name="newValue" value="#{MbDspConditions.newDspCondition.lang}"/>
    	<ui:param name="subviewId" value="dspCond"/>
    	<ui:param name="formName" value="dspConditionEditForm" />
    </ui:include>
    
</ui:composition>
</html>
