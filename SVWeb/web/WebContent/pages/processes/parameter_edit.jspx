<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<rich:modalPanel id="prc_param_modal_panel" autosized="true" minWidth="100" minHeight="50">
    	<f:facet name="header">
    		<h:panelGroup id="prc_param_modal_header">
	        	<h:outputText value="#{lblPrc.new_parameter}" rendered="#{MbProcessParametersSearch.newMode}"/>
	        	<h:outputText value="#{lblPrc.edit_parameter}" rendered="#{MbProcessParametersSearch.editMode}"/>
	        </h:panelGroup>
		</f:facet>
		<f:facet name="controls">
		</f:facet>
		<h:form id="processParamEditForm">      	    
			<script type="text/javascript">//<!--
				oldValue["processParamEditForm"] = "#{MbProcessParametersSearch.newParameter.lang}";
				
				function checkParameterFields() {
					var checked = true;
					var paramName = document.getElementById('processParamEditForm:paramName').value;
					if (jQuery.trim(paramName) == "") {
						document.getElementById('processParamEditForm:paramNameError').style.display = "inline";
						checked = false;
					}
					
					if (document.getElementById('processParamEditForm:paramDataType').value == "") {
						document.getElementById('processParamEditForm:paramDataTypeError').style.display = "inline";
						checked = false;
					}
					var paramShortDesc = document.getElementById('processParamEditForm:paramShortDesc').value;
					if (jQuery.trim(paramShortDesc) == "") {
						document.getElementById('processParamEditForm:paramShortDescError').style.display = "inline";
						checked = false;
					}
					
					return checked;
				}
			//-->
			</script>
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">        
					<h:outputLabel value="* #{lblCommon.system_name}: " title="#{lblCommon.system_name}"/>
					<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
						<h:inputText id="paramName" maxlength="30"
								value="#{MbProcessParametersSearch.newParameter.systemName}" 
								disabled="#{MbProcessParametersSearch.editMode}"
								label="#{lblCommon.system_name}"
								onblur="hideErrorField(this)">
						</h:inputText>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="paramNameError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.system_name}"/>
						</h:outputFormat>
					</h:panelGrid>
		
					<h:outputLabel value="* #{lblCommon.data_type}: " title="#{lblCommon.data_type}"/>
					<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
						<rich:comboBox id="paramDataType" value="#{MbProcessParametersSearch.newParameter.dataType}"
								disabled="#{MbProcessParametersSearch.editMode}"
								label="#{lblCommon.data_type}"
								onblur="hideErrorField(this)">
							<f:selectItem itemValue=""/>
							<f:selectItems value="#{MbProcessParametersSearch.dataTypes}"/>
							<a4j:support event="onchange" reRender="paramLov" 
									limitToList="true" ajaxSingle="true" 
									action="#{MbProcessParametersSearch.disableLov}"/>	
						</rich:comboBox>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="paramDataTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.data_type}"/>
						</h:outputFormat>
					</h:panelGrid>
			
					<h:outputLabel id="paramLovLabel" value="#{lblCommon.lov}: " title="#{lblCommon.lov}"/>
					<rich:comboBox id="paramLov" value="#{MbProcessParametersSearch.newParameter.lovId}"
							disabled="#{MbProcessParametersSearch.editMode or MbProcessParametersSearch.newParameter.date}">
						<f:selectItem itemValue=""/>
						<f:selectItems value="#{MbProcessParametersSearch.lovs}"/>
                        <a4j:support event="onchange" reRender="parent"
                            limitToList="true" ajaxSingle="true"/>
					</rich:comboBox>

					<h:outputLabel id="parentLabel" value="#{lblCommon.parent}: " title="#{lblCommon.parent}"/>
                    <rich:comboBox id="parent" value="#{MbProcessParametersSearch.newParameter.parentId}"
                            disabled="#{MbProcessParametersSearch.editMode or MbProcessParametersSearch.newParameter.lovId == null}">
                        <f:selectItem itemValue=""/>
                        <f:selectItems value="#{MbProcessParametersSearch.parentParameters}"/>
                    </rich:comboBox>
									
					<h:outputLabel for="lang" value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
					<rich:comboBox id="lang" value="#{MbProcessParametersSearch.newParameter.lang}" rendered="#{MbProcessParametersSearch.newMode}">
						<f:selectItems value="#{MbProcessParametersSearch.languages}"/>
					</rich:comboBox>
					<rich:comboBox id="editLang" value="#{MbProcessParametersSearch.newParameter.lang}"
							rendered="#{MbProcessParametersSearch.editMode}"
							onchange="document.getElementById('processParam:confirmPanelForm:newValue').value = document.getElementById('processParamEditForm:editLangcomboboxValue').value;
									#{rich:component('processParam:confirmPanel')}.show()">
						<f:selectItems value="#{MbProcessParametersSearch.languages}"/>
					</rich:comboBox>
									
					<h:outputLabel value="* #{lblCommon.name}: " title="#{lblCommon.name}"/>
					<h:panelGrid cellpadding="0" cellspacing="0" columns="1">
						<h:inputText id="paramShortDesc" value="#{MbProcessParametersSearch.newParameter.name}" 
									maxlength="200"
									label="#{lblCommon.name}"
									onblur="hideErrorField(this)">
							<f:validateLength minimum="3"/>
							<a4j:support event="onchange" reRender="paramShortDescErr" limitToList="true"/>	
						</h:inputText>
						<rich:message id="paramShortDescErr" for="paramShortDesc" styleClass="errorMarker"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="paramShortDescError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.name}"/>
						</h:outputFormat>
					</h:panelGrid>
			
					<h:outputLabel value="#{lblCommon.description}: " title="#{lblCommon.description}"/>
					<h:panelGroup>
						<h:inputTextarea id="paramFullDesc" value="#{MbProcessParametersSearch.newParameter.description}"
							rows="5" cols="150" onkeypress="if (!limitText(event,this,2000)) return false;" label="#{lblCommon.description}">
							<f:validateLength maximum="2000" />
						</h:inputTextarea>
						<rich:message for="paramFullDesc" styleClass="errorMarker"/>
					</h:panelGroup>
				</h:panelGrid>		
			</h:panelGroup>
			<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	    	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
						<h:outputText/>
						<bre:taggedCommandButton 
			            		value="#{lblForm.save}" type="submit" 
			                	reRender="#{rerenderList}" 
			                	action="#{MbProcessParametersSearch.save}" 
			                	onclick="if (!checkParameterFields()) return false; disableModalPanelBtns(this)"
			                	oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('prc_param_modal_panel')}.hide()"
			                	/>               
						<bre:taggedCommandButton 
								value="#{lblForm.cancel}"				                        		
								action="#{MbProcessParametersSearch.close}" immediate="true"
								oncomplete="#{rich:component('prc_param_modal_panel')}.hide()" 
								reRender="processParamEditForm">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>            
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>


	<ui:include src="/pages/utils/langConfirmPanel.jspx">
	   	<ui:param name="backingBean" value="#{MbProcessParametersSearch}"/>
	   	<ui:param name="rerenderList" value="processParamEditForm:paramShortDesc, processParamEditForm:paramFullDesc"/>
	   	<ui:param name="editElem" value="processParamEditForm:editLang"/>
	   	<ui:param name="newValue" value="#{MbProcessParametersSearch.newParameter.lang}"/>
	   	<ui:param name="subviewId" value="processParam"/>
		<ui:param name="formName" value="processParamEditForm" />
	</ui:include>
</ui:composition>
</html>
