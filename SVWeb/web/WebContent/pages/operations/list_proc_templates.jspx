<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles"
		xmlns:c="http://java.sun.com/jstl/core">
		
<ui:composition	template="/WEB-INF/templates/navigatable.jspx">
	<ui:define name="navigatableContent">
		<a4j:loadScript src="/js/stretch.js" />
		
		<style type="text/css">
			.leftAligned {
				text-align: left;
			}
		</style>
		
		<f:loadBundle var="lblOpr" basename="ru.bpc.sv2.ui.bundles.Opr"/>
		
		<!-- navigation bar -->
        <bpct:navBar pageName="#{lblOpr.processing_templates}"/>
        <a4j:queue name="queue" requestDelay="500" ignoreDupResponses="true" size="1" sizeExceededBehavior="dropNew"/>
        
        <script type="text/javascript">
			//<![CDATA[
			function handleEnter(event) {
				 if (event.keyCode == 13) {
					 document.getElementById('procTmplSearchForm:searchBtn').click(); 
					 return false; 
				} 
				return true;
			 }	
			//]]>
			</script>
			    
    	<h:form id="procTmplSearchForm" onkeypress="handleEnter(event)">			

			<!-- search panel -->
			<h:panelGroup styleClass="search_block" layout="block">
				<h:panelGroup layout="block" styleClass="search_block_inner1">
				<h:panelGroup layout="block" styleClass="search_block_inner2">
	                <h:panelGroup styleClass="search_block_left" layout="block">
	                	<h:panelGrid styleClass="fw" columns="2" columnClasses="top ,link-cont">
		                	<h:panelGrid styleClass="filter-table field-cont twoColumnTable" columns="4" columnClasses="firstCol,secondCol,firstCol,secondCol">
		            			<h:outputLabel for="operType" value="#{lblOpr.oper_type}: " title="#{lblOpr.oper_type}" />
								<h:selectOneMenu id="operType" value="#{MbProcessingTemplates.filter.operType}">
							    	<f:selectItem itemValue=""/>
							    	<f:selectItem itemValue="%" itemLabel="#{lblCommon.any}"/>
							    	<f:selectItems value="#{MbProcessingTemplates.operTypes}"/>
								</h:selectOneMenu>
		            			<h:outputLabel for="msgType" value="#{lblOpr.msg_type}: " title="#{lblOpr.msg_type}" />
								<h:selectOneMenu id="msgType" value="#{MbProcessingTemplates.filter.msgType}">
							    	<f:selectItem itemValue=""/>
							    	<f:selectItem itemValue="%" itemLabel="#{lblCommon.any}"/>
							    	<f:selectItems value="#{MbProcessingTemplates.msgTypes}"/>
								</h:selectOneMenu>

								<h:outputLabel for="procStage" value="#{lblOpr.processing_stage}: " title="#{lblOpr.processing_stage}" />
								<h:selectOneMenu id="procStage" value="#{MbProcessingTemplates.filter.procStage}">
							    	<f:selectItem itemValue=""/>
							    	<f:selectItems value="#{MbProcessingTemplates.procStages}"/>
								</h:selectOneMenu>
								
		            			<h:outputLabel for="sttlType" value="#{lblOpr.sttl_type}: " title="#{lblOpr.sttl_type}" />
								<h:selectOneMenu id="sttlType" value="#{MbProcessingTemplates.filter.sttlType}">
							    	<f:selectItem itemValue="%" itemLabel="#{lblCommon.any}"/>
							    	<f:selectItems value="#{MbProcessingTemplates.sttlTypes}"/>
								</h:selectOneMenu>
		            			<h:outputLabel for="reversal" value="#{lblOpr.reversal}: " title="#{lblOpr.reversal}" />
		            			<h:selectOneMenu 
									value="#{MbProcessingTemplates.filter.reversal}">
									<f:selectItem itemValue="" />
								<f:selectItems value="#{MbProcessingTemplates.yesNoList}"/>
								</h:selectOneMenu>
								
								<h:outputLabel for="Rule_sets" value="#{lblOpr.rule_set}: " title="#{lblOpr.rule_set}" />
		            			<h:selectOneMenu 
									value="#{MbProcessingTemplates.filter.ruleSetId}">
									<f:selectItem itemValue="" />
								<f:selectItems value="#{MbProcessingTemplates.ruleSets}"/>
								</h:selectOneMenu>

								<h:outputLabel for="issInst" value="#{lblOpr.iss_inst}: " title="#{lblOpr.iss_inst}" />
								<h:selectOneMenu
										value="#{MbProcessingTemplates.filter.issInstId}">
									<f:selectItem itemValue="" itemLabel=""/>
									<f:selectItems value="#{MbProcessingTemplates.issInsts}"/>
								</h:selectOneMenu>

								<h:outputLabel for="acqInst" value="#{lblOpr.acq_inst}: " title="#{lblOpr.acq_inst}" />
								<h:selectOneMenu
										value="#{MbProcessingTemplates.filter.acqInstId}">
									<f:selectItem itemValue="" itemLabel=""/>
									<f:selectItems value="#{MbProcessingTemplates.acqInsts}"/>
								</h:selectOneMenu>
                			</h:panelGrid>
	                		<h:panelGrid columns="1">
		                		<bre:taggedCommandButton
			                			action="#{MbProcessingTemplates.search}"
	        							reRender="rulesTable, procTmplBtnForm, #{MbProcessingTemplates.tabName}"
	        							id="searchBtn"
	                					image="/_img/icon_search.png" type="submit"
	                					value="#{lblForm.search}" style="width:85px;"
	                					onclick="disableModalPanelBtns(this);"
	                					oncomplete="updateHeight(); enableModalPanelBtns(this);"
	                					eventsQueue="queue"/>
	                			<h:panelGroup styleClass="link-clear" layout="block">
		                			<h:graphicImage url="/_img/icon_clear.png"/>
		                			<a4j:commandLink value="#{lblForm.clear_all}"	
						        			action="#{MbProcessingTemplates.clearFilter}"
						        			reRender="procTmplSearchForm, procTmplForm, procTmplBtnForm, #{MbProcessingTemplates.tabName}">
						        	</a4j:commandLink>
	            	    		</h:panelGroup>
	                		</h:panelGrid>
	                	</h:panelGrid>
	                	<a4j:outputPanel ajaxRendered="true">
			               	<h:graphicImage url="/_img/hd_searchblock.gif"  styleClass="hd-searchblock"/>
		    	           	<h:panelGroup styleClass="collapse-vert" layout="block"/>
	    	           	</a4j:outputPanel>
    	           	</h:panelGroup>
               	</h:panelGroup>
               	</h:panelGroup>
			</h:panelGroup>
		</h:form>
		<h:form id="procTmplForm">
			<h:panelGroup styleClass="search_result_block" layout="block">
		    	<h:panelGroup styleClass="search_result_block_left fix-ff" layout="block">
		    		<h:panelGroup id="mainTableWrapper" layout="block"
						styleClass="search_result_block_inner">
				    <rich:extendedDataTable
							id="rulesTable"
							tableState="#{MbProcessingTemplates.tableState}"
							styleClass="res-table"
							headerClass="res-table-header"
							rowClasses=",odd"
							selectedClass="res-table-selected"
							var="item"
							value="#{MbProcessingTemplates.rules}"
							selection="#{MbProcessingTemplates.itemSelection}"
							rows="#{MbProcessingTemplates.rowsNum}"
							height="255px"
							selectionMode="single"
							width="100%"
							enableContextMenu="true"
							noDataLabel="#{MbProcessingTemplates.searching?lblCommon['no_records_found'] : lblCommon['enter_search_criteria_above']}"
							reRender="procTmplBtnForm:btns_rules, #{MbProcessingTemplates.tabName}"
							onRowMouseDown="handleMouseClick(event)">

						<a4j:support event="onselectionchange" eventsQueue="queue"
								reRender="procTmplBtnForm:btns_rules, #{MbProcessingTemplates.tabName}" />

						<rich:column id="id" label="#{lblCommon.id}" title="ID" sortBy="#{'id'}" width="7%">
		                    <f:facet name="header">
		                    	<a4j:outputPanel layout="none">
									<script>updateHeight();</script>
									<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}"/>
								</a4j:outputPanel>
		                    </f:facet>
			                <h:outputText value="#{item.id}" title="#{item.id}"/>
						</rich:column>
						
						<rich:column id="oper_type" label="#{lblOpr.oper_type}" title="Operation type" sortBy="#{'operType'}" width="15%">
		                    <f:facet name="header">
		                    	<h:outputText value="#{lblOpr.oper_type}" title="#{lblOpr.oper_type}"/>
		                    </f:facet>
			                <h:outputText value="#{DictUtils.articles[item.operType]}" 
			                		title="#{DictUtils.articles[item.operType]}"			                		
			                		rendered="#{!item.anyOperType}"/>
			                <h:outputText value="#{lblCommon.any}" rendered="#{item.anyOperType}"/>
						</rich:column>

				        
				        <rich:column id="msg_type" label="#{lblOpr.msg_type}" title="Message type" sortBy="#{'msgType'}" width="12%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblOpr.msg_type}" title="#{lblOpr.msg_type}" />
			                </f:facet>
			                 <h:outputText value="#{DictUtils.articles[item.msgType]}" 
			                		title="#{DictUtils.articles[item.msgType]}"			                		
			                		rendered="#{!item.anyMsgType}"/>
			                <h:outputText value="#{lblCommon.any}" rendered="#{item.anyMsgType}"/>
			                
				        </rich:column>

				        <rich:column id="sttl_type" label="#{lblOpr.sttl_type}" title="Settlement type" sortBy="#{'sttlType'}" width="15%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblOpr.sttl_type}" title="#{lblOpr.sttl_type}"/>
			                </f:facet>
			                <h:outputText value="#{DictUtils.articles[item.sttlType]}" 
			                		title="#{DictUtils.articles[item.sttlType]}"
			                		
			                		rendered="#{!item.anySttlType}"/>
			                <h:outputText value="#{lblCommon.any}" rendered="#{item.anySttlType}"/>
				        </rich:column>

						<rich:column id="rule_set" label="#{lblOpr.rule_set}" title="Rule set" sortBy="#{'ruleSet'}" width="20%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblOpr.rule_set}" title="#{lblOpr.rule_set}"/>
			                </f:facet>
			                <bm:entityDisplay link = "true" contextType="ENTTRLST" bean="MbProcessingTemplates" value="#{item.ruleSetName != null ? item.ruleSetName : '...'}"/>
				        </rich:column>
				        
				        <rich:column id="reversal" label="#{lblOpr.reversal}" title="Reversal" width="10%" style="text-align:center" sortBy="#{'reversal'}">
				           	<f:facet name="header">
			                    <h:outputText value="#{lblOpr.reversal}" title="#{lblOpr.reversal}" />
			                </f:facet>
			                <h:outputText value="#{MbProcessingTemplates.yesNoMap[item.reversal]}"/>
				        </rich:column>

				        <rich:column id="process_stage" label="#{lblOpr.processing_stage}" title="Processing stage" width="15%">
				           <f:facet name="header">
			                    <h:outputText value="#{lblOpr.processing_stage}" title="#{lblOpr.processing_stage}" />
			                </f:facet>
			                <h:outputText value="#{DictUtils.articles[item.procStage]}"
			                		title="#{DictUtils.articles[item.procStage]}" 
			                		/>
				        </rich:column>
				        
				        <rich:column id="order" label="#{lblCommon.order}" title="Execution order" width="5%" sortBy="#{'execOrder'}">
				           <f:facet name="header">
			                    <h:outputText value="#{lblCommon.order}" title="#{lblCommon.order}" />
			                </f:facet>
			                <h:outputText value="#{item.execOrder}" />
				        </rich:column>
				    </rich:extendedDataTable>
				    </h:panelGroup>
				    <a4j:outputPanel ajaxRendered="true">
				    	<h:panelGroup id="show_more_panel" styleClass="show-more-vert show-more-result-tab" layout="block"/>
					    <h:graphicImage url="/_img/hd_searchblock.gif" styleClass="hd-searchblock"/>
					    <h:panelGroup styleClass="collapse-vert table-collapse-vert" layout="block"/>
				    </a4j:outputPanel>
			    </h:panelGroup>
			</h:panelGroup>
		</h:form>
		<h:form id="procTmplBtnForm">
		    <h:panelGroup layout="block" styleClass="bottom_search_result_block">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left">
		        	<h:panelGroup layout="block" styleClass="table_tools">
			        	<h:panelGrid styleClass="fw field-cont" columns="5"
			        			columnClasses="per-page-lbl,per-page-sel,nav-cont,pagecount, table_tools_state">
				        	<h:outputLabel for="rows_num" value="#{lblCommon.rows_per_page}" title="#{lblCommon.rows_per_page}"/>
							<h:selectOneMenu id="rows_num" value="#{MbProcessingTemplates.rowsNum}" styleClass="row_per_page" >
								<a4j:support event="onchange" reRender="rulesTable, dsRules, pagesNum, btns_rules, #{MbProcessingTemplates.tabName}"/>
                        		<f:selectItems value="#{CommonUtils.rowNumsList}"/>
		                    </h:selectOneMenu>

		                    <rich:datascroller maxPages="10" fastControls="hide"
		                    		pagesVar="pages" styleClass="res-datascroller"
				                    id="dsRules" for="rulesTable" reRender="#{MbProcessingTemplates.tabName}">
				            	<f:facet name="first">
				                	<h:outputText value="&lt;&lt;" styleClass="prev-next" />
								</f:facet>
				                <f:facet name="first_disabled">
				                    <h:outputText value="&lt;&lt;" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="last">
				                    <h:outputText  value="&gt;&gt;" styleClass="prev-next" />
				                </f:facet>
				                <f:facet name="last_disabled">
				                    <h:outputText value="&gt;&gt;" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="previous">
									<h:outputText value="#{lblCommon.prev}" styleClass="prev-next" />
				                </f:facet>
				                <f:facet name="previous_disabled">
				                	<h:outputText value="#{lblCommon.prev}" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="next">
				                	<h:outputText value="#{lblCommon.next}" styleClass="prev-next" />
				                </f:facet>
				                <f:facet name="next_disabled">
				                	<h:outputText value="#{lblCommon.next}" styleClass="prev-next-dis" />
				                </f:facet>
				                <f:facet name="pages">
				                </f:facet>
							</rich:datascroller>

		                    <h:panelGroup id="pagesNum">
		                       	<h:outputText styleClass="strongClass" value="#{pages} "/>
		                       	<h:outputText value=" #{lblCommon.pages}"/>
                                <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
                                <h:outputText styleClass="strongClass" value="#{MbProcessingTemplates.rules.rowCount}"/>
                                <h:outputText value=" #{lblCommon.records}"/>
                                <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
		                    </h:panelGroup>
		                    
		                    <h:panelGroup>
								<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
									onclick="saveTableState();"/>
								<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
									onclick="deleteTableState();"/>
								<a4j:queue name="tablestatequeue"/>
								<a4j:jsFunction name="saveTableState" action="#{MbProcessingTemplates.saveTableStateDB}" eventsQueue="tablestatequeue"/>
								<a4j:jsFunction name="deleteTableState" action="#{MbProcessingTemplates.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
							</h:panelGroup>
						</h:panelGrid>
					</h:panelGroup>

		            <h:panelGrid id="btns_rules" columns="3" styleClass="buttons_block">
				    	<bre:taggedCommandButton id="addRuleBtn"
	                      		reRender="opr_proc_template_header, opr_proc_template_div"
	                      		value="#{lblForm.add}"
                    			oncomplete="#{rich:component('opr_proc_template_panel')}.show()"
	                      		action="#{MbProcessingTemplates.add}"
	                      		image="/images/create_doc.gif"
	                      		/>
	                    <bre:taggedCommandButton id="editRuleBtn"
	                      		reRender="opr_proc_template_header, opr_proc_template_div"
	                      		value="#{lblForm.edit}"
	                      		action="#{MbProcessingTemplates.edit}"
                    			oncomplete="#{rich:component('opr_proc_template_panel')}.show()"
	                      		disabled="#{MbProcessingTemplates.activeRule == null}"
	                      		image="/images/edit.gif"
	                      		/>
						<bre:taggedCommandButton id="deleteRuleBtn"
	                      		value="#{lblForm.delete}"
	                      		oncomplete="#{rich:component('deleteViewId:confirmPanel')}.show()"
	                      		disabled="#{MbProcessingTemplates.activeRule == null}"
	                      		image="/images/delete.gif"
	                      		/>
					</h:panelGrid>
				</h:panelGroup>
		    </h:panelGroup>
	    </h:form>

        <h:form>
            <a4j:jsFunction name="storeTab" ajaxSingle="true" limitToList="true" reRender="#{MbProcessingTemplates.tabName}">
                <a4j:actionparam name="tabName" assignTo="#{MbProcessingTemplates.tabName}" />
            </a4j:jsFunction>
        </h:form>

		<h:panelGroup styleClass="workplace" id="workplacePanel" layout="block">
	    	<rich:tabPanel switchType="client" id="details" tabClass="tab-cell"
	    			activeTabClass="active-tab-cell" headerClass="tabs" headerSpacing="0px"
	    			contentClass="tab-content" selectedTab="#{MbProcessingTemplates.tabName}">

				<rich:tab ontabenter="storeTab('detTab')" label="#{lblCommon.details}" name="detTab">
       				<f:facet name="label">
       					<h:panelGroup styleClass="first tab-label" layout="block">
       						<h:outputText value="#{lblCommon.details}" title="#{lblCommon.details}"/>
       					</h:panelGroup>
       				</f:facet>

      					<h:panelGroup id="detTab" layout="block">
      						<ui:include src="/pages/operations/proc_template_details.jspx" />
							<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons"/>
      					</h:panelGroup>
			    </rich:tab>
			    
			    <rich:tab ontabenter="storeTab('rulesTab')" label="#{lblRul.rules}" style="height:100%;">
       				<f:facet name="label">
       					<h:panelGroup styleClass="first tab-label" layout="block">
       						<h:outputText value="#{lblRul.rules}" title="#{lblRul.rules}" />
       					</h:panelGroup>
       				</f:facet>

					<h:panelGroup id="rulesTab" layout="block" styleClass="carddata-wrapper" style="height: 100%;overflow:hidden;position:relative;">
      					<ui:include src="/pages/rules/list_rules.jspx" />
       				</h:panelGroup>
			    </rich:tab>

		    </rich:tabPanel>
        </h:panelGroup>
		
		<ui:include src="/pages/operations/proc_template_edit.jspx">
			<ui:param name="rerenderList" value="rulesTable, procTmplBtnForm, #{MbProcessingTemplates.tabName},rulesForm"/>
		</ui:include>
		
		<ui:include src="/pages/utils/confirmPanel.jspx">
			<ui:param name="backingBean" value="#{MbProcessingTemplates}"/>
			<ui:param name="yesAction" value="delete"/>
			<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
			<ui:param name="rerenderList" value="rulesTable, procTmplBtnForm, #{MbProcessingTemplates.tabName}"/>
			<ui:param name="confirmQuestion" value=" "/> 
			<ui:param name="subviewId" value="deleteViewId"/>
			<ui:param name="yes" value="#{lblForm.ok}"/>
			<ui:param name="no" value="#{lblForm.cancel}"/>
		</ui:include>
		
		<script>
			//<![CDATA[
			/*
				Short manual for the tabs stretching
				
				* Put in head of the page a link to "streach.css" style and "streach.js" script.
				* Copy "updateHeight()" from here to end of the page.
				* Chage the function as you need. Change the forms names
				* Set id="workplacePanel" и layout="block" for workplace panel					
				* Set style="height:100%" for rich:tabPanel, rich:tab. Set style="height: 100%;overflow:hidden;position:relative;" 
				for h:panelGroup surrounding ui:include. Below lying elements must not have a har-coded height in theirs styles.
				* Surround the tables with h:panelGroup layout="block" style="padding:0px;margin:0px;"
				* Correct updateHeight() in correspondence with wrappers you wrote.
				* Add to header of one of the columns of the tables updateHeight() call. Every time the table is rendered, udpateHeight() will be called.
				* If the result table is rich:extendedDataTable you need surround it with a wrapper panel too, but also you need to set style with hard-coded
				height to this wrapper. For this wrapper you need call Stretch.updateTreeHeightByFixedHeight(). 
			*/
			
			function updateHeight(){
	            updateGridHeight();
	        }

	        layout =
	                {
	                    SEARCH_FORM_ID:                 'procTmplSearchForm',
	                    SEARCH_RESULT_FORM_ID:          'procTmplForm',
	                    SEARCH_RESULT_FORM_WRAPPER_ID:  'mainTableWrapper',
	                    SEARCH_RESULT_FOOTER_FORM_ID:   'procTmplBtnForm',
	                    TAB_PANEL_ID:                   'workplacePanel',

	                    TAB_DATA:      [{
	                                    TAB_FORM_ID:            'rulesDetailsForm',
	                                    TAB_FORM_WRAPPER_ID:    'rulesDetailsWrapper',
	                                    CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS
	                                    }, {
	                                    TAB_FORM_ID:            'rulesForm',
	                                    TAB_FORM_WRAPPER_ID:    'rulesTableWrapper',
	                                    CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS + Stretch.LABEL
	                                    }, {
	                                    TAB_FORM_ID:            'ruleParamsForm',
	                                    TAB_FORM_WRAPPER_ID:    'ruleParamsTableWrapper',
	                                    CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS + Stretch.LABEL
	                                    }]

	                };
	        jQuery(window).resize(updateHeight);
			
			updateHeight();
			//]]>
		</script>
    </ui:define>
</ui:composition>
</html>
