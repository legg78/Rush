<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<script type="text/javascript">//<!--
		function checkOperTypeMapFields() {
			var checked = checkField('operTypeMapEditForm:networkOperType');
			checked = checkField('operTypeMapEditForm:operType') && checked;
			checked = checkField('operTypeMapEditForm:priority') && checked;
			
			return checked;
		}
		//-->
	</script>

	<rich:modalPanel id="operTypeMapModalPanel" autosized="true" minWidth="200" minHeight="100">
      	<f:facet name="header">
      		<h:panelGroup id="operTypeMapModalHeader">
      			<h:outputText value="#{lblNet.new_oper_type_map}" rendered="#{MbOperTypeMaps.newMode}"/>
      			<h:outputText value="#{lblNet.edit_oper_type_map}" rendered="#{MbOperTypeMaps.editMode}"/>
      		</h:panelGroup>
        </f:facet>
  	    <f:facet name="controls">
      	</f:facet>
		<h:form id="operTypeMapEditForm">
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
		        <h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250 o_checkbox_column">
		
					<h:outputLabel value="* #{lblNet.network_oper_type}: " title="#{lblNet.network_oper_type}"/>
					<h:panelGrid cellpadding="0" cellspacing="0" style="text-align:left">
						<h:inputText id="networkOperType"
								value="#{MbOperTypeMaps.newOperTypeMap.networkOperType}"
								maxlength="8" label="#{lblNet.network_oper_type}"
								onchange="hideErrorField(this)"
								/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="networkOperTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblNet.network_oper_type}"/>
						</h:outputFormat>
					</h:panelGrid>
		
					<h:outputLabel value="* #{lblOpr.oper_type}: " title="#{lblOpr.oper_type}"/>
					<h:panelGrid cellpadding="0" cellspacing="0" style="text-align:left">
						<h:selectOneMenu id="operType"
								value="#{MbOperTypeMaps.newOperTypeMap.operType}"
								onchange="hideErrorField(this)">
							<f:selectItem itemValue=""/>
						    <f:selectItems value="#{MbOperTypeMaps.operTypes}"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="operTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblOpr.oper_type}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel value="* #{lblCommon.priority}: " title="#{lblCommon.priority}"/>
					<h:panelGrid cellpadding="0" cellspacing="0" style="text-align: left !important;">
						<h:inputText id="priority" 
								value="#{MbOperTypeMaps.newOperTypeMap.priority}" 
								label="#{lblCommon.priority}" maxlength="4"
								onkeypress="if (!numbersOnly(this, event)) return false;"
								onchange="hideErrorField(this)"/>
						<rich:message for="priority" id="priorityErr" styleClass="errorMarker"
								showDetail="false" showSummary="true"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="priorityError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.priority}"/>
						</h:outputFormat>
					</h:panelGrid>
					
				</h:panelGrid>
			</h:panelGroup>
			<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	      	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
	      	    		<h:outputText/>
						<bre:taggedCommandButton value="#{lblForm.save}" type="submit" 
								action="#{MbOperTypeMaps.save}"
								reRender="#{rerenderList}"
								onclick="if (!checkOperTypeMapFields()) return false; disableModalPanelBtns(this)"
								oncomplete="enableModalPanelBtns(this);if (#{usession.noErrorResponse}) #{rich:component('operTypeMapModalPanel')}.hide()"
								/>
		               	<bre:taggedCommandButton
		                       	value="#{lblForm.cancel}" action="#{MbOperTypeMaps.close}"
		                       	immediate="true" limitToList="true"
		                       	oncomplete="#{rich:component('operTypeMapModalPanel')}.hide()"
		                       	reRender="operTypeMapEditForm">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>
</ui:composition>
</html>
					