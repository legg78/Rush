<?xml version="1.0" encoding="UTF-8"?>
<html   xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<rich:modalPanel id="articleViewModalPanel" autosized="true" minWidth="200" minHeight="50">
   	    <f:facet name="header">
   	    	<h:panelGroup>
	        	<h:outputText value="#{lblCommon.article}"/>	        	
        	</h:panelGroup>
   		</f:facet>
  	    <f:facet name="controls">
      	</f:facet>
		<h:form id="articleViewForm">
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">        
					
					<h:outputLabel for="lang" value="#{lblCommon.lang_selector}: " title="#{lblCommon.lang_selector}" />
					<h:selectOneMenu id="lang"
								disabled="true"
								value="#{MbDictionary.activeArticle.lang}">				
					    <f:selectItems value="#{MbDictionary.languages}"/>
					</h:selectOneMenu>
					
					<h:outputText/>
					<rich:separator height="2" lineType="dotted" styleClass="separator"/>
					
					<h:outputLabel value="#{lblCommon.name}: " title="#{lblCommon.name}" />
					<h:inputText value="#{MbDictionary.activeArticle.name}" readonly="true"/>
					
					<h:outputLabel value="#{lblCommon.description}: " title="#{lblCommon.description}" />
					<h:inputText value="#{MbDictionary.activeArticle.description}" readonly="true"/>
					
					<h:outputLabel value="#{lblCommon.code}: " title="#{lblCommon.code}" />
					<h:inputText value="#{MbDictionary.activeArticle.code}" readonly="true"/>

                    <h:outputLabel for="module_code" value="#{lblCommon.module_code}: " title="#{lblCommon.module_code}"/>
                    <h:selectOneMenu id="module_code" disabled="true" value="#{MbDictionary.activeArticle.moduleCode}">
                        <f:selectItem itemValue=""/>
                        <f:selectItems value="#{MbDictionary.moduleCodes}"/>
                    </h:selectOneMenu>

					<h:outputLabel value="#{lblCommon.editable}: " title="#{lblCommon.editable}" />
					<h:selectBooleanCheckbox value="#{MbDictionary.activeArticle.editable}" disabled="true"/>
					
				</h:panelGrid>		
			</h:panelGroup>
			
      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	       	    	<h:panelGrid columns="2" columnClasses="width99P,,paddingR12">
	       	    		<h:outputText/>
	       	    		
						<bre:taggedCommandButton value="#{lblForm.close}" immediate="true"
								action="#{MbDictionary.close}"
								oncomplete="#{rich:component('articleViewModalPanel')}.hide()">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset"/>
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>   
   	</rich:modalPanel>
   	
</ui:composition>
</html>