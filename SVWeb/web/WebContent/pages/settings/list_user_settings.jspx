<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:o="http://openfaces.org/"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition	template="/WEB-INF/templates/navigatable.jspx">
    <ui:define name="navigatableContent">
    	<f:loadBundle var="lblNtf" basename="ru.bpc.sv2.ui.bundles.Ntf"/>

		<h:inputHidden value="#{MbUserSettingParams.restore}"/>
    	
	    <h:form>
			<h:panelGroup styleClass="crumbs" layout="block">
           		<h:outputText styleClass="crumbsbegin" value="#{lblCommon.user_settings}"/>
           	</h:panelGroup>
		</h:form>

        <h:form>
            <a4j:jsFunction name="storeSettingTab" ajaxSingle="true" limitToList="true" reRender="#{MbUserSettingParams.tabName}"
                            ignoreDupResponses="true" oncomplete="returnFormFields();">
                <a4j:actionparam name="tabName" assignTo="#{MbUserSettingParams.tabName}" />
            </a4j:jsFunction>
        </h:form>

		<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
			<rich:tabPanel switchType="client" id="fclTabPanel" tabClass="tab-cell"
			    	activeTabClass="active-tab-cell" headerClass="tabs" headerSpacing="0px"
			    	contentClass="tab-content" selectedTab="#{MbUserSettingParams.tabName}">
				<rich:tab ontabenter="storeSettingTab('settingsTab')" label="#{lblCommon.settings}" name="settingsTab">
					<f:facet name="label">
						<h:panelGroup styleClass="first tab-label" layout="block">
							<h:outputText value="#{lblCommon.settings}" title="#{lblCommon.settings}"/>
						</h:panelGroup>
					</f:facet>
					<h:panelGroup id="settingsTab" layout="block" 
							style="height: 510px; overflow-y: hidden;">
						<ui:include src="/pages/settings/list_settings_tree.jspx"></ui:include>
					</h:panelGroup>
				</rich:tab>

				<rich:tab ontabenter="storeSettingTab('contactsTab')" label="#{lblCommon.contacts}" name="contactsTab" rendered="#{usession.inRole['VIEW_CONTACT']}">
					<f:facet name="label">
						<h:panelGroup styleClass="first tab-label" layout="block">
							<h:outputText value="#{lblCommon.contacts}" title="#{lblCommon.contacts}"/>
						</h:panelGroup>
					</f:facet>
       				<h:panelGroup id="contactsTab" layout="block" 
       						style="height: 510px; overflow-y: hidden;">
						<ui:include src="/pages/contacts/contactsTableBottom.jspx">
							<ui:param name="tableHeight" value="433px"></ui:param>
						</ui:include>
					</h:panelGroup>
				</rich:tab>
				
				<rich:tab ontabenter="storeSettingTab('personalDataTab')" label="#{lblCommon.personal_data}" name="personalDataTab" rendered="#{usession.inRole['SEARCH_PERSON']}">
					<f:facet name="label">
						<h:panelGroup styleClass="first tab-label" layout="block">
							<h:outputText value="#{lblCommon.personal_data}" title="#{lblCommon.personal_data}"/>
						</h:panelGroup>
					</f:facet>
       				<h:panelGroup id="personalDataTab" layout="block" 
       						style="height: 540px; overflow-y: hidden;">
						<ui:include src="/pages/common/persons/personDetailsBottom.jspx"></ui:include>
					</h:panelGroup>
				</rich:tab>

				<rich:tab ontabenter="storeSettingTab('customEventsTab')" label="#{lblNtf.custom_events}" name="customEventsTab" rendered="#{usession.inRole['VIEW_CUSTOM_EVENTS']}">
					<f:facet name="label">
						<h:panelGroup styleClass="first tab-label" layout="block">
							<h:outputText value="#{lblNtf.custom_events}" title="#{lblNtf.custom_events}"/>
						</h:panelGroup>
					</f:facet>
       				<h:panelGroup id="customEventsTab" layout="block" 
       						style="height: 510px; overflow-y: hidden;">
						<ui:include src="/pages/notifications/userCustomEventsListInline.jspx"></ui:include>
					</h:panelGroup>
				</rich:tab>
			</rich:tabPanel>
		</h:panelGroup>
	</ui:define>
</ui:composition>
</html>
