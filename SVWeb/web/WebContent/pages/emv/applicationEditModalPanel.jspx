<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>

	<rich:modalPanel id="applicationEditModalPanel" autosized="true"
		minWidth="300" minHeight="100">
		<f:facet name="header">
			<h:panelGroup id="applicationEditModalPanelHeader">
				<h:outputText value="#{lblEmv.edit_application}"
					rendered="#{MbEmvApplication.editMode}" />
				<h:outputText value="#{lblEmv.new_application}"
					rendered="#{MbEmvApplication.newMode}" />
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
		</f:facet>
		<h:form id="applicationEditModalPanelForm">
			<script type="text/javascript">
				//<!--
				oldValue["applicationEditModalPanelForm"] = "#{MbEmvApplication.editingItem.lang}";
				
				function checkAppFields() {
					var checked = true;
					
					if (document.getElementById('applicationEditModalPanelForm:name').value == "") {
						document.getElementById('applicationEditModalPanelForm:nameError').style.display = "inline";
						checked = false;
					}
					
					if (document.getElementById('applicationEditModalPanelForm:schemeId').value == "") {
						document.getElementById('applicationEditModalPanelForm:schemeIdError').style.display = "inline";
						checked = false;
					}	
					
					if (document.getElementById('applicationEditModalPanelForm:rid').value == "") {
						document.getElementById('applicationEditModalPanelForm:ridError').style.display = "inline";
						checked = false;
					}
					return checked;
				}
				//-->
			</script>
			
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata"
					columnClasses="firstColModal, width250">

					<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}" />
					<h:panelGrid columns="1" cellpadding="0" cellspacing="0">
						<h:selectOneMenu
							value="#{MbEmvApplication.editingItem.lang}"
							rendered="#{MbEmvApplication.newMode}">
							<f:selectItems value="#{MbEmvApplication.languages}" />
						</h:selectOneMenu>
						<h:selectOneMenu id="editLang"
							value="#{MbEmvApplication.editingItem.lang}"
							rendered="#{MbEmvApplication.editMode}"
							onchange="document.getElementById('emvApp:confirmPanelForm:newValue').value = this.value;
											#{rich:component('emvApp:confirmPanel')}.show()">
							<f:selectItems value="#{MbEmvApplication.languages}" />
						</h:selectOneMenu>
					</h:panelGrid>
									
					<h:outputLabel for="name" value="* #{lblEmv.name}:" title="#{lblEmv.name}" />
					<h:panelGrid columns="1" cellpadding="0" cellspacing="0">
						<h:inputText id="name" label="#{lblEmv.name}"
							required="true"
							value="#{MbEmvApplication.editingItem.name}"
							onblur="hideErrorField(this)">
						</h:inputText>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="nameError" style="display:none;">
							<f:param name="fieldName" value="#{lblEmv.name}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel for="schemeId" value="* #{lblEmv.scheme}:" />
					<h:panelGrid columns="1" cellpadding="0" cellspacing="0">
						<h:selectOneMenu id="schemeId"
							required="true"
							label="#{lblEmv.scheme}"
							value="#{MbEmvApplication.editingItem.applSchemeId}"
							onblur="hideErrorField(this)">
							<f:selectItem itemValue=""/>
							<f:selectItems value="#{MbEmvApplication.emvSchemes}" />
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="schemeIdError" style="display:none;">
							<f:param name="fieldName" value="#{lblEmv.scheme}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel for="aid" value="#{lblEmv.aid}:" title="#{lblEmv.aid}" />
					<h:inputText id="aid" label="#{lblEmv.aid}"
							value="#{MbEmvApplication.editingItem.aid}"/>

					<h:outputLabel for="rid" value="* #{lblSec.rid}:" title="#{lblSec.rid}" />
					<h:panelGrid columns="1" cellpadding="0" cellspacing="0">
						<h:selectOneMenu id="rid"
							required="true"
							label="#{lblSec.rid}"
							value="#{MbEmvApplication.editingItem.idOwner}"
							onblur="hideErrorField(this)">
							<f:selectItem itemValue=""/>
							<f:selectItems value="#{MbEmvApplication.rid}" />
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="ridError" style="display:none;">
							<f:param name="fieldName" value="#{lblSec.rid}"/>
						</h:outputFormat>
					</h:panelGrid>
					
					<h:outputLabel for="modId" value="#{lblEmv.modId}:" title="#{lblEmv.modId}" />
					<h:selectOneMenu id="modId"
						label="#{lblEmv.modId}"
						value="#{MbEmvApplication.editingItem.modId}"
						onblur="hideErrorField(this)">
						<f:selectItem itemValue=""/>
						<f:selectItems value="#{MbEmvApplication.emvAppPar}" />
					</h:selectOneMenu>
					
					<h:outputLabel for="pix" value="#{lblEmv.pix}:" title="#{lblEmv.pix}" />
					<h:inputText id="pix" label="#{lblEmv.pix}"
							value="#{MbEmvApplication.editingItem.pix}"/>
							
				</h:panelGrid>
			</h:panelGroup>

			<h:panelGroup layout="block"
				styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block"
					styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.save}" type="submit"
							action="#{MbEmvApplication.saveEditingApplication}"
							onclick="if (!checkAppFields()) return false; disableModalPanelBtns(this)"
							oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) 
			                   		#{rich:component('applicationEditModalPanel')}.hide()"
							reRender="ApplicationTable, ApplicationDataScroller, pagesNum, btnPanel, #{MbEmvApplication.tabName}" />
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbEmvApplication.resetEditingApplication}"
							immediate="true" limitToList="true"
							oncomplete="#{rich:component('applicationEditModalPanel')}.hide()"
							reRender="applicationEditModalPanelForm">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/langConfirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbEmvApplication}" />
		<ui:param name="rerenderList"
			value="applicationEditModalPanelForm:name" />
		<ui:param name="editElem"
			value="applicationEditModalPanelForm:editLang" />
		<ui:param name="newValue"
			value="#{MbEmvApplication.editingItem.lang}" />
		<ui:param name="subviewId" value="emvApp" />
		<ui:param name="formName" value="applicationEditModalPanelForm" />
	</ui:include>
	
</ui:composition>
</html>