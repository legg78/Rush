<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
<xsl:output method="text" encoding="utf-8" indent="no"/>
  <xsl:template match="report">
    <xsl:text>Due date is </xsl:text>
    <xsl:value-of select="due_date"/>
    <xsl:text>. Need to perform repayment </xsl:text>
    <xsl:value-of select="min_amount_due"/>
    <xsl:text>. Total amount due is </xsl:text>
    <xsl:value-of select="total_amount_due"/>
    <xsl:text>.</xsl:text>
  </xsl:template>
</xsl:stylesheet>