<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	xmlns:bpct="http://www.bpc.ru/jsf/tiles"
	xmlns:rich="http://richfaces.org/rich">
	<ui:include src="custom.jspx" />

	<link rel="stylesheet" type="text/css"
		href="#{request.contextPath}/css/stretch.css" />
	<link rel="stylesheet" type="text/css"
		href="#{request.contextPath}/css/bpcpc.css" />
	<script type="text/javascript" src="#{request.contextPath}/js/stretch.js" />
			

	<h:form id="reportForm">
		<rich:messages id="messages" layout="list">
			<f:facet name="errorMarker">
				<h:graphicImage value="/images/errorMarker.jpg" />
			</f:facet>
		</rich:messages>

		<a4j:region>
			<h:panelGroup layout="block" id="customersSearchFormDiv">
				<h:panelGroup layout="block" styleClass="search-block-tabs-head">
					<h:panelGroup layout="block"
						styleClass="search-block-tabs-head-inner1" />
				</h:panelGroup>
				<h:panelGroup layout="block" styleClass="search_block_tabs_inner1">
					<rich:tabPanel switchType="ajax" tabClass="tab-cell1"
						style="overflow:visible;" activeTabClass="active-tab-cell1"
						inactiveTabClass="inactive-tab-cell1" headerClass="tabs1"
						headerSpacing="0px" contentClass="oneColumn_block">
						<rich:tab label="#{lblRptc.general}" name="commonTab">

							<f:facet name="label">
								<h:panelGroup styleClass="first1 tab-label1" layout="block">
									<h:outputText value="#{lblRptc.general}"
										title="#{lblRptc.general}" />
								</h:panelGroup>
							</f:facet>

							<h:panelGrid
								styleClass="filter-table field-cont oneColumnTable shrink_tab"
								columns="2" columnClasses="firstCol4,secondCol">
								<h:outputLabel value="#{lblRptc.report_name}" for="name" />
								<h:inputText id="name"
									value="#{editReportTemplate.reportTemplate.name}"/>

								<h:outputLabel value="#{lblCommon.description}: "
									for="descr" />

								<h:inputTextarea cols="100" rows="10" id="descr"
									value="#{editReportTemplate.reportTemplate.description}" />

							</h:panelGrid>

						</rich:tab>
						<rich:tab label="#{lblRptc.displayed_parameters}"  name="outParamTab">
							<f:facet name="label">
								<h:panelGroup styleClass="first1 tab-label1" layout="block">
									<h:outputText value="#{lblRptc.displayed_parameters}"
										title="#{lblRptc.displayed_parameters}" />
								</h:panelGroup>
							</f:facet>

							<ui:include src="outputParams/content.jspx" />

						</rich:tab>
						<rich:tab label="#{lblPrs.sorting}"  name="sortTab">
							<f:facet name="label">
								<h:panelGroup styleClass="first1 tab-label1" layout="block">
									<h:outputText value="#{lblPrs.sorting}"
										title="#{lblPrs.sorting}" />
								</h:panelGroup>
							</f:facet>

							<ui:include src="sorting2/content.jspx" />

						</rich:tab>
						<rich:tab label="#{lblCommon.conditions}" name="conditionsTab">
							<f:facet name="label">
								<h:panelGroup styleClass="first1 tab-label1" layout="block">
									<h:outputText value="#{lblCommon.conditions}"
										title="#{lblCommon.conditions}" />
								</h:panelGroup>
							</f:facet>

							<ui:include src="conditions/content.jspx" />

						</rich:tab>
					</rich:tabPanel>

				</h:panelGroup>
			</h:panelGroup>
		</a4j:region>
		<ui:include src="buttons.jspx" />
	</h:form>
</ui:composition>
