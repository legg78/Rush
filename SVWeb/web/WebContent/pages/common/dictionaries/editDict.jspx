<?xml version="1.0" encoding="UTF-8"?>
<html   xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>

	<rich:modalPanel id="common_dict_modal_panel" autosized="true" minWidth="200" minHeight="100">
   	    <f:facet name="header">
   	    	<h:panelGroup>
	        	<h:outputText value="#{lblCommon.new_dict}" rendered="#{MbDictionary.managingNewDict}"/>
	        	<h:outputText value="#{lblCommon.edit_dict}" rendered="#{!MbDictionary.managingNewDict}"/>
        	</h:panelGroup>
   		</f:facet>
  	    <f:facet name="controls">
      	</f:facet>
      	<h:panelGroup>
			<h:form id="commonDictEditForm">
				<script type="text/javascript">
//<!--
					oldValue["commonDictEditForm"] = "#{MbDictionary.newDict.lang}";
					
					function checkDictFields() {
						var checked = true;
						
						if (document.getElementById('commonDictEditForm:dict_code').value == "") {
							document.getElementById('commonDictEditForm:dict_codeError').style.display = "inline";
							checked = false;
						}
						
						if (document.getElementById('commonDictEditForm:dict_name').value == "") {
							document.getElementById('commonDictEditForm:dict_nameError').style.display = "inline";
							checked = false;
						}
						
						return checked;
					}
				//-->
				</script>
				<!-- Needs outer form! -->
				<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
					<h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal nowrap top, width250">
			
						<h:outputLabel for="dict_code" value="* #{lblCommon.dictionary}: " title="#{lblCommon.dictionary}"/>
						<h:panelGrid columns="1" cellspacing="0" cellpadding="0" >
							<h:inputText id="dict_code" value="#{MbDictionary.newDict.code}" 
									maxlength="4" label="Dict code"
									readonly="#{!MbDictionary.managingNewDict}"
									onblur="hideErrorField(this)">
								<f:validateLength minimum = "4"/>
								<f:validator validatorId="bpc.RegExValidator"/>
								<f:attribute name="pattern" value="[A-Za-z0-9]{4}"/>
								<a4j:support event="onchange" reRender="dict_codeErr" limitToList="true"/>
							</h:inputText>
							<rich:message for="dict_code" id="dict_codeErr" styleClass="errorMarker"/>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="dict_codeError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.dictionary}"/>
							</h:outputFormat>
						</h:panelGrid>
						
						<h:outputLabel for="lang" value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
						<h:selectOneMenu id="lang" value="#{MbDictionary.newDict.lang}" rendered="#{MbDictionary.managingNewDict}">
							<f:selectItems value="#{MbDictionary.languages}"/>
						</h:selectOneMenu>
						<h:selectOneMenu id="editLang" value="#{MbDictionary.newDict.lang}"
								rendered="#{!MbDictionary.managingNewDict}"
								onchange="document.getElementById('dict:confirmPanelForm:newValue').value = this.value;
										#{rich:component('dict:confirmPanel')}.show()">
							<f:selectItems value="#{MbDictionary.languages}"/>
						</h:selectOneMenu>
			
						<h:outputLabel for="dict_name" value="* #{lblCommon.name}:  " title="#{lblCommon.name}"/>
						<h:panelGrid columns="1" cellspacing="0" cellpadding="0" >
						<h:inputText id="dict_name" label="#{lblCommon.name}"
									value="#{MbDictionary.newDict.name}"
									maxlength="200"
									onblur="hideErrorField(this)">
								<f:validateLength minimum = "4"/>
								<a4j:support event="onchange" reRender="dict_nameErr" limitToList="true"/>
							</h:inputText>
							<rich:message for="dict_name" id="dict_nameErr" styleClass="errorMarker"/>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="dict_nameError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.name}"/>
							</h:outputFormat>
						</h:panelGrid>
			
						<h:outputLabel for="numeric" value="#{lblCommon.numeric}: " title="#{lblCommon.numeric}"/>
						<h:selectBooleanCheckbox id="numeric" value="#{MbDictionary.newDict.numeric}"
									disabled="#{!MbDictionary.managingNewDict}"/>
			
					</h:panelGrid>
				</h:panelGroup>
				<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
					<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
			      	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
			      	    		<h:outputText/>
							<bre:taggedCommandButton value="#{lblForm.save}"
									action="#{MbDictionary.saveDict}"
									onclick="if (!checkDictFields()) return false; disableModalPanelBtns(this)"
			                   		oncomplete="enableModalPanelBtns(this);if (#{usession.noErrorResponse}) #{rich:component('common_dict_modal_panel')}.hide()"
									reRender="dicts, dsDicts, pagesNum, dictBtns, detailsTab, articles"
									type="submit"
									/>
							<bre:taggedCommandButton value="#{lblForm.cancel}" immediate="true"
									action="#{MbDictionary.close}" reRender="common_dict_modal_div"
									oncomplete="#{rich:component('common_dict_modal_panel')}.hide()">
								<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
							</bre:taggedCommandButton>
						</h:panelGrid>
					</h:panelGroup>
				</h:panelGroup>
			</h:form>
		</h:panelGroup>
   	</rich:modalPanel>

	<ui:include src="/pages/utils/langConfirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbDictionary}"/>
		<ui:param name="rerenderList" value="commonDictEditForm:dict_name"/>
		<ui:param name="editElem" value="commonDictEditForm:editLang"/>
		<ui:param name="newValue" value="#{MbDictionary.newDict.lang}"/>
		<ui:param name="subviewId" value="dict"/>
		<ui:param name="formName" value="commonDictEditForm" />
	</ui:include>
</ui:composition>
</html>

