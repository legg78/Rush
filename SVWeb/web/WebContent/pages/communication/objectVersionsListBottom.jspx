<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:o="http://openfaces.org/">
<ui:composition>
	<f:loadBundle var="lblCmn" basename="ru.bpc.sv2.ui.bundles.Cmn"/>
	
	<script type="text/javascript">//<!--
		function enableObjectVerButtons() {
			var disableBottom = #{MbIfConfig.paramObjectId == null};
			var rowId = "row_" + 
					document.getElementById("objectVerForm:stdTreeTable").getSelectedNodeKey();
			if (disableBottom || document.getElementById("objectVerForm:stdTreeTable").isSelectionEmpty()) {
				document.getElementById("objectVerForm:addBtn").disabled = true;
				document.getElementById("objectVerForm:editBtn").disabled = true;
				document.getElementById("objectVerForm:deleteBtn").disabled = true;
				document.getElementById("objectVerForm:configBtn").disabled = true;
			} else {
				document.getElementById("objectVerForm:addBtn").disabled = false;
				document.getElementById("objectVerForm:configBtn").disabled = false;
				if (document.getElementsByClassName(rowId)[0].className.indexOf("isStandard") >= 0) {
					document.getElementById("objectVerForm:editBtn").disabled = true;
					document.getElementById("objectVerForm:deleteBtn").disabled = true;
				} else {
					document.getElementById("objectVerForm:editBtn").disabled = false;
					document.getElementById("objectVerForm:deleteBtn").disabled = false;
				}
			}
		}
		
		function checkObjectVersionFields() {
			var checked = true;
			
			if (document.getElementById('objectVerEditForm:versionId').value == "") {
				document.getElementById('objectVerEditForm:versionIdError').style.display = "inline";
				checked = false;
			}
			if (document.getElementById('objectVerEditForm:newStartDateInputDate').value == "") {
				document.getElementById('objectVerEditForm:newStartDateError').style.display = "inline";
				checked = false;
			}
			
			return checked;
		}
	//-->
	</script>

   	<h:form id="objectVerForm">
		<h:panelGroup style="position: relative; zoom: 1;" layout="block">
			<h:panelGroup id="stdTreeTableWrapper" layout="block" style="padding:0px;margin:0px;">
				<o:treeTable id="stdTreeTable" var="stdVer"
						expansionState="allExpanded"
						headerHorizSeparator="1px solid #D7DAC2"
						headerVertSeparator="1px solid #D7DAC2"
						headerSectionClass="res-tree-table-header"
						commonHeaderRowClass="res-tree-table-header"
						sortableHeaderClass="res-tree-table-header"
						sortedColumnHeaderClass="res-tree-table-header"
						sortableHeaderRolloverClass="res-tree-table-header"
						styleClass="extdt-table-layout res-tree-table"
						bodyOddRowClass="res-tree-table-row odd-tree-table"
						bodyRowClass="res-tree-table-row" headerRowClass="res-tree-table-header"
						verticalGridLines="1px solid #D7DAC2"
						cellpadding="0" cellspacing="0"
						preloadedNodes="all"
						useAjax="true"
						style="#{valueStyle == null ? 'height: 100%;' : valueStyle}"
						>
					<o:scrolling/>
					<f:facet name="noDataMessage">
					  	<h:panelGroup>
					       <h:outputText value="#{lblCommon['no_records_found']}"/>
						</h:panelGroup>
					</f:facet>
					
	      			<o:dynamicTreeStructure 
	      					nodeChildren="#{(ifConfigBean==null ? MbIfConfig : ifConfigBean).nodeChildren}" 
	      					nodeHasChildren="#{(ifConfigBean==null ? MbIfConfig : ifConfigBean).nodeHasChildren}" 
	      					nodeKey="#{stdVer.modelId}"/>
		
				    <o:singleNodeSelection 
				    		nodePath="#{(ifConfigBean==null ? MbIfConfig : ifConfigBean).nodePath}"
				          	nodeData="#{(ifConfigBean==null ? MbIfConfig : ifConfigBean).node}"
		         			keyboardSupport="false"
		         			required="true"
		         			onchange="enableObjectVerButtons()"
		         			styleClass="treetable_selection"
		         			>
					</o:singleNodeSelection>
		
				    <o:treeColumn id="nodeLabel" width="40%" >
				    	<f:facet name="header">
							<h:panelGroup>         
								<script>updateHeight();</script>
					        	<h:outputText value="#{lblCommon.name}"/>
							</h:panelGroup>
				      	</f:facet>
				      	<h:outputText value="#{stdVer.objectName}" title="#{stdVer.objectName}"
								styleClass="treeTableText isStandard row_#{stdVer.modelId}"
				      			rendered="#{stdVer.parentId == null}"/>
				      	<h:outputText value="#{stdVer.versionNumber}" title="#{stdVer.versionNumber}" 
								styleClass="treeTableText row_#{stdVer.modelId}"
								rendered="#{stdVer.parentId != null}"/>
				    </o:treeColumn>
		
				    <o:column id="startDate" width="25%">
				    	<f:facet name="header">
				        	<h:outputText value="#{lblCommon.start_date}"/>
				      	</f:facet>
				      	<h:outputText styleClass="res-tree-table-cell"
				      			value="#{stdVer.startDate}"
				      			title="#{stdVer.startDate}">
				      		<f:convertDateTime pattern="#{usession.fullDatePattern}" timeZone="#{CommonUtils.timeZone}"/>
				      	</h:outputText>
				    </o:column>
				</o:treeTable>
			</h:panelGroup>
		</h:panelGroup>
	
		<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons" rendered="#{ifConfigBean==null}">
	            <h:panelGrid id="btnPanel" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
	            	<h:panelGroup>
		        	<bre:taggedCommandButton id="addBtn"
		                	value="#{lblForm.add}" reRender="objectVerEditForm"
							oncomplete="#{rich:component('objectVerModalPanel')}.show()"
		                	action="#{MbIfConfig.add}"
		                	disabled="#{MbIfConfig.paramObjectId == null}"
		        			image="/images/create_doc.gif"/>
					<bre:taggedCommandButton id="editBtn"
							value="#{lblForm.edit}" 
							reRender="objectVerEditForm"
   							action="#{MbIfConfig.edit}"
							oncomplete="#{rich:component('objectVerModalPanel')}.show()"
							disabled="#{MbIfConfig.paramObjectId == null}"
							image="/images/edit.gif"/>
		        	<bre:taggedCommandButton id="deleteBtn"
		                	value="#{lblForm.delete}"
		                	disabled="#{MbIfConfig.paramObjectId == null}"
		        			image="/images/delete.gif"
		        			oncomplete="#{rich:component('deleteObjVerView:confirmPanel')}.show()"/>
					<bre:taggedCommandButton id="configBtn"
                      		value="#{lblForm.configure}"
                      		action="#{MbIfConfig.gotoInterfacesConfig}"
                      		disabled="#{MbIfConfig.paramObjectId == null}"
                      		>
                      	<a4j:actionparam assignTo="#{MbIfConfig.pageName}" value="#{parentPageName}"/>
					</bre:taggedCommandButton>
					</h:panelGroup>
					<h:panelGroup>
					</h:panelGroup>
		        			
		        	<script type="text/javascript">
//<!--
	        			/*document.getElementById("objectVerForm:addBtn").disabled = false;
		        		document.getElementById("objectVerForm:editBtn").disabled = true;
	        			document.getElementById("objectVerForm:deleteBtn").disabled = true;*/

	        			// select first row which for some reason doesn't want to do it automatically 
	        			var nodeKey = "#{MbIfConfig.node.modelId}";
	        			if (document.getElementById("objectVerForm:stdTreeTable").getSelectedNodeKey() == null
	        					&& nodeKey != null) {
	        				document.getElementById("objectVerForm:stdTreeTable").setSelectedNodeKey(nodeKey);
	        			}
	        			enableObjectVerButtons();
	        			// -->
		        	</script>
				</h:panelGrid>
			</h:panelGroup>
	    </h:panelGroup>
    </h:form>


	<rich:modalPanel id="objectVerModalPanel" autosized="true" minWidth="200" minHeight="80">
      	<f:facet name="header">
        	<h:outputText value="#{lblCmn.set_version}"/>
        </f:facet>
  	    <f:facet name="controls">
      	</f:facet>
      		
		<h:form id="objectVerEditForm">
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
		        <h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">
					<h:outputLabel value="* #{lblCmn.version}: " title="#{lblCmn.version}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:selectOneMenu id="versionId"
								value="#{MbIfConfig.newNode.versionId}"
								onblur="hideErrorField(this)">
							<f:selectItem itemValue=""/>
							<f:selectItems value="#{MbIfConfig.versions}"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="versionIdError" style="display:none;">
							<f:param name="fieldName" value="#{lblCmn.version}"/>
						</h:outputFormat>
					</h:panelGrid>
					
					<h:outputLabel for="newStartDate" value="* #{lblCommon.start_date}: " title="#{lblCommon.start_date}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
            			<rich:calendar zindex="1000" buttonIcon="/images/calendar.gif" id="newStartDate"
            					value="#{MbIfConfig.newNode.startDate}" 
            					required="true" label="#{lblCommon.start_date}"
            					datePattern="#{usession.fullDatePattern}" inputStyle="width:225px"
            					onchanged="hideErrorDateField(this)">
            			</rich:calendar>
            			<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="newStartDateError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.start_date}"/>
						</h:outputFormat>
           			</h:panelGrid>
			    </h:panelGrid>
		    </h:panelGroup>
		    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
		   	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
		   	    		<h:outputText/>
						<bre:taggedCommandButton value="#{lblForm.save}" type="submit" 
								action="#{MbIfConfig.save}"
								reRender="objectVerForm"
								onclick="if (!checkObjectVersionFields()) return false; disableModalPanelBtns(this)"
								oncomplete="enableModalPanelBtns(this);if (#{usession.noErrorResponse}) #{rich:component('objectVerModalPanel')}.hide()"
								/>
		               	<bre:taggedCommandButton
		                       	value="#{lblForm.cancel}" action="#{MbIfConfig.cancel}"
		                       	immediate="true" limitToList="true"
		                       	reRender="objectVerEditForm"
		                       	oncomplete="#{rich:component('objectVerModalPanel')}.hide()">
		                	<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/confirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbIfConfig}"/>
		<ui:param name="yesAction" value="delete"/>
		<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
		<ui:param name="rerenderList" value="objectVerForm"/>
		<ui:param name="confirmQuestion" value=" "/> 
		<ui:param name="subviewId" value="deleteObjVerView"/>
		<ui:param name="yes" value="#{lblForm.ok}"/>
		<ui:param name="no" value="#{lblForm.cancel}"/>
	</ui:include>
</ui:composition>
</html>
