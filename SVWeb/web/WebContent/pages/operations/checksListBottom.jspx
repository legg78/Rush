<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<!-- param hideButtons - if true the button block isn't rendered-->

	<f:loadBundle var="lblNet" basename="ru.bpc.sv2.ui.bundles.Net"/>
	
	<script type="text/javascript">//<![CDATA[			
		function checkOprFields() {
			var checked = true;
			
			if (document.getElementById('oprCheckModalDiv:newExecOrder').value == "") {
				document.getElementById('oprCheckModalDiv:newExecOrderError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('oprCheckModalDiv:newCheckType').value == "") {
				document.getElementById('oprCheckModalDiv:newCheckTypeError').style.display = "inline";
				checked = false;
			}								
			
			return checked;
		}
		//]]>
	</script>
	
   	<h:form id="checksBtmForm">
		<h:panelGroup layout="block" style="margin:0px;padding:0px;"
			id="checksTableWrapper">
			<rich:extendedDataTable id="checksTable" styleClass="res-table"
				headerClass="res-table-header table-header-ext" rowClasses=",odd"
				selectedClass="res-table-selected" var="item"
				value="#{MbChecks.checks}" selection="#{MbChecks.itemSelection}"
				rows="0" enableContextMenu="true"
				tableState="#{MbChecks.tableState}"
				noDataLabel="#{lblCommon['no_records_found']}">

				<a4j:support event="onselectionchange"
					reRender="checksBtmForm:btnPanel" />

				<rich:column id="check_type" label="#{lblOpr.check_type}" title="Check type" width="70%">
					<f:facet name="header">
						<a4j:outputPanel layout="none">
							<script>updateHeight();</script>
							<h:outputText value="#{lblOpr.check_type}"
								title="#{lblOpr.check_type}" />
						</a4j:outputPanel>
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.checkType]}"
						title="#{DictUtils.articles[item.checkType]}" />
				</rich:column>

				<rich:column id="exec_order" label="#{lblCommon.exec_order}" title="exec_order" sortBy="#{'execOrder'}" width="30%">
					<f:facet name="header">
						<h:outputText value="#{lblCommon.exec_order}"
							title="#{lblCommon.exec_order}" />
					</f:facet>
					<h:outputText value="#{item.execOrder}" title="#{item.execOrder}" />
				</rich:column>
			</rich:extendedDataTable>
		</h:panelGroup>
		<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">

	            <h:panelGrid id="btnPanel" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
	            	<h:panelGroup>
	            	<bre:taggedCommandButton id="addBtn"
                      		reRender="oprCheckModalHeader, oprCheckModalDiv"
                      		value="#{lblForm.add}"
                   			oncomplete="#{rich:component('oprCheckModalPanel')}.show()"
                      		action="#{MbChecks.add}"
                      		disabled="#{MbChecks.groupId == null}"
                      		image="/images/create_doc.gif"
                      		rendered="#{usession.inRole['ADD_OPR_CHECK']}"
                      		/>
	            	<bre:taggedCommandButton id="editBtn"
                      		reRender="oprCheckModalHeader, oprCheckModalDiv"
                      		value="#{lblForm.edit}"
                   			oncomplete="#{rich:component('oprCheckModalPanel')}.show()"
                      		action="#{MbChecks.edit}"
                      		disabled="#{MbChecks.groupId == null || MbChecks.activeCheck == null}"
                      		image="/images/edit.gif"
                      		rendered="#{usession.inRole['MODIFY_OPR_CHECK']}"
                      		/>
					<bre:taggedCommandButton id="deleteBtn"
                      		value="#{lblForm.delete}"
                      		oncomplete="#{rich:component('deleteCheckViewId:confirmPanel')}.show()"
                      		disabled="#{MbChecks.groupId == null || MbChecks.activeCheck == null}"
                      		image="/images/delete.gif"
                      		rendered="#{usession.inRole['REMOVE_OPR_CHECK']}"
                      		/>
                     </h:panelGroup>
                     
                     <h:panelGroup>
							<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
								onclick="saveCheckTableState();"/>
							<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
								onclick="deleteCheckTableState();"/>
							<a4j:queue name="tablestatequeue"/>
							<a4j:jsFunction name="saveCheckTableState" action="#{MbChecks.saveTableStateDB}" eventsQueue="tablestatequeue"/>
							<a4j:jsFunction name="deleteCheckTableState" action="#{MbChecks.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
						</h:panelGroup>
				</h:panelGrid>
			</h:panelGroup>
	    </h:panelGroup>
    </h:form>

	<rich:modalPanel id="oprCheckModalPanel" autosized="true" minWidth="300" minHeight="50"
			rendered="#{usession.inRole['ADD_OPR_CHECK'] or usession.inRole['MODIFY_OPR_CHECK']}">
 	    <f:facet name="header">
 	    	<h:panelGroup id="oprCheckModalHeader">
 	    		<h:outputText value="#{lblOpr.edit_check}" rendered="#{MbChecks.editMode}"/>
 	    		<h:outputText value="#{lblOpr.new_check}" rendered="#{MbChecks.newMode}"/>
 	    	</h:panelGroup>
        </f:facet>
  	    <f:facet name="controls">
      	</f:facet>
      	<h:form id="oprCheckModalDiv">
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="firstColModal, width250">
					
					<h:outputLabel value="* #{lblOpr.check_group}" title="#{lblOpr.check_group}"/>
					<h:panelGrid cellpadding="0" cellspacing="0">
						<h:selectOneMenu id="newCheckGroup"
								value="#{MbChecks.newCheck.checkGroupId}"
								required="true" label="#{lblOpr.check_group}"
								disabled="true"
								>
							<f:selectItem itemValue=""/>
						    <f:selectItems value="#{MbChecks.checkGroups}"/>
						</h:selectOneMenu>
						<rich:message for="newCheckGroup" styleClass="errorMarker"/>
					</h:panelGrid>
					
					<h:outputLabel value="* #{lblOpr.check_type}" title="#{lblOpr.check_type}"/>
					<h:panelGrid cellpadding="0" cellspacing="0">
						<h:selectOneMenu id="newCheckType"
								value="#{MbChecks.newCheck.checkType}"
								label="#{lblOpr.check_type}"
								onblur="hideErrorField(this)">
							<f:selectItem itemValue=""/>
						    <f:selectItems value="#{MbChecks.checkTypes}"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="newCheckTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblOpr.check_type}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel value="* #{lblCommon.exec_order}" title="#{lblCommon.exec_order}"/>
					<h:panelGrid cellpadding="0" cellspacing="0">
						<h:inputText id="newExecOrder"
								value="#{MbChecks.newCheck.execOrder}"
								label="#{lblCommon.exec_order}"
								onblur="hideErrorField(this)"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="newExecOrderError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.exec_order}"/>
						</h:outputFormat>
					</h:panelGrid>
				</h:panelGrid>
			</h:panelGroup>

      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
	       	    		<h:outputText/>
                       	<bre:taggedCommandButton
                       			value="#{lblForm.save}" type="submit" action="#{MbChecks.save}"
                       			onclick="if (!checkOprFields()) return false; disableModalPanelBtns(this)"
                       			oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('oprCheckModalPanel')}.hide()"
                       			reRender="checksBtmForm"
                        		/>
                       	<bre:taggedCommandButton
                        		value="#{lblForm.cancel}" 
                        		action="#{MbChecks.cancel}" immediate="true"
                        		oncomplete="#{rich:component('oprCheckModalPanel')}.hide()"
                        		/>
		    		</h:panelGrid>
		    	</h:panelGroup>
		    </h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/confirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbChecks}"/>
		<ui:param name="yesAction" value="delete"/>
		<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
		<ui:param name="rerenderList" value="checksBtmForm"/>
		<ui:param name="confirmQuestion" value=" "/> 
		<ui:param name="subviewId" value="deleteCheckViewId"/>
		<ui:param name="yes" value="#{lblForm.ok}"/>
		<ui:param name="no" value="#{lblForm.cancel}"/>
	</ui:include>

</ui:composition>
</html>
