<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	xmlns:a4j="http://richfaces.org/a4j">

		<bre:taggedCommandButton id="save" value="#{lblForm.save}"
			action="#{editReportTemplate.save}" />
		<a4j:region>
			<bre:taggedCommandButton value="#{lblRptc.remove_sorting}"
				action="#{editReportTemplate.clearSorting}" reRender="sortingParams" />
			<bre:taggedCommandButton value="#{lblRptc.remove_conditions}"
				action="#{editReportTemplate.clearConditions}"
				reRender="conditionsExpression" />
		</a4j:region>
		<bre:taggedCommandButton value="#{lblForm.cancel}"
			action="#{editReportTemplate.cancel}" immediate="true" />
	
</ui:composition>
