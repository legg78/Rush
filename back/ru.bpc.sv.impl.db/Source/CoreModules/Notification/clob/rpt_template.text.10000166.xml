<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
<xsl:output method="text" encoding="utf-8" indent="no"/>
<xsl:template match="event">
<xsl:value-of select="eff_date" />. <xsl:value-of select="host_description" />. <xsl:choose><xsl:when test="event_type='EVNT1905'">Connection Snand-In mode OFF</xsl:when><xsl:when test="event_type='EVNT1904'">Connection Snand-In mode ON</xsl:when><xsl:when test="event_type='EVNT1903'">Connection signed off</xsl:when><xsl:when test="event_type='EVNT1902'">Connection signed on</xsl:when><xsl:when test="event_type='EVNT1901'">Connection established</xsl:when><xsl:otherwise>Connection lost</xsl:otherwise></xsl:choose>
</xsl:template>
</xsl:stylesheet>