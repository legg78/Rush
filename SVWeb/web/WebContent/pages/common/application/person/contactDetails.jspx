<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:bpct="http://www.bpc.ru/jsf/tiles" xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	xmlns:rich="http://richfaces.org/rich" xmlns:a4j="http://richfaces.org/a4j"
	xmlns:o="http://openfaces.org/">
	<ui:composition>
		<fieldset style="position:relative; top:-7px; border-radius:5px;">
			<legend>#{MbAppWizCustomer.node.label}</legend>
			<h:panelGrid styleClass="filter-table field-cont twoColumnTable"
				columns="2" columnClasses="firstCol200px,column200px">

				<h:outputLabel
					value="#{MbAppWizCustomer.fieldMap['CONTACT_TYPE'].required ? '*' : ''} #{MbAppWizCustomer.fieldMap['CONTACT_TYPE'].shortDesc}: "
					title="#{MbAppWizCustomer.fieldMap['CONTACT_TYPE'].shortDesc}"
					class="#{MbAppWizCustomer.fieldMap['CONTACT_TYPE'].valid ? 'valid' : 'invalid'}" />
				<h:selectOneMenu
					disabled="#{!MbAppWizCustomer.newCustomer}"
					value="#{MbAppWizCustomer.fieldMap['CONTACT_TYPE'].valueV}" label="#{MbAppWizCustomer.fieldMap['CONTACT_TYPE'].shortDesc}">
					<f:selectItem itemValue="" />
					<f:selectItems value="#{MbAppWizCustomer.lovMap['CONTACT_TYPE']}" />
					<a4j:support event="onchange" limitToList="true"
						reRender="customerDetailsTable" ajaxSingle="true"
						action="#{MbAppWizCustomer.updateContactLabel}" />
				</h:selectOneMenu>

				<h:outputLabel
					value="#{MbAppWizCustomer.fieldMap['PREFERRED_LANG'].required ? '*' : ''} #{MbAppWizCustomer.fieldMap['PREFERRED_LANG'].shortDesc}: "
					title="#{MbAppWizCustomer.fieldMap['PREFERRED_LANG'].shortDesc}"
					class="#{MbAppWizCustomer.fieldMap['PREFERRED_LANG'].valid ? 'valid' : 'invalid'}" />
				<h:selectOneMenu
					disabled="#{!MbAppWizCustomer.newCustomer}"
					value="#{MbAppWizCustomer.fieldMap['PREFERRED_LANG'].valueV}"
					label="#{MbAppWizCustomer.fieldMap['PREFERRED_LANG'].shortDesc}">
					<f:selectItem itemValue="" />
					<f:selectItems value="#{MbAppWizCustomer.lovMap['PREFERRED_LANG']}" />
				</h:selectOneMenu>

				<h:outputLabel
					value="#{MbAppWizCustomer.fieldMap['MOBILE_PHONE'].required ? '*' : ''} #{MbAppWizCustomer.fieldMap['MOBILE_PHONE'].shortDesc}: "
					title="#{MbAppWizCustomer.fieldMap['MOBILE_PHONE'].shortDesc}"
					class="#{MbAppWizCustomer.fieldMap['MOBILE_PHONE'].valid ? 'valid' : 'invalid'}" />
				<h:inputText value="#{MbAppWizCustomer.fieldMap['MOBILE_PHONE'].valueV}"
					disabled="#{!MbAppWizCustomer.newCustomer}"
					label="#{MbAppWizCustomer.fieldMap['MOBILE_PHONE'].shortDesc}">
				</h:inputText>

				<h:outputLabel
					value="#{MbAppWizCustomer.fieldMap['E_MAIL'].required ? '*' : ''} #{MbAppWizCustomer.fieldMap['E_MAIL'].shortDesc}: "
					title="#{MbAppWizCustomer.fieldMap['E_MAIL'].shortDesc}"
					class="#{MbAppWizCustomer.fieldMap['E_MAIL'].valid ? 'valid' : 'invalid'}" />
				<h:inputText value="#{MbAppWizCustomer.fieldMap['E_MAIL'].valueV}"
					disabled="#{!MbAppWizCustomer.newCustomer}"
					label="#{MbAppWizCustomer.fieldMap['E_MAIL'].shortDesc}">
				</h:inputText>

				<h:outputLabel
					value="#{MbAppWizCustomer.fieldMap['FAX'].required ? '*' : ''} #{MbAppWizCustomer.fieldMap['FAX'].shortDesc}: "
					title="#{MbAppWizCustomer.fieldMap['FAX'].shortDesc}"
					class="#{MbAppWizCustomer.fieldMap['FAX'].valid ? 'valid' : 'invalid'}" />
				<h:inputText value="#{MbAppWizCustomer.fieldMap['FAX'].valueV}"
					disabled="#{!MbAppWizCustomer.newCustomer}"
					label="#{MbAppWizCustomer.fieldMap['FAX'].shortDesc}">
				</h:inputText>

				<h:outputLabel
					value="#{MbAppWizCustomer.fieldMap['SKYPE'].required ? '*' : ''} #{MbAppWizCustomer.fieldMap['SKYPE'].shortDesc}: "
					title="#{MbAppWizCustomer.fieldMap['SKYPE'].shortDesc}"
					class="#{MbAppWizCustomer.fieldMap['SKYPE'].valid ? 'valid' : 'invalid'}" />
				<h:inputText value="#{MbAppWizCustomer.fieldMap['SKYPE'].valueV}"
					disabled="#{!MbAppWizCustomer.newCustomer}"
					label="#{MbAppWizCustomer.fieldMap['SKYPE'].shortDesc}">
				</h:inputText>

				<h:outputLabel />
				<bre:taggedCommandButton value="#{lblForm.delete}"
					ajaxOnly="true" reRender="customerDetailsTable, details"
					action="#{MbAppWizCustomer.deleteContact}" style="margin-left:5px; margin-top:5px;"
					onclick="if (!confirm('#{lblMsg.confirm_delete}')) return false;" />
			</h:panelGrid>
		</fieldset>
	</ui:composition>
</html>