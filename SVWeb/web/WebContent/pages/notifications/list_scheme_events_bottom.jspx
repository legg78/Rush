<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<f:loadBundle var="lblNtf" basename="ru.bpc.sv2.ui.bundles.Ntf"/>
	<f:loadBundle var="lblRul" basename="ru.bpc.sv2.ui.bundles.Rul"/>
	<f:loadBundle var="lblEvt" basename="ru.bpc.sv2.ui.bundles.Evt"/>

	<h:form id="schemeEventsForm">
		<h:panelGroup id="schemeEventsTableWrapper" layout="block"
			style="padding:0px;margin:0px;">
			<rich:extendedDataTable id="schemeEventsTable" styleClass="res-table"
				headerClass="res-table-header table-header-ext" rowClasses=",odd"
				selectedClass="res-table-selected" var="item"
				value="#{MbSchemeEvents.schemeEvents}"
				selection="#{MbSchemeEvents.itemSelection}" rows="0"
				enableContextMenu="true"
				tableState="#{MbSchemeEvents.tableState}"
				noDataLabel="#{lblCommon['no_records_found']}">

				<a4j:support event="onselectionchange" reRender="btnPanelConsumers" />

				<rich:column id="id" label="#{lblCommon.id}" title="ID" sortBy="#{'id'}" width="7%">
					<f:facet name="header">
						<a4j:outputPanel>
							<script>updateHeight();</script>
							<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}" />
						</a4j:outputPanel>
					</f:facet>
					<h:outputText value="#{item.id}" title="#{item.id}" />
				</rich:column>

				<rich:column id="event_type" label="#{lblCommon.event_type}" title="Event type" width="8%">
					<f:facet name="header">
						<h:outputText value="#{lblCommon.event_type}"
							title="#{lblCommon.event_type}" />
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.eventType]}"
						title="#{DictUtils.articles[item.eventType]}"
						rendered="#{item.eventType != null}" />
					<h:outputText value="" title=""
						rendered="#{item.eventType == null}" />
				</rich:column>

				<rich:column id="entity_type" label="#{lblCommon.entity_type}" title="Entity type" width="9%">
					<f:facet name="header">
						<h:outputText value="#{lblCommon.entity_type}"
							title="#{lblCommon.contact_type}" />
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.entityType]}"
						title="#{DictUtils.articles[item.entityType]}"
						rendered="#{item.entityType != null}" />
					<h:outputText value="" title=""
						rendered="#{item.entityType == null}" />
				</rich:column>

				<rich:column id="contact_type" label="#{lblCommon.contact_type}" title="Contact type" width="7%">
					<f:facet name="header">
						<h:outputText value="#{lblCommon.contact_type}"
							title="#{lblCommon.contact_type}" />
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.contactType]}"
						title="#{DictUtils.articles[item.contactType]}"
						rendered="#{item.contactType != null}" />
					<h:outputText value="" title=""
						rendered="#{item.contactType == null}" />
				</rich:column>

				<rich:column id="notification" label="#{lblNtf.notification}" title="Notification" sortBy="#{'notifName'}"
					width="11%">
					<f:facet name="header">
						<h:outputText value="#{lblNtf.notification}"
							title="#{lblNtf.notification}" />
					</f:facet>
					<h:outputText value="#{item.notificationName}"
						title="#{item.notificationName}" />
				</rich:column>

				<rich:column id="channel" label="#{lblNtf.channel}" title="Channel" sortBy="#{'channelName'}" width="11%">
					<f:facet name="header">
						<h:outputText value="#{lblNtf.channel}" title="#{lblNtf.channel}" />
					</f:facet>
					<h:outputText value="#{item.channelName}"
						title="#{item.channelName}" />
				</rich:column>

				<rich:column id="scale" label="#{lblRul.scale}" title="Scale" sortBy="#{'scaleName'}" width="11%">
					<f:facet name="header">
						<h:outputText value="#{lblRul.scale}" title="#{lblRul.scale}" />
					</f:facet>
					<h:outputText value="#{item.scaleName}" title="#{item.scaleName}" />
				</rich:column>

				<rich:column id="delivery_period" label="#{lblNtf.delivery_period}" title="Delivery period" width="13%">
					<f:facet name="header">
						<h:outputText value="#{lblNtf.delivery_period}"
							title="#{lblNtf.delivery_period}" />
					</f:facet>
					<h:outputText value="#{item.deliveryTime}"
						title="#{item.deliveryTime}" />
				</rich:column>

				<rich:column id="customizable" label="#{lblNtf.customizable}" title="Customizable" width="5%">
					<f:facet name="header">
						<h:outputText value="#{lblNtf.customizable}"
							title="#{lblNtf.customizable}" />
					</f:facet>
					<h:selectBooleanCheckbox value="#{item.customizable}"
						disabled="true" />
				</rich:column>

				<rich:column id="batch" label="#{lblEvt.batch}" title="Is batch send" width="5%">
					<f:facet name="header">
						<h:outputText value="#{lblEvt.batch}" title="#{lblEvt.batch_send}" />
					</f:facet>
					<h:selectBooleanCheckbox value="#{item.batchSend}" disabled="true" />
				</rich:column>

				<rich:column id="status" label="#{lblCommon.status}" title="Status" width="5%">
					<f:facet name="header">
						<h:outputText value="#{lblCommon.status}" title="#{lblCommon.status}" />
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.status]}" 
						title="#{DictUtils.articles[item.status]}" />
				</rich:column>
				
				<rich:column id="priority" label="#{lblRul.priority}" title="Priority" sortBy="#{'priority'}" width="9%">
					<f:facet name="header">
						<h:outputText value="#{lblRul.priority}"
							title="#{lblRul.priority}" />
					</f:facet>
					<h:outputText value="#{item.priority}"
						title="#{item.priority}" />
				</rich:column>
			</rich:extendedDataTable>
		</h:panelGroup>

		<h:panelGroup layout="block"
			styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block"
				styleClass="bottom_search_result_left_buttons">

				<h:panelGrid id="btnPanelConsumers" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
					<h:panelGroup>
					<bre:taggedCommandButton id="addBtn"
						reRender="schemeEventModalDiv, schemeEventModalHeader"
						value="#{lblForm.add}"
						oncomplete="#{rich:component('schemeEventModalPanel')}.show()"
						action="#{MbSchemeEvents.add}"
						disabled="#{MbSchemeEvents.scheme == null}"
						rendered="#{usession.inRole['ADD_NOTIF_SCHEME_EVENT']}"
						image="/images/create_doc.gif" />
					<bre:taggedCommandButton id="editBtn"
						reRender="schemeEventModalDiv, schemeEventModalHeader"
						value="#{lblForm.edit}"
						oncomplete="#{rich:component('schemeEventModalPanel')}.show()"
						action="#{MbSchemeEvents.edit}"
						disabled="#{MbSchemeEvents.scheme == null || MbSchemeEvents.activeSchemeEvent == null}"
						rendered="#{usession.inRole['MODIFY_NOTIF_SCHEME_EVENT']}"
						image="/images/edit.gif" />
					<bre:taggedCommandButton id="deleteBtn"
						value="#{lblForm.delete}" 
						disabled="#{MbSchemeEvents.scheme == null || MbSchemeEvents.activeSchemeEvent == null}"
						rendered="#{usession.inRole['REMOVE_NOTIF_SCHEME_EVENT']}"
						image="/images/delete.gif" 
						oncomplete="#{rich:component('deleteSchemeEventView:confirmPanel')}.show()"/>
					</h:panelGroup>
					
					<h:panelGroup>
							<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
								onclick="saveEventTableState();"/>
							<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
								onclick="deleteEventTableState();"/>
							<a4j:queue name="tablestatequeue"/>
							<a4j:jsFunction name="saveEventTableState" action="#{MbSchemeEvents.saveTableStateDB}" eventsQueue="tablestatequeue"/>
							<a4j:jsFunction name="deleteEventTableState" action="#{MbSchemeEvents.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
						</h:panelGroup>
				</h:panelGrid>
			</h:panelGroup>
		</h:panelGroup>
	</h:form>

	<ui:include src="/pages/notifications/edit_scheme_event.jspx">
		<ui:param name="rerenderList" value="schemeEventsForm, btnPanelConsumers"></ui:param>
	</ui:include>
	
	<ui:include src="/pages/utils/confirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbSchemeEvents}"/>
		<ui:param name="yesAction" value="delete"/>
		<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
		<ui:param name="rerenderList" value="schemeEventsTable, btnPanelConsumers"/>
		<ui:param name="confirmQuestion" value=" "/> 
		<ui:param name="subviewId" value="deleteSchemeEventView"/>
		<ui:param name="yes" value="#{lblForm.ok}"/>
		<ui:param name="no" value="#{lblForm.cancel}"/>			
	</ui:include>
</ui:composition>
</html>
