<?xml version="1.0" encoding="UTF-8" ?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	xmlns:bpct="http://www.bpc.ru/jsf/tiles">

<ui:composition template="/WEB-INF/templates/navigatable.jspx">
	<ui:define name="navigatableContent">
		<h:panelGroup rendered="#{usession.inRole['VIEW_EVENT_BUNCH_TYPE']}">

			<a4j:loadScript src="/js/stretch.js" />
			<f:loadBundle var="lblCrd" basename="ru.bpc.sv2.ui.bundles.Crd" />

			<!-- navigation bar -->
			<bpct:navBar pageName="#{lblCrd.credit_life}" />
			<a4j:queue name="queue" requestDelay="500" ignoreDupResponses="true" size="1" sizeExceededBehavior="dropNew"/>
			<!-- search panel -->
			
			<script type="text/javascript">
			//<![CDATA[
			function handleEnter(event) {
				 if (event.keyCode == 13) {
					 document.getElementById('eventBunchTypesSearchForm:searchBtn').click(); 
					 return false; 
				} 
				return true;
			 }	
			//]]>
			</script>
			
			<h:form id="eventBunchTypesSearchForm" onkeypress="handleEnter(event)">
				<h:panelGroup layout="block" styleClass="search_block">
					<h:panelGroup layout="block" styleClass="search_block_inner1">
						<h:panelGroup layout="block" styleClass="search_block_inner2">
							<h:panelGroup layout="block" styleClass="search_block_left">
								<h:panelGrid styleClass="fw" columns="2"
									columnClasses="top ,link-cont">
									<h:panelGrid styleClass="filter-table field-cont twoColumnTable" columns="4"
										columnClasses="firstCol,secondCol,firstCol,secondCol">

										<h:outputLabel for="instId" value="#{lblCommon.institution}:" title="#{lblCommon.institution}" />
										<h:selectOneMenu id="instId"
											value="#{MbCreditLife.filter.instId}">
											<f:selectItem itemValue=""/>
											<f:selectItems value="#{MbCreditLife.institutions}" />
										</h:selectOneMenu>

										<h:outputLabel for="eventType" title="#{lblCommon.event_type}" 
											value="#{lblCommon.event_type}:" />
										<h:selectOneMenu id="eventType"
											value="#{MbCreditLife.filter.eventType}">
											<f:selectItem itemValue="" />
											<f:selectItems value="#{MbCreditLife.creditEventsTypes}" />
										</h:selectOneMenu>

										<h:outputLabel for="balanceType" title="#{lblCrd.balance_type}" 
											value="#{lblCrd.balance_type}:" />
										<h:selectOneMenu id="balanceType"
											value="#{MbCreditLife.filter.balanceType}">
											<f:selectItem itemValue="" />
											<f:selectItems value="#{MbCreditLife.balanceTypes}" />
										</h:selectOneMenu>

									</h:panelGrid>

									<h:panelGrid columns="1">
										<h:panelGroup styleClass="stdButton">
											<bre:taggedCommandButton action="#{MbCreditLife.search}"
												reRender="eventBunchTypesTable, eventBunchTypesBtnForm, #{MbCreditLife.tabName}"
												image="/_img/icon_search.png" type="submit" value="#{lblForm.search }"
												id="searchBtn"
												style="width:85px;"
												onclick="disableModalPanelBtns(this);"
												oncomplete="enableModalPanelBtns(this);"
												eventsQueue="queue"/>

										</h:panelGroup>

										<h:panelGroup styleClass="link-clear" layout="block">
											<h:graphicImage url="/_img/icon_clear.png" />
											<a4j:commandLink value="#{lblForm.clear_all}"
												action="#{MbCreditLife.clearFilter}"
												reRender="eventBunchTypesSearchForm, eventBunchTypesForm, #{MbCreditLife.tabName}">
											</a4j:commandLink>
										</h:panelGroup>
									</h:panelGrid>

								</h:panelGrid>
								<a4j:outputPanel ajaxRendered="true">
									<h:graphicImage url="/_img/hd_searchblock.gif"
										styleClass="hd-searchblock" />
									<h:panelGroup styleClass="collapse-vert" layout="block" />
								</a4j:outputPanel>
							</h:panelGroup>
						</h:panelGroup>
					</h:panelGroup>
				</h:panelGroup>
			</h:form>
			
			<h:form id="eventBunchTypesForm">
				<!-- result panel -->
				<h:panelGroup styleClass="search_result_block" layout="block">
					<h:panelGroup styleClass="search_result_block_left fix-ff" layout="block">
						<h:panelGroup id="mainTableWrapper" layout="block"
							styleClass="search_result_block_inner">
						<rich:extendedDataTable id="eventBunchTypesTable"
							tableState="#{MbCreditLife.tableState}"
							styleClass="res-table" headerClass="res-table-header"
							rowClasses=",odd" selectedClass="res-table-selected" var="item"
							value="#{MbCreditLife.eventBunchTypes}"
							selection="#{MbCreditLife.itemSelection}"
							rows="#{MbCreditLife.rowsNum}" selectionMode="single"
							width="100%" height="255px" enableContextMenu="true"
							noDataLabel="#{MbCreditLife.searching ? lblCommon.no_records_found : lblCommon.enter_search_criteria_above}"
							reRender="#{MbCreditLife.tabName}, eventBunchTypesBtnForm:btnPanel">

							<a4j:support event="onselectionchange" eventsQueue="queue" limitToList="true"
										 reRender="eventBunchTypesBtnForm:btnPanel, #{MbCreditLife.tabName}"/>

							<rich:column id="id" label="#{lblCommon.id}" title="id" sortBy="#{'id'}" width="5%">
								<f:facet name="header">
									<a4j:outputPanel layout="none">
										<script>updateHeight();</script>
										<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}"/>
									</a4j:outputPanel>
								</f:facet>
								<h:outputText value="#{item.id}" />
							</rich:column>

							<rich:column id="event_type" label="#{lblCommon.event_type}" title="event_type" sortBy="#{'eventType'}" width="20%">
								<f:facet name="header">
									<h:outputText value="#{lblCommon.event_type}" title="#{lblCommon.event_type}" />
								</f:facet>
								<h:outputText value="" rendered="#{item.eventType == null}" />
								<h:outputText
									value="#{DictUtils.articles[item.eventType] }"
									rendered="#{item.eventType!=null }" />
							</rich:column>

							<rich:column id="balance_type" label="#{lblCrd.balance_type}" title="balance_type" sortBy="#{'balanceType'}" width="20%">
								<f:facet name="header">
									<h:outputText value="#{lblCrd.balance_type}" title="#{lblCrd.balance_type}" />
								</f:facet>
								<h:outputText value="" rendered="#{item.balanceType == null}" />
								<h:outputText
									value="#{DictUtils.articles[item.balanceType] }"
									rendered="#{item.balanceType != null }" />
							</rich:column>

							<rich:column id="bunch_type" label="#{lblCrd.bunch_type}" title="bunch_type" sortBy="#{'bunchTypeName'}" width="20%">
								<f:facet name="header">
									<h:outputText value="#{lblCrd.bunch_type}" title="#{lblCrd.bunch_type}" />
								</f:facet>
								<h:outputText value="#{item.bunchTypeName}" />
							</rich:column>

							<rich:column id="add_bunch_type" label="#{lblCrd.add_bunch_type}" title="add_bunch_type" sortBy="#{'addBunchTypeName'}" width="20%">
								<f:facet name="header">
									<h:outputText value="#{lblCrd.add_bunch_type}" title="#{lblCrd.add_bunch_type}" />
								</f:facet>
								<h:outputText value="#{item.addBunchTypeName}" />
							</rich:column>

							<rich:column id="institution" label="#{lblCommon.institution}" title="institution" sortBy="#{'instId'}" width="20%">
								<f:facet name="header">
									<h:outputText value="#{lblCommon.institution}" title="#{lblCommon.institution}" />
								</f:facet>
								<bm:entityDisplay  entityId="#{item.instId}"
									value="#{item.instName}"/>
							</rich:column>

						</rich:extendedDataTable>
						</h:panelGroup>
						<a4j:outputPanel ajaxRendered="true">
							<h:panelGroup id="show_more_panel" styleClass="show-more-vert show-more-result-tab" layout="block"/>
							<h:graphicImage url="/_img/hd_searchblock.gif" styleClass="hd-searchblock" />
							<h:panelGroup styleClass="collapse-vert table-collapse-vert" layout="block" />
						</a4j:outputPanel>
					</h:panelGroup>
				</h:panelGroup>
			</h:form>
			<h:form id="eventBunchTypesBtnForm">
				<h:panelGroup layout="block" styleClass="bottom_search_result_block">
					<h:panelGroup layout="block" styleClass="bottom_search_result_left">
						<h:panelGroup layout="block" styleClass="table_tools">
							<h:panelGrid styleClass="fw field-cont" columns="5"
								columnClasses="per-page-lbl,per-page-sel,nav-cont,pagecount, table_tools_state">
								<h:outputLabel for="rows_num" value="#{lblCommon.rows_per_page}" title="#{lblCommon.rows_per_page}" />

								<h:selectOneMenu id="rows_num" value="#{MbCreditLife.rowsNum}"
									styleClass="row_per_page">
									<a4j:support event="onchange"
										reRender="eventBunchTypesTable, eventBunchTypesBtnForm, #{MbCreditLife.tabName}"/>
									<f:selectItems value="#{CommonUtils.rowNumsList}"/>
								</h:selectOneMenu>

								<rich:datascroller id="dsEventBunchTypes" maxPages="10"
									fastControls="hide" pagesVar="pages"
									styleClass="res-datascroller" for="eventBunchTypesTable"
									reRender="#{MbCreditLife.tabName}">
									<f:facet name="first">
										<h:outputText value="&lt;&lt;" styleClass="prev-next" />
									</f:facet>
									<f:facet name="first_disabled">
										<h:outputText value="&lt;&lt;" styleClass="prev-next-dis" />
									</f:facet>
									<f:facet name="last">
										<h:outputText value="&gt;&gt;" styleClass="prev-next" />
									</f:facet>
									<f:facet name="last_disabled">
										<h:outputText value="&gt;&gt;" styleClass="prev-next-dis" />
									</f:facet>
									<f:facet name="previous">
										<h:outputText value="#{lblCommon.prev}" styleClass="prev-next" />
									</f:facet>
									<f:facet name="previous_disabled">
										<h:outputText value="#{lblCommon.prev}" styleClass="prev-next-dis" />
									</f:facet>
									<f:facet name="next">
										<h:outputText value="#{lblCommon.next}" styleClass="prev-next" />
									</f:facet>
									<f:facet name="next_disabled">
										<h:outputText value="#{lblCommon.next}" styleClass="prev-next-dis" />
									</f:facet>
									<f:facet name="pages">
									</f:facet>
								</rich:datascroller>

								<h:panelGroup id="pagesNum">
									<h:outputText styleClass="strongClass" value="#{pages} " />
									<h:outputText value=" #{lblCommon.pages}" />
                                    <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
                                    <h:outputText styleClass="strongClass" value="#{MbCreditLife.eventBunchTypes.rowCount}"/>
                                    <h:outputText value=" #{lblCommon.records}"/>
                                    <h:outputText value="" style="padding-left: 20px; padding-right: 20px;" />
								</h:panelGroup>
								
								<h:panelGroup>
									<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
										onclick="saveTableState();"/>
									<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
										onclick="deleteTableState();"/>
									<a4j:queue name="tablestatequeue"/>
									<a4j:jsFunction name="saveTableState" action="#{MbCreditLife.saveTableStateDB}" eventsQueue="tablestatequeue"/>
									<a4j:jsFunction name="deleteTableState" action="#{MbCreditLife.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
								</h:panelGroup>
							</h:panelGrid>
						</h:panelGroup>

						<h:panelGrid id="btnPanel" columns="4" styleClass="buttons_block">

							<bre:taggedCommandButton id="addEventBunchTypeBtn"
								value="#{lblForm.add}" action="#{MbCreditLife.createEventBunchType}"
								oncomplete="#{rich:component('eventBunchTypeMdl')}.show()"
								reRender="eventBunchTypeMdl"
								rendered="#{usession.inRole['ADD_EVENT_BUNCH_TYPE']}"
								image="/images/create_doc.gif" />

							<bre:taggedCommandButton id="editEventBunchTypeBtn"
								value="#{lblForm.edit}" action="#{MbCreditLife.editEventBunchType}"
								oncomplete="#{rich:component('eventBunchTypeMdl')}.show()"
								reRender="eventBunchTypeMdl"
								disabled="#{MbCreditLife.activeEventBunchType == null}"
								rendered="#{usession.inRole['MODIFY_EVENT_BUNCH_TYPE']}"
								image="/images/edit.gif" />

							<bre:taggedCommandButton id="deleteEventBunchTypeBtn"
								value="#{lblForm.delete}"
								oncomplete="#{rich:component('deleteViewId:confirmPanel')}.show()"
								disabled="#{MbCreditLife.activeEventBunchType == null}"
								rendered="#{usession.inRole['REMOVE_EVENT_BUNCH_TYPE']}"
								image="/images/delete.gif" />
						</h:panelGrid>
					</h:panelGroup>
				</h:panelGroup>

			</h:form>

			<!-- workspace -->
			<h:form>
                <a4j:jsFunction name="storeTab" ajaxSingle="true" limitToList="true"
                                ignoreDupResponses="true" eventsQueue="queue" requestDelay="500" reRender="#{MbCreditLife.tabName}">
                    <a4j:actionparam name="tabName" assignTo="#{MbCreditLife.tabName}" />
                </a4j:jsFunction>
            </h:form>
			<h:panelGroup styleClass="workplace" layout="block" id="workplacePanel">
				<rich:tabPanel switchType="client" id="details" tabClass="tab-cell"
					activeTabClass="active-tab-cell" headerClass="tabs"
					headerSpacing="0px" contentClass="tab-content"
					selectedTab="#{MbCreditLife.tabName}">

					<rich:tab label="Bunch" name="Bunch" ontabenter="storeTab('bunchTab')" style="height:100%;" >
						<f:facet name="label">
							<h:panelGroup styleClass="first tab-label" layout="block">
								<h:outputText value="#{lblCrd.bunch_details}" title="#{lblCrd.bunch_details}" />
							</h:panelGroup>
						</f:facet>

						<h:panelGroup id="bunchTab"
									  layout="block"
									  style="height: 100%;overflow:hidden;position:relative;"
									  styleClass="carddata-wrapper">
							<ui:include src="/pages/accounts/list_entry_templates_bottom.jspx">
								<ui:param name="viewId" value="bunchTab"/>
							</ui:include>
						</h:panelGroup>
					</rich:tab>

					<rich:tab label="Details" name="Details" ontabenter="storeTab('detailsTab')">
						<f:facet name="label">
							<h:panelGroup styleClass="first tab-label" layout="block">
								<h:outputText value="#{lblCommon.details}" title="#{lblCommon.details}" />
							</h:panelGroup>
						</f:facet>

						<h:panelGroup id="detailsTab" layout="block">
							<ui:include src="/pages/credit/life/creditLifeDetails.jspx" />
							<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons"/>
						</h:panelGroup>
						
					</rich:tab>

					<rich:tab label="AdditionalBunch" name="AdditionalBunch" ontabenter="storeTab('additionalBunchTab')" style="height:100%;">
						<f:facet name="label">
							<h:panelGroup styleClass="first tab-label" layout="block">
								<h:outputText value="#{lblCrd.add_bunch_details}" title="#{lblCrd.add_bunch_details}" />
							</h:panelGroup>
						</f:facet>

						<h:panelGroup id="additionalBunchTab"
									  layout="block"
									  style="height: 100%;overflow:hidden;position:relative;"
									  styleClass="carddata-wrapper">
							<ui:include src="/pages/accounts/list_entry_templates_bottom.jspx">
								<ui:param name="viewId" value="additionalBunchTab"/>
							</ui:include>
						</h:panelGroup>
					</rich:tab>
				</rich:tabPanel>
			</h:panelGroup>

			<!-- Dialog for creating a new event-bunch type -->
			<ui:include src="/pages/credit/life/eventBunchTypeMdl.jspx">
				<ui:param name="rerenderList" value="eventBunchTypesTable, eventBunchTypesBtnForm, #{MbCreditLife.tabName}"/>
			</ui:include>

			<ui:include src="/pages/utils/confirmPanel.jspx">
				<ui:param name="backingBean" value="#{MbCreditLife}"/>
				<ui:param name="yesAction" value="delete"/>
				<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
				<ui:param name="rerenderList" value="eventBunchTypesTable, eventBunchTypesBtnForm, #{MbCreditLife.tabName}"/>
				<ui:param name="confirmQuestion" value=" "/> 
				<ui:param name="subviewId" value="deleteViewId"/>
				<ui:param name="yes" value="#{lblForm.ok}"/>
				<ui:param name="no" value="#{lblForm.cancel}"/>
			</ui:include>

			<ui:include src="/pages/accounts/edit_entry_template_pair.jspx">
				<ui:param name="rerenderList"
						  value="entryTemplatesForm:entryTemplatesTable,
				         entryTemplatesForm:btnsTemplate,
				         entryTemplatesForm:debitCredit"/>
				<ui:param name="viewId" value="#{viewId}"/>
			</ui:include>
		</h:panelGroup>

		<h:panelGroup rendered="#{!usession.inRole['VIEW_EVENT_BUNCH_TYPE']}"
			style="text-align: center">
			<h:outputText value="#{lblMsg.insufficient_rights}"
				style="font-size: 5em" />
		</h:panelGroup>
		
		<script>
			//<![CDATA[
			/*
				Short manual for the tabs stretching
				
				* Put in head of the page a link to "streach.js" script.
				* Copy "updateHeight()" from here to end of the page.
				* Chage the function as you need. Change the forms names
				* Set id="workplacePanel"Â¸ layout="block" for workplace panel					
				* Set style="height:100%" for rich:tabPanel, rich:tab. Set style="height: 100%;overflow:hidden;position:relative;" 
				for h:panelGroup surrounding ui:include. Below lying elements must not have a har-coded height in theirs styles.
				* Surround the tables with h:panelGroup layout="block" style="padding:0px;margin:0px;"
				* Correct updateHeight() in correspondence with wrappers you wrote.
				* Add to header of one of the columns of the tables updateHeight() call. Every time the table is rendered, udpateHeight() will be called.
				* If the result table is rich:extendedDataTable you need surround it with a wrapper panel too, but also you need to set style with hard-coded
				height to this wrapper. For this wrapper you need call Stretch.updateTreeHeightByFixedHeight(). 
			*/
		
			renderEntryTemplateTbl();
			
			function updateHeight(){
	            updateGridHeight();
	        }

	        layout =
	                {
	                    SEARCH_FORM_ID:                 'eventBunchTypesSearchForm',
	                    SEARCH_RESULT_FORM_ID:          'eventBunchTypesForm',
	                    SEARCH_RESULT_FORM_WRAPPER_ID:  'mainTableWrapper',
	                    SEARCH_RESULT_FOOTER_FORM_ID:   'eventBunchTypesBtnForm',
	                    TAB_PANEL_ID:                   'workplacePanel',

	                    TAB_DATA:      [{
	                                    TAB_FORM_ID:            'entryTemplatesForm',
	                                    TAB_FORM_WRAPPER_ID:    'entryTemplatesTableWrapper',
	                                    CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS
	                                    }, {
	                                    TAB_FORM_ID:            'creditLifeDetailsForm',
	                                    TAB_FORM_WRAPPER_ID:    'creditLifeDetailsWrapper',
	                                    CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS
	                                    }]

	                };
	        jQuery(window).resize(updateHeight);
			
			updateHeight();
			//]]>
		</script>		
	</ui:define>
</ui:composition>
</html>
