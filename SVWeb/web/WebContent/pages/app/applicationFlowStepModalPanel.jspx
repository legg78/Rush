<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<rich:modalPanel id="applicationFlowStepEditModalPanel" autosized="true"
		minWidth="300" minHeight="100">
		<f:facet name="header">
			<h:panelGroup id="applicationFlowStepEditModalPanelHeader">
				<h:outputText value="#{lblApp.edit_step}"
					rendered="#{MbApplicationFlowSteps.editMode}" />
				<h:outputText value="#{lblApp.new_step}"
					rendered="#{MbApplicationFlowSteps.newMode}" />
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
		</f:facet>
		<h:form id="applicationFlowStepEditModalPanelForm">
			<script type="text/javascript">
				//<!--
				
				function checkFields() {
					var checked = true;
					
					if (document.getElementById('applicationFlowStepEditModalPanelForm:stepLabel').value == "") {
						document.getElementById('applicationFlowStepEditModalPanelForm:stepLabelError').style.display = "inline";
						checked = false;
					}
					
					if (document.getElementById('applicationFlowStepEditModalPanelForm:stepSource').value == "") {
						document.getElementById('applicationFlowStepEditModalPanelForm:stepSourceError').style.display = "inline";
						checked = false;
					}
					
					if (document.getElementById('applicationFlowStepEditModalPanelForm:appStatus').value == "") {
						document.getElementById('applicationFlowStepEditModalPanelForm:appStatusError').style.display = "inline";
						checked = false;
					}
					
					if (document.getElementById('applicationFlowStepEditModalPanelForm:displayOrder').value == "") {
						document.getElementById('applicationFlowStepEditModalPanelForm:displayOrderError').style.display = "inline";
						checked = false;
					}	
					return checked;
				}
				//-->
			</script>
			<h:panelGrid columns="2" styleClass="cardholderdata"
						columnClasses="firstColModal, width250">
			
			<h:outputLabel for="stepLabel" value="* #{lblApp.step_label}:" title="#{lblApp.step_label}" />
					<h:panelGrid columns="1" cellpadding="0" cellspacing="0">
						<h:inputText id="stepLabel" label="#{lblApp.step_label}"
							required="true"
							value="#{MbApplicationFlowSteps.newStep.stepLabel}"
							onblur="hideErrorField(this)">
						</h:inputText>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="stepLabelError" style="display:none;">
							<f:param name="fieldName" value="#{lblApp.step_label}"/>
						</h:outputFormat>
					</h:panelGrid>
					
			<h:outputLabel for="stepSource" value="* #{lblApp.step_source}:" title="#{lblApp.step_source}" />
					<h:panelGrid columns="1" cellpadding="0" cellspacing="0">
						<h:inputText id="stepSource" label="#{lblApp.step_source}"
							required="true"
							value="#{MbApplicationFlowSteps.newStep.stepSource}"
							onblur="hideErrorField(this)">
						</h:inputText>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="stepSourceError" style="display:none;">
							<f:param name="fieldName" value="#{lblApp.step_source}"/>
						</h:outputFormat>
					</h:panelGrid>		
					
			<h:outputLabel for="appStatus" value="* #{lblApp.appl_status}:" title="#{lblApp.appl_status}" />
					<h:panelGrid columns="1" cellpadding="0" cellspacing="0">
						<h:selectOneMenu id="appStatus" label="{lblApp.appl_status}"
							value="#{MbApplicationFlowSteps.newStep.applStatus}" 
							onblur="hideErrorField(this)">
							<f:selectItem itemValue="" />
							<f:selectItems value="#{MbApplicationFlowSteps.statuses}" />
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="appStatusError" style="display:none;">
							<f:param name="fieldName" value="#{lblApp.appl_status}"/>
						</h:outputFormat>
					</h:panelGrid>
			
			<h:outputLabel for="readOnly" value="#{lblApp.read_only}:" title="#{lblApp.read_only}" />
					<h:panelGrid columns="1" cellpadding="0" cellspacing="0">
						<h:selectBooleanCheckbox id="readOnly" label="#{lblApp.read_only}"
							value="#{MbApplicationFlowSteps.newStep.readOnly}"
							/>
					</h:panelGrid>
			<h:outputLabel for="displayOrder" value="* #{lblCommon.display_order}:" title="#{lblCommon.display_order}" />
					<h:panelGrid columns="1" cellpadding="0" cellspacing="0">
						<h:inputText id="displayOrder" label="#{lblCommon.display_order}"
							required="true"
							value="#{MbApplicationFlowSteps.newStep.displayOrder}"
							onkeypress="if (!numbersOnly(this, event)) return false;"
							onblur="hideErrorField(this)">
						</h:inputText>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="displayOrderError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.display_order }"/>
						</h:outputFormat>			
					</h:panelGrid>
			</h:panelGrid>		
			<h:panelGroup layout="block"
				styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block"
					styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.save}" type="submit"
							action="#{MbApplicationFlowSteps.save}"
							onclick="if (!checkFields()) return false; disableModalPanelBtns(this)"
							oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) 
			                   		#{rich:component('applicationFlowStepEditModalPanel')}.hide();
			                   		updateHeight();"
							reRender="stepsForm" />
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbApplicationFlowSteps.cancel}"
							immediate="true" limitToList="true"
							oncomplete="#{rich:component('applicationFlowStepEditModalPanel')}.hide();
								updateHeight();"
							reRender="stepsForm">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>													
		</h:form>
	</rich:modalPanel>
</ui:composition>
</html>