<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<f:view>

<ui:composition>
<f:loadBundle var="lblPrd" basename="ru.bpc.sv2.ui.bundles.Prd" />
	<h:form id="mccDetailsForm">
		<h:panelGroup layout="block" styleClass="langSelector">
			<h:panelGrid columns="2" styleClass="cardholderdata oneColumnTable"
					id="detailsData" columnClasses=",secondCol">
				<h:outputLabel for="lang" value="#{lblCommon.lang_selector}: "
						title="#{lblCommon.lang_selector}" />
				<h:selectOneMenu id="lang"
						disabled="#{MbMCCs.activeMcc.id == null}"
						value="#{MbMCCs.activeMcc.lang}"
						valueChangeListener="#{MbMCCs.changeLanguage}">
					<a4j:support event="onchange" reRender="mccDetailsForm"
							limitToList="true" oncomplete="updateHeight();"/>
					<f:selectItems value="#{MbMCCs.languages}" />
				</h:selectOneMenu>
			</h:panelGrid>
		</h:panelGroup>
		<h:panelGroup id="mccDetailsWrapper" layout="block" styleClass="carddata-wrapper" 
				style="height: 100%; overflow-y: auto;overflow-x: hidden;position:relative;">
			<rich:dataTable id="mccDetailsTable"
					value="#{MbMCCs.emptyTable}" 
					var="field"
					styleClass="res-table noHeader" width="100%">
				<rich:columnGroup rowClasses=",odd" 
						columnClasses="firstCol alignLeft width20, width80 width250 noPadding">
					<rich:column styleClass="detailsCategory expandedBranch">
						<h:graphicImage url="/images/minus.gif" onclick="showHideDetails(this)"/>
						<h:outputLabel value="#{lblPrd.general_data}:" />
					</rich:column>
					<rich:column>
					</rich:column>					
					
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.mcc}: " title="#{lblCommon.mcc}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbMCCs.activeMcc.mcc}"
								title="#{MbMCCs.activeMcc.mcc}" />
					</rich:column>
					
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.name}: " title="#{lblCommon.name}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbMCCs.activeMcc.name}"
								title="#{MbMCCs.activeMcc.name}" />
					</rich:column>
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.tcc}: " title="#{lblCommon.tcc}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbMCCs.activeMcc.tcc}"
								title="#{MbMCCs.activeMcc.tcc}"/>
					</rich:column>
					
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.diners_code}: " title="#{lblCommon.diners_code}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbMCCs.activeMcc.dinersCode}"
								title="#{MbMCCs.activeMcc.dinersCode}"/>
					</rich:column>				
	
					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.mastercard_cab_type}: " title="#{lblCommon.mastercard_cab_type}" />
					</rich:column>
					<rich:column>
						<h:outputLabel value="#{MbMCCs.activeMcc.mastercardCabType}"
								title="#{MbMCCs.activeMcc.mastercardCabType}"/>
					</rich:column>
	
				</rich:columnGroup>
			</rich:dataTable>
			<script>updateHeight();setDetailsState("mccDetailsForm:mccDetailsTable");</script>
		</h:panelGroup>
	</h:form>
	
</ui:composition>
</f:view>
</html>
