<ui:composition   xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
	<h:form>	
		<h:panelGroup styleClass="stdButton">
				<bre:taggedCommandButton value="Start" action="#{MbProcesses.startProcessBO}"/>
		</h:panelGroup>
			
		<h:panelGrid columns="2" >
            <h:panelGroup styleClass="stdButton" rendered="#{!MbProcesses.modalMode}">
				<bre:taggedCommandButton value="Start" action="#{MbProcesses.start}"/>
			</h:panelGroup>
			<h:panelGroup styleClass="stdButton" rendered="#{!MbDictionary.modalMode}">
				<bre:taggedCommandButton value="Stop" action="#{MbProcesses.stop}"/>
			</h:panelGroup>
			
    	</h:panelGrid>
    	
    	<a4j:outputPanel ajaxRendered="true">
            <h:messages />
        </a4j:outputPanel>

	</h:form>
</ui:composition>
