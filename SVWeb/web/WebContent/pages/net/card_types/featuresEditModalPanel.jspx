<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
	
<ui:composition>
	<script type="text/javascript">//<![CDATA[			
		function checkFields() {
			var checked = true;
			
			if (document.getElementById('featureEditModalPanelForm:feature').value == "") {
				document.getElementById('featureEditModalPanelForm:featureError').style.display = "inline";
				checked = false;
			}
			/*
			if (document.getElementById('blockEditModalPanelForm:blockOrder').value == "") {
				document.getElementById('blockEditModalPanelForm:blockOrderError').style.display = "inline";
				checked = false;
			}
			if (document.getElementById('blockEditModalPanelForm:profile').value == "") {
				document.getElementById('blockEditModalPanelForm:profileError').style.display = "inline";
				checked = false;
			}*/
			
			return checked;
		}
		//]]>
	</script>
	<rich:modalPanel id="featureEditModalPanel" autosized="true"
		minWidth="300" minHeight="93">
		<f:facet name="header">
			<h:panelGroup id="featureEditModalPanelHeader">
				<h:outputText value="#{lblNet.edit_feature}"
					rendered="#{MbCardTypeFeatures.editMode}" />
				<h:outputText value="#{lblNet.new_feature}"
					rendered="#{MbCardTypeFeatures.newMode}" />
			</h:panelGroup>
		</f:facet>	
		<f:facet name="controls">
		</f:facet>
		<h:form id="featureEditModalPanelForm">
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata"
					columnClasses="firstColModal, width250">
					
					<h:outputLabel for="feature" value="* #{lblNet.feature}:" title="#{lblNet.feature}" />
					<h:panelGrid columns="1" cellpadding="0" cellspacing="0">
						<h:selectOneMenu id="feature"
							label="#{lblCommon.institution}"
							value="#{MbCardTypeFeatures.editingItem.cardFeature}"
							onblur="hideErrorField(this)">							
							<f:selectItem itemValue="" />
							<f:selectItems value="#{MbCardTypeFeatures.features}" />
						</h:selectOneMenu>										
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="featureError" style="display:none;">
							<f:param name="fieldName" value="#{lblNet.feature}"/>
						</h:outputFormat>
					</h:panelGrid>
					
				</h:panelGrid>
			</h:panelGroup>		
			
			<h:panelGroup layout="block"
				styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block"
					styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.save}" 
							action="#{MbCardTypeFeatures.save}"
							onclick="if (!checkFields()) return false; disableModalPanelBtns(this)"
							oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) 
			                   			#{rich:component('featureEditModalPanel')}.hide();
			                   			updateHeight();"
							reRender="featureEditModalPanel, featuresForm" />
							
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbCardTypeFeatures.cancel}" immediate="true"
							limitToList="true"
							oncomplete="#{rich:component('featureEditModalPanel')}.hide();
										updateHeight();"
							reRender="featureEditModalPanelForm">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>	
	</rich:modalPanel>
	
</ui:composition>
</html>	