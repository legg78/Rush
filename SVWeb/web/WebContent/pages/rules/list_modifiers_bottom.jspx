<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<f:loadBundle var="lblRul" basename="ru.bpc.sv2.ui.bundles.Rul"/>
	
   	<h:form id="modifiersForm">
		<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
	 		<h:panelGrid columns="2" styleClass="cardholderdata oneColumnTable" id="detailsData" columnClasses="firstCol,secondCol">
	 			<h:outputLabel value="#{lblCommon.lang_selector}: " title="#{lblCommon.lang_selector}"/>
	 			<h:selectOneMenu 
	 					disabled="#{MbModifiers.modScale == null}"
	 					value="#{MbModifiers.curLang}" 
	 					valueChangeListener="#{MbModifiers.changeLanguage}">
					<a4j:support event="onchange" reRender="modsTable" limitToList="true"/>
					<f:selectItems value="#{MbModifiers.languages}"/>
				</h:selectOneMenu>
	 		</h:panelGrid>
	 	</h:panelGroup>
		<h:panelGroup layout="block" style="margin:0px;padding:0px;"
			id="modsTableWrapper">
			<rich:extendedDataTable id="modsTable" styleClass="res-table"
				headerClass="res-table-header table-header-ext" rowClasses=",odd"
				selectedClass="res-table-selected" var="item"
				value="#{MbModifiers.modifiers}"
				selection="#{MbModifiers.itemSelection}"
				selectionMode="single" enableContextMenu="true"
				tableState="#{MbModifiers.tableState}"
				noDataLabel="#{lblCommon['no_records_found']}">

				<a4j:support event="onselectionchange" reRender="btnPanel" />

				<rich:column id="id" label="#{lblCommon.id}" title="Id" sortBy="#{'id'}" width="10%">
					<f:facet name="header">
						<a4j:outputPanel layout="none">
							<script>updateHeight();</script>
							<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}" />
						</a4j:outputPanel>
					</f:facet>
					<h:outputText value="#{item.id}" />
				</rich:column>

				<rich:column id="priority" label="#{lblRul.priority}" title="Priority" sortBy="#{'priority'}" width="10%">
					<f:facet name="header">
						<h:outputText value="#{lblRul.priority}"
							title="#{lblRul.priority}" />
					</f:facet>
					<h:outputText value="#{item.priority}" />
				</rich:column>

				<rich:column id="name" label="#{lblCommon.name}" title="Name" sortBy="#{'name'}" width="20%">
					<f:facet name="filter">
						<h:inputText value="#{MbModifiers.filter.name}" style="width:100%">
							<a4j:support event="onkeyup" reRender="modsTable, btnPanel"
								requestDelay="500" action="#{MbModifiers.search}" />
						</h:inputText>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblCommon.name}" title="#{lblCommon.name}" />
					</f:facet>
					<h:outputText value="#{item.name}" title="#{item.name}" />
				</rich:column>

				<rich:column id="condition" label="#{lblRul.condition}" title="Condition" width="25%">
					<f:facet name="filter">
						<h:inputText value="#{MbModifiers.filter.condition}"
							style="width:100%">
							<a4j:support event="onkeyup" reRender="modsTable, btnPanel"
								requestDelay="500" action="#{MbModifiers.search}" />
						</h:inputText>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblRul.condition}"
							title="#{lblRul.condition}" />
					</f:facet>
					<h:outputText value="#{item.condition}" title="#{item.condition}" />
				</rich:column>

				<rich:column id="description" label="#{lblCommon.description}" title="Description" sortBy="#{'description'}"
					width="35%">
					<f:facet name="filter">
						<h:inputText value="#{MbModifiers.filter.description}"
							style="width:100%">
							<a4j:support event="onkeyup" reRender="modsTable, btnPanel"
								requestDelay="500" action="#{MbModifiers.search}" />
						</h:inputText>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblCommon.description}"
							title="#{lblCommon.description}" />
					</f:facet>
					<h:outputText value="#{item.description}"
						title="#{item.description}" />
				</rich:column>
			</rich:extendedDataTable>
		</h:panelGroup>
		<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">

	            <h:panelGrid id="btnPanel" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
	            	<h:panelGroup>
					<bre:taggedCommandButton
							action="#{MbModifiers.view}"
							value="#{lblForm.view}"
							oncomplete="#{rich:component('rul_modifier_view_modal_panel')}.show()"
							disabled="#{MbModifiers.activeModifier == null}"
							reRender="rul_modifier_view_modal_div"
							/>
					
	            	<bre:taggedCommandButton id="addBtn"
                      		reRender="rul_modifier_modal_header, rul_modifier_modal_div"
                      		value="#{lblForm.add}"
                   			oncomplete="#{rich:component('rul_modifier_modal_panel')}.show()"
                      		action="#{MbModifiers.add}"
                      		disabled="#{MbModifiers.modScale == null}"
                      		rendered="#{usession.inRole['ADD_RULE_MODIFIER']}"
                      		image="/images/create_doc.gif"
                      		/>
					<bre:taggedCommandButton id="editBtn"
                      		reRender="rul_modifier_modal_header, rul_modifier_modal_div"
                      		value="#{lblForm.edit}"
                      		action="#{MbModifiers.edit}"
                   			oncomplete="#{rich:component('rul_modifier_modal_panel')}.show()"
                      		disabled="#{MbModifiers.activeModifier == null}"
                      		rendered="#{usession.inRole['MODIFY_RULE_MODIFIER']}"
                      		image="/images/edit.gif"
                      		/>
					<bre:taggedCommandButton id="deleteBtn"
                      		value="#{lblForm.delete}"
                      		oncomplete="#{rich:component('deleteModViewId:confirmPanel')}.show()"
                      		disabled="#{MbModifiers.activeModifier == null}"
                      		rendered="#{usession.inRole['REMOVE_RULE_MODIFIER']}"
                      		image="/images/delete.gif"
                      		/>
                    </h:panelGroup>
                    
                    <h:panelGroup>
							<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
								onclick="saveModifierTableState();"/>
							<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
								onclick="deleteModifierTableState();"/>
							<a4j:queue name="tablestatequeue"/>
							<a4j:jsFunction name="saveModifierTableState" action="#{MbModifiers.saveTableStateDB}" eventsQueue="tablestatequeue"/>
							<a4j:jsFunction name="deleteModifierTableState" action="#{MbModifiers.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
						</h:panelGroup>
				</h:panelGrid>
			</h:panelGroup>
	    </h:panelGroup>
    </h:form>

	<ui:include src="/pages/rules/modifier_edit.jspx">
		<ui:param name="rerenderList" value="modifiersForm"/>
	</ui:include>

	<rich:modalPanel id="rul_modifier_view_modal_panel" autosized="true" minWidth="300" minHeight="200">
	   <f:facet name="header">
   	    	<h:outputText value="#{lblRul.modifier}"/>        	
   		</f:facet>
		<f:facet name="controls">
		</f:facet>
    	<h:form>
			<h:panelGroup id="rul_modifier_view_modal_div">
				<ui:include src="/pages/rules/modifier_details.jspx"/>
			</h:panelGroup>

			<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	       	    	<h:panelGrid columns="2" columnClasses="width99P,paddingR12">
	       	    		<h:outputText/>
                       	<bre:taggedCommandButton
                        		value="#{lblForm.cancel}" action="#{MbModifiers.close}" 
                        		immediate="true"
                        		oncomplete="#{rich:component('rul_modifier_view_modal_panel')}.hide()"
                        		/>
		    		</h:panelGrid>
		    	</h:panelGroup>
		    </h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/confirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbModifiers}"/>
		<ui:param name="yesAction" value="delete"/>
		<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
		<ui:param name="rerenderList" value="modsTable, btnPanel"/>
		<ui:param name="confirmQuestion" value=" "/> 
		<ui:param name="subviewId" value="deleteModViewId"/>
		<ui:param name="yes" value="#{lblForm.ok}"/>
		<ui:param name="no" value="#{lblForm.cancel}"/>
	</ui:include>
	
</ui:composition>
</html>
