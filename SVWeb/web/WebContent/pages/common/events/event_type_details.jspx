<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
<h:form id="eventTypeDetailsForm">
	<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
		<h:panelGrid columns="2" styleClass="cardholderdata oneColumnTable" width="100%" columnClasses="firstCol,secondCol">        
			<h:outputLabel value="#{lblCommon.lang_selector}: " title="#{lblCommon.lang_selector}" />
			<h:selectOneMenu id="lang"
						disabled="#{MbEventTypes.activeEventType.id == null}"
						value="#{MbEventTypes.activeEventType.lang}"
						valueChangeListener="#{MbEventTypes.changeLanguage}"
						>
				<a4j:support event="onchange" reRender="eventTypeDetailsForm"/>
			    <f:selectItems value="#{MbEventTypes.languages}"/>
			</h:selectOneMenu>

			<h:outputText/>
			<rich:separator height="2" lineType="dotted" styleClass="separator"/>
			
			<h:outputLabel value="#{lblCommon.event_type}: " title="#{lblCommon.event_type}" />
			<h:inputText readonly="true"
					rendered="#{MbEventTypes.activeEventType != null}"
					value="#{MbEventTypes.activeEventType.eventType} - #{MbEventTypes.activeEventType.name}"/>
			<h:inputText readonly="true"
					rendered="#{MbEventTypes.activeEventType == null}"
					value=""/>
			
			<h:outputLabel value="#{lblCommon.entity_type}: " title="#{lblCommon.entity_type}" />
			<h:inputText readonly="true"
					rendered="#{MbEventTypes.activeEventType != null}"
					value="#{DictUtils.articles[MbEventTypes.activeEventType.entityType]}"/>
			<h:inputText readonly="true"
					rendered="#{MbEventTypes.activeEventType == null}"
					value=""/>
			
			<h:outputLabel value="#{lblCommon.description}: " title="#{lblCommon.description}" />
			<h:inputText value="#{MbEventTypes.activeEventType.description}" readonly="true"/>
		
		</h:panelGrid>		
	</h:panelGroup>
</h:form>   
</ui:composition>
</html>