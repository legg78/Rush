                    <cardholder_sign_file_name>File_2.img</cardholder_sign_file_name>   <!-- Name of file with cardholder signature sample  --> 
                    <person>                                                            <!-- Person data -->
                        <command>CMMDCRUP</command>                                     <!-- Command for person - Create or update -->
                        <person_name language="LANGENG">                                <!-- Person name. Attribute LANGUAGE contain code of language of provided person name - English -->
                            <surname>Ivanov</surname>                                   <!-- Person surname -->
                            <first_name>Ivan1</first_name>                              <!-- Person first name -->
                        </person_name>                                                                     
                        <identity_card>                                                 <!-- Identity card data -->
                            <command>CMMDEXPR</command>
                            <id_type>IDTP0001</id_type>
                            <id_series>33 00</id_series>                                <!-- Identity card type - Foreign passport -->
                            <id_number>123456</id_number>                               <!-- Identity card number -->
                        </identity_card>                                                                    
                    </person>                              
                    <address>                                                           <!-- Address -->
                        <command>CMMDCRUP</command>                                     <!-- Command for address - Create or update -->
                        <address_type>ADTPHOME</address_type>                           <!-- Address type - Home address -->
                        <country>643</country>                                          <!-- Country ISO code - Russia -->
                        <address_name language="LANGENG">                               <!-- Address. Attribute LANGUAGE contain code of language of provided address - English -->
                            <region>Moscow</region>                                     <!-- Region name -->
                            <city>Moscow</city>                                         <!-- Name of city -->
                            <street>Tverskaya</street>                                  <!-- Street -->
                        </address_name>
                        <house>11</house>                                               <!-- House number -->
                        <apartment>120</apartment>                                      <!-- Appartment number -->
                    </address>                   
                    <sec_word>
                        <secret_question>SEQUWORD</secret_question>                     <!-- Type of secret question - Secret word -->
                        <secret_answer>qwerty</secret_answer>                           <!-- Answer on secret question -->
                    </sec_word>
                    <notification>                                                      <!-- Notification settings -->
                        <command>CMMDCREX</command>                                     <!-- Command - create new record -->
                        <delivery_channel>3</delivery_channel>                          <!-- Delivery channel - SMS -->
                        <delivery_address>79161234567</delivery_address>                <!-- Mobile phone number -->
                        <is_active>1</is_active>                                        <!-- Activate delivery -->
                    </notification>
                </cardholder>
            </card>
        </contract>    
    </customer>
</application>
