<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:bm="http://www.bpc.ru/jsf/misc"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<f:view>
    <ui:composition>
        <h:form id="actionsDetailsForm">
            <h:panelGroup id="actionsDetailsWrapper"
                          layout="block"
                          styleClass="carddata-wrapper"
                          style="height:100%; overflow-y:auto; overflow-x:hidden; position:relative;">
                <rich:dataTable id="actionsDetailsTable"
                                value="#{(detailsBean==null ? MbOrgStructActions : detailsBean).emptyTable}"
                                var="field"
                                styleClass="res-table noHeader" width="100%">
                    <rich:columnGroup rowClasses=",odd"
                                      columnClasses="firstCol alignLeft width20, width80 width250 noPadding">
                        <rich:column styleClass="detailsCategory expandedBranch">
                            <h:graphicImage url="/images/minus.gif" onclick="showHideDetails(this)"/>
                            <h:outputLabel value="#{lblPrd.general_data}:" />
                        </rich:column>
                        <rich:column>
                            <script>updateHeight();</script>
                        </rich:column>

                        <rich:column breakBefore="true">
                            <h:outputLabel value="#{lblCommon.id}:" title="#{lblCommon.id}"/>
                        </rich:column>
                        <rich:column>
                            <bm:entityDisplay entityId="#{(detailsBean==null ? MbOrgStructActions : detailsBean).activeAction.id}"
                                              description="#{(detailsBean==null ? MbOrgStructActions : detailsBean).activeAction.id}"/>
                        </rich:column>

                        <rich:column breakBefore="true">
                            <h:outputLabel value="#{lblOst.inst_status}:" title="#{lblOst.inst_status}"/>
                        </rich:column>
                        <rich:column>
                            <bm:entityDisplay rendered="#{(detailsBean==null ? MbOrgStructActions : detailsBean).activeAction.instStatus != null}"
                                              entityId="#{DictUtils.articles[(detailsBean==null ? MbOrgStructActions : detailsBean).activeAction.instStatus]}"
                                              description="#{DictUtils.articles[(detailsBean==null ? MbOrgStructActions : detailsBean).activeAction.instStatus]}"/>
                            <bm:entityDisplay rendered="#{(detailsBean==null ? MbOrgStructActions : detailsBean).activeAction.instStatus == null}"
                                              entityId="" description=""/>
                        </rich:column>

                        <rich:column breakBefore="true">
                            <h:outputLabel value="#{lblOst.data_action}:" title="#{lblOst.data_action}"/>
                        </rich:column>
                        <rich:column>
                            <bm:entityDisplay rendered="#{(detailsBean==null ? MbOrgStructActions : detailsBean).activeAction.dataAction != null}"
                                              entityId="#{DictUtils.articles[(detailsBean==null ? MbOrgStructActions : detailsBean).activeAction.dataAction]}"
                                              description="#{DictUtils.articles[(detailsBean==null ? MbOrgStructActions : detailsBean).activeAction.dataAction]}"/>
                            <bm:entityDisplay rendered="#{(detailsBean==null ? MbOrgStructActions : detailsBean).activeAction.dataAction == null}"
                                              entityId="" description=""/>
                        </rich:column>
                    </rich:columnGroup>
                </rich:dataTable>
            </h:panelGroup>
        </h:form>
    </ui:composition>
</f:view>
</html>
