<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<rich:modalPanel id="currencyModalPanel" autosized="true"
		minWidth="200" minHeight="100">

		<f:facet name="header">
			<h:panelGroup id="currencyModalHeader">
				<h:outputText value="#{lblCommon.new_currency}"
					rendered="#{MbCurrency.newMode}" />
				<h:outputText value="#{lblCommon.edit_currency}"
					rendered="#{MbCurrency.editMode}" />
			</h:panelGroup>
		</f:facet>

		<f:facet name="controls">
		</f:facet>

		<h:form id="currencyModalDiv">
			<script type="text/javascript">
//<!--
				oldValue["currencyModalDiv"] = "#{MbCurrency.newCurrency.lang}";
				
				function checkCurrencyFields() {
					var checked = true;
					
					if (document.getElementById('currencyModalDiv:name').value == "") {
						document.getElementById('currencyModalDiv:nameError').style.display = "inline";
						checked = false;
					}
					
					if (document.getElementById('currencyModalDiv:code').value == "") {
						document.getElementById('currencyModalDiv:codeError').style.display = "inline";
						checked = false;
					}
					
					if (document.getElementById('currencyModalDiv:letCode').value == "") {
						document.getElementById('currencyModalDiv:letCodeError').style.display = "inline";
						checked = false;
					}
					if (document.getElementById('currencyModalDiv:exponent').value == "") {
						document.getElementById('currencyModalDiv:exponentError').style.display = "inline";
						checked = false;
					}
					
					return checked;
				}
			//-->
			</script>

			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata" width="100%"
					columnClasses="firstColModal, width250">

					<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}" />
					<h:selectOneMenu id="editLang" value="#{MbCurrency.newCurrency.lang}"
							onchange="if (#{MbCurrency.newMode}) {return true;} document.getElementById('currency:confirmPanelForm:newValue').value = this.value;
									#{rich:component('currency:confirmPanel')}.show()">
						<f:selectItems value="#{MbCurrency.languages}"/>
					</h:selectOneMenu>

					<h:outputLabel for="name" value="* #{lblCommon.name}: " title="#{lblCommon.name}" />
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:inputText id="name"
							value="#{MbCurrency.newCurrency.currencyName}"
							label="#{lblCommon.name}"
							onblur="hideErrorField(this)"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="nameError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.name}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel for="code" value="* #{lblCommon.num_code}:" title="#{lblCommon.num_code}" />
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:inputText id="code" value="#{MbCurrency.newCurrency.code}"
							maxlength="3" label="#{lblCommon.num_code}"
							onkeypress="if (!numbersOnly(this, event)) return false" 
							onblur="hideErrorField(this)"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="codeError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.num_code}"/>
						</h:outputFormat>
					</h:panelGrid>

					<h:outputLabel for="letCode" value="* #{lblCommon.let_code}:" title="#{lblCommon.let_code}" />
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:inputText id="letCode" value="#{MbCurrency.newCurrency.name}"
							maxlength="3" label="#{lblCommon.let_code}"
							onblur="hideErrorField(this)"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="letCodeError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.let_code}"/>
						</h:outputFormat>
					</h:panelGrid>
					
					<h:outputLabel for="exponent" value="* #{lblCommon.exponent}:" title="#{lblCommon.exponent}" />
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:inputText id="exponent" value="#{MbCurrency.newCurrency.exponent}"
							label="#{lblCommon.exponent}"
							onblur="hideErrorField(this)"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="exponentError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.exponent}"/>
						</h:outputFormat>
					</h:panelGrid>

				</h:panelGrid>
			</h:panelGroup>

			<h:panelGroup layout="block"
				styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block"
					styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">

						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.save}" type="submit"
							action="#{MbCurrency.save}"
							reRender="currsTable, currsDs, pagesNum, btnPanel, detailsTab, currencyModalDiv"
							onclick="if (!checkCurrencyFields()) return false; disableModalPanelBtns(this)"
							oncomplete="if (#{usession.noErrorResponse}) #{rich:component('currencyModalPanel')}.hide();enableModalPanelBtns(this);" />
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbCurrency.close}" immediate="true" limitToList="true"
							oncomplete="#{rich:component('currencyModalPanel')}.hide()"
							reRender="currencyModalDiv">
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>

				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
	<ui:include src="/pages/utils/langConfirmPanel.jspx">
	    	<ui:param name="backingBean" value="#{MbCurrency}"/>
	    	<ui:param name="rerenderList" value="currencyModalDiv:name"/>
	    	<ui:param name="editElem" value="currencyModalDiv:editLang"/>
	    	<ui:param name="newValue" value="#{MbCurrency.newCurrency.lang}"/>
	    	<ui:param name="subviewId" value="currency"/>
	    	<ui:param name="formName" value="currencyModalDiv" />
	    </ui:include>
</ui:composition>
</html>