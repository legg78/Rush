<?xml version="1.0" encoding="UTF-8"?>
<html   xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<script type="text/javascript">//<![CDATA[
		function checkCardTypeMapFields() {
			var checked = true;
			
			if (document.getElementById('net_card_type_map_modal_div:standard').value == "") {
				document.getElementById('net_card_type_map_modal_div:standardError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('net_card_type_map_modal_div:name').value == "") {
				document.getElementById('net_card_type_map_modal_div:nameError').style.display = "inline";
				checked = false;
			}	
			if (document.getElementById('net_card_type_map_modal_div:cardType').value == "") {
				document.getElementById('net_card_type_map_modal_div:cardTypeError').style.display = "inline";
				checked = false;
			}	
			if (document.getElementById('net_card_type_map_modal_div:priority').value == "") {
				document.getElementById('net_card_type_map_modal_div:priorityError').style.display = "inline";
				checked = false;
			}	
			
			return checked;
		}
		//]]>
	</script>

	<f:loadBundle var="lblNet" basename="ru.bpc.sv2.ui.bundles.Net"/>
	<f:loadBundle var="lblMsg" basename="ru.bpc.sv2.ui.bundles.Msg"/>
	
	<rich:modalPanel id="net_card_type_map_modal_panel" autosized="true" minWidth="300" minHeight="100"
		onshow="actualHelp.setModeHelp('#{MbCardTypeMapSearch.newMode}')"
		onhide="actualHelp.setHelp('#{pageHelp}')">
   	    <f:facet name="header">
  	    	<h:panelGroup id="net_card_type_map_modal_header">
        	    <h:outputText value="#{lblNet.new_card_type_map}" rendered="#{MbCardTypeMapSearch.newMode}"/>
        	    <h:outputText value="#{lblNet.edit_card_type_map}" rendered="#{MbCardTypeMapSearch.editMode}"/>
   	    	</h:panelGroup>
        </f:facet>
        <f:facet name="controls">
       		<h:panelGroup id="net_card_type_map_modal_control" rendered="#{showHelpModal}">
			  	<h:graphicImage value="/_img/icon_modal_help.png" style="cursor:pointer" 
	   	        			onclick="showHelp(actualHelp.getURL())" width="15px" />
			</h:panelGroup>
   	    </f:facet>
		<h:form id="net_card_type_map_modal_div">
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
		        <h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">
		
					<h:outputLabel value="* #{lblCmn.standard}: " title="#{lblCmn.standard}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:selectOneMenu id="standard" label="#{lblCmn.standard}" 
								value="#{MbCardTypeMapSearch.newTypeMap.standardId}"
								onblur="hideErrorField(this)">
							<f:selectItem itemValue=""/>
							<f:selectItems value="#{MbCardTypeMapSearch.standards}"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="standardError" style="display:none;">
							<f:param name="fieldName" value="#{lblCmn.standard}"/>
						</h:outputFormat>
					</h:panelGrid>
					
					<h:outputLabel value="* #{lblNet.network_card_type}: " title="#{lblNet.network_card_type}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:inputText id="name" 
								value="#{MbCardTypeMapSearch.newTypeMap.networkCardType}"
								maxlength="8"
								label="#{lblNet.network_card_type}"
								onblur="hideErrorField(this)">
						</h:inputText>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="nameError" style="display:none;">
							<f:param name="fieldName" value="#{lblNet.network_card_type}"/>
						</h:outputFormat>
					</h:panelGrid>
		
					<h:outputLabel value="* #{lblNet.card_type}: " title="#{lblNet.card_type}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:selectOneMenu id="cardType" label="#{lblNet.card_type}"
								value="#{MbCardTypeMapSearch.newTypeMap.cardTypeId}"
								onblur="hideErrorField(this)">
							<f:selectItem itemValue=""/>
							<f:selectItems value="#{MbCardTypeMapSearch.cardTypes}"/>
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="cardTypeError" style="display:none;">
							<f:param name="fieldName" value="#{lblNet.card_type}"/>
						</h:outputFormat>
					</h:panelGrid>
					
					<h:outputLabel value="#{lblCommon.country}: " title="#{lblCommon.country}"/>
					<a4j:region>
						<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
							<h:selectOneMenu id="newCountry" 
									value="#{MbCardTypeMapSearch.newTypeMap.country}"
									label="#{lblCommon.country}"
									onchange="hideErrorField(this)"
									style="width: 257px;"> 	
								<f:selectItems value="#{CountryUtils.allCountries}"/>
							</h:selectOneMenu>
						</h:panelGrid>
					</a4j:region>
					
					<h:outputLabel value="* #{lblCommon.priority}: " title="#{lblCommon.priority}"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">			
						<h:inputText id="priority" label="#{lblCommon.priority}"
								value="#{MbCardTypeMapSearch.newTypeMap.priority}"
								maxlength="4"
								onblur="hideErrorField(this)">
							<f:converter converterId="javax.faces.Integer"/>
							<a4j:support event="onchange" reRender="priorityErr" limitToList="true" ajaxSingle="true"/>
						</h:inputText>
						<rich:message for="priority" id="priorityErr" styleClass="errorMarker"/>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="priorityError" style="display:none;">
							<f:param name="fieldName" value="#{lblCommon.priority}"/>
						</h:outputFormat>
					</h:panelGrid>	
		
			    </h:panelGrid>
		    </h:panelGroup>
      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
	       	    		<h:outputText/>
                       	<bre:taggedCommandButton
                       			value="#{lblForm.save}" type="submit" action="#{MbCardTypeMapSearch.save}"
                       			onclick="if (!checkCardTypeMapFields()) return false; disableModalPanelBtns(this)"
                       			oncomplete="enableModalPanelBtns(this);if (#{usession.noErrorResponse}) #{rich:component('net_card_type_map_modal_panel')}.hide()"
                       			reRender="#{rerenderList}"
                        		/>
                       	<bre:taggedCommandButton
                        		value="#{lblForm.cancel}" action="#{MbCardTypeMapSearch.close}" immediate="true"
                        		oncomplete="#{rich:component('net_card_type_map_modal_panel')}.hide()"
                        		reRender="net_card_type_map_modal_div">
                       		<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
                        </bre:taggedCommandButton>			                        		
		    		</h:panelGrid>
		    	</h:panelGroup>
		    </h:panelGroup>
		</h:form>
	</rich:modalPanel>
	
</ui:composition>
</html>
