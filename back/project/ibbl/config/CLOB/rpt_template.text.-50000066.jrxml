<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform"><xsl:output method="text" encoding="utf-8" indent="no"/>
<xsl:template match="datasource/report">
<xsl:value-of select="subject"/><xsl:text>&#xa;</xsl:text>
<xsl:value-of select="first_name"/>, <xsl:choose><xsl:when test="second_name !=null"><xsl:value-of select="second_name" />, </xsl:when></xsl:choose><xsl:value-of select="surname" />
Account number: <xsl:value-of select="account_number"/>, Currency: <xsl:value-of select="currency"/>
Report begin date: <xsl:value-of select="begin_date"/>, Report end date: <xsl:value-of select="end_date"/>
</xsl:template>
</xsl:stylesheet>
