<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:bpct="http://www.bpc.ru/jsf/tiles"
      xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:fmt="http://www.bpc.ru/el/formatter"
      xmlns:bpc="http://www.bpc.ru/jsf/misc">
<ui:composition template="../accDetailsTemplate.jspx">
    <ui:define name="stepContent">
        <f:loadBundle var="lblCommon" basename="ru.bpc.sv2.ui.bundles.Common"/>
        <f:loadBundle var="lblAcc" basename="ru.bpc.sv2.ui.bundles.Acc"/>
        <f:loadBundle var="lblOpr" basename="ru.bpc.sv2.ui.bundles.Opr"/>

        <h:form id="accountFundsTransferDSForm" style="padding:10px;">
            <ui:include src="/pages/common/wizard/commonWizardActions.jspx">
                <ui:param name="bean" value="#{bean}" />
                <ui:param name="action" value="#{action}" />
            </ui:include>

            <h:panelGroup layout="block" styleClass="cardholderdata-wrapper" rendered="#{MbAccountFundsTransferRS.maker}">
                <h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="width-150, width250">
                    <h:outputLabel for="operationResult" title="#{lblCommon.result_code}"
                                   value="#{lblCommon.result_code}:" />
                    <h:inputText id="operationResult"
                                 value="#{MbAccountFundsTransferRS.operStatus} - #{DictUtils.allArticlesDesc[MbAccountFundsTransferRS.operStatus]}"
                                 label="#{lblCommon.result_code}" readonly="true">
                    </h:inputText>
                </h:panelGrid>
            </h:panelGroup>
            <h:panelGroup rendered="#{!MbAccountFundsTransferRS.maker}">

                <h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
                    <h:outputLabel title="#{lblAcc.source_account}" value="#{lblAcc.source_account}"
                                   style="padding-bottom: 5px;"/>
                    <h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="width-150, width250">
                        <h:outputLabel title="#{lblAcc.account_number}" value="#{lblAcc.account_number}: " />
                        <h:outputText title="#{MbAccountFundsTransferRS.sourceAccount.accountNumber}"
                                      value="#{MbAccountFundsTransferRS.sourceAccount.accountNumber}"/>

                        <h:outputLabel title="#{lblAcc.account_type}" value="#{lblAcc.account_type}: "/>
                        <h:outputText title="#{MbAccountFundsTransferRS.sourceAccount.accountType} - #{DictUtils.allArticlesDesc[MbAccountFundsTransferRS.sourceAccount.accountType]}"
                                      value="#{MbAccountFundsTransferRS.sourceAccount.accountType} - #{DictUtils.allArticlesDesc[MbAccountFundsTransferRS.sourceAccount.accountType]}" />

                        <h:outputLabel title="#{lblAcc.available_balance}" value="#{lblAcc.available_balance}: "/>
                        <h:panelGroup layout="block">
                            <bpc:entityDisplay contextType="ENTTACCT" bean="MbAccountFundsTransferRS"
                                               value="#{fmt:formatMoney(MbAccountFundsTransferRS.sourceAccount.balance,
                                               CurrencyUtils.currencyObjectsMap[MbAccountFundsTransferRS.sourceAccount.currency].exponent)}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblAcc.currency}" value="#{lblAcc.currency}: "/>
                        <h:panelGroup layout="block">
                            <h:outputText title="#{MbAccountFundsTransferRS.sourceAccount.currency} -
                                                 #{CurrencyUtils.currencyObjectsMap[MbAccountFundsTransferRS.sourceAccount.currency].currencyName}"
                                          value="#{MbAccountFundsTransferRS.sourceAccount.currency} -
                                                 #{CurrencyUtils.currencyObjectsMap[MbAccountFundsTransferRS.sourceAccount.currency].currencyName}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblApp.customer_type}" value="#{lblApp.customer_type}: "/>
                        <h:outputText title="#{MbAccountFundsTransferRS.sourceAccount.customerType} - #{DictUtils.allArticlesDesc[MbAccountFundsTransferRS.sourceAccount.customerType]}"
                                      value="#{MbAccountFundsTransferRS.sourceAccount.customerType} - #{DictUtils.allArticlesDesc[MbAccountFundsTransferRS.sourceAccount.customerType]}"/>

                        <h:outputLabel title="#{lblPrd.customer}" value="#{lblPrd.customer}: "/>
                        <h:outputText title="#{MbAccountFundsTransferRS.sourceAccount.customerNumber} - #{MbAccountFundsTransferRS.sourceAccount.custInfo}"
                                      value="#{MbAccountFundsTransferRS.sourceAccount.customerNumber} - #{MbAccountFundsTransferRS.sourceAccount.custInfo}"/>
                    </h:panelGrid>
                </h:panelGroup>

                <h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
                    <h:outputLabel title="#{lblAcc.destination_account}" value="#{lblAcc.destination_account}:"
                                   style="padding-bottom: 5px; padding-top: 15px;"/>
                    <h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="width-150, width250">
                        <h:outputLabel title="#{lblAcc.account_number}" value="#{lblAcc.account_number}: " />
                        <h:outputText title="#{MbAccountFundsTransferRS.destAccount.accountNumber}"
                                      value="#{MbAccountFundsTransferRS.destAccount.accountNumber}"/>

                        <h:outputLabel title="#{lblAcc.account_type}" value="#{lblAcc.account_type}: "/>
                        <h:outputText title="#{MbAccountFundsTransferRS.destAccount.accountType} - #{DictUtils.allArticlesDesc[MbAccountFundsTransferRS.destAccount.accountType]}"
                                      value="#{MbAccountFundsTransferRS.destAccount.accountType} - #{DictUtils.allArticlesDesc[MbAccountFundsTransferRS.destAccount.accountType]}" />

                        <h:outputLabel title="#{lblAcc.available_balance}" value="#{lblAcc.available_balance}: "/>
                        <h:panelGroup layout="block">
                            <bpc:entityDisplay contextType="ENTTACCT" bean="MbAccountFundsTransferRS"
                                               value="#{fmt:formatMoney(MbAccountFundsTransferRS.destAccount.balance,
                                               CurrencyUtils.currencyObjectsMap[MbAccountFundsTransferRS.destAccount.currency].exponent)}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblAcc.currency}" value="#{lblAcc.currency}: "/>
                        <h:panelGroup layout="block">
                            <h:outputText title="#{MbAccountFundsTransferRS.destAccount.currency} -
                                                 #{CurrencyUtils.currencyObjectsMap[MbAccountFundsTransferRS.destAccount.currency].currencyName}"
                                          value="#{MbAccountFundsTransferRS.destAccount.currency} -
                                                 #{CurrencyUtils.currencyObjectsMap[MbAccountFundsTransferRS.destAccount.currency].currencyName}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblApp.customer_type}" value="#{lblApp.customer_type}: "/>
                        <h:outputText title="#{MbAccountFundsTransferRS.destAccount.customerType} - #{DictUtils.allArticlesDesc[MbAccountFundsTransferRS.destAccount.customerType]}"
                                      value="#{MbAccountFundsTransferRS.destAccount.customerType} - #{DictUtils.allArticlesDesc[MbAccountFundsTransferRS.destAccount.customerType]}"/>

                        <h:outputLabel title="#{lblPrd.customer}" value="#{lblPrd.customer}: "/>
                        <h:outputText title="#{MbAccountFundsTransferRS.destAccount.customerNumber} - #{MbAccountFundsTransferRS.destAccount.custInfo}"
                                      value="#{MbAccountFundsTransferRS.destAccount.customerNumber} - #{MbAccountFundsTransferRS.destAccount.custInfo}"/>
                    </h:panelGrid>
                </h:panelGroup>

                <h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
                    <h:outputLabel title="#{lblAcc.transfer_amount}" value="#{lblAcc.transfer_amount}:"
                                   style="padding-bottom: 5px; padding-top: 15px;"/>
                    <h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="width-150, width250">
                        <h:outputLabel title="#{lblOpr.operation_id}" value="#{lblOpr.operation_id}:" />
                        <h:panelGroup layout="block">
                            <h:outputText title="#{MbAccountFundsTransferRS.operation.id}"
                                          value="#{MbAccountFundsTransferRS.operation.id}" />
                        </h:panelGroup>

                        <h:outputLabel title="#{lblAcc.amount}" value="#{lblAcc.amount}:" />
                        <h:panelGroup layout="block">
                            <bpc:entityDisplay contextType="ENTTACCT" bean="MbAccountFundsTransferRS"
                                               value="#{fmt:formatMoney(MbAccountFundsTransferRS.operation.operationAmount,
                                               CurrencyUtils.currencyObjectsMap[MbAccountFundsTransferRS.sourceAccount.currency].exponent)}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblAcc.currency}" value="#{lblAcc.currency}: "/>
                        <h:panelGroup layout="block">
                            <h:outputText title="#{MbAccountFundsTransferRS.sourceAccount.currency} -
                                                 #{CurrencyUtils.currencyObjectsMap[MbAccountFundsTransferRS.sourceAccount.currency].currencyName}"
                                          value="#{MbAccountFundsTransferRS.sourceAccount.currency} -
                                                 #{CurrencyUtils.currencyObjectsMap[MbAccountFundsTransferRS.sourceAccount.currency].currencyName}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblOpr.oper_reason}" value="#{lblOpr.oper_reason}:" />
                        <h:panelGroup layout="block">
                            <h:outputText title="#{DictUtils.articlesByLang[MbAccountFundsTransferRS.curLang][MbAccountFundsTransferRS.operation.operReason]}"
                                          value="#{DictUtils.articlesByLang[MbAccountFundsTransferRS.curLang][MbAccountFundsTransferRS.operation.operReason]}"/>
                        </h:panelGroup>

                        <h:outputLabel title="#{lblOpr.oper_status}" value="#{lblOpr.oper_status}: "/>
                        <h:panelGroup layout="block">
                            <h:outputText title="#{DictUtils.articlesByLang[MbAccountFundsTransferRS.curLang][MbAccountFundsTransferRS.operation.status]}"
                                          value="#{DictUtils.articlesByLang[MbAccountFundsTransferRS.curLang][MbAccountFundsTransferRS.operation.status]}"/>
                        </h:panelGroup>
                    </h:panelGrid>
                </h:panelGroup>
            </h:panelGroup>
        </h:form>
    </ui:define>
</ui:composition>
</html>
