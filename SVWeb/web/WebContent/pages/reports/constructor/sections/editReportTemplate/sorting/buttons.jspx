<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j">
	<a4j:commandButton id="removeButton" styleClass="wide"
		value="&lt;"
		action="#{editReportTemplate.removeSortingParam}"
		disabled="#{empty editReportTemplate.sortingParams.targetSelection}"
		reRender="sortingParams,removeButton" />
	<h:panelGrid id="copyButtons" columns="1" styleClass="inner-panel wide">
		<a4j:commandButton styleClass="wide"
			value="&gt; #{lblRptc.ascending}"
			action="#{editReportTemplate.copyParamAsc}"
			disabled="#{empty editReportTemplate.sortingParams.sourceSelection}"
			reRender="sortingParams" />
		<a4j:commandButton styleClass="wide"
			value="&gt; #{lblRptc.descending}"
			action="#{editReportTemplate.copyParamDesc}"
			disabled="#{empty editReportTemplate.sortingParams.sourceSelection}"
			reRender="sortingParams" />
	</h:panelGrid>
</ui:composition>
