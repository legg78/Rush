<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:o="http://openfaces.org/"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition	template="/WEB-INF/templates/navigatable.jspx">
	<ui:define name="navigatableContent">
		<script type="text/javascript">
		//<!-- 
			function checkFields() {
				var checked = true;
				if (document.getElementById('serviceEditForm:newLabel').value == "") {
					document.getElementById('serviceEditForm:newLabelError').style.display = "inline";
					checked = false;
				}
				if (document.getElementById('serviceEditForm:newDirection').value == "") {
					document.getElementById('serviceEditForm:newDirectionError').style.display = "inline";
					checked = false;
				}
				return checked;
			};
			function validateNumberValue(field, e) {
				var isValid = numbersOnly(field, e, false);
				togleErrorMsg(!isValid);
				return isValid;
			 };
			 function togleErrorMsg(isShow) {
				 if(isShow)
					document.getElementById('searchPartitionTablesForm:tabIdErr').style.display = 'inline';
				else 
					document.getElementById('searchPartitionTablesForm:tabIdErr').style.display = 'none';
			 };
			 function blurField(field) {
				if(field.value!='')  
					togleErrorMsg(parseInt(field.value) != field.value);
			 };	
		//-->
		</script>
		<a4j:loadScript src="/js/stretch.js" />
		
    	<f:loadBundle var="lblAcm" basename="ru.bpc.sv2.ui.bundles.Acm"/>
    	
    	<!-- navigation bar -->
		<bpct:navBar pageName="#{lblAcm.partition_tables}"/>
			
        <h:form id="searchPartitionTablesForm">			

			<!-- search panel -->
			<h:panelGroup styleClass="search_block" layout="block">
				<h:panelGroup layout="block" styleClass="search_block_inner1">
				<h:panelGroup layout="block" styleClass="search_block_inner2">
	                <h:panelGroup styleClass="search_block_left" layout="block">	                
	                	<h:panelGrid styleClass="fw" columns="2" columnClasses="top ,link-cont">
		                	<h:panelGrid styleClass="filter-table field-cont twoColumnTable" columns="4" columnClasses="firstCol,secondCol,firstCol,secondCol">
	                			<h:outputText value="#{lblCommon.id}:" title="#{lblCommon.id}" />
								<h:panelGrid columns="2" cellspacing="0" cellpadding="0" width="100%">
									<h:inputText id="tabId" value="#{MbPartitionTables.filter.id}" 
												maxlength="10"
												onkeypress="if(!validateNumberValue(this, event)) return false;"
												onblur="blurField(this);" />
									<h:outputFormat value="#{lblMsg.pos_number}"
														styleClass="errorMarker" id="tabIdErr"	style="display:none;">
										<f:param name="fieldName" value="#{lblCommon.id}" />
									</h:outputFormat>
								</h:panelGrid>
								
	                			<h:outputText value="#{lblAcm.table_name}:" title="#{lblAcm.table_name}" />
	                			<h:inputText value="#{MbPartitionTables.filter.tableName}" maxlength="200"/>
	                			
	                			<h:outputText value="#{lblAcm.next_partition_date_from}: " title="#{lblAcm.next_partition_date_from}" />
	            				<h:panelGroup>
	            					<rich:calendar buttonIcon="/images/calendar.gif" value="#{MbPartitionTables.filter.nextPartitionDateFrom}"
		            					datePattern="#{usession.datePattern}" timeZone="#{CommonUtils.timeZone}" inputClass="inputDate"/>
	                			</h:panelGroup>
	                			
	                			<h:outputText value="#{lblAcm.next_partition_date_to}: " title="#{lblAcm.next_partition_date_to}" />
	            				<h:panelGroup>
	            					<rich:calendar buttonIcon="/images/calendar.gif" value="#{MbPartitionTables.filter.nextPartitionDateTo}"
		            					datePattern="#{usession.datePattern}" timeZone="#{CommonUtils.timeZone}" inputClass="inputDate"/>
	                			</h:panelGroup>
		                	</h:panelGrid>
	                		<h:panelGrid columns="1">
		                		<bre:taggedCommandButton value="#{lblForm.search}" style="width:85px;" 
		                				reRender="mainPartitionTablesForm, #{MbPartitionTables.tabName},partitionsBtnForm" 
		                				action="#{MbPartitionTables.search}"			                			
		                				image="/_img/icon_search.png" type="submit"
		                				/>
		                		<h:panelGroup styleClass="link-clear" layout="block">
		                			<h:graphicImage url="/_img/icon_clear.png"/>
		                			<a4j:commandLink value="#{lblForm.clear_all}"
		                					action="#{MbPartitionTables.clearFilter}"
		                					reRender="searchPartitionTablesForm, mainPartitionTablesForm, #{MbPartitionTables.tabName},partitionsBtnForm">
		                			</a4j:commandLink>
		                		</h:panelGroup>
		                	</h:panelGrid>
	                	</h:panelGrid>
	                	<a4j:outputPanel ajaxRendered="true">	                	
		                	<h:graphicImage url="/_img/hd_searchblock.gif"  styleClass="hd-searchblock"/>
		                	<h:panelGroup styleClass="collapse-vert" layout="block"/>
	                	</a4j:outputPanel>
	                </h:panelGroup>
				</h:panelGroup>
				</h:panelGroup>
            </h:panelGroup>
		</h:form>
		
		<h:form id="mainPartitionTablesForm">
            <h:panelGroup styleClass="search_result_block" layout="block">
            	<h:panelGroup styleClass="search_result_block_left fix-ff" layout="block">
				    <rich:extendedDataTable enableContextMenu="true"
							id="mainTable"
							tableState="#{MbPartitionTables.tableState}"
							styleClass="res-table" 
							headerClass="res-table-header"
							rowClasses=",odd"
							selectedClass="res-table-selected" 
							var="item"
							value="#{MbPartitionTables.partitionTables}"
							selection="#{MbPartitionTables.partitionTableSelection}"
							rows="#{MbPartitionTables.rowsNum}"
							height="255px"
							selectionMode="#{MbPartitionTables.selectMode == true?'multi':'single' }"
							noDataLabel="#{MbPartitionTables.searching?lblCommon['no_records_found'] : lblCommon['enter_search_criteria_above']}"
				        	reRender="#{MbPartitionTables.tabName}, partitionTableBtns">
				           
						<a4j:support event="onselectionchange" requestDelay="1000" 
								reRender="#{MbPartitionTables.tabName}, partitionTableBtns" />
				           
		                <rich:column id="id" label="#{lblCommon.id}" sortBy="#{'id'}" width="15%" sortExpression="asc">
							<f:facet name="header">
			                    <h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}"/>
			                </f:facet>
			                <h:outputText value="#{item.id}" />
				        </rich:column>

		                <rich:column id="table_name" label="#{lblAcm.table_name}" sortBy="#{'tableName'}" width="25%">
							<f:facet name="header">
			                    <h:outputText value="#{lblAcm.table_name}" title="#{lblAcm.table_name}"/>
			                </f:facet>
			                <h:outputText value="#{item.tableName}" />
				        </rich:column>

		                <rich:column id="partition_cycle" label="#{lblAcm.partition_cycle}" sortBy="#{'partitionCycleId'}" width="15%">
							<f:facet name="header">
			                    <h:outputText value="#{lblAcm.partition_cycle}" title="#{lblAcm.partition_cycle}"/>
			                </f:facet>
			                <h:outputText value="#{item.partitionCycleId}" />
				        </rich:column>
				        
				        <rich:column id="storage_cycle" label="#{lblAcm.storage_cycle}" sortBy="#{'storageCycleId'}" width="15%">
							<f:facet name="header">
			                    <h:outputText value="#{lblAcm.storage_cycle}" title="#{lblAcm.storage_cycle}"/>
			                </f:facet>
			                <h:outputText value="#{item.storageCycleId}" />
				        </rich:column>
				        
				        <rich:column id="next_partition_date" label="#{lblAcm.next_partition_date}" sortBy="#{'nextPartitionDate'}" width="15%">
							<f:facet name="header">
			                    <h:outputText value="#{lblAcm.next_partition_date}" title="#{lblAcm.next_partition_date}" />
			                </f:facet>
			                <h:outputText value="#{item.nextPartitionDate}" title="#{item.nextPartitionDate}">
				                <f:convertDateTime pattern="#{usession.datePattern}"
									timeZone="#{CommonUtils.timeZone}" />
							</h:outputText>
				        </rich:column>
				        
				    </rich:extendedDataTable>
				    <a4j:outputPanel ajaxRendered="true">
					    <h:graphicImage url="/_img/hd_searchblock.gif" styleClass="hd-searchblock"/>
					    <h:panelGroup styleClass="collapse-vert table-collapse-vert" layout="block"/>
				    </a4j:outputPanel>				    
			    </h:panelGroup>
			</h:panelGroup>
			
			</h:form>
			<h:form id="partitionsBtnForm">
			    
            <h:panelGroup layout="block" styleClass="bottom_search_result_block">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left">
		        	<h:panelGroup layout="block" styleClass="table_tools">
			        	<h:panelGrid styleClass="fw field-cont" columns="5" 
			        			columnClasses="per-page-lbl,per-page-sel,nav-cont,pagecount, table_tools_state">
				        	<h:outputLabel for="rows_num" value="#{lblCommon.rows_per_page}" title="#{lblCommon.rows_per_page}"/>
	                        <h:selectOneMenu id="rows_num" value="#{MbPartitionTables.rowsNum}" styleClass="row_per_page" >
	                        	<a4j:support event="onchange" reRender="mainTable, dsPartitionTables, pagesNum, #{MbPartitionTables.tabName}, partitionTableBtns"/>
                        		<f:selectItems value="#{CommonUtils.rowNumsList}"/>
		                    </h:selectOneMenu>				         
    	
		                    <rich:datascroller maxPages="10" fastControls="hide"
				                    pagesVar="pages" styleClass="res-datascroller"
				                    id="dsPartitionTables" for="mainTable" reRender="#{MbPartitionTables.tabName}, partitionTableBtns">
			                    <f:facet name="first">
			                        <h:outputText value="&lt;&lt;" styleClass="prev-next" />
			                    </f:facet>
			                    <f:facet name="first_disabled">
			                        <h:outputText value="&lt;&lt;" styleClass="prev-next-dis" />
			                    </f:facet>
			                    <f:facet name="last">
			                        <h:outputText  value="&gt;&gt;" styleClass="prev-next" />
			                    </f:facet>
			                    <f:facet name="last_disabled">
			                        <h:outputText value="&gt;&gt;" styleClass="prev-next-dis" />
			                    </f:facet>
			                    <f:facet name="previous">
			                        <h:outputText value="#{lblCommon.prev}" styleClass="prev-next" />
			                    </f:facet>
			                    <f:facet name="previous_disabled">
			                        <h:outputText value="#{lblCommon.prev}" styleClass="prev-next-dis" />
			                    </f:facet>
			                    <f:facet name="next">
			                        <h:outputText value="#{lblCommon.next}" styleClass="prev-next" />
			                    </f:facet>
			                    <f:facet name="next_disabled">
			                        <h:outputText value="#{lblCommon.next}" styleClass="prev-next-dis" />
			                    </f:facet>
			                    <f:facet name="pages">							                        
			                    </f:facet>
			                </rich:datascroller>
		                    
                        	<h:panelGroup id="pagesNum">
	                        	<h:outputText styleClass="strongClass" value="#{pages} "/>
	                        	<h:outputText value=" #{lblCommon.pages}"/>
                        	</h:panelGroup>
                        	
                        	<h:panelGroup>
								<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
									onclick="saveTableState();"/>
								<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
									onclick="deleteTableState();"/>
								<a4j:queue name="tablestatequeue"/>
								<a4j:jsFunction name="saveTableState" action="#{MbPartitionTables.saveTableStateDB}" eventsQueue="tablestatequeue"/>
								<a4j:jsFunction name="deleteTableState" action="#{MbPartitionTables.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
							</h:panelGroup>
                        </h:panelGrid>
					</h:panelGroup>
                       
					<h:panelGrid styleClass="buttons_block" columns="3" id="partitionTablesBtns">
		            	<bre:taggedCommandButton id="addPartitionTableBtn"
	                      		reRender="partitionTableModalPanel"
	                      		value="#{lblAcm.register}"	                      		
                    			oncomplete="if (#{usession.noErrorResponse}) #{rich:component('partitionTableModalPanel')}.show()"
                    			rendered="#{usession.inRole['ADD_PARTITION_TABLE']}"
	                      		action="#{MbPartitionTables.add}"
	                      		image="/images/create_doc.gif"
	                      		/>
						<bre:taggedCommandButton id="deletePartitionTableBtn"
								 value="#{lblForm.delete}" reRender="deletePartition:confirmPanel"
								 oncomplete="#{rich:component('deletePartition:confirmPanel')}.show()"
								 rendered="#{usession.inRole['REMOVE_PARTITION_TABLE']}"
								 disabled="#{MbPartitionTables.activePartitionTable == null}"
								 image="/images/delete.gif"
								/>
                    </h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
	    </h:form>

        <h:form>
            <a4j:jsFunction name="storeTab" ajaxSingle="true" limitToList="true" reRender="#{MbPartitionTables.tabName}">
                <a4j:actionparam name="tabName" assignTo="#{MbPartitionTables.tabName}" />
            </a4j:jsFunction>
        </h:form>

		<h:panelGroup styleClass="workplace" layout="block"
			id="workplacePanel">
			<rich:tabPanel switchType="client" id="details" tabClass="tab-cell"
				activeTabClass="active-tab-cell" headerClass="tabs"
				headerSpacing="0px" contentClass="tab-content">

				<rich:tab ontabenter="storeTab('detailsTab')" label="#{lblCommon.details}" name="detailsTab">
					<f:facet name="label">
						<h:panelGroup styleClass="tab-label" layout="block">
							<h:outputText value="#{lblCommon.details}"
								title="#{lblCommon.details}" />
						</h:panelGroup>
					</f:facet>

					<h:panelGroup id="detailsTab" layout="block">
						<ui:include src="/pages/administrative/partition_table_details.jspx" />
						<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons"/>
					</h:panelGroup>
				</rich:tab>

				<rich:tab ontabenter="storeTab('partitionsTab')" label="#{lblAcm.partition}" name="partitionsTab" style="height:100%;">
       				<f:facet name="label">
       					<h:panelGroup styleClass="tab-label" layout="block">
       						<h:outputText value="#{lblAcm.partition}" title="#{lblAcm.partition}"/>
       					</h:panelGroup>
       				</f:facet>   
                   
					<h:panelGroup layout="block" id="partitionsTab" styleClass="carddata-wrapper" 
							style="height: 100%;overflow:hidden;position:relative;">
						<ui:include src="/pages/administrative/list_partitions_bottom.jspx"></ui:include>
					</h:panelGroup>
				</rich:tab>
			</rich:tabPanel>
		</h:panelGroup>

		<a4j:queue name="queue" ignoreDupResponses="true" size="1" sizeExceededBehavior="dropNext" requestDelay="500" />
		<rich:modalPanel id="partitionTableModalPanel"  width="800" height="480" trimOverlayedElements="false">
	      	<f:facet name="header">
	      		<h:panelGroup>
	           	    <h:outputText value="#{lblAcm.register_partition_table}" rendered="#{MbPartitionTables.newMode}"/>
           	    </h:panelGroup>
			</f:facet>
			<f:facet name="controls">
		    </f:facet>
		    <h:panelGroup id="cyclesModalDiv">
				<ui:include src="/pages/administrative/edit_partion_table.jspx"/>
				<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons" style="position: absolute; left: 0; width: 100%; bottom: 0;">
					<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
			      		<h:form>
			       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
			       	    		<h:outputText/>
								<bre:taggedCommandButton value="#{lblForm.save}" type="submit" 
										action="#{MbPartitionTables.save}"
										onclick="if (!checkFclForm()) return false; disableModalPanelBtns(this);"
										reRender="mainTable, dsPartitionTables, partitionTablesBtns, #{MbPartitionTables.tabName}"
										oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('partitionTableModalPanel')}.hide()"
										rendered="#{!MbPartitionTables.viewMode}"
										/>
				               	<bre:taggedCommandButton
				                       	value="#{lblForm.cancel}" action="#{MbPartitionTables.cancel}"
				                       	oncomplete="#{rich:component('partitionTableModalPanel')}.hide()"
				                       	rendered="#{!MbPartitionTables.viewMode}"
				                       	immediate="true"
				                       	/>
				               	<bre:taggedCommandButton
				                       	value="#{lblForm.close}" action="#{MbPartitionTables.cancel}"
				                       	oncomplete="#{rich:component('partitionTableModalPanel')}.hide()"
				                       	rendered="#{MbPartitionTables.viewMode}"
				                       	immediate="true"
				                       	/>
							</h:panelGrid>
						</h:form>
					</h:panelGroup>
				</h:panelGroup>
			</h:panelGroup>
		</rich:modalPanel>

		<ui:include src="/pages/utils/confirmPanel.jspx">
			<ui:param name="backingBean" value="#{MbPartitionTables}"/>
			<ui:param name="yesAction" value="delete"/>
			<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/>
			<ui:param name="rerenderList" value="mainPartitionTablesForm, #{MbPartitionTables.tabName}"/>
			<ui:param name="confirmQuestion" value=" "/>
			<ui:param name="subviewId" value="deletePartition"/>
			<ui:param name="yes" value="#{lblForm.ok}"/>
			<ui:param name="no" value="#{lblForm.cancel}"/>
		</ui:include>


		<script>
		//<![CDATA[
		function updateHeight(){
        updateGridHeight();
	    }
	
	    layout =
	            {
	                SEARCH_FORM_ID:                 'searchPartitionTablesForm',
	                SEARCH_RESULT_FORM_ID:          'mainPartitionTablesForm',
	                SEARCH_RESULT_FORM_WRAPPER_ID:  'mainTableWrapper',
	                SEARCH_RESULT_FOOTER_FORM_ID:   'partitionsBtnForm',
	                TAB_PANEL_ID:                   'workplacePanel',
	
	                TAB_DATA:      [{
	                                TAB_FORM_ID:            'partitionTableDetailsForm',
	                                TAB_FORM_WRAPPER_ID:    'partitionTableDetailsWrapper',
	                                CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS
	                                },
	                                {
	                                TAB_FORM_ID:            'mainPartitionsForm',
	                                TAB_FORM_WRAPPER_ID:    'bottomPartitionsTableWrapper',
	                                CORRECTING_HEIGHT:      Stretch.TABS + Stretch.BUTTONS
	                                }]
	
	            };
	    jQuery(window).resize(updateHeight);
		
		updateHeight();
		//]]>
		</script>
	</ui:define>
</ui:composition>
</html>
