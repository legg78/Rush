<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<script type="text/javascript">//<![CDATA[			
		function checkEntityOperTypeFields() {
			var checked = true;
			if (document.getElementById('entityOperTypeEditForm:newInst').value == "") {
				document.getElementById('entityOperTypeEditForm:newInstError').style.display = "inline";
				checked = false;
			}

			if (document.getElementById('entityOperTypeEditForm:newInvokeMethod').value == "") {
				document.getElementById('entityOperTypeEditForm:newInvokeMethodError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('entityOperTypeEditForm:newOperType').value == "" && document.getElementById('entityOperTypeEditForm:newName').value == "") {
				document.getElementById('entityOperTypeEditForm:newOperTypeError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('entityOperTypeEditForm:newOperType').value == "" && document.getElementById('entityOperTypeEditForm:newName').value == "") {
				document.getElementById('entityOperTypeEditForm:newNameError').style.display = "inline";
				checked = false;
			}
			
			return checked;
		}
		
		function hideErrorOptionalField(){
			if (document.getElementById('entityOperTypeEditForm:newOperType').value != "" || document.getElementById('entityOperTypeEditForm:newName').value != "") {
				hideErrorField(document.getElementById('entityOperTypeEditForm:newOperType'));
				hideErrorField(document.getElementById('entityOperTypeEditForm:newName'));
			}
		}
		
		function changeMondatery(){
			
			if(document.getElementById('entityOperTypeEditForm:newOperType').value != ""){
				if(document.getElementById('entityOperTypeEditForm:newName').value != ""){
					return
				}else{
					removeModatory('entityOperTypeEditForm:nameLabel');
					addMondatory('entityOperTypeEditForm:operTypeLabel');
				}
				return;
			}
			if(document.getElementById('entityOperTypeEditForm:newName').value != ""){
				if(document.getElementById('entityOperTypeEditForm:newOperType').value != ""){
					return;
				}else{
					removeModatory('entityOperTypeEditForm:operTypeLabel');
					addMondatory('entityOperTypeEditForm:nameLabel');
				}
			}
			if(document.getElementById('entityOperTypeEditForm:newName').value == "" 
				&& document.getElementById('entityOperTypeEditForm:newOperType').value == ""){
				addMondatory('entityOperTypeEditForm:nameLabel');
				addMondatory('entityOperTypeEditForm:operTypeLabel');
			}
		}
		
		function addMondatory(id){
			document.getElementById(id).innerHTML = '* ' + document.getElementById(id).title+':';
		}
		
		function removeModatory(id){
			document.getElementById(id).innerHTML = document.getElementById(id).title+':';
		}
		//]]>
	</script>

	<rich:modalPanel id="entOperTypeModalPanel" autosized="true"
	minWidth="300" minHeight="100"
	rendered="#{usession.inRole['ADD_ENTITY_OPER_TYPE'] or usession.inRole['MODIFY_ENTITY_OPER_TYPE']}" onbeforeshow="changeMondatery()">
      	<f:facet name="header">
			<h:panelGroup id="entOperTypeModalHeader">
           	    <h:outputText value="#{lblOpr.edit_entity_oper_type}" rendered="#{MbEntityOperTypes.editMode}"/>
           	    <h:outputText value="#{lblOpr.new_entity_oper_type}" rendered="#{MbEntityOperTypes.newMode}"/>
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
	    </f:facet>
   	    <h:panelGroup id="entOperTypeModalDiv">
			<h:form id="entityOperTypeEditForm">
				<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
			        <h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">			
						<h:outputLabel value="* #{lblCommon.institution}: " title="#{lblCommon.institution}"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:selectOneMenu id="newInst"
									value="#{MbEntityOperTypes.newEntityOperType.instId}"
									label="#{lblCommon.institution}"
									onblur="hideErrorField(this)">
								<f:selectItem itemValue=""/>
							    <f:selectItems value="#{MbEntityOperTypes.institutions}"/>
							</h:selectOneMenu>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newInstError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.institution}"/>
							</h:outputFormat>
						</h:panelGrid>

						<h:outputLabel value="#{lblCommon.entity_type}: " title="#{lblCommon.entity_type}"/>
						<h:selectOneMenu id="entityType"
								value="#{MbEntityOperTypes.newEntityOperType.entityType}"
								label="#{lblCommon.entity_type}">
							<f:selectItem itemValue=""/>
						    <f:selectItems value="#{MbEntityOperTypes.entityTypes}"/>
							<a4j:support event="onchange"
							             ajaxSingle="true"
							             limitToList="true"
							             reRender="newEntityObjectType"
							             action="#{MbEntityOperTypes.onChangeEntityType(MbEntityOperTypes.newEntityOperType)}" />
						</h:selectOneMenu>

				        <h:outputLabel value="#{lblOpr.entity_object_type}: " title="#{lblOpr.entity_object_type}"/>
				        <h:selectOneMenu id="newEntityObjectType"
				                         disabled="#{empty MbEntityOperTypes.newEntityOperType.entityType}"
				                         value="#{MbEntityOperTypes.newEntityOperType.entityObjectType}">
					        <f:selectItem itemValue=""/>
					        <f:selectItems value="#{MbEntityOperTypes.entityObjectTypes}"/>
				        </h:selectOneMenu>
						
						<h:outputLabel value="#{lblCommon.object_type}: " title="#{lblCommon.object_type}"/>
						<h:selectOneMenu id="objectType"
								value="#{MbEntityOperTypes.newEntityOperType.objectType}">
							<f:selectItem itemValue=""/>
						    <f:selectItems value="#{MbEntityOperTypes.objectTypes}"/>
						</h:selectOneMenu>

						<h:outputLabel value="#{lblOpr.oper_type}: " title="#{lblOpr.oper_type}" id="operTypeLabel"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:selectOneMenu id="newOperType"
									disabled="#{lockOperType}"
									value="#{MbEntityOperTypes.newEntityOperType.operType}"
									label="#{lblOpr.check_type}"
									onblur="hideErrorOptionalField()" onchange="changeMondatery()">
								<f:selectItem itemValue=""/>
							    <f:selectItems value="#{MbEntityOperTypes.operTypes}"/>
							</h:selectOneMenu>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newOperTypeError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.entity_type}"/>
							</h:outputFormat>
						</h:panelGrid>


						<h:outputLabel value="* #{lblOpr.invoke_method}: " title="#{lblOpr.invoke_method}"/>
						<h:panelGrid cellpadding="0" cellspacing="0">
							<h:selectOneMenu id="newInvokeMethod"
									value="#{MbEntityOperTypes.newEntityOperType.invokeMethod}"
									label="#{lblOpr.invoke_method}"
									onblur="hideErrorField(this)">
								<f:selectItem itemValue=""/>
								<a4j:support event="onchange" reRender="wizardText, newWizard"/>
							    <f:selectItems value="#{MbEntityOperTypes.invokeMethods}"/>
							</h:selectOneMenu>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newInvokeMethodError" style="display:none;">
								<f:param name="fieldName" value="#{lblOpr.invoke_method}"/>
							</h:outputFormat>
						</h:panelGrid>
		
						<h:outputLabel value="#{lblOpr.reason_lov}: " title="#{lblOpr.reason_lov}"/>
						<h:selectOneMenu id="newReasonLovId"
								value="#{MbEntityOperTypes.newEntityOperType.reasonLovId}"
								>
						    <f:selectItems value="#{MbEntityOperTypes.reasonLovIds}"/>
						</h:selectOneMenu>
						
						<h:panelGroup id="wizardText" >
							<h:outputLabel value="#{lblForm.wizard}: " title="#{lblForm.wizard}"
								rendered="#{MbEntityOperTypes.backOffice}"/>
						</h:panelGroup>						
						<h:panelGroup id="newWizard" >
						<h:selectOneMenu id="newWizardId"
								value="#{MbEntityOperTypes.newEntityOperType.wizardId}"
								rendered="#{MbEntityOperTypes.backOffice}"
								>
						    <f:selectItems value="#{MbEntityOperTypes.wizards}"/>
						</h:selectOneMenu>
						</h:panelGroup>
						<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
						<h:selectOneMenu
								value="#{MbEntityOperTypes.newEntityOperType.lang}"
								label="#{lblCommon.language}">
						    <f:selectItems value="#{MbEntityOperTypes.languages}"/>
						</h:selectOneMenu>
						
						<h:outputLabel value="#{lblCommon.name}: " title="#{lblCommon.name}" id="nameLabel"/>
						<h:panelGrid cellpadding="0" cellspacing="0">				
							<h:inputText value="#{MbEntityOperTypes.newEntityOperType.name}" label="#{lblCommon.name}" onchange="changeMondatery()" id="newName" onblur="hideErrorOptionalField()"/>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newNameError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.name}"/>
							</h:outputFormat>
						</h:panelGrid>							
					</h:panelGrid>
				</h:panelGroup>
	      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
					<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
		       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
		       	    		<h:outputText/>
                        	<bre:taggedCommandButton
                        			value="#{lblForm.save}" type="submit" action="#{MbEntityOperTypes.save}"
                        			onclick="if (!checkEntityOperTypeFields()) return false; disableModalPanelBtns(this)"
				                   	oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('entOperTypeModalPanel')}.hide()"
                        			reRender="${rerenderList}"
	                        		/>
                        	<bre:taggedCommandButton
	                        		value="#{lblForm.cancel}" 
	                        		action="#{MbEntityOperTypes.cancel}" 
	                        		immediate="true"
	                        		oncomplete="#{rich:component('entOperTypeModalPanel')}.hide()">
	                        	<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
	                		</bre:taggedCommandButton>
			    		</h:panelGrid>
			    	</h:panelGroup>
			    </h:panelGroup>
			</h:form>
		</h:panelGroup>
	</rich:modalPanel>
</ui:composition>
</html>
