<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:fmt="http://www.bpc.ru/el/formatter">
<ui:composition>
	<h:form id="limitCountersForm">	
		<h:panelGroup id="countersTableWrapper" layout="block" style="padding:0px;margin:0px;">
			<rich:extendedDataTable
					id="countersTable"
					var="item"
					value="#{(limitCountersBean==null ? MbLimitCounters : limitCountersBean).limitCounters}"
					selection="#{(limitCountersBean==null ? MbLimitCounters : limitCountersBean).itemSelection}"
					rows="0"
					height="${tableHeight == null ? '220px' : tableHeight}"
					selectionMode="single"
					rowClasses=",odd"
					headerClass="res-table-header table-header-ext"
					selectedClass="res-table-selected" 
					styleClass="res-table"
					enableContextMenu="true"
					tableState="#{(limitCountersBean==null ? MbLimitCounters : limitCountersBean).tableState}"
					noDataLabel="#{lblCommon['no_records_found']}"
					>
				<rich:column id="limit_type" label="Limit type" title="Limit type" width="20%" sortBy="#{'limitType'}">
					<f:facet name="header">
						<h:panelGroup>         
							<script>updateHeight();</script>
							<h:outputText value="#{lblFcl.limit_type}" title="#{lblFcl.limit_type}" />
						</h:panelGroup>
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.limitType]}"
							title="#{DictUtils.articles[item.limitType]}"
							rendered="#{item.limitType != null}" />
					<h:outputText value="" title="" rendered="#{item.limitType == null}" />
				</rich:column>
	
				<rich:column id="cycle_type" label="Cycle type" title="Cycle type" width="19%" sortBy="#{'cycleType'}">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.cycle_type}" title="#{lblFcl.cycle_type}" />
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.cycleType]}"
							title="#{DictUtils.articles[item.cycleType]}"
							rendered="#{item.cycleType != null}"/>
					<h:outputText value="" rendered="#{item.cycleType == null}"/>
				</rich:column>
	
				<rich:column id="count_value" label="Count value" title="Count value" width="9%" sortBy="#{'countValue'}">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.count_value}" title="#{lblFcl.count_value}" />
					</f:facet>
					<h:outputText value="#{item.countValue}" title="#{item.countValue}"/>
				</rich:column>
				
				<rich:column id="count_limit" label="Count limit" title="Count limit" width="9%" sortBy="#{'countLimit'}">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.count_limit}" title="#{lblFcl.count_limit}" />
					</f:facet>
					<h:outputText rendered="#{item.countLimit != -1}" value="#{item.countLimit}" title="#{item.countLimit}"/>

					<h:outputText rendered="#{item.countLimit == -1}" value="#{lblFcl.unlimited}"/>
				</rich:column>
	
				<rich:column id="sum_value" label="Sum value" title="Sum value" width="10%" sortBy="#{'sumValue'}" style="text-align: right;">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.sum_value}" title="#{lblFcl.sum_value}" />
					</f:facet>
					<div class="#{EntityIcons.objectsMapS['ENTT0046'][item.currency]}"/>
					<h:outputText 
							value="#{fmt:formatMoney(item.sumValue, CurrencyUtils.currencyObjectsMap[item.currency].exponent)} #{CurrencyUtils.currencyShortNamesMap[item.currency]}"
							title="#{fmt:formatMoney(item.sumValue, CurrencyUtils.currencyObjectsMap[item.currency].exponent)} #{CurrencyUtils.currencyShortNamesMap[item.currency]}"
							/>
				</rich:column>
	
				<rich:column id="limit" label="Sum limit" title="Sum limit" width="10%" sortBy="#{'sumLimit'}" style="text-align: right;">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.sum_limit}" title="#{lblFcl.sum_limit}" />
					</f:facet>

					<div class="#{EntityIcons.objectsMapS['ENTT0046'][item.currency]}"/>
					
					<h:outputText rendered="#{item.sumLimit != -1}" 
							value="#{fmt:formatMoney(item.sumLimit, CurrencyUtils.currencyObjectsMap[item.currency].exponent)} #{CurrencyUtils.currencyShortNamesMap[item.currency]}"
							title="#{fmt:formatMoney(item.sumLimit, CurrencyUtils.currencyObjectsMap[item.currency].exponent)} #{CurrencyUtils.currencyShortNamesMap[item.currency]}"
							/>
					<h:outputText rendered="#{item.sumLimit == -1}" value="#{lblFcl.unlimited}"/>
				</rich:column>
	
		        <rich:column id="next_date" label="Next date" title="Next date" width="8%" sortBy="#{'nextDate'}">
		           <f:facet name="header">
	                    <h:outputText value="#{lblFcl.next_date}" title="#{lblFcl.next_date}"/>
	                </f:facet>
	                <h:outputText value="#{item.nextDate}">
	                	<f:convertDateTime pattern="#{usession.datePattern}" 
	                			timeZone="#{CommonUtils.timeZone}"/>
	                </h:outputText>
		        </rich:column>
		        
		        <rich:column id="start_date" label="#{lblCommon.start_date}" sortBy="#{'startDate'}" width="8%">
					<f:facet name="header">
	                    <h:outputText value="#{lblCommon.start_date}" title="#{lblCommon.start_date}" />
	                </f:facet>
	                <h:outputText value="#{item.startDate}" title="#{item.startDate}">
		                <f:convertDateTime pattern="#{usession.datePattern}"
							timeZone="#{CommonUtils.timeZone}" />
					</h:outputText>
		        </rich:column>
		        
		        <rich:column id="end_date" label="#{lblCommon.end_date}" sortBy="#{'endDate'}" width="7%">
					<f:facet name="header">
	                    <h:outputText value="#{lblCommon.end_date}" title="#{lblCommon.end_date}" />
	                </f:facet>
	                <h:outputText value="#{item.endDate}" title="#{item.endDate}">
		                <f:convertDateTime pattern="#{usession.datePattern}"
							timeZone="#{CommonUtils.timeZone}" />
					</h:outputText>
		        </rich:column>
		    </rich:extendedDataTable>
		</h:panelGroup>
		    
	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons" rendered="#{limitCountersBean==null}">
		        <h:panelGrid id="btns_shift" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
					<h:panelGroup/>
					<h:panelGroup>
						<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
							onclick="saveLimitCounterTableState();"/>
						<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
							onclick="deleteLimitCounterTableState();"/>
						<a4j:queue name="tablestatequeue"/>
						<a4j:jsFunction name="saveLimitCounterTableState" action="#{(limitCountersBean==null ? MbLimitCounters : limitCountersBean).saveTableStateDB}" eventsQueue="tablestatequeue"/>
						<a4j:jsFunction name="deleteLimitCounterTableState" action="#{(limitCountersBean==null ? MbLimitCounters : limitCountersBean).deleteTableStateDB}" eventsQueue="tablestatequeue"/>
					</h:panelGroup>
		    	</h:panelGrid>
			</h:panelGroup>
		</h:panelGroup>
		
   	</h:form>
</ui:composition>
</html>
