<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
	  xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
	  xmlns:bm="http://www.bpc.ru/jsf/misc">
<ui:composition>
	<h:form id="feeTiersForm">
		<h:panelGroup id="tiersTableWrapper" layout="block"
			style="padding:0px;margin:0px;">
			<rich:extendedDataTable id="tiersTable" var="item"
				value="#{MbFeeTiers.feeTiers}"
				selection="#{MbFeeTiers.feeTierSelection}" rows="0"
				selectionMode="single" rowClasses=",odd"
				height="#{tableHeight == null ? '' : tableHeight}"
				headerClass="res-table-header table-header-ext" selectedClass="res-table-selected"
				styleClass="res-table" enableContextMenu="true"
				tableState="#{MbFeeTiers.tableState}"
				noDataLabel="#{lblCommon['no_records_found']}">

				<a4j:support event="onselectionchange" ignoreDupResponses="true"
					reRender="btn_delete_rate, btn_edit_rate" />

				<rich:column id="fixed_rate" label="#{lblFcl.fixed_rate}" title="Fixed rate" styleClass="tab_res_first"
					width="12%">
					<f:facet name="header">
						<a4j:outputPanel layout="none">
							<a4j:outputPanel rendered="#{tableHeight == null}">
								<script>updateHeight();</script>
							</a4j:outputPanel>
							<h:outputText value="#{lblFcl.fixed_rate}"
								title="#{lblFcl.fixed_rate}" />							
						</a4j:outputPanel>
					</f:facet>
					<h:outputText value="#{item.fixedRate}"
						converter="bpc.CurrencyConverter">
						<f:attribute name="exponent"
							value="#{CurrencyUtils.currencyObjectsMap[MbFeeTiers.feeCurrency].exponent}" />
					</h:outputText>
				</rich:column>

				<rich:column id="percent_rate" label="#{lblFcl.percent_rate}" title="Percent rate" width="12%">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.percent_rate}"
							title="#{lblFcl.percent_rate}" />
					</f:facet>
					<h:outputText value="#{item.percentRate}">
						<bm:convertNumberNew maxFractionDigits="4" />
					</h:outputText>
				</rich:column>

				<rich:column id="min_value" label="#{lblFcl.min_value}" title="Min value" width="12%">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.min_value}"
							title="#{lblFcl.min_value}" />
					</f:facet>
					<h:outputText value="#{item.minValue}"
						converter="bpc.CurrencyConverter">
						<f:attribute name="exponent"
							value="#{CurrencyUtils.currencyObjectsMap[MbFeeTiers.feeCurrency].exponent}" />
					</h:outputText>
				</rich:column>

				<rich:column id="max_value" label="#{lblFcl.max_value}" title="Max value" width="12%">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.max_value}"
							title="#{lblFcl.max_value}" />
					</f:facet>
					<h:outputText value="#{item.maxValue}"
						converter="bpc.CurrencyConverter">
						<f:attribute name="exponent"
							value="#{CurrencyUtils.currencyObjectsMap[MbFeeTiers.feeCurrency].exponent}" />
					</h:outputText>
				</rich:column>

				<rich:column id="length_type" label="#{lblFcl.length_type}" title="Length type" width="12%">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.length_type}"
							title="#{lblFcl.length_type}" />
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.lengthType]}" title="#{DictUtils.articles[item.lengthType]}"/>
				</rich:column>

				<rich:column id="length_type_alg" label="#{lblFcl.length_type_algorithm}" title="Length type alg" width="10%">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.length_type_algorithm}"
									  title="#{lblFcl.length_type_algorithm}" />
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.lengthTypeAlgorithm]}" title="#{DictUtils.articles[item.lengthTypeAlgorithm]}" />
				</rich:column>

				<rich:column id="sum_threshold" label="#{lblFcl.sum_threshold}" title="Sum threshold" width="14%">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.sum_threshold}"
							title="#{lblFcl.sum_threshold}" />
					</f:facet>
					<h:outputText value="#{item.sumThreshold}"
						converter="bpc.CurrencyConverter">
						<f:attribute name="exponent"
							value="#{CurrencyUtils.currencyObjectsMap[MbFeeTiers.feeCurrency].exponent}" />
					</h:outputText>
				</rich:column>

				<rich:column id="count_threshold" label="#{lblFcl.count_threshold}" title="Count threshold" styleClass="tab_res_last"
					width="14%">
					<f:facet name="header">
						<h:outputText value="#{lblFcl.count_threshold}"
							title="#{lblFcl.count_threshold}" />
					</f:facet>
					<h:outputText value="#{item.countThreshold}" />
				</rich:column>

			</rich:extendedDataTable>
		</h:panelGroup>
		<h:panelGroup layout="block"
			styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block"
				styleClass="bottom_search_result_left_buttons">

				<h:panelGrid id="feeBtns" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
					<h:panelGroup>
					<bre:taggedCommandButton image="/images/create_doc.gif"
						value="#{lblForm.add}" action="#{MbFeeTiers.create}"
						oncomplete="#{rich:component('editFeeTierPanel')}.show()"
						reRender="editFeeTierHeader, editFeeTierDiv"
						disabled="#{MbFeeTiers.activeFeeId == null or MbFeeTiers.disableAll
									or not MbFeeTiers.allSet}"
						rendered="${renderBtns}" />
					<bre:taggedCommandButton value="#{lblForm.wizard}"
						action="#{MbFeeTiers.initWizard}"
						oncomplete="#{rich:component('feeTierWizardPanel')}.show()"
						reRender="feeTierWizardDiv, tiersWizForm"
						disabled="#{MbFeeTiers.activeFeeId == null or MbFeeTiers.disableAll
									or not MbFeeTiers.emptyFeeTiers or not MbFeeTiers.allSet}"
						rendered="${renderBtns}" />
					<bre:taggedCommandButton id="btn_edit_rate"
						image="/images/edit.gif" value="#{lblForm.edit}"
						action="#{MbFeeTiers.edit}"
						oncomplete="#{rich:component('editFeeTierPanel')}.show()"
						reRender="editFeeTierHeader, editFeeTierDiv"
						disabled="#{MbFeeTiers.activeFeeTier == null or MbFeeTiers.disableAll
									or not MbFeeTiers.allSet}"
						rendered="${renderBtns}" />
					<bre:taggedCommandButton id="btn_delete_rate"
						image="/images/delete.gif" 
						value="#{lblForm.delete}" 
						disabled="#{MbFeeTiers.activeFeeTier == null or MbFeeTiers.disableAll}"
						rendered="${renderBtns}" 
						oncomplete="#{rich:component('deleteTierView:confirmPanel')}.show()"/>
					</h:panelGroup>
					
					<h:panelGroup>
							<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
								onclick="saveTierTableState();"/>
							<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
								onclick="deleteTierTableState();"/>
							<a4j:queue name="tablestatequeue"/>
							<a4j:jsFunction name="saveTierTableState" action="#{MbFeeTiers.saveTableStateDB}" eventsQueue="tablestatequeue"/>
							<a4j:jsFunction name="deleteTierTableState" action="#{MbFeeTiers.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
						</h:panelGroup>
				</h:panelGrid>
			</h:panelGroup>
		</h:panelGroup>
	</h:form>

	<rich:modalPanel id="editFeeTierPanel" autosized="true" minWidth="200" minHeight="50" rendered="${renderBtns}">
      	<f:facet name="header">
      		<h:panelGroup id="editFeeTierHeader">
       			<h:outputText value="#{lblFcl.new_fee_tier}" rendered="#{MbFeeTiers.managingNew}"/>
       			<h:outputText value="#{lblFcl.edit_fee_tier}" rendered="#{!MbFeeTiers.managingNew}"/>
       		</h:panelGroup>
        </f:facet>
  	    <f:facet name="controls">
      	</f:facet>
		<h:form id="editFeeTierDiv">
			<ui:include src="/pages/fee_cycle_limit/fees/edit_fee_tier.jspx"/>
			<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="3" columnClasses="width99P,,">
						<h:outputText/>
						<bre:taggedCommandButton id="saveRateBtn"
												 value="#{lblForm.save}"
												 type="submit"
												 action="#{MbFeeTiers.save}"
												 onclick="if (!checkFeeTierFields()) {return false;} disableModalPanelBtns(this);"
												 oncomplete="enableModalPanelBtns(this);
												             if (#{usession.noErrorResponse}) {
												                 document.getElementById('#{currencyElemId}').disabled = true;
												                 document.getElementById('#{feeRateCalcId}').disabled = true;
												                 #{rich:component('editFeeTierPanel')}.hide();
												             }"
												 reRender="feeTiersForm"/>
	                	<bre:taggedCommandButton
		                       	value="#{lblForm.cancel}" action="#{MbFeeTiers.cancel}"
		                       	immediate="true" limitToList="true"
		                       	oncomplete="#{rich:component('editFeeTierPanel')}.hide()"
		                       	reRender="editFeeTierDiv"
		                       	>
							<f:actionListener type="ru.bpc.jsf.A4JFormReset" />
						</bre:taggedCommandButton>
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
           </h:form>
	</rich:modalPanel>

	<rich:hotKey key="esc" handler="#{rich:component('editFeeTierPanel')}.hide();"/>

	<ui:include src="/pages/fee_cycle_limit/fees/feeTiersWizard.jspx">
		<ui:param name="rerenderList" value="feeTiersForm"/>
		<ui:param name="currencyElemId" value="#{currencyElemId}"/>
		<ui:param name="feeRateCalcId" value="#{feeRateCalcId}"/>
	</ui:include>
	
	<ui:include src="/pages/utils/confirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbFeeTiers}"/>
		<ui:param name="yesAction" value="delete"/>
		<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
		<ui:param name="rerenderList" value="tiersTable, feeBtns"/>
		<ui:param name="confirmQuestion" value=" "/> 
		<ui:param name="subviewId" value="deleteTierView"/>
		<ui:param name="yes" value="#{lblForm.ok}"/>
		<ui:param name="no" value="#{lblForm.cancel}"/>
		<ui:param name="completeScript" value="deleteScript()"/>
	</ui:include>
	
	<script>
		//<![CDATA[
		     function deleteScript() {
		    	 if (#{usession.noErrorResponse}) {
						if (#{rich:component('feeTiersForm:tiersTable')}.tableB.rows.length == 0) {
							document.getElementById('#{currencyElemId}').disabled = false;
							document.getElementById('#{feeRateCalcId}').disabled = false;
						}
					}
		     }
		//]]>
	</script>

</ui:composition>
</html>
