<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
      xmlns:bpct="http://www.bpc.ru/jsf/tiles"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:bm="http://www.bpc.ru/jsf/misc">
<f:view>
    <ui:composition template="/WEB-INF/templates/navigatable.jspx">
        <ui:define name="navigatableContent">
            <f:loadBundle var="lblAdt" basename="ru.bpc.sv2.ui.bundles.Adt"/>

            <!-- navigation bar -->
            <bpct:navBar pageName="Config remapping" />
            <a4j:loadScript src="/js/stretch.js" />
            <a4j:queue name="queue" requestDelay="500" ignoreDupResponses="true" size="1" sizeExceededBehavior="dropNew"/>
            <h:form id="mappingsSearchForm">

                <!-- search panel -->
                <h:panelGroup styleClass="search_block" layout="block">
                    <h:panelGroup layout="block" styleClass="search_block_inner1">
                        <h:panelGroup layout="block" styleClass="search_block_inner2">
                            <h:panelGroup class="search_block_left" layout="block">
                                <h:panelGrid styleClass="fw" columns="5" columnClasses="top ,link-cont">
                                    <h:panelGrid styleClass="filter-table field-cont twoColumnTable" columns="4" columnClasses="firstCol,secondCol,firstCol,secondCol">
                                        <h:outputLabel for="confDir" value="Configs dir:"/>
                                        <h:inputText id="confDir" value="#{MbConvConfRemap.confDir}" label="Configuration directory" required="true"/>

                                        <h:outputLabel for="remapDir" value="Remap dir:"/>
                                        <h:inputText id="remapDir" value="#{MbConvConfRemap.remapDir}" label="Remaping directory" required="true"/>

                                        <h:outputLabel for="fileSelect" value="Configuration file:" rendered="false"/>
                                        <h:selectOneMenu id="fileSelect" value="#{MbConvConfRemap.selectedFile}" rendered="false">
                                            <f:selectItem itemLabel="" itemValue=""/>
                                            <f:selectItems value="#{MbConvConfRemap.files}"/>
                                            <a4j:support event="onchange" reRender="configsBtnForm" />
                                        </h:selectOneMenu>
                                    </h:panelGrid>
                                    <h:panelGrid columns="1">
                                        <bre:taggedCommandButton action="#{MbConvConfRemap.load}"
                                                                 value="Load" style="width:85px;"
                                                                 disabled="true" rendered="false"/>

                                        <bre:taggedCommandButton action="#{MbConvConfRemap.remapConfigsAll}"
                                                                 value="Remap All" style="width:85px;" oncomplete="updateHeight(); if (#{usession.noErrorResponse}) #{rich:component('infoPanel')}.show()"
                                                                 reRender="resultsForm:cardsTable, workplacePanel, configsBtnForm"/>
                                    </h:panelGrid>
                                </h:panelGrid>
                            </h:panelGroup>
                        </h:panelGroup>
                    </h:panelGroup>
                </h:panelGroup>
            </h:form>

            <h:form id="resultsForm">
                <h:panelGroup styleClass="search_result_block" layout="block">
                    <h:panelGroup styleClass="search_result_block_left fix-ff" layout="block">
                        <h:panelGroup id="mainTableWrapper" layout="block"
                                      styleClass="search_result_block_inner">

                            <rich:extendedDataTable
                                    id="cardsTable"
                                    tableState="#{MbConvConfRemap.tableState}"
                                    styleClass="res-table"
                                    headerClass="res-table-header"
                                    rowClasses=",odd"
                                    selectedClass="res-table-selected"
                                    var="item"
                                    value="#{MbConvConfRemap.confFiles}"
                                    selection="#{MbConvConfRemap.itemSelection}"
                                    rows="#{MbConvConfRemap.rowsNum}"
                                    selectionMode="single"
                                    width="100%" height="255px"
                                    enableContextMenu="true"
                                    noDataLabel="#{MbConvConfRemap.searching?lblCommon['no_records_found'] : lblCommon['enter_search_criteria_above']}"
                                    onRowMouseDown="handleMouseClick(event)"
                                    reRender="init,cardsBtnForm:btnPanel, #{MbConvConfRemap.tabName}">

                                <a4j:support event="onselectionchange" requestDelay="500" oncomplete="updateHeight();"
                                             reRender="workplacePanel" />

                                <rich:column id="mask" label="#{lblCommon.file}" title="#{lblCommon.file}" width="75%" sortOrder="ASCENDING">
                                    <f:facet name="header">
                                        <h:panelGroup>
                                            <h:outputText value="#{lblCommon.file}" title="#{lblCommon.file}"/>
                                        </h:panelGroup>
                                    </f:facet>
                                    <bm:entityDisplay value="#{item.key}"/>
                                </rich:column>
                            </rich:extendedDataTable>

                        </h:panelGroup>
                    </h:panelGroup>
                </h:panelGroup>
            </h:form>

            <h:form id="configsBtnForm">
                <h:panelGroup layout="block" styleClass="bottom_search_result_block">
                    <h:panelGroup layout="block" styleClass="bottom_search_result_left">
                        <h:panelGrid id="btnPanel" columns="4" styleClass="itempanel">
                        </h:panelGrid>
                    </h:panelGroup>
                </h:panelGroup>
            </h:form>

            <h:panelGroup styleClass="workplace" id="workplacePanel" layout="block">
                <rich:tabPanel switchType="client" id="details"  tabClass="tab-cell"
                               activeTabClass="active-tab-cell" headerClass="tabs" headerSpacing="0px"
                               contentClass="tab-content" >

                    <rich:tab label="#{lblCommon.details}" name="detailsTab">
                        <f:facet name="label">
                            <h:panelGroup styleClass="first tab-label" layout="block">
                                <h:outputText value="#{lblCommon.details}" title="#{lblCommon.details}"/>
                            </h:panelGroup>
                        </f:facet>
                        <h:panelGroup id="detailsTab" layout="block" style="padding: 2px">
                            <h:form id="configDetailsForm">
                                <h:panelGroup id="configDetailsWrapper" layout="block" styleClass="carddata-wrapper"
                                              style="height: 100%; position:relative;">
                                    <h:inputTextarea value="#{MbConvConfRemap.activeConfFile.value}" id="sourceText" style="max-width: 100%; padding: 0px; height: 100%; border: 0px" readonly="true"/>
                                </h:panelGroup>
                            </h:form>
                        </h:panelGroup>

                        <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
                            <h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons" />
                        </h:panelGroup>

                    </rich:tab>
                </rich:tabPanel>
            </h:panelGroup>

            <rich:modalPanel id="infoPanel" autosized="true" minWidth="300" minHeight="50">
                <f:facet name="header">
                    <h:panelGroup>
                        <h:outputText value="#{lblAdt.info}"/>
                    </h:panelGroup>
                </f:facet>
                <f:facet name="controls">
                </f:facet>
                <h:form id="confirmPanelForm">
                    <h:panelGrid columns="2">
                        <h:graphicImage url="/images/icon_info.png" height="32" width="32"/>
                        <h:outputText id="warningMsg" value="#{lblCommon.remapping_completed}"/>
                    </h:panelGrid>

                    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
                        <h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
                            <h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
                                <h:outputText/>
                                <bre:taggedCommandButton value="#{lblForm.ok}" id="okbutton" oncomplete="Richfaces.hideModalPanel('infoPanel');" />
                            </h:panelGrid>
                        </h:panelGroup>
                    </h:panelGroup>
                </h:form>
            </rich:modalPanel>

        <script type="text/javascript">

            function updateHeight() {
                updateGridHeight();
            }

            layout =
            {
                SEARCH_FORM_ID:                 'mappingsSearchForm',
                SEARCH_RESULT_FORM_ID:          'resultsForm',
                SEARCH_RESULT_FORM_WRAPPER_ID:  'mainTableWrapper',
                SEARCH_RESULT_FOOTER_FORM_ID:   'configsBtnForm',
                TAB_PANEL_ID:                   'workplacePanel',

                TAB_DATA:      [{
                    TAB_FORM_ID:            'configDetailsForm',
                    TAB_FORM_WRAPPER_ID:    'configDetailsWrapper',
                    CORRECTING_HEIGHT:      Stretch.TABS+ Stretch.BUTTONS
                }]
            };

            addLoadEvent(function() { makeScrollableTabs('details');});
            updateHeight();
            jQuery(window).resize(updateHeight);
        </script>

        </ui:define>
    </ui:composition>
</f:view>
</html>
