<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:a4j="http://richfaces.org/a4j">
    <h:panelGrid id="addEditButtons" columns="1" style="margin-left: 50px">
        <a4j:commandButton id="addParamExpression" styleClass="wide"
                           value="#{lblRptc.add_condition}"
                           action="#{editReportTemplate.addParamExpressionBefore}"
                           reRender="conditionsExpression, condTreeTable, paramExpression, addEditButtons"
                           rendered="#{!editReportTemplate.editMode and !editReportTemplate.showBeforeAfterButtons}" />
    <h:panelGrid columns="1" rendered="#{editReportTemplate.showBeforeAfterButtons and !editReportTemplate.editMode}">
        <a4j:commandButton id="addConditionBefore" styleClass="wide"
                           value="#{lblRptc.add_before}"
                           action="#{editReportTemplate.addParamExpressionBefore}"
                           reRender="conditionsExpression, condTreeTable, paramExpression, addEditButtons, addButtons" />
        <a4j:commandButton id="addConditionInto" styleClass="wide"
                           value="#{lblRptc.add_into}"
                           action="#{editReportTemplate.addParamExpressionInto}"
                           rendered="#{editReportTemplate.showIntoButton}"
                           reRender="conditionsExpression, condTreeTable, paramExpression, addEditButtons, addButtons" />
        <a4j:commandButton id="addConditionAfter" styleClass="wide"
                           value="#{lblRptc.add_after}"
                           action="#{editReportTemplate.addParamExpressionAfter}"
                           reRender="conditionsExpression, condTreeTable, paramExpression, addEditButtons, addButtons" />
    </h:panelGrid>
        <a4j:commandButton id="applyParamExpression" styleClass="wide"
                           value="#{lblForm.apply}"
                           action="#{editReportTemplate.applyParamExpression}"
                           reRender="conditionsExpression, condTreeTable, addEditButtons, paramExpression, addButtons"
                           rendered="#{editReportTemplate.editMode}"/>
        <a4j:commandButton id="cancelParamExpression" styleClass="wide"
                           value="#{lblForm.cancel}"
                           action="#{editReportTemplate.cancelParamExpression}"
                           reRender="conditionsExpression, condTreeTable, addEditButtons, paramExpression, addButtons"
                           rendered="#{editReportTemplate.editMode}" />

    </h:panelGrid>
</ui:composition>
