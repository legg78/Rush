<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<script type="text/javascript">
//<!--
		function checkAddTemplateFields() {
			var checked = true;
			
			if (document.getElementById('addTemplateForm:templateSelector').value == "") {
				document.getElementById('addTemplateForm:templateSelectorError').style.display = "inline";
				checked = false;
			}
			
			return checked;
		}
		//-->
	</script>

	<f:loadBundle var="lblAup" basename="ru.bpc.sv2.ui.bundles.Aup" />

	<h:form id="templatesForm">
		<h:panelGroup id="templatesTableWrapper" layout="block"
			style="padding:0px;margin:0px;">
			<rich:extendedDataTable id="templatesTable" styleClass="res-table"
				headerClass="res-table-header table-header-ext" rowClasses=",odd"
				selectedClass="res-table-selected" var="item"
				value="#{MbAupSchemeTemplates.templates}"
				selection="#{MbAupSchemeTemplates.itemSelection}"
				selectionMode="single" enableContextMenu="true"
				tableState="#{MbAupSchemeTemplates.tableState}"
				noDataLabel="#{lblCommon['no_records_found']}">

				<a4j:support event="onselectionchange" ignoreDupResponses="true"
					reRender="btnPanel" />

				<rich:column id="id" label="#{lblCommon.id}" title="Id" sortBy="#{'id'}" width="10%">
					<f:facet name="header">
						<a4j:outputPanel layout="none">
							<script>updateHeight();</script>
							<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}" />
						</a4j:outputPanel>
					</f:facet>
					<h:outputText value="#{item.id}" />
				</rich:column>

				<rich:column id="name" label="#{lblCommon.name}" title="Name" sortBy="#{'name'}" width="16%">
					<f:facet name="filter">
						<h:inputText value="#{MbAupSchemeTemplates.filter.name}"
							style="width:100%">
							<a4j:support event="onkeyup" reRender="templatesTable"
								requestDelay="500" action="#{MbAupSchemeTemplates.search}" />
						</h:inputText>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblCommon.name}" title="#{lblCommon.name}" />
					</f:facet>
					<h:outputText value="#{item.name}" title="#{item.name}" />
				</rich:column>

				<rich:column id="condition" label="#{lblAup.condition}" title="Condition" width="18%">
					<f:facet name="filter">
						<h:inputText value="#{MbAupSchemeTemplates.filter.condition}"
							style="width:100%">
							<a4j:support event="onkeyup" reRender="templatesTable"
								requestDelay="500" action="#{MbAupSchemeTemplates.search}" />
						</h:inputText>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblAup.condition}"
							title="#{lblAup.condition}" />
					</f:facet>
					<h:outputText value="#{item.condition}" title="#{item.condition}" />
				</rich:column>

				<rich:column id="description" label="#{lblCommon.description}" title="Description" sortBy="#{'description'}"
					width="24%">
					<f:facet name="filter">
						<h:inputText value="#{MbAupSchemeTemplates.filter.description}"
							style="width:100%">
							<a4j:support event="onkeyup" reRender="templatesTable"
								requestDelay="500" action="#{MbAupSchemeTemplates.search}" />
						</h:inputText>
					</f:facet>
					<f:facet name="header">
						<h:outputText value="#{lblCommon.description}"
							title="#{lblCommon.description}" />
					</f:facet>
					<h:outputText value="#{item.description}"
						title="#{item.description}" />
				</rich:column>

				<rich:column id="templ_type" label="#{lblAup.templ_type}" title="Template type" sortBy="#{'templType'}"
					width="15%">
					<f:facet name="header">
						<h:outputText value="#{lblAup.templ_type}"
							title="#{lblAup.templ_type}" />
					</f:facet>
					<h:outputText rendered="#{item.templType != null}"
						value="#{DictUtils.articlesByLang[item.lang][item.templType]}"
						title="#{DictUtils.articlesByLang[item.lang][item.templType]}" />
					<h:outputText value=""
						rendered="#{item.templType == null}" />
				</rich:column>

				<rich:column id="resp_code" label="#{lblAup.resp_code}" title="Response code" sortBy="#{'respCode'}"
					width="15%">
					<f:facet name="header">
						<h:outputText value="#{lblAup.resp_code}:"
							title="#{lblAup.resp_code}" />
					</f:facet>
					<h:outputText rendered="#{item.respCode != null}"
						value="#{DictUtils.articlesByLang[item.lang][item.respCode]}"
						title="#{DictUtils.articlesByLang[item.lang][item.respCode]}" />
					<h:outputText value=""
						rendered="#{item.respCode == null}" />
				</rich:column>

			</rich:extendedDataTable>
		</h:panelGroup>
		<h:panelGroup layout="block"
			styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block"
				styleClass="bottom_search_result_left_buttons">

				<h:panelGrid id="btnPanel" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
					<h:panelGroup>
					<bre:taggedCommandButton action="#{MbAupSchemeTemplates.view}"
						value="#{lblForm.view}"
						oncomplete="#{rich:component('aup_template_view_modal_panel')}.show()"
						disabled="#{MbAupSchemeTemplates.activeTemplate == null}"
						reRender="aup_template_view_modal_div" />

					<bre:taggedCommandButton id="addBtn"
						reRender="aup_template_modal_header, aup_template_modal_div"
						value="#{lblForm.add}"
						oncomplete="#{rich:component('aup_add_template_modal_panel')}.show()"
						action="#{MbAupSchemeTemplates.add}"
						disabled="#{MbAupSchemeTemplates.scheme == null}"
						rendered="#{usession.inRole['ADD_AUTHORIZATION_TEMPLATE']}"
						image="/images/create_doc.gif" />
					<bre:taggedCommandButton id="deleteBtn"
						value="#{lblForm.delete}"
						oncomplete="#{rich:component('deleteTemplateViewId:confirmPanel')}.show()"
						disabled="#{MbAupSchemeTemplates.activeTemplate == null}"
						rendered="#{usession.inRole['REMOVE_AUTHORIZATION_TEMPLATE']}"
						image="/images/delete.gif" />
					</h:panelGroup>
					
					<h:panelGroup>
						<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
							onclick="saveTemplateTableState();"/>
						<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
							onclick="deleteTemplateTableState();"/>
						<a4j:queue name="tablestatequeue"/>
						<a4j:jsFunction name="saveTemplateTableState" action="#{MbAupSchemeTemplates.saveTableStateDB}" eventsQueue="tablestatequeue"/>
						<a4j:jsFunction name="deleteTemplateTableState" action="#{MbAupSchemeTemplates.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
					</h:panelGroup>
				</h:panelGrid>
			</h:panelGroup>
		</h:panelGroup>
	</h:form>

	<rich:modalPanel id="aup_add_template_modal_panel" autosized="true"
		minWidth="200" minHeight="80">
		<f:facet name="header">
			<h:panelGroup id="aup_template_modal_header">
				<h:outputText value="#{lblAup.add_template}" />
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
		</f:facet>
		<h:form id="addTemplateForm">
			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata" width="100%"
					columnClasses="firstColModal, width250">
					<h:outputLabel value="* #{lblAup.templates}:" title="#{lblAup.templates}" />
						<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:selectOneMenu id="templateSelector"
							value="#{MbAupSchemeTemplates.selectedTemplate}"
							onblur="hideErrorField(this)">
							<f:selectItems value="#{MbAupSchemeTemplates.allTemplates}" />
						</h:selectOneMenu>
						<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
							id="templateSelectorError" style="display:none;">
							<f:param name="fieldName" value="#{lblAup.templates}"/>
						</h:outputFormat>
					</h:panelGrid>
				</h:panelGrid>
			</h:panelGroup>

			<h:panelGroup layout="block"
				styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block"
					styleClass="bottom_search_result_left_buttons">
					<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.save}"
							action="#{MbAupSchemeTemplates.save}"
							onclick="if (!checkAddTemplateFields()) return false; disableModalPanelBtns(this)"
							oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('aup_add_template_modal_panel')}.hide()"
							reRender="templatesForm:templatesTable, templatesForm:btnPanel" />
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbAupSchemeTemplates.close}" immediate="true"
							oncomplete="#{rich:component('aup_add_template_modal_panel')}.hide()" />
					</h:panelGrid>
				</h:panelGroup>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>

	<rich:modalPanel id="aup_template_view_modal_panel" autosized="true"
		minWidth="500" minHeight="255">
		<f:facet name="header">
			<h:outputText value="#{lblAup.template}" />
		</f:facet>
		<f:facet name="controls">
		</f:facet>
		
		<h:panelGroup id="aup_template_view_modal_div" layout="block"
				style="height: 100%;overflow:auto;position:relative;">
			<ui:include src="/pages/aup/template_details.jspx" >
				<ui:param name="bean" value="#{MbAupSchemeTemplates}"></ui:param>
			</ui:include>
		</h:panelGroup>
		<h:form>
			<h:panelGroup layout="block" style="position:absolute;bottom:0;left:0;width:100%"
				styleClass="bottom_search_result_block_buttons">
					<h:panelGrid columns="2" columnClasses="width99P,paddingR12">
						<h:outputText />
						<bre:taggedCommandButton value="#{lblForm.cancel}"
							action="#{MbAupSchemeTemplates.close}" immediate="true"
							oncomplete="#{rich:component('aup_template_view_modal_panel')}.hide()" />
					</h:panelGrid>
			</h:panelGroup>
		</h:form>
	</rich:modalPanel>

	<ui:include src="/pages/utils/confirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbAupSchemeTemplates}"/>
		<ui:param name="yesAction" value="delete"/>
		<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
		<ui:param name="rerenderList" value="templatesTable, btnPanel"/>
		<ui:param name="confirmQuestion" value=" "/> 
		<ui:param name="subviewId" value="deleteTemplateViewId"/>
		<ui:param name="yes" value="#{lblForm.ok}"/>
		<ui:param name="no" value="#{lblForm.cancel}"/>
	</ui:include>
		
</ui:composition>
</html>
