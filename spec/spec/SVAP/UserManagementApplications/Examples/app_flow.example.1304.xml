<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://sv.bpc.in/SVAP/acm">
	<application_type>APTPUMGT</application_type>			<!-- Application type - User management -->
	<application_flow_id>1304</application_flow_id>			<!-- Application flow (business process) - Change user's roles -->
	<application_status>APST0006</application_status>		<!-- Application status - Ready to process -->
	<institution_id>1001</institution_id>					<!-- Institution identifier -->
	<operator_id>OPERATOR1</operator_id>					<!-- User name who made this application -->
	<user>
		<command>CMMDEXPR</command>							<!-- Command for user - Except or proceed -->
		<user_id>10000001</user_id>							<!-- User identifier -->
		<user_name>OPERATOR2</user_name>					<!-- User name -->
		<user_status>USSTACTV</user_status>					<!-- User status - Active -->
		<user_role>
			<command>CMMDCRPR</command>						<!-- Command for user's role - Create or proceed (if you want to add this role to user) -->
			<role_id>8</role_id>							<!-- Role identifier -->
			<role_name>DEFAULT_ROLE</role_name>				<!-- Role name -->
		</user_role>
		<user_role>
			<command>CMMDPRRE</command>						<!-- Command for user's role - Proceed or remove (if you want to remove this role from user) -->
			<role_id>5</role_id>							<!-- Role identifier -->
			<role_name>ADMIN_ROLE</role_name>				<!-- Role name -->
		</user_role>
    </user>
</application>