<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext"
		xmlns:bpct="http://www.bpc.ru/jsf/tiles">
<ui:composition>
	<script type="text/javascript">
//<!--
		function checkAccountSchemeFields() {
			var checked = true;
			
			if (document.getElementById('accountSchemeEditForm:newInst').value == "") {
				document.getElementById('accountSchemeEditForm:newInstError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('accountSchemeEditForm:newLabel').value == "") {
				document.getElementById('accountSchemeEditForm:newLabelError').style.display = "inline";
				checked = false;
			}
			
			return checked;
		}
		//-->
	</script>

	<f:loadBundle var="lblAcq" basename="ru.bpc.sv2.ui.bundles.Acq"/>
	<f:loadBundle var="lblPrd" basename="ru.bpc.sv2.ui.bundles.Prd"/>

	<rich:modalPanel id="accountSchemeModalPanel" autosized="true" minWidth="300" minHeight="100">
	      	<f:facet name="header">
				<h:panelGroup id="accountSchemeModalHeader">
	           	    <h:outputText value="#{lblAcq.edit_account_scheme}" rendered="#{MbAccountSchemes.editMode}"/>
	           	    <h:outputText value="#{lblAcq.new_account_scheme}" rendered="#{MbAccountSchemes.newMode}"/>
				</h:panelGroup>
			</f:facet>
			<f:facet name="controls">
		    </f:facet>
   	    	<h:form id="accountSchemeEditForm">
   	    		<script type="text/javascript">
//<!--
					oldValue["accountSchemeEditForm"] = "#{MbAccountSchemes.newAccountScheme.lang}";
				//-->
				</script>
				<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
					<h:panelGrid columns="2" styleClass="cardholderdata" columnClasses="firstColModal, width250">
						<h:outputLabel value="#{lblCommon.id}: " 
								rendered="#{MbAccountSchemes.editMode}"/>
            			<h:inputText disabled="true"
            					value="#{MbAccountSchemes.newAccountScheme.id}"
            					rendered="#{MbAccountSchemes.editMode}">
            			</h:inputText>

            			<h:outputLabel value="* #{lblCommon.institution}: " title="#{lblCommon.institution}"/>
						<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
	            			<h:selectOneMenu id="newInst" 
	            					value="#{MbAccountSchemes.newAccountScheme.instId}"
	            					label="#{lblCommon.institution}"
	            					disabled="#{MbAccountSchemes.editMode}"
	            					onblur="hideErrorField(this)">
								<f:selectItem itemValue=""/>
			      				<f:selectItems value="#{MbAccountSchemes.institutions}"/>
							</h:selectOneMenu>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newInstError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.institution}"/>
							</h:outputFormat>
            			</h:panelGrid>

						<h:outputLabel value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
						<h:selectOneMenu id="newLang" value="#{MbAccountSchemes.newAccountScheme.lang}"
								rendered="#{MbAccountSchemes.newMode}">
							<f:selectItems value="#{MbAccountSchemes.languages}"/>
						</h:selectOneMenu>
						<h:selectOneMenu id="editLang" value="#{MbAccountSchemes.newAccountScheme.lang}"
								rendered="#{MbAccountSchemes.editMode}"
								onchange="document.getElementById('accountScheme:confirmPanelForm:newValue').value = this.value;
										#{rich:component('accountScheme:confirmPanel')}.show()">
							<f:selectItems value="#{MbAccountSchemes.languages}"/>
						</h:selectOneMenu>
            			
						<h:outputLabel for="newLabel" value="* #{lblCommon.name}: " title="#{lblCommon.name}"/>
						<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
	            			<h:inputText id="newLabel" 
	            					value="#{MbAccountSchemes.newAccountScheme.label}" 
	            					label="#{lblCommon.name}"
	            					maxlength="200"
	            					onblur="hideErrorField(this)">
	            				<a4j:support event="onchange" reRender="newLabelErr" 
	            						limitToList="true" ajaxSingle="true"/>
	            				<f:validateLength minimum="3"/>
	            			</h:inputText>
							<rich:message for="newLabel" id="newLabelErr" styleClass="errorMarker"/>
							<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
								id="newLabelError" style="display:none;">
								<f:param name="fieldName" value="#{lblCommon.name}"/>
							</h:outputFormat>
            			</h:panelGrid>
            			
            			<h:outputLabel for="newDesc" value="#{lblCommon.description}: " title="#{lblCommon.description}"/>
            			<h:inputTextarea id="newDesc" rows="3" 
            					value="#{MbAccountSchemes.newAccountScheme.description}"
            					onkeypress="if (!limitText(event,this,2000)) return false;" 
            					label="#{lblCommon.description}">
			            	<f:validateLength maximum="2000" />
				        </h:inputTextarea>
					</h:panelGrid>
				</h:panelGroup>

	      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
					<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
		       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
		       	    		<h:outputText/>
                        	<bre:taggedCommandButton
                        			value="#{lblForm.save}" type="submit" action="#{MbAccountSchemes.save}"
                        			onclick="if (!checkAccountSchemeFields()) return false; disableModalPanelBtns(this)"
				                   	oncomplete="enableModalPanelBtns(this); if (#{usession.noErrorResponse}) #{rich:component('accountSchemeModalPanel')}.hide()"
                        			reRender="#{rerenderList}"
	                        		/>
	                        <bre:taggedCommandButton
	                        		value="#{lblForm.cancel}" 
	                        		action="#{MbAccountSchemes.cancel}" 
	                        		immediate="true" limitToList="true"
	                        		oncomplete="#{rich:component('accountSchemeModalPanel')}.hide()"
	                        		reRender="accountSchemeEditForm">
	                        	<f:actionListener type="ru.bpc.jsf.A4JFormReset"/>
	                        </bre:taggedCommandButton>
			    		</h:panelGrid>
			    	</h:panelGroup>
			    </h:panelGroup>
			</h:form>			
		</rich:modalPanel>

    <ui:include src="/pages/utils/langConfirmPanel.jspx">
    	<ui:param name="backingBean" value="#{MbAccountSchemes}"/>
    	<ui:param name="rerenderList" value="accountSchemeEditForm:newInst, accountSchemeEditForm:newLabel, accountSchemeEditForm:newDesc"/>
    	<ui:param name="editElem" value="accountSchemeEditForm:editLang"/>
    	<ui:param name="newValue" value="#{MbAccountSchemes.newAccountScheme.lang}"/>
    	<ui:param name="subviewId" value="accountScheme"/>
    	<ui:param name="formName" value="accountSchemeEditForm" />
    </ui:include>

</ui:composition>
</html>
