<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bm="http://www.bpc.ru/jsf/misc"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<f:loadBundle var="lblIss" basename="ru.bpc.sv2.ui.bundles.Iss" />

	<h:form id="prodCardTypesBtmForm">
		<h:panelGroup id="mainTableWrapper" layout="block"
			style="padding:0px;margin:0px;">
			<rich:extendedDataTable headerClass="res-table-header table-header-ext"
				selectedClass="res-table-selected" styleClass="res-table"
				rowClasses=",odd" id="mainTable" var="item"
				value="#{(cardTypesBean==null ? MbProductCardTypesSearch : cardTypesBean).productCardTypes}"
				selection="#{(cardTypesBean==null ? MbProductCardTypesSearch : cardTypesBean).itemSelection}" rows="0"
				height="220px" selectionMode="single" enableContextMenu="true"
				tableState="#{(cardTypesBean==null ? MbProductCardTypesSearch : cardTypesBean).tableState}"
				noDataLabel="#{lblCommon['no_records_found']}">

				<a4j:support event="onselectionchange" reRender="btnsBlock" />

				<rich:column id="id" label="#{lblCommon.id}" title="Id" sortBy="#{'id'}" width="5%">
					<f:facet name="header">
						<a4j:outputPanel layout="none">
							<script>if(window['updateHeight'])updateHeight();</script>
							<h:outputText value="#{lblCommon.id}" title="#{lblCommon.id}" />
						</a4j:outputPanel>
					</f:facet>
					<h:outputText value="#{item.id}" />
				</rich:column>

				<rich:column id="card_type" label="#{lblIss.card_type}" title="Card type" sortBy="#{'cardTypeName'}"
					width="15%">
					<f:facet name="header">
						<h:outputText value="#{lblIss.card_type}"
							title="#{lblIss.card_type}" />
					</f:facet>
					<h:outputText value="#{item.cardTypeName}"
						title="#{item.cardTypeName}" />
				</rich:column>

				<rich:column id="bin" label="#{lblIss.bin}" title="BIN" sortBy="#{'binName'}" width="10%">
					<f:facet name="header">
						<h:outputText value="#{lblIss.bin}" title="#{lblIss.bin}" />
					</f:facet>
					<h:outputText value="#{item.binBin} - #{item.binName}"
						title="#{item.binBin} - #{item.binName}"
						rendered="#{item.binBin != null}" />
					<h:outputText value="#{item.binName}" title="#{item.binName}"
						rendered="#{item.binBin == null}" />
				</rich:column>
				
				<rich:column id="method" label="#{lblIss.method}" title="Method" sortBy="#{'methodName'}" width="10%">
					<f:facet name="header">
			        	<h:outputText value="#{lblIss.method}" title="#{lblIss.method}" />
			        </f:facet>
			        <h:outputText value="#{item.methodName}" title="#{item.methodName}" />
				</rich:column>

				<rich:column id="number_format" label="#{lblIss.number_format}" title="Format" sortBy="#{'numberFormatName'}"
					width="15%">
					<f:facet name="header">
						<h:outputText value="#{lblIss.number_format}"
							title="#{lblIss.number_format}" />
					</f:facet>
					<h:outputText value="#{item.numberFormatName}"
						title="#{item.numberFormatName}" />
				</rich:column>

				<rich:column id="index_range" label="#{lblIss.index_range}" title="Index range" sortBy="#{'indexRangeName'}"
					width="10%">
					<f:facet name="header">
						<h:outputText value="#{lblIss.index_range}"
							title="#{lblIss.index_range}" />
					</f:facet>
					<h:outputText value="#{item.indexRangeName}"
						title="#{item.indexRangeName}" />
				</rich:column>

				<rich:column id="card_state" label="#{lblIss.card_state}" title="Card state" sortBy="#{'cardState'}" width="15%">
					<f:facet name="header">
						<h:outputText value="#{lblIss.card_state}"
							title="#{lblIss.card_state}" />
					</f:facet>
					<h:outputText value="#{DictUtils.articles[item.cardState]}"
						title="#{DictUtils.articles[item.cardState]}" />
				</rich:column>
				
				<rich:column id="service" label="#{lblPrd.service}" title="Service"  width="20%">
					<f:facet name="header">
						<h:outputText value="#{lblPrd.service}"
							title="#{lblPrd.service}" />
					</f:facet>
					<h:outputText value="#{item.serviceId} - #{item.serviceDict}"
						title="#{item.serviceId} - #{item.serviceDict}" />
				</rich:column>
				<f:facet name="footer">
				</f:facet>
			</rich:extendedDataTable>
		</h:panelGroup>
		<h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
			<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons" rendered="#{cardTypesBean==null}">
				<h:panelGrid id="btnsBlock" styleClass="fw buttons_block" columns="2" columnClasses=", table_tools_state">
					<h:panelGroup>
					<bre:taggedCommandButton id="viewBtn"
						reRender="productCardTypeDetailsForm" value="#{lblForm.view}"
						action="#{MbProductCardTypesSearch.view}"
						oncomplete="#{rich:component('iss_product_card_type_view_modal_panel')}.show()"
						disabled="#{MbProductCardTypesSearch.activeProductCardType == null}" />
					<bre:taggedCommandButton id="addBtn"
						reRender="productCardTypeModalDiv,productCardTypeModalHeader"
						value="#{lblForm.add}"
						oncomplete="#{rich:component('productCardTypeModalPanel')}.show()"
						action="#{MbProductCardTypesSearch.add}"
						disabled="#{MbProductCardTypesSearch.filter.productId == null}"
						rendered="#{usession.inRole['ADD_PRODUCT_CARD_TYPE']}"
						image="/images/create_doc.gif" />
					<bre:taggedCommandButton id="editBtn"
						reRender="productCardTypeModalDiv,productCardTypeModalHeader"
						value="#{lblForm.edit}" action="#{MbProductCardTypesSearch.edit}"
						oncomplete="#{rich:component('productCardTypeModalPanel')}.show()"
						disabled="#{MbProductCardTypesSearch.activeProductCardType == null}"
						rendered="#{usession.inRole['MODIFY_PRODUCT_CARD_TYPE']}"
						image="/images/edit.gif" />
					<bre:taggedCommandButton id="deleteBtn"
						value="#{lblForm.delete}"
						disabled="#{MbProductCardTypesSearch.activeProductCardType == null}"
						rendered="#{usession.inRole['REMOVE_PRODUCT_CARD_TYPE']}"
						image="/images/delete.gif" 
						oncomplete="#{rich:component('deleteCardTypeView:confirmPanel')}.show()"/>
					</h:panelGroup>
					<h:panelGroup>
						<h:graphicImage url="/images/green-tick.png" title="#{lblCommon.save_table_state}" styleClass="action_icon"
							onclick="saveCardTypeTableState();"/>
						<h:graphicImage url="/images/red-cross.png" title="#{lblCommon.delete_table_state}" styleClass="action_icon"
							onclick="deleteCardTypeTableState();"/>
						<a4j:queue name="tablestatequeue"/>
						<a4j:jsFunction name="saveCardTypeTableState" action="#{MbProductCardTypesSearch.saveTableStateDB}" eventsQueue="tablestatequeue"/>
						<a4j:jsFunction name="deleteCardTypeTableState" action="#{MbProductCardTypesSearch.deleteTableStateDB}" eventsQueue="tablestatequeue"/>
					</h:panelGroup>
				</h:panelGrid>
			</h:panelGroup>
		</h:panelGroup>
	</h:form>

	<ui:include src="/pages/issuing/product_card_type_edit.jspx">
		<ui:param name="rerenderList" value="prodCardTypesBtmForm"></ui:param>
	</ui:include>

	<ui:include src="/pages/issuing/product_card_type_details.jspx">
	</ui:include>
	
	<ui:include src="/pages/utils/confirmPanel.jspx">
		<ui:param name="backingBean" value="#{MbProductCardTypesSearch}"/>
		<ui:param name="yesAction" value="delete"/>
		<ui:param name="warningMsg" value="#{lblMsg.confirm_delete}"/> 
		<ui:param name="rerenderList" value="prodCardTypesBtmForm"/>
		<ui:param name="confirmQuestion" value=" "/> 
		<ui:param name="subviewId" value="deleteCardTypeView"/>
		<ui:param name="yes" value="#{lblForm.ok}"/>
		<ui:param name="no" value="#{lblForm.cancel}"/>
	</ui:include>

</ui:composition>
</html>
