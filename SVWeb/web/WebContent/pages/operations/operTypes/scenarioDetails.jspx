<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<f:loadBundle var="lblPrd" basename="ru.bpc.sv2.ui.bundles.Prd" />
	<h:form id="scenarioDetailsForm">
		<h:panelGroup id="scenarioDetailsWrapper" layout="block"
			styleClass="carddata-wrapper"
			style="height: 100%; overflow-y: auto;overflow-x: hidden;position:relative;">
			<rich:dataTable id="scenarioDetailsTable"
				value="#{MbScenarioSelections.emptyTable}" var="field"
				styleClass="res-table noHeader" width="100%">
				<rich:columnGroup rowClasses=",odd"
					columnClasses="firstCol alignLeft width20, width80 width250 noPadding">
					<rich:column styleClass="detailsCategory expandedBranch">
						<h:graphicImage url="/images/minus.gif"
							onclick="showHideDetails(this)" />
						<h:outputLabel value="#{lblPrd.general_data}:" />
					</rich:column>
					<rich:column>
						<script>
							updateHeight();
						</script>
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.name}:"
							title="#{lblCommon.name}" />
					</rich:column>
					<rich:column>
						<h:outputLabel
							value="#{MbScenarioSelections.activeSelection.name}"
							title="#{MbScenarioSelections.activeSelection.name}" />
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.description}:"
							title="#{lblCommon.description}" />
					</rich:column>
					<rich:column>
						<h:outputLabel
							value="#{MbScenarioSelections.activeSelection.description}"
							title="#{MbScenarioSelections.activeSelection.description}" />
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.modifier}:"
							title="#{lblCommon.modifier}" />
					</rich:column>
					<rich:column>
						<h:outputLabel
							value="#{MbScenarioSelections.activeSelection.modName}"
							title="#{MbScenarioSelections.activeSelection.modName}" />
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblAut.oper_type}:"
							title="#{lblAut.oper_type}" />
					</rich:column>
					<rich:column>
						<h:outputLabel
							rendered="#{MbScenarioSelections.activeSelection.operType != null}"
							value="#{DictUtils.articles[MbScenarioSelections.activeSelection.operType]}"
							title="#{DictUtils.articles[MbScenarioSelections.activeSelection.operType]}" />
						<h:outputLabel value=""
							rendered="#{MbScenarioSelections.activeSelection.operType == null}" />
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblAut.is_reversal}:"
							title="#{lblAut.is_reversal}" />
					</rich:column>
					<rich:column>
						<h:selectBooleanCheckbox rerender="#{MbScenarioSelections.activeSelection.reversal != null}"
							value="#{MbScenarioSelections.activeSelection.reversal}"
							onclick="return false;" disabled="true" style="width:0;"></h:selectBooleanCheckbox>
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblOpr.sttl_type}:"
							title="#{lblOpr.sttl_type}" />
					</rich:column>
					<rich:column>
						<h:outputLabel
							rendered="#{MbScenarioSelections.activeSelection.sttlType != null}"
							value="#{DictUtils.articles[MbScenarioSelections.activeSelection.sttlType]}"
							title="#{DictUtils.articles[MbScenarioSelections.activeSelection.sttlType]}" />
						<h:outputLabel value=""
							rendered="#{MbScenarioSelections.activeSelection.sttlType == null}" />
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblCommon.priority}:"
							title="#{lblCommon.priority}" />
					</rich:column>
					<rich:column>
						<h:outputLabel
							value="#{MbScenarioSelections.activeSelection.priority}"
							title="#{MbScenarioSelections.activeSelection.priority}" />
					</rich:column>

					<rich:column breakBefore="true">
						<h:outputLabel value="#{lblAut.msg_type}:"
							title="#{lblAut.msg_type}" />
					</rich:column>
					<rich:column>
						<h:outputLabel
							rendered="#{MbScenarioSelections.activeSelection.msgType != null}"
							value="#{DictUtils.articles[MbScenarioSelections.activeSelection.msgType]}"
							title="#{DictUtils.articles[MbScenarioSelections.activeSelection.msgType]}" />
						<h:outputLabel value=""
							rendered="#{MbScenarioSelections.activeSelection.msgType == null}" />
					</rich:column>
				</rich:columnGroup>
			</rich:dataTable>
			<script>
				setDetailsState("scenarioDetailsForm:scenarioDetailsTable");
			</script>
		</h:panelGroup>
	</h:form>
</ui:composition>
</html>
