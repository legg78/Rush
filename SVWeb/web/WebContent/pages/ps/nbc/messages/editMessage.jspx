<?xml version="1.0" encoding="UTF-8"?>
<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bm="http://www.bpc.ru/jsf/misc"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<ui:composition>
	<rich:modalPanel id="nbcFinMessageModalPanel" autosized="true" minWidth="300" minHeight="100">
		<f:facet name="header">
			<h:panelGroup id="nbcFinMessageModalHeader">
				<h:outputText value="#{'Edit financial message'}" rendered="#{MbNbcFinMessagesSearch.editMode}"/>
			</h:panelGroup>
		</f:facet>
		<f:facet name="controls">
		</f:facet>
    	<h:form id="nbcFinMessageEditForm">

			<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
				<h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">

					<h:outputLabel value="Dispute transaction result: " title="Dispute transaction result"/>
					<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
						<h:selectOneMenu id="dispureResLovs" value="#{MbNbcFinMessagesSearch.newFinMessage.disputeTransResult}">
                            <f:selectItem itemValue=""/>
                            <f:selectItems value="#{MbNbcFinMessagesSearch.lovValues}"/>
                        </h:selectOneMenu>
					</h:panelGrid>
				</h:panelGrid>
			</h:panelGroup>
      	    <h:panelGroup layout="block" styleClass="bottom_search_result_block_buttons">
				<h:panelGroup layout="block" styleClass="bottom_search_result_left_buttons">
	       	    	<h:panelGrid columns="3" columnClasses="width99P,,paddingR12">
	       	    		<h:outputText/>
                       	<bre:taggedCommandButton
                       			value="#{lblForm.save}" type="submit" action="#{MbNbcFinMessagesSearch.save}"
                       			onclick="disableModalPanelBtns(this)"
                       			oncomplete="enableModalPanelBtns(this);
                       					if (#{usession.noErrorResponse}) #{rich:component('nbcFinMessageModalPanel')}.hide()"
                       			reRender="${rerenderList}"
                        		/>
                       	<bre:taggedCommandButton
                        		value="#{lblForm.cancel}"
                        		onclick="#{rich:component('nbcFinMessageModalPanel')}.hide()">
                        </bre:taggedCommandButton>
		    		</h:panelGrid>
		    	</h:panelGroup>
		    </h:panelGroup>
		</h:form>
	</rich:modalPanel>

</ui:composition>
</html>