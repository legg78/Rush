declare l_cnt number; l_from_id number; l_till_id number; begin for i in 0..40 loop l_from_id := com_api_id_pkg.get_from_id(get_sysdate-i); l_till_id := com_api_id_pkg.get_from_id(get_sysdate-i+1); select sum(column_value) into l_cnt from table(aut_auth_parallel_update(cursor(select id, trim(leading '0' from external_auth_id), trim(leading '0' from external_orig_id) from aut_auth where id >= l_from_id and id < l_till_id and (substr(external_auth_id, 1, 1) ='0' or substr(external_orig_id, 1, 1) ='0')        ))); end loop;    end; 
