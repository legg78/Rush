<?xml version="1.0" encoding="UTF-8"?>
<html   xmlns="http://www.w3.org/1999/xhtml"
		xmlns:f="http://java.sun.com/jsf/core"
		xmlns:h="http://java.sun.com/jsf/html"
		xmlns:ui="http://java.sun.com/jsf/facelets"
		xmlns:a4j="http://richfaces.org/a4j"
		xmlns:rich="http://richfaces.org/rich"
		xmlns:bre="http://www.bpc.ru/jsf/richfaces-ext">
<f:view>
<ui:composition>
	<script type="text/javascript">//<![CDATA[			
		function checkCycleTypeFields() {
			var checked = true;
			
			if (document.getElementById('common_article_modal_div:code').value == "") {
				document.getElementById('common_article_modal_div:codeError').style.display = "inline";
				checked = false;
			}
			
			if (document.getElementById('common_article_modal_div:name').value == "") {
				document.getElementById('common_article_modal_div:nameError').style.display = "inline";
				checked = false;
			}								
			
			return checked;
		}
		//]]>
	</script>

	<h:panelGroup layout="block" styleClass="cardholderdata-wrapper">
		<h:panelGrid columns="2" styleClass="cardholderdata" width="100%" columnClasses="firstColModal, width250">        
			
			<h:outputLabel value="* #{lblCommon.code}: " title="#{lblCommon.code}"/>
			<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
				<h:inputText id="code" value="#{MbCycleTypes.newCycleType.code}" disabled="#{MbCycleTypes.editMode}"
						label="#{lblCommon.code}"
						maxlength="4"
						onblur="hideErrorField(this)">
					<f:validateLength minimum="3"/>
					<a4j:support event="onchange" reRender="codeErr" limitToList="true" />	
				</h:inputText>
				<rich:message for="code" id="codeErr" styleClass="errorMarker"/>
				<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
					id="codeError" style="display:none;">
					<f:param name="fieldName" value="#{lblCommon.code}"/>
				</h:outputFormat>
			</h:panelGrid>
			
			<h:outputLabel for="lang" value="#{lblCommon.language}: " title="#{lblCommon.language}"/>
			<h:selectOneMenu id="lang" value="#{MbCycleTypes.newCycleType.lang}" disabled="#{MbCycleTypes.editMode}">
				<f:selectItems value="#{MbCycleTypes.languages}"/>
			</h:selectOneMenu>
			
			<h:outputLabel value="* #{lblCommon.name}: " title="#{lblCommon.name}"/>
			<h:panelGrid columns="1" cellspacing="0" cellpadding="0">
				<h:inputText id="name" value="#{MbCycleTypes.newCycleType.name}" 
						label="#{lblCommon.name}"
						maxlength="200"
						onblur="hideErrorField(this)">
					<f:validateLength minimum="3"/>
					<a4j:support event="onblur" reRender="nameErr" limitToList="true" />	
				</h:inputText>
				<rich:message for="name" id="nameErr" styleClass="errorMarker"/>
				<h:outputFormat value="#{lblMsg.value_request}" styleClass="errorMarker"
					id="nameError" style="display:none;">
					<f:param name="fieldName" value="#{lblCommon.name}"/>
				</h:outputFormat>
			</h:panelGrid>
			
			<h:outputLabel value="#{lblCommon.description}: " title="#{lblCommon.description}"/>
			<h:inputText id="descr" value="#{MbCycleTypes.newCycleType.description}" 
						label="#{lblCommon.description}" maxlength="2000"/>
			
		
		</h:panelGrid>		
	</h:panelGroup>
</ui:composition>
</f:view>
</html>